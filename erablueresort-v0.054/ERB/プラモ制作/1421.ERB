




@COM_433_1421実行
;プラモデータが存在する
IF プラモ_ベース番号:1 <= 0
	RETURN 0
ENDIF
IF プラモ愛機パーソナルカラー数:1 < 1
	RETURN 0
ENDIF




LOCAL:1 = RESULT

RESULT = プラモ_ベース番号:1
TRYCALLFORM プラモデータ{RESULT}




RESULT = LOCAL:1
LOCAL:1 = プラモ愛機パーソナル赤A:1
LOCAL:2 = プラモ愛機パーソナル緑A:1
LOCAL:3 = プラモ愛機パーソナル青A:1


IF RESULT == 41
	LOCAL:1 = 10,10,10
ELSEIF RESULT == 42
	LOCAL:1 = 142,69,19
ELSEIF RESULT == 43
	LOCAL:1 = 245,245,245
ELSEIF RESULT == 44
	LOCAL:1 = 189,183,107
	
	
	
ELSEIF RESULT == 45
	LOCAL:1 = 255,255,0
	
ELSEIF RESULT == 46
	LOCAL:1 = 220,20,60
ELSEIF RESULT == 47
	LOCAL:1 = 100,149,237
ELSEIF RESULT == 48
	LOCAL:1 = 0,128,0
ELSEIF RESULT == 49
	LOCAL:1 = 255,105,180
ELSEIF RESULT == 50
	LOCAL:1 = 255,140,0
ELSEIF RESULT == 51
	LOCAL:1 = 153,50,204
ENDIF

;赤
IF RESULT == 1
	LOCAL:1 = 0
ELSEIF RESULT == 2
	LOCAL:1 = 127
ELSEIF RESULT == 3
	LOCAL:1 = 255
ELSEIF RESULT == 11
	LOCAL:1 -= 10
ELSEIF RESULT == 12
	LOCAL:1 -= 1
ELSEIF RESULT == 13
	LOCAL:1 += 1
ELSEIF RESULT == 14
	LOCAL:1 += 10
ENDIF
;緑
IF RESULT == 4
	LOCAL:2 = 0
ELSEIF RESULT == 5
	LOCAL:2 = 127
ELSEIF RESULT == 6
	LOCAL:2 = 255
ELSEIF RESULT == 21
	LOCAL:2 -= 10
ELSEIF RESULT == 22
	LOCAL:2 -= 1
ELSEIF RESULT == 23
	LOCAL:2 += 1
ELSEIF RESULT == 24
	LOCAL:2 += 10
ENDIF
;青
IF RESULT == 7
	LOCAL:3 = 0
ELSEIF RESULT == 8
	LOCAL:3 = 127
ELSEIF RESULT == 9
	LOCAL:3 = 255
ELSEIF RESULT == 31
	LOCAL:3 -= 10
ELSEIF RESULT == 32
	LOCAL:3 -= 1
ELSEIF RESULT == 33
	LOCAL:3 += 1
ELSEIF RESULT == 34
	LOCAL:3 += 10
ENDIF




;範囲外の場合修正
IF LOCAL:1 < 0
	LOCAL:1 = 0
ELSEIF LOCAL:1 > 255
	LOCAL:1 = 255
ENDIF
IF LOCAL:2 < 0
	LOCAL:2 = 0
ELSEIF LOCAL:2 > 255
	LOCAL:2 = 255
ENDIF
IF LOCAL:3 < 0
	LOCAL:3 = 0
ELSEIF LOCAL:3 > 255
	LOCAL:3 = 255
ENDIF


;LOCAL:1~3に赤緑青が入っているのでパーソナルへ返す
プラモ愛機パーソナル赤A:1 = LOCAL:1
プラモ愛機パーソナル緑A:1 = LOCAL:2
プラモ愛機パーソナル青A:1 = LOCAL:3

;弄りなおす可能性があるので表示部をキープ
CALL COM_433_1400表示











