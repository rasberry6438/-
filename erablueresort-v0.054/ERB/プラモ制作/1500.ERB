	プラモ愛機露出度_性器 = !プラモ愛機露出度_性器
ELSEIF RESULT == 147
	IF プラモ_ライト番号:1 > 0 || プラモ_レフト番号:1 > 0
		プラモ愛機露出度_上腕 = !プラモ愛機露出度_上腕
	ENDIF
ELSEIF RESULT == 148
	IF プラモ_ライト番号:1 > 0 || プラモ_レフト番号:1 > 0
		プラモ愛機露出度_前腕 = !プラモ愛機露出度_前腕
	ENDIF
ELSEIF RESULT == 149
