	アビテンプレート用_アビ名表示済フラグ = 1
	CALL 固有アビ_2125_4("アビ名", キャット隊列番号)
	行動口上呼び出し用文字列 = KOJO_DUNGEON_固有アビ発動時_2125_4
	CALL 固有アビ_2125_4("アビ効果", キャット隊列番号)
	標的指定スキップ_キャット = 0
ELSE
	;通常攻撃処理
	アビ汎用変数:効果割合 = 100
	CALL アビテンプレート_通常攻撃処理
