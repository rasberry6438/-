;防御
@固有アビ_1018_1(ARGS, キャラ番号)
#DIM キャラ番号
#DIM 消費ＭＰ
#DIMS アビ名

IF 基礎BATTLE_STATE:キャラ番号:Lv >= 25
	アビ名 = 紙の壁＋
	消費ＭＰ = 50
ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 15
	アビ名 = 紙の壁
	消費ＭＰ = 25
ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 10 || CFLAG:キャラ番号:人物番号 % 2 == 0
	アビ名 = 人型ポップおとり
	消費ＭＰ = 10
ELSEIF CFLAG:キャラ番号:人物番号 % 2 == 1
	アビ名 = 
ENDIF

SELECTCASE ARGS
	CASE "アビ名"
		TSTR:コマンド名受渡 = %アビ名%
	CASE "アビ説明文"
		IF 基礎BATTLE_STATE:キャラ番号:Lv >= 25
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>紙の壁で敵の攻撃を防いでくれる。
			詳細文文字列受け渡し変数 += @"<br>ある程度のダメージを紙の壁で保護する"
		ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 15
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>紙の壁で敵の攻撃を防いでくれる。
			詳細文文字列受け渡し変数 += @"<br>ある程度のダメージを紙の壁で保護する"
		ELSE
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>人型ポップおとりで敵の攻撃を防いでくれる。
			詳細文文字列受け渡し変数 += @"<br>ある程度のダメージを人型ポップおとりで保護する"
		ENDIF
		RETURN 消費ＭＰ
	CASE "アビ説明文_詳細"
		IF 基礎BATTLE_STATE:キャラ番号:Lv >= 25
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>味方全体に［読子のLv✕50］のバリア効果を与える。
		ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 15
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>味方全体に［読子のLv✕30］のバリア効果を与える。
		ELSE
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>味方全体に［読子のLv✕10］のバリア効果を与える。
		ENDIF
	CASE "アビ効果"
		IF アビ名 == "紙の壁＋"
			CALL アビ対象選択テンプレート_味方全体_生者のみ
			アビ汎用文字列:バフ・デバフ枠 = バリア
			アビ汎用文字列:バフ・デバフ対象能力 = バリア
			アビ汎用変数:効果量 = BATTLE_STATE:戦闘行動キャラ:Lv * 30
			CALL アビテンプレート_有利効果_バフ効果セット
		ELSEIF アビ名 == "紙の壁＋＋"
			CALL アビ対象選択テンプレート_味方全体_生者のみ
			アビ汎用文字列:バフ・デバフ枠 = バリア
			アビ汎用文字列:バフ・デバフ対象能力 = バリア
			アビ汎用変数:効果量 = BATTLE_STATE:戦闘行動キャラ:Lv * 50
			CALL アビテンプレート_有利効果_バフ効果セット
		ELSE
			CALL アビ対象選択テンプレート_味方全体_生者のみ
			アビ汎用文字列:バフ・デバフ枠 = バリア
			アビ汎用文字列:バフ・デバフ対象能力 = バリア
			アビ汎用変数:効果量 = BATTLE_STATE:戦闘行動キャラ:Lv * 10
			CALL アビテンプレート_有利効果_バフ効果セット
		ENDIF
ENDSELECT

;攻撃
@固有アビ_1018_2(ARGS, キャラ番号)
#DIM キャラ番号
#DIM 消費ＭＰ
#DIMS アビ名

IF 基礎BATTLE_STATE:キャラ番号:Lv >= 20
	アビ名 = 紙ばら撒き＋
	消費ＭＰ = 30
ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 10 || CFLAG:キャラ番号:人物番号 % 2 == 1
	アビ名 = 紙ばら撒き
	消費ＭＰ = 10
ELSEIF CFLAG:キャラ番号:人物番号 % 2 == 0
	アビ名 = 
ENDIF


SELECTCASE ARGS
	CASE "アビ名"
		TSTR:コマンド名受渡 = %アビ名%
	CASE "アビ説明文"
		詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>紙を飛ばして敵全体を攻撃する。
		RETURN 消費ＭＰ
	CASE "アビ説明文_詳細"
		IF 基礎BATTLE_STATE:キャラ番号:Lv >= 20
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>敵全体に［自身のLv✕50✕80～120％］の風属性ダメージを与える。
		ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 10 || CFLAG:キャラ番号:人物番号 % 2 == 1
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>敵全体に［自身のLv✕30✕80～120％］の風属性ダメージを与える。
			消費ＭＰ = 10
		ENDIF
	CASE "アビ効果"
	CALL アビ対象選択テンプレート_敵全体_生者のみ
	IF アビ名 == "紙ばら撒き＋"
		アビ汎用変数:効果量 = ( BATTLE_STATE:戦闘行動キャラ:Lv * 50 * RAND(80, 121)) / 100
	ELSE
		アビ汎用変数:効果量 = ( BATTLE_STATE:戦闘行動キャラ:Lv * 30 * RAND(80, 121)) / 100
	ENDIF
	CALL アビテンプレート_ダメージ処理_風属性
ENDSELECT

