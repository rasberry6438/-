		WSTR:(K++) = 「骑士当永葆高洁之心！」
	CASE 3
		WSTR:(K++) = 「我才不是小孩子！」
	CASE 4
		WSTR:(K++) = 「继续前进！」
ENDSELECT

CALL メッセージ欄表示用関数(@"探索用_{LOCAL}_顔", CALLNAME:対象キャラ,,0)

