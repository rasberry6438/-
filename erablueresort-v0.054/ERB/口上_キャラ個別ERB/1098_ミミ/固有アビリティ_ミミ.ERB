		; 味方全体に攻撃力アップ効果(20％/3T) → 30％
		消費ＭＰ = 30
		; 効果1:味方全体の攻撃力アップ
		アビ効果1_効果割合   = 30
		アビ効果1_効果ターン = 3
		; 効果2:味方全体の奥義ゲージ増加
		アビ効果2_効果量     = 0
	CASE IS >= 8
		アビ名 = うさぎさんエール
		; 消費MP20
		; 攻撃力アップ効果(味方全体/20％/3T)
		消費ＭＰ = 20
		; 効果1:味方全体の攻撃力アップ
		アビ効果1_効果割合   = 20
		アビ効果1_効果ターン = 3
		; 効果2:味方全体の奥義ゲージ増加
		アビ効果2_効果量     = 0
	CASEELSE
		アビ名 = 
		消費ＭＰ = 0
		; 効果1:味方全体の攻撃力アップ
		アビ効果1_効果割合   = 0
		アビ効果1_効果ターン = 0
		; 効果2:味方全体の奥義ゲージ増加
		アビ効果2_効果量     = 0
ENDSELECT

SELECTCASE ARGS
	CASE "アビ名"
		TSTR:コマンド名受渡 = %アビ名%
	CASE "アビ説明文"
		詳細文文字列受け渡し変数 '= @"消費ＭＰ：{消費ＭＰ}"
		詳細文文字列受け渡し変数 += @"<br>味方全体に攻撃力アップ効果［{アビ効果1_効果割合}％/{アビ効果1_効果ターン}ターン］"
		詳細文文字列受け渡し変数 += @"<br>味方全体に［{アビ効果1_効果割合}％］（独自枠・{アビ効果1_効果ターン}ターン）の攻撃力上昇効果を与える。"
		IF アビ効果2_効果量
			詳細文文字列受け渡し変数 += @"<br>［{アビ効果2_効果量}％］の奥義ゲージ増加を与える。"
		ENDIF
		RETURN 消費ＭＰ
	CASE "アビ効果"
		;対象設定
		CALL アビ対象選択テンプレート_味方全体_生者のみ
		;味方全体に攻撃力アップ効果
		CALL アビ汎用変数文字列リセット
		アビ汎用変数:効果割合   = アビ効果1_効果割合
		アビ汎用変数:持続ターン = アビ効果1_効果ターン
		アビ汎用文字列:バフ・デバフ枠 = うさぎさんエール
		アビ汎用文字列:バフ・デバフ対象能力 = 攻撃力
		CALL アビテンプレート_有利効果_バフ効果セット
		;味方全体の奥義ゲージアップ
		IF アビ効果2_効果量
			CALL アビ汎用変数文字列リセット
			アビ汎用変数:効果量 = アビ効果2_効果量
			CALL アビテンプレート_有利効果_奥義ゲージUP
		ENDIF
ENDSELECT

