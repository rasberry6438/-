	CASE "一日終了時のルピ収入"
		LOCAL = 滞在キャラ数算出関数() * 20 * RAND(95, 106) / 100
		RETURN LOCAL
	CASE "一日終了時のZP発生"
		LOCAL = 滞在キャラ数算出関数() * RAND(95,106) * RAND(95, 106) / 10000
		RETURN LOCAL
ENDSELECT

RETURN 0


