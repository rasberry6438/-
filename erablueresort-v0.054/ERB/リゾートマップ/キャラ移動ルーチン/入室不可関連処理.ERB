
@入室不可処理(移動先マップ種別, 移動先位置, 自動移動フラグ = 0)
#DIM ループ用
#DIM 部屋人数
#DIM 部屋主配列, 100
#DIM 在宅配列, 100
#DIM 在宅者数
#DIM うふふ相手
#DIM 移動先位置
#DIM 移動先マップ種別
#DIM 自動移動フラグ
#DIM ROOMSEX数値

ROOMSEX数値 = ROOM_SEX(移動先マップ種別, 移動先位置)
IF フィールド展開:可进入异性设施 == 0 && ROOMSEX数値
	VARSET LOCAL
	VARSET LOCALS
	SIF TALENT:MASTER:性別 != ROOMSEX数値 && (TALENT:MASTER:性別 != 0 && TALENT:MASTER:性別 != 3)
		LOCAL:1 = 1
	FOR LOCAL,1,CHARANUM
		SIF TARGET:LOCAL <= 0
			BREAK
		IF !陥落チェック(TARGET:LOCAL) && (CFLAG:(TARGET:LOCAL):同行 || CFLAG:(TARGET:LOCAL):デート残り時間)
			SIF LOCALS != ""
				LOCALS +=  "、"
			LOCALS += CALLNAME:(TARGET:LOCAL)
			LOCAL:2 = CFLAG:(TARGET:LOCAL):現在マップ種別
			LOCAL:3 = CFLAG:(TARGET:LOCAL):現在位置
		ENDIF
		SIF TALENT:(TARGET:LOCAL):性別 != ROOMSEX数値 && (TALENT:(TARGET:LOCAL):性別 != 0 && TALENT:(TARGET:LOCAL):性別 != 3)
			LOCAL:1 = 1
	NEXT
	IF LOCAL:1 && LOCALS != ""
		IF 自動移動フラグ
			DRAWLINE
			PRINTFORMW 被阻止前往%LOCALS%的%GETPLACENAME(移動先マップ種別, 移動先位置)%了……
			あなた追跡キャラ = 0
			IF 移動先マップ種別 == 0
				SELECTCASE 移動先位置
					;女湯
					CASE 11, 12, 801 TO 809
						CFLAG:PLAYER:現在マップ種別 = 0
						CFLAG:PLAYER:現在位置 = 6
					CASEELSE
						CFLAG:PLAYER:現在マップ種別 = LOCAL:2
						CFLAG:PLAYER:現在位置 = LOCAL:3
				ENDSELECT
			ELSE
				CFLAG:PLAYER:現在マップ種別 = LOCAL:2
				CFLAG:PLAYER:現在位置 = LOCAL:3
			ENDIF
		ENDIF
		RETURN 1
	ENDIF
ENDIF
SELECTCASE 移動先マップ種別
	CASE 999
		IF 移動先位置 < 1000
			LOCAL = 移動先位置
			IF 滞在者部屋割り配列:LOCAL > 0
				;睡眠時
				IF CFLAG:(滞在者部屋割り配列:LOCAL):現在マップ種別 == 999 && CFLAG:(滞在者部屋割り配列:LOCAL):現在位置 == LOCAL
					IF CFLAG:(滞在者部屋割り配列:LOCAL):睡眠 && 陥落チェック(滞在者部屋割り配列:LOCAL) == 0
						あなた追跡キャラ = 0
						PRINTFORML %CALLNAME:(滞在者部屋割り配列:LOCAL)%的房间已上锁
						CALL 睡眠時表示文章(滞在者部屋割り配列:LOCAL)
						IF 自動移動フラグ
							CFLAG:PLAYER:現在マップ種別 = 0
							CFLAG:PLAYER:現在位置 = 1
						ENDIF
						RETURN 1
					ELSEIF CFLAG:(滞在者部屋割り配列:LOCAL):キャラ同士うふふ
						;相手を探す
						うふふ相手 = ABS(CFLAG:(滞在者部屋割り配列:LOCAL):デート) - 100
						IF うふふ相手 >= 0 && CFLAG:うふふ相手:現在マップ種別 == 999 && CFLAG:うふふ相手:現在位置 == LOCAL
							あなた追跡キャラ = 0
							PRINTFORML %CALLNAME:(滞在者部屋割り配列:LOCAL)%的房间已上锁
							CALL キャラ同士うふふ時表示文章(滞在者部屋割り配列:LOCAL, うふふ相手)
							SIF RESULT
								RETURN 0
							IF 自動移動フラグ
								CFLAG:PLAYER:現在マップ種別 = 0
								CFLAG:PLAYER:現在位置 = 1
							ENDIF
							RETURN 1
						ENDIF
					ENDIF
				ENDIF
			ENDIF
		ELSEIF 移動先位置 >= 1000 && 移動先位置 < 2000
			LOCAL = 移動先位置 - 1000
			IF 従業員部屋割り配列:LOCAL > 0
				;睡眠時
				IF CFLAG:(従業員部屋割り配列:LOCAL):現在マップ種別 == 999 && CFLAG:(従業員部屋割り配列:LOCAL):現在位置 == LOCAL
					IF CFLAG:(従業員部屋割り配列:LOCAL):睡眠 && 陥落チェック(従業員部屋割り配列:LOCAL) == 0
						あなた追跡キャラ = 0
						PRINTFORML %CALLNAME:(従業員部屋割り配列:LOCAL)%的房间已上锁
						CALL 睡眠時表示文章(従業員部屋割り配列:LOCAL)
						IF 自動移動フラグ
							CFLAG:PLAYER:現在マップ種別 = 0
							CFLAG:PLAYER:現在位置 = 1
						ENDIF
						RETURN 1
					ELSEIF CFLAG:(従業員部屋割り配列:LOCAL):キャラ同士うふふ
						;相手を探す
						うふふ相手 = ABS(CFLAG:(従業員部屋割り配列:LOCAL):デート) - 100
						IF うふふ相手 >= 0 && CFLAG:うふふ相手:現在マップ種別 == 999 && CFLAG:うふふ相手:現在位置 == LOCAL
							あなた追跡キャラ = 0
							PRINTFORML %CALLNAME:(従業員部屋割り配列:LOCAL)%的房间已上锁
							CALL キャラ同士うふふ時表示文章(従業員部屋割り配列:LOCAL, うふふ相手)
							SIF RESULT
								RETURN 0
							IF 自動移動フラグ
								CFLAG:PLAYER:現在マップ種別 = 0
								CFLAG:PLAYER:現在位置 = 1
							ENDIF
							RETURN 1
						ENDIF
					ENDIF
				ENDIF
			ENDIF
		ELSEIF 移動先位置 >= 2000 && 移動先位置 < 3000
			LOCAL = 移動先位置 - 2000
			;部屋の居住者を配列化
			VARSET 部屋主配列
			VARSET RESULTS
			SPLIT スイートルーム部屋割り配列:LOCAL, "_", RESULTS
			部屋人数 = 0
			FOR ループ用, 1, RESULT
				SIF RESULTS:ループ用 == ""
					BREAK
				部屋主配列:部屋人数 = TOINT(RESULTS:ループ用)
				部屋人数 ++
			NEXT
			IF 部屋人数 > 0
				;睡眠時
				LOCAL:2 = 0
				VARSET 在宅配列
				在宅者数 = 0
				FOR ループ用, 0, 部屋人数
					SIF 部屋主配列:ループ用 < 1
						BREAK
					IF CFLAG:(部屋主配列:ループ用):現在マップ種別 == 999 && CFLAG:(部屋主配列:ループ用):現在位置 == LOCAL + 2000
						;うふふが見つかってない時は睡眠をチェックしておく
						IF CFLAG:(部屋主配列:ループ用):キャラ同士うふふ
							;相手を探す
							うふふ相手 = ABS(CFLAG:(部屋主配列:ループ用):デート) - 100
							IF うふふ相手 >= 0 && CFLAG:うふふ相手:現在マップ種別 == 999 && CFLAG:うふふ相手:現在位置 == LOCAL + 2000
								LOCAL:2 = 2
								VARSET 在宅配列
								在宅配列:0 = 部屋主配列:ループ用
								在宅配列:1 = うふふ相手
								BREAK
							ENDIF
						ELSEIF CFLAG:(部屋主配列:ループ用):睡眠 && 陥落チェック(部屋主配列:ループ用) == 0 && LOCAL:2 >= 0
							;非陥落の睡眠が一人でもいると入れない
							LOCAL:2 = 1
						ELSEIF !CFLAG:(部屋主配列:ループ用):睡眠
							;一人でも起きてたら入れる
							LOCAL:2 = -1
						ENDIF
						在宅配列:在宅者数 = 部屋主配列:ループ用
						在宅者数 ++
					ENDIF
				NEXT
				IF LOCAL:2 > 0
					あなた追跡キャラ = 0
					IF 部屋人数 > 1
						PRINTFORML %NAME表示((部屋主配列:0))%等人的房间已上锁
					ELSE
						PRINTFORML %NAME表示((部屋主配列:0))%的房间已上锁
					ENDIF
					IF LOCAL:2 == 1
						;寝てるキャラからランダムで選ぶ
						CALL 睡眠時表示文章(在宅配列:(RAND:在宅者数))
					ELSEIF LOCAL:2 == 2
						CALL キャラ同士うふふ時表示文章(在宅配列:0, 在宅配列:1)
						SIF RESULT
							RETURN 0
					ENDIF
					IF 自動移動フラグ
						CFLAG:PLAYER:現在マップ種別 = 0
						CFLAG:PLAYER:現在位置 = 1
					ENDIF
					RETURN 1
				ENDIF
			ENDIF
		ENDIF
	CASE 1
		IF 移動先位置 >= 1000
			LOCAL = 移動先位置 - 1000
			;部屋の居住者を配列化
			VARSET 部屋主配列
			VARSET RESULTS
			SPLIT 商業区店割り配列:LOCAL:店員配列, "_", RESULTS
			FOR ループ用, 0, RESULT
				SIF RESULTS:ループ用 == ""
					BREAK
				部屋主配列:ループ用 = TOINT(RESULTS:ループ用)
			NEXT
			IF 部屋主配列:0 > 0
				;不在時
				LOCAL:2 = 0
				FOR ループ用, 0, 10
					SIF 部屋主配列:ループ用 < 1
						BREAK
					IF CFLAG:(部屋主配列:ループ用):現在マップ種別 == 1 && CFLAG:(部屋主配列:ループ用):現在位置 == LOCAL + 1000
						LOCAL:2 = 1
					ELSEIF 追従中キャラ(部屋主配列:ループ用)
						LOCAL:2 = 1
					ENDIF
				NEXT
				IF LOCAL:2 == 0
					あなた追跡キャラ = 0
					PRINTL 商铺已打烊
					PRINTW 似乎空无一人…
					RETURN 1
				ENDIF
			ELSEIF 部屋主配列:0 < 0
				IF TIME < 540 || TIME > 1200 || 定休日判定(LOCAL)
					あなた追跡キャラ = 0
					PRINTL 商铺已打烊
					PRINTW 似乎空无一人…
					RETURN 1
				ENDIF
			ENDIF
		ENDIF
	CASE 2
		IF 移動先位置 >= 1000 && 移動先位置 <= 6000
			LOCAL = 移動先位置 - 1000
			;部屋の居住者を配列化
			VARSET 部屋主配列
			VARSET RESULTS
			SPLIT 定住者部屋割り配列:LOCAL, "_", RESULTS
			FOR ループ用, 0, RESULT
				SIF RESULTS:ループ用 == ""
					BREAK
				部屋主配列:ループ用 = TOINT(RESULTS:ループ用)
			NEXT
			IF 部屋主配列:0 > 0
				;睡眠時
				LOCAL:2 = 0
				VARSET 在宅配列
				在宅者数 = 0
				FOR ループ用, 0, 10
					SIF 部屋主配列:ループ用 < 1
						BREAK
					IF CFLAG:(部屋主配列:ループ用):現在マップ種別 == 2 && CFLAG:(部屋主配列:ループ用):現在位置 == LOCAL + 1000
						;在宅状況チェック
						IF CFLAG:(部屋主配列:ループ用):キャラ同士うふふ
							;相手を探す
							うふふ相手 = ABS(CFLAG:(部屋主配列:ループ用):デート) - 100
							IF うふふ相手 >= 0 && CFLAG:うふふ相手:現在マップ種別 == 2 && CFLAG:うふふ相手:現在位置 == LOCAL + 1000
								LOCAL:2 = 2
								VARSET 在宅配列
								在宅配列:0 = 部屋主配列:ループ用
								在宅配列:1 = うふふ相手
								BREAK
							ENDIF
						ELSEIF CFLAG:(部屋主配列:ループ用):睡眠 && 陥落チェック(部屋主配列:ループ用) == 0 && LOCAL:2 >= 0
							;非陥落の睡眠が一人でもいると入れない
							LOCAL:2 = 1
						ELSEIF !CFLAG:(部屋主配列:ループ用):睡眠
							;一人でも起きてたら入れる
							LOCAL:2 = -1
						ENDIF
						在宅配列:在宅者数 = 部屋主配列:ループ用
						在宅者数 ++
					ENDIF
				NEXT
				IF LOCAL:2 > 0
					あなた追跡キャラ = 0
					CALLF GETPLACENAME_2_10(移動先位置)
					IF LOCAL:2 == 1
						PRINTFORML %TSTR:場所名受渡%的住所已上锁
						;寝てるキャラからランダムで選ぶ
						CALL 睡眠時表示文章(在宅配列:(RAND:在宅者数))
					ELSEIF LOCAL:2 == 2
						PRINTFORML %TSTR:場所名受渡%的住所已上锁
						CALL キャラ同士うふふ時表示文章(在宅配列:0, 在宅配列:1)
						SIF RESULT
							RETURN 0
					ENDIF
					IF 自動移動フラグ
						CFLAG:PLAYER:現在マップ種別 = 2
						CFLAG:PLAYER:現在位置 = 1
					ENDIF
					RETURN 1
				ENDIF
				;全員外出時
				LOCAL:2 = 0
				FOR ループ用, 0, 10
					SIF 部屋主配列:ループ用 < 1
						BREAK
					IF CFLAG:(部屋主配列:ループ用):現在マップ種別 == 2 && CFLAG:(部屋主配列:ループ用):現在位置 == LOCAL + 1000
						LOCAL:2 = 1
					ELSEIF 追従中キャラ(部屋主配列:ループ用)
						LOCAL:2 = 1
					ENDIF
				NEXT
				IF LOCAL:2 == 0
					あなた追跡キャラ = 0
					CALLF GETPLACENAME_2_10(移動先位置)
					PRINTFORML %TSTR:場所名受渡%的住所已上锁
					PRINTW 看来家中无人…
					IF 自動移動フラグ
						CFLAG:PLAYER:現在マップ種別 = 2
						CFLAG:PLAYER:現在位置 = 1
					ENDIF
					RETURN 1
				ENDIF
			ENDIF
		ENDIF
ENDSELECT

RETURN 0


