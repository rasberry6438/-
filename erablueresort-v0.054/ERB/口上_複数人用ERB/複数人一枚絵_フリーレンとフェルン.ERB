;****************************************
;サイド領域の複数人一枚絵を登録するための関数
;****************************************
;・使い方
;「XXXX」を任意の文字列に書き換え、キャラの組み合わせと表示条件を入れる
;「XXXX」は既存の関数と被らないこと
;キャラの組み合わせは既存の関数と被らないこと、同じ組み合わせがないかどうか事前にチェックしてください
;処理的に、組み合わせのキャラが全員同じ場所にいないと条件は読まれません
;画像のサイズはおおよそ650*650程度が限度です
;****************************************

;--------------------------------------------------
;登録データ
;--------------------------------------------------
@複数人一枚絵_登録データ_フリーレンとフェルン(動作モード, 指定キャラ)
#DIMS 動作モード
#DIM REF 指定キャラ
#DIM ザーメンキス前フラグ

SELECTCASE 動作モード
	CASE "初期登録"
		;キャラの組み合わせを指定、5キャラまで指定可能
		指定キャラ:0 = キャラ検索("[葬送]芙莉莲")
		指定キャラ:1 = キャラ検索("[芙莉莲的弟子]菲伦")
		; 指定キャラ:2 = キャラ検索("")
		; 指定キャラ:3 = キャラ検索("")
		; 指定キャラ:4 = キャラ検索("")
	CASE "画像指定"
		;表示条件を分岐しつつ画像名を指定する

		;以下はキャラ0とキャラ1が同時パイズリしている時の例
		IF MODE_確認_完全一致("パイズリ系", 指定キャラ:0, MASTER) >= 0 && MODE_確認_完全一致("パイズリ系", 指定キャラ:1, MASTER) >= 0
			;画像の位置を指定する
			;例えば指定キャラ:0のフォルダに画像が入れてあるなら、以下のように指定
			SELECTCASE RAND:2
			CASE 0
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟ダブルパイズリ1
			CASE 1
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟ダブルパイズリ2
			ENDSELECT
		;ダブルフェラ
		ELSEIF MODE_確認_完全一致("フェラチオ系", 指定キャラ:0, MASTER) >= 0 && MODE_確認_完全一致("フェラチオ系", 指定キャラ:1, MASTER) >= 0
			SELECTCASE RAND:5
			CASE 0
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟ダブルフェラ1
			CASE 1
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟ダブルフェラ2
			CASE 2
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟ダブルフェラ3
			CASE 3
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟ダブルフェラ4
			CASE 4
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟ダブルフェラ5
			ENDSELECT
		ELSEIF MODE_確認_完全一致("フェラチオ系", 指定キャラ:0, MASTER) >= 0
			RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/フリーレンフェラ
		ELSEIF MODE_確認_完全一致("フェラチオ系", 指定キャラ:1, MASTER) >= 0
			RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/フェルンフェラ
		ELSEIF (MODE_存在判定_完全一致("後背位", MASTER, 指定キャラ:0) || MODE_存在判定_完全一致("立ちバック", MASTER, 指定キャラ:0) || MODE_存在判定_完全一致("背面座位", MASTER, 指定キャラ:0)|| MODE_存在判定_完全一致("背面駅弁", MASTER, 指定キャラ:0)) && !MODE_存在判定_順不同("Ｖ挿入系", 指定キャラ:1, MASTER) 
			RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/フリーレン尻並べ後背位
		ELSEIF (MODE_存在判定_完全一致("後背位", MASTER, 指定キャラ:1) || MODE_存在判定_完全一致("立ちバック", MASTER, 指定キャラ:1) || MODE_存在判定_完全一致("背面座位", MASTER, 指定キャラ:1)|| MODE_存在判定_完全一致("背面駅弁", MASTER, 指定キャラ:1)) && !MODE_存在判定_順不同("Ｖ挿入系", 指定キャラ:0, MASTER) 
			RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/フェルン後背位
		;後背位系以外のＶ挿入時
		ELSEIF MODE_存在判定_順不同("Ｖ挿入系", 指定キャラ:0, MASTER)  && !MODE_存在判定_順不同("Ｖ挿入系", 指定キャラ:1, MASTER) 
			RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/フリーレン正常位
		ELSEIF MODE_存在判定_順不同("Ｖ挿入系", 指定キャラ:1, MASTER)  && !MODE_存在判定_順不同("Ｖ挿入系", 指定キャラ:0, MASTER) 
			RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/フェルン正常位
		ELSEIF コマンド履歴:0 == 20 && MODE_存在判定_順不同("キス系", 指定キャラ:0, 指定キャラ:1)
			IF SELECTCOM_NAME履歴:0 == "ザーメンキス"
			;ココの分岐はPLAYER参照であることが必須。置換に巻き込まないように。
				IF PLAYER == 指定キャラ:0 && RAND:2 == 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/フェルンにザーメンシェア
				ELSEIF PLAYER == 指定キャラ:1 && RAND:2 == 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/フリーレンにザーメンシェア
				ELSE
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟ザーメンシェア
				ENDIF
			ELSE
			;漏れた場合
				SELECTCASE RAND:2
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟キス1
				CASE 1
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟キス2
				ENDSELECT
			ENDIF
		;たぶんこれで「同時愛撫または同時胸愛撫の直後」になるはず
		;挿入モード系でないときを想定した画像なので後ろのほうの分岐に
		ELSEIF GETBIT(FLAG:モード管理, モードビット_同時) && (コマンド履歴:0 == 1 || コマンド履歴:0 == 6)
			RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟揉み比べ1
		
		ELSEIF CFLAG:(指定キャラ:0):うふふ && CFLAG:(指定キャラ:1):うふふ
			IF TCVAR:(指定キャラ:0):膣内精液量 && TCVAR:(指定キャラ:1):膣内精液量
				SELECTCASE RAND:5
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟征服1
				CASE 1
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟征服2
				CASE 2
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟征服3
				CASE 3
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟征服4
				CASE 4
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/師弟征服5
				ENDSELECT
			ELSEIF TCVAR:(指定キャラ:0):膣内精液量
				SELECTCASE RAND:3
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/大師征服1
				CASE 1
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/大師征服2
				CASE 2
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/大師征服3
				ENDSELECT
			ELSEIF TCVAR:(指定キャラ:1):膣内精液量
				SELECTCASE RAND:3
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/弟子征服1
				CASE 1
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/弟子征服2
				CASE 2
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/弟子征服3
				ENDSELECT
			ELSE
				SELECTCASE RAND:4
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/フリーレンとフェルン1
				CASE 1
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/フリーレンとフェルン2
				CASE 2
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/フリーレンとフェルン3
				CASE 3
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/フリーレンとフェルン/フリーレンとフェルン4
				ENDSELECT
			ENDIF
		ENDIF
ENDSELECT

