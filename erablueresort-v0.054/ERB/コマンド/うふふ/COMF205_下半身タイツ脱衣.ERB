@COM_ABLE205
;下半身タイツ脱衣
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(205)
	RETURN RESULT
;既に着ていない
SIF !TEQUIP:下タイツあり
	RETURN 0
;脱衣不可
SIF TALENT:脱衣不可
	RETURN 0
;鎧がある
SIF TEQUIP:下腹部後鎧あり || TEQUIP:下腹部前鎧あり
	RETURN 0
;服がある
IF TEQUIP:下半身服あり
	SIF !TEQUIP:スカートめくり可 && !TEQUIP:ずらし可
		RETURN 0
	SIF TEQUIP:下タイツ破れ && !TEQUIP:下半身下着抜き取り可
		RETURN 0
ENDIF
;振动棒以外で膣を使ってるなら無理
SIF TEQUIP:TARGET:膣 && !MODE_存在判定_ターゲット側("振动棒", TARGET)
	RETURN 0
;振动棒とビーズ以外でアナルを使ってるなら無理
SIF TEQUIP:TARGET:アナル && !MODE_存在判定_ターゲット側("肛门振动棒", TARGET) && !MODE_存在判定_ターゲット側("肛门拉珠", TARGET)
	RETURN 0
;ペニスを使ってると駄目
SIF TEQUIP:TARGET:ペニス
	RETURN 0
;足コキ中は駄目
SIF MODE_存在判定_プレイヤー側("足コキ", TARGET)
	RETURN 0
;上下一体服は上半身にまとめてある
SIF TEQUIP:上下一体タイツ && !TFLAG:コマンド条件制御用
	RETURN 0
RETURN 1


;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------

@MESSAGE_COM205
IF TEQUIP:下半身服あり && !TEQUIP:下半身下着抜き取り可
	LOCALS = 破いた
	LOCALS:1 = 破かれた
ELSE
	LOCALS = 脱がせた
	LOCALS:1 = 脱いだ
ENDIF
PRINTFORML 将%CALLNAME:TARGET%的紧身衣%LOCALS%…


IF RFLAG:コマンド結果受渡し変数
	PRINTFORML 当众%LOCALS:1%的行为使%CALLNAME:TARGET%显得局促不安…
ENDIF
