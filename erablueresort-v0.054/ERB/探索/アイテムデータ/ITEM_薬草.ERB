
@アイテム個別文章表示_药草(ARGS)
;薬草
IF ARGS == "値段"
	詳細文文字列受け渡し変数 = 卢比
	RETURN 200
ENDIF

LOCALS = 
LOCALS += @"■药草　　　持有数:{DT_CELL_GET("所持アイテムデータベース", 0, "药草")}<br>"
LOCALS += "空之世界广泛使用的各种疗伤植物的统称。<br>"
LOCALS += "虽可加工为治疗药水，<br>"
LOCALS += "但直接使用也具备一定效果<br>"
LOCALS += "<br>"
LOCALS += "【效果】<br>"
LOCALS += "我方单体ＨＰ恢复[１００]。<br>"

詳細文文字列受け渡し変数 = %LOCALS%

@アイテム使用先表示_药草
CALL 汎用使用先表示("味方単体")

@アイテム効果処理_药草(ARG)
;ARG = 隊列の何番目か

IF !BATTLE_STATE:ARG:キャラ登録番号
	RETURN 0
ENDIF

IF DT_CELL_GET("所持アイテムデータベース", 0, "药草") < 1
	PRINTW 没有该物品
	RETURN 0
ENDIF

IF BATTLE_STATE:ARG:最大ＨＰ == BATTLE_STATE:ARG:ＨＰ
	PRINTW ＨＰ已满
	RETURN 0
ENDIF

IF BATTLE_STATE:ARG:ＨＰ < 1
	PRINTW 无法治疗战斗不能状态
	RETURN 0
ENDIF

IF BATTLE_STATE:ARG:最大ＨＰ - BATTLE_STATE:ARG:ＨＰ < 100
	PRINTFORMW %CALLNAME:(BATTLE_STATE:ARG:キャラ登録番号)%的ＨＰ恢复了{BATTLE_STATE:ARG:最大ＨＰ - BATTLE_STATE:ARG:ＨＰ}
ELSE
	PRINTFORMW %CALLNAME:(BATTLE_STATE:ARG:キャラ登録番号)%のＨＰを100回復しました
ENDIF

BATTLE_STATE:ARG:ＨＰ = MIN(BATTLE_STATE:ARG:ＨＰ + 100, BATTLE_STATE:ARG:最大ＨＰ)

RETURN 1
