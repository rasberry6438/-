
@指輪個別文章表示_豪杰之戒
LOCALS = 
LOCALS += @"■豪杰之戒<br><br>"
LOCALS += "浸染传说硬汉汗水的戒指。<br>"
LOCALS += "只有能感受其气魄的真汉子，才能获得此戒的助力。<br>"
LOCALS += "装备时仿佛能听见他灵魂深处的战歌回响。<br>"
LOCALS += "<br>"

詳細文文字列受け渡し変数 = %LOCALS%
基礎販売額 = 35000

@指輪基礎効果文章表示_豪杰之戒(指輪番号, 効果番号)
#DIM 効果番号
#DIM 指輪番号
LOCALS = 
LOCALS += "【基础效果】<br>"
LOCALS += "最大ＨＰ+400 攻击力+450 行动速度+300 ※需符合条件<br>"

LOCALS:1 = %DT_CELL_GETS("所持指輪データベース", 指輪番号, "オプションステータス補正", 1)%
IF LOCALS:1 != ""
	LOCALS += @"<br>【选项效果】<br>%オプション効果表示文字列作成(LOCALS:1)%"
ENDIF

詳細文文字列受け渡し変数 = %LOCALS%

@指輪出現率_豪杰之戒(入手タイプ, 装備ランク)
#DIMS 入手タイプ
#DIM 装備ランク

SIF 装備ランク < 2
	RETURN 0
SELECTCASE 入手タイプ
	CASE "古ぼけた装備"
		RETURN 装備レアリティ_ＳＲ
ENDSELECT

@指輪基礎効果適用判定_豪杰之戒(対象キャラ)
#DIM 対象キャラ
;女性はダメ
SIF TALENT:対象キャラ:性別 != 2
	RETURN 0
RETURN 1

@指輪ステータス決定_豪杰之戒(オプション数, 情報取得フラグ = 0, 効果指定 = -1)
#DIM 効果指定
#DIM オプション数
#DIM 情報取得フラグ
#DIMS 基本補正文字列

基本補正文字列 = 最大ＨＰ_400_攻撃力_450_行動速度_300

IF 情報取得フラグ
	詳細文文字列受け渡し変数 = %基本補正文字列%
	;オプション固定用にオプションランクを返す
	RETURN 2
ENDIF

;オプション数に応じてオプション効果をランダムで付加
;基礎指輪なのでLv2のオプションしか付かない
;例外作りたいときは例外の関数作ってもろて

オプション補正文字列 = 
IF オプション数
	FOR LOCAL, 0, オプション数
		CALL オプション効果決定(2)
	NEXT
ENDIF

LOCAL = DT_ROW_ADD("所持指輪データベース", "指輪名", "豪杰之戒", "基礎ステータス補正", 基本補正文字列, "オプションステータス補正", オプション補正文字列)
