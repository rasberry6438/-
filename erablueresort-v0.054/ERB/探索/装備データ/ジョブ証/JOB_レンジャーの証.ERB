@証関数_游侠之证(処理モード, 対象キャラ)
#DIM 対象キャラ
#DIMS 処理モード

SELECTCASE 処理モード
	CASE "ジョブ証種別"
		証関連文字列受け渡し = 通常ジョブ
	CASE "証名"
		TSTR:コマンド名受渡 = 游侠之证
	CASE "クラス名"
		SIF 対象キャラ <= 0
			RETURN 0
		SELECTCASE GET_JOBSKILL_LEVEL(対象キャラ)
			CASE IS >= 3
				RESULTS = 响尾蛇
				RESULTS:1 = Class.III
				RETURN 1
			CASE 2
				RESULTS = 射手
				RESULTS:1 = Class.II
				RETURN 1
			CASEELSE
				RESULTS = 游侠
				RESULTS:1 = Class.I
				RETURN 1
		ENDSELECT
	CASE "フレーバー"
		詳細文文字列受け渡し変数 '= "以敏捷动作闪避攻击并狙击敌人的射手之证。<br>"
		詳細文文字列受け渡し変数 += "擅长躲避攻击并对虚弱敌人进行追击。<br>"
		詳細文文字列受け渡し変数 += "因此与擅长弱化敌人的同伴相性极佳。<br>"
ENDSELECT

