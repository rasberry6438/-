;-------------------------------------------------
;関数名:OPPAI_DESCRIPTION
;概　要:言葉でなく心で理解しろ
;引　数:ARG…キャラ登録番号
;　　　:返却モード…どんな具合で返すかを決定（省略可、そうした場合は「通常」になる）
;　　　　　「通常」…「女性らしい乳房/豊満なバスト/なだらかな胸」
;　　　　　「揺れ」…「弾むバスト/勢いよく暴れるバスト/わずかに上下する胸」
;戻り値:夢
;備　考:文中関数
;使用例:%OPPAI_DESCRIPTION(TARGET)%　　　　　→　「女性らしい胸」
;　　　 %OPPAI_DESCRIPTION(TARGET, "通常")%　→　「女性らしい胸」
;　　　 %OPPAI_DESCRIPTION(TARGET, "揺れ")%　→　「揺れる乳房」
;
;「ダレダレの『オッパイデスクリプション（＝胸/わずかに膨らんだ胸/大きな乳房）』を愛撫した」などの使い方になるハズ
;どこで使われてもおかしくないので、少し硬めかつ平易な表現を返す
;-------------------------------------------------
@OPPAI_DESCRIPTION(ARG, 返却モード = "通常")
#FUNCTIONS
#DIMS 返却モード
#DIMS LTEXT
#DIMS バスト表現

;初期化
LTEXT '= ""
;一部、「乳房とバストだけにしたい」ってこともあるのでその場合は個別
バスト表現 '= TEXTR("胸部/乳房/胸围")

IF 返却モード == "通常"
	SELECTCASE TALENT:ARG:バストサイズ
		;絶壁（あるいはそれ以下の追加）
		CASE IS <= -2
			LTEXT += "几乎感觉不到起伏的胸部/勉强能感受到些微隆起的胸部/平缓的胸部/极其微小的隆起"
		;貧乳
		CASE -1
			LTEXT += "微微隆起的胸部/能感受到柔软起伏的胸部/线条柔和的胸部/小巧玲珑的胸部"
		;普乳
		CASE 0
			LTEXT += @"充满女性魅力的%バスト表現%/胸围/乳房/胸部"
		;巨乳
		CASE 1
			LTEXT += @"充满重量感的乳房/丰盈的%バスト表現%/硕大的%バスト表現%/几乎要从手中溢出的%バスト表現%"
		;爆乳
		CASE 2
			LTEXT += @"沉甸甸的乳房/丰满的%TEXTR("乳房/胸围")%/极其硕大的%バスト表現%/大到单手难以掌握的%バスト表現%"
		;魔乳/ドラフ並み（あるいはそれ以上の追加）
		CASE IS >= 3
			LTEXT += @"饱满成熟的乳房/极其丰腴的%バスト表現%/深不见底的乳沟%バスト表現%/发育得硕大浑圆的%バスト表現%"
	ENDSELECT
ELSEIF 返却モード == "揺れ"
	SELECTCASE TALENT:ARG:バストサイズ
		;絶壁（あるいはそれ以下の追加）
		CASE IS <= -2
			LTEXT += "极轻微晃动的单薄脂肪层/微微上下起伏的胸部"
		;貧乳
		CASE -1
			LTEXT += "轻微晃动的单薄脂肪层/微微上下起伏的胸部"
		;普乳
		CASE 0
			LTEXT += @"%TEXTR("弹动/摇晃")%%バスト表現%"
		;巨乳
		CASE 1
			LTEXT += @"上下に%TEXTR("剧烈晃动/弹跳/摇晃")%%バスト表現%"
		;爆乳
		CASE 2
			LTEXT += @"%TEXTR("大幅度/剧烈地/不受控制地/上下")%%TEXTR("晃动/弹跳/摇晃")%%バスト表現%"
		;魔乳/ドラフ並み（あるいはそれ以上の追加）
		CASE IS >= 3
			;いったん爆乳と同じにさせてね
			LTEXT += @"%TEXTR("大幅度/剧烈地/不受控制地/上下")%%TEXTR("晃动/弹跳/摇晃")%%バスト表現%"
	ENDSELECT
ELSE
	;ここにはいったん来ないはずだよ
	;最低限返すものだけ設定しておくね
	LTEXT += @"%バスト表現%"
ENDIF

RETURNF TEXTR(LTEXT)




