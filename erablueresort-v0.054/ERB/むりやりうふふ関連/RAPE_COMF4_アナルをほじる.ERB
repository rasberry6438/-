;-------------------------------------------------
;抠弄肛门
;愛撫系コマンド、レベル2
;-------------------------------------------------
@RAPE_COMNAME4
#FUNCTIONS
TSTR:コマンド名受渡 = 抠弄肛门



;===================================================
;コマンドタイプ
;===================================================
@RAPE_COMTYPE_4
#FUNCTION
TFLAG:コマンドタイプ受渡 = RAPE_COMTYPE("Ａ系")


@RAPE_COM_TOOLTIP_4
LOCALS = <br>■抠弄肛门<br>
LOCALS += "用手指抠弄对方肛门。"
LOCALS += "肛门经验较少时从外部刺激，经验丰富后则插入手指深入抠弄"
LOCALS += "<br>强奸指令类型：Ａ系<br>获取来源：快Ａ・暴露・接触・痛苦"
LOCALS += "<br>专属经验值：无<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@RAPE_COM4
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

CALL SOURCE_CALC_快Ａ(TARGET, PLAYER, 100)
SIF TALENT:PLAYER:器用な指
	CALL SOURCE_CALC_快Ａ(TARGET, PLAYER, 50)
CALL SOURCE_CALC_露出(TARGET, PLAYER, 150)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 150)

;苦痛
LOCAL = 120 * PAIN_CHECK_A(TARGET) / 1000
CALL SOURCE_CALC_苦痛(TARGET, PLAYER, LOCAL)

;下タイツがある場合は破く。
IF TEQUIP:下タイツあり == 1
	TEQUIP:下タイツ破れ = 1
	RFLAG:コマンド結果受渡し変数 = 1
ENDIF
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:同性愛経験 += 2
	EXP:PLAYER:同性愛経験 += 2
ENDIF

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@RAPE_COM_ABLE4
;アナル愛撫実行判定
;一括管理
SIF GLOBAL_RAPE_COMABLE(4)
	RETURN RESULT
;Aがない場合駄目
SIF TALENT:TARGET:Ａ感度 == -2
	RETURN 0

;下半身着衣
;後鎧、めくれない服があると無理
SIF TEQUIP:下腹部後鎧あり
	RETURN 0
SIF TEQUIP:下半身服あり && (!TEQUIP:スカートめくり可 && !TEQUIP:ずらし可)
	RETURN 0
;指を何かに使ってる・届かないなら無理
SIF TEQUIP:PLAYER:指
	RETURN 0
;アナルを何かに使ってる・届かないなら無理
SIF TEQUIP:TARGET:アナル
	RETURN 0
	
;オートコマンド中の制限
IF FLAG:オートコマンド判定中フラグ
	SIF EXP:PLAYER:Ａ経験 == 0 || EXP:TARGET:Ａ経験 == 0
		RETURN 0
ENDIF
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@RAPE_MESSAGE_COM4

PRINTFORM %CALLNAME:PLAYER%对%CALLNAME:TARGET%

SIF MODE_確認_完全一致("Ｖ挿入系", PLAYER, TARGET) > -1
	PRINTFORM %TEXTR("边侵犯蜜穴/边抽插阴道/边享受阴道绞紧")%，

;下タイツがある場合は破く。挿入できてるってことは破れてるから場所はここでよさそう。
SIF RFLAG:コマンド結果受渡し変数 == 1
	PRINTFORM 暴力%TEXTR("撕开/扯破")%连裤袜，

;Ａ経験10以下
IF EXP:Ａ経験 <= 10
	PRINTFORM 用指尖抠弄紧闭的肛门褶皱进行刺激
;Ａ経験100以上＋欲望のPALAMLV3以上
ELSEIF EXP:Ａ経験 >= 100 && PALAM:欲情 >= PALAMLV:3
	PRINTFORM 将手指插入肛门搅动直肠
ELSE
	PRINTFORM 用指尖抠弄肛门褶皱进行刺激
ENDIF

PRINTFORML …

