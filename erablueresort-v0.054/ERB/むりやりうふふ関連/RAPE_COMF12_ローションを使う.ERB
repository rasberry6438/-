;-------------------------------------------------
;使用润滑液
;道具使用コマンド、レベル1
;-------------------------------------------------
@RAPE_COMNAME12
#FUNCTIONS
TSTR:コマンド名受渡 = 使用润滑液

;===================================================
;コマンドタイプ
;===================================================
@RAPE_COMTYPE_12
#FUNCTION
TFLAG:コマンドタイプ受渡 = RAPE_COMTYPE("道具系")



@RAPE_COM_TOOLTIP_12
LOCALS = <br>■使用润滑液<br>
LOCALS += "使用携带的润滑液提升润滑度的指令。"
LOCALS += "<br>强奸指令类型：道具系<br>获取来源：液体・接触"
LOCALS += "<br>专属经验值：道具使用经验(你)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@RAPE_COM12
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;女あなたの逆レの時潤滑不足になっても嫌なので互いに加算

CALL SOURCE_CALC_液体(TARGET, PLAYER, 20000)
CALL SOURCE_CALC_液体(PLAYER, TARGET, 20000)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 60)
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
ITEM:40 -= 1
EXP:PLAYER:道具使用経験 ++
RETURN 1
;-------------------------------------------------
;実行判定
;-------------------------------------------------
@RAPE_COM_ABLE12
;润滑液実行判定
;一括管理
SIF GLOBAL_RAPE_COMABLE(12)
	RETURN RESULT
;アイテムを持っているか、アイテムなし設定でないとダメ
SIF ITEM:40 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
;前鎧、めくれない服があると無理
SIF TEQUIP:下腹部前鎧あり
	RETURN 0
SIF TEQUIP:下半身服あり && (!TEQUIP:スカートめくり可 && !TEQUIP:ずらし可)
	RETURN 0
	
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@RAPE_MESSAGE_COM12
PRINTFORM %CALLNAME:PLAYER%在
IF TEQUIP:下タイツあり && !TEQUIP:下タイツ破れ
	PRINTFORM %CALLNAME:TARGET%的
	PRINTFORML 隔着连裤袜在下体涂抹润滑液…
	RETURN 0
ENDIF
IF TEQUIP:下半身下着あり
	PRINTFORM 隔着内裤
ENDIF
PRINTFORM %CALLNAME:TARGET%的
IF GETBIT(TALENT:TARGET:性別, 1)
	;オトコ
	PRINTFORML 在硬挺勃起的阴茎上涂抹润滑液…
ELSE
	PRINTFORML 在双方股间涂抹润滑液…
ENDIF

