;女仆背景の作成

;先に帯を再配置しておく
CALL LETTERBOX_CREATE

;女仆背景の作成
MAID_HEIGHT = CLIENTHEIGHT() - LETTERBOX_HEIGHT
MAID_WIDTH = SPRITEWIDTH("TITLE") * MAID_HEIGHT / SPRITEHEIGHT("TITLE")

CBGREMOVERANGE 1, 1
GDISPOSE 3

GCREATE 3, CLIENTWIDTH(), MAID_HEIGHT
GDRAWSPRITE 3, "TITLE", CLIENTWIDTH() - MAID_WIDTH, 0, MAID_WIDTH, MAID_HEIGHT
GSETBRUSH 3, 0xCF000000
GFILLRECTANGLE 3, 0, 0, CLIENTWIDTH(), MAID_HEIGHT
;ここまで女仆桑作成

CBGSETG 3, 0, 0, 1

PRINTFORML シーンチェンジ
PRINTFORMW さいごに女仆桑背景

CALL EFFECT_ALLRESET
