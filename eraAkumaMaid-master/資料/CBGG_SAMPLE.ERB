;かんたん卡莉斯塔とまぐろうを並べてカーソルを合わせると吹き出しが出る
@SAMPLE_02

CALL EFFECT_ALLRESET
CALL POPUP_SPRIT, "22簡単卡莉斯塔", X_ALIGN(300, "中央") - 200, Y_VALIGN(300, "中央"), 300, 300
CALL POPUP_SPRIT, "22まぐろう1", X_ALIGN(300, "中央") + 200, Y_VALIGN(300, "中央"), 300, 300
CALL POPUP_BUTTON, "21对话框開心", X_ALIGN(300, "中央") - 200, Y_VALIGN(300, "中央"), 300, 300
CALL POPUP_BUTTON, "21对话框開心", X_ALIGN(300, "中央") + 200, Y_VALIGN(300, "中央"), 300, 300
CALL POPUP_SELECT
CALL EFFECT_ALLRESET
IF POPUP_RESULT == 0
	PRINTFORMW かんたん卡莉斯塔
ELSEIF POPUP_RESULT == 1
	PRINTFORMW まぐろう
ELSE
	WAIT
ENDIF

;フェードインして現れる女仆桑そのあとフェードアウト
@SAMPLE_03

LOCAL = SPRITEWIDTH("TITLE") * CLIENTHEIGHT() / SPRITEHEIGHT("TITLE")

CALL EFFECT_ALLRESET
CALL BMP_WINDOW_CREATE, 0xFF000000		;先に生成することでその色で画面を塗りつぶすことができる
CALL POPUP_SSC, "TITLE", "右下", LOCAL, CLIENTHEIGHT()
CALL FADEIN, "0x000000", 10 
CALL SWAIT
CALL FADEOUT, "0x000000", 10 
CALL SWAIT
CALL EFFECT_ALLRESET

