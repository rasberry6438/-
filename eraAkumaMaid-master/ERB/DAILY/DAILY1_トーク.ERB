@MESSAGE_DAILY_SELECT1
STR:日常イベント名 = %STR:選択肢%

SELECTCASE DAILYCOMNAME(1)
CASE "Talk"
	SELECTCASE STR:日常イベント名
	CASE "果然还是算了"
		STR:日常イベント名 = 
		RETURN 0
	CASE "雑談"
		STR:日常イベント名 = Talk
	CASE "和大家雑談"
		STR:日常イベント名 = Talk
		FLAG:対複数 = 1
	CASE "性処理相談"
		CALL CHECK_COM_ABLE, TARGET
		CALL SETFLAG, "性処理でのPLAY内容", TARGET
		STR:日常イベント名 = 
		RETURN 0
	ENDSELECT
CASE "打招呼"
	SELECTCASE STR:日常イベント名
	CASE "拥抱打招呼"
		STR:日常イベント名 = 打招呼ハグ
	CASE "用接吻打招呼"
		STR:日常イベント名 = 打招呼接吻
	CASE "对着股间打招呼"
		IF PENIS(TARGET)
			STR:日常イベント名 = 打招呼口交
		ELSE
			STR:日常イベント名 = 打招呼舐陰
		ENDIF
	CASE "向大家打招呼する"
		STR:日常イベント名 = 打招呼
		FLAG:対複数 = 1
	CASEELSE
		STR:日常イベント名 = 打招呼
	ENDSELECT
CASEELSE
	STR:日常イベント名 = %DAILYCOMNAME(1)%
ENDSELECT

