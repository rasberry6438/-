;-------------------------------------------------
; 廁所ハプニング 派生イベント 指令仮想実行処理
;-------------------------------------------------
@EVENT_TOILET_HAPPENING_EX_TRAIN_SIM(ARGS)
#DIM LCOUNT
#DIM LINE_MEMO

	;絶頂度合いを重置
	VARSET EX
	VARSET NOWEX
	VARSET EX:PLAYER:0
	VARSET NOWEX:PLAYER:0
	VARSET LOCAL

	;前準備開始
	CALL SIMULATE_TRAIN_FIRST

	SELECTCASE ARGS
		CASE "相互自慰"
			; 相互 なのでヒロイン側の絶頂処理を先に済ませる
			FOR LCOUNT, 0, MAX(MIN(ABL:欲望, 10)/2, MIN(ABL:自慰中毒, 5), 1) + RAND:3
				CALL SIMULATE_TRAIN_COM, SELECTCOM, 1

				;絶頂済みならここでおしまい
				SIF NOWEX:Ｃ絶頂 + NOWEX:Ｖ絶頂 + NOWEX:Ａ絶頂 + NOWEX:Ｂ絶頂 + NOWEX:尿道絶頂
					BREAK
			NEXT
			;PRINTFORMW {EXP_GAIN("Ｖ経験")}

			SELECTCOM = GETNUM(TRAINNAME, "自慰")
		CASE "手淫"

		CASE "口交"

		CASE "Ｖ性交"

		CASE "Ａ性交"

		CASE "見せつけくぱぁ"
			; 絶頂とは関係ない
			LOCAL = 1
		;CASE "口交後飲尿"
		;	SELECTCOM = GETNUM(TRAINNAME, "扒開阴道")
		;	; 絶頂とは関係ない
		;	LOCAL = 1
	ENDSELECT

	; COM格子
	IF SELECTCOM < 0
		PRINTFORMW 错误！对应%ARGS%的COM不存在({SELECTCOM})
		RETURN 0
	ENDIF

	SIF !LOCAL
		LOCAL = 999

	; 実行ループ
	FOR LCOUNT, 0, LOCAL
		CALL SIMULATE_TRAIN_COM, SELECTCOM, 1

		;射精済みならここでおしまい
		SIF NOWEX:PLAYER:射精
			BREAK
	NEXT

	;経験や珠などの獲得量計算
	CALL SIMULATE_TRAIN_CALC

	;結果発表
	CALL SIMULATE_TRAIN_SHOW

	; 口上対応
	LINE_MEMO = LINECOUNT
	CALL KOJO_DAILYCOM, "廁所Ｈ"
	SIF NOWEX:PLAYER:射精 && LINECOUNT == LINE_MEMO
		CALL SAMEN_SHOOT_MESSAGE

	CALL SETFLAG, "調教外Ｈ終了", MASTER
	CALL SETFLAG, "調教外Ｈ終了", TARGET

