;-------------------------------------------------
@EVENT_TOILET_HAPPENING_ENABLE
#DIM HEROINE
	; 自宅でのみ発生
	SIF !PLACE("自宅")
		RETURN 0

	; 你尿意確認
	;   ちょっと緩めに判定
	SIF BASE:PLAYER:尿意 < 3000
		RETURN 0

	; 既に発生済みの場合発生しない
	; 発生は１日１回のみ
	SIF CEVENT("廁所ハプニング", PLAYER)
		RETURN 0

	; 対象の選定
	HEROINE = FIND_COND("廁所イベント可能")
	IF HEROINE
		; ヒロインの尿意判定
		SIF BASE:HEROINE:尿意 < 3000
			HEROINE = 0

		; 条件を満たしたうえで随机判定
		SIF RAND:10 > 3
			HEROINE = 0
	ENDIF

	RETURN HEROINE

RETURN 1

