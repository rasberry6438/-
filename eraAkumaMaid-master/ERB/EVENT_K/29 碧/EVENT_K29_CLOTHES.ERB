;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K29, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 內褲/白/
	CSTR:胸罩 = 運動胸罩/黒/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での便装です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "水手服"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "体操服运动衫"
	ELSE
		CALL SET_COSTUME, "体操服五分褲"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("周六") + COND("周日")
		IF COND("秋") + COND("冬")
			CALL SET_SHIRT, "褶边女式衬衫"
			CALL SET_SKIRT, "長裙"
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_SHOES, "运动鞋"
			CALL SET_OTHER, "披风"
		ELSE
			CALL SET_SHIRT, "女式衬衫"
			CALL SET_BOTTOM, "牛仔褲"
			CALL SET_SOCKS, "膝下襪"
			CALL SET_SHOES, "运动鞋"
		ENDIF
	ELSE
		CALL SET_COSTUME, "水手服"
		SIF COND("冬")
			CALL SET_BOTTOM, "连褲襪"
	ENDIF

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF COND("周六") + COND("周日")
		IF COND("秋") + COND("冬")
			CALL SET_SHIRT, "褶边女式衬衫"
			CALL SET_SKIRT, "長裙"
			CALL SET_SOCKS, "膝下襪"
			CALL SET_OTHER, "披风"
		ELSE
			CALL SET_SHIRT, "女式衬衫"
			CALL SET_BOTTOM, "牛仔褲"
			CALL SET_SOCKS, "膝下襪"
		ENDIF
	ENDIF
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	IF COND("秋") + COND("冬")
		CALL SET_SHIRT, "褶边女式衬衫"
		CALL SET_SKIRT, "長裙"
		CALL SET_BOTTOM, "连褲襪"
		CALL SET_SHOES, "运动鞋"
		CALL SET_OTHER, "披风"
	ELSE
		CALL SET_SHIRT, "褶边女式衬衫"
		CALL SET_SKIRT, "裙"
		CALL SET_SOCKS, "膝下襪"
		CALL SET_SHOES, "运动鞋"
	ENDIF

ENDSELECT


