;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K2, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CALL SET_PANTIES, "紐丁字褲/黒"
	CALL SET_BRA, "３／４杯胸罩/黒"

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"

;学園での便装です
CASE "制服"
	CALL SET_COSTUME, "露脐装超短裙領帶西装/青"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする
CASE "体操服"
	IF COND("夏") && ABL:露出癖 >= 3
		CALL SET_COSTUME, "体操服高開衩布鲁马"
	ELSE
		CALL SET_COSTUME, "体操服布鲁马"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする
CASE "泳装"
	CALL SET_COSTUME, "黒比基尼"

;自宅で着ます
CASE "便装"
	CALL SET_COSTUME, "露脐装超短裙領帶西装/青"

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	CALL SET_COSTUME, "露脐装超短裙領帶西装/青"
	SELECTCASE TEXTS("季節")
	CASE "春", "秋"
		CALL SETFLAG, "胖次が見える格好になる", TARGET
	CASE "夏"
		CALL SETFLAG, "变成内衣姿态", TARGET
	ENDSELECT
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	SELECTCASE TEXTS("季節")
	CASE "春", "秋", "夏"
		CALL SET_SHIRT, "露脐吊帯衫/黄色"
		CALL SET_BOTTOM, "塑身長褲/青"
		CALL SET_SHOES, "凉鞋"
	CASEELSE

	ENDSELECT
;もちろん约会の際に着ます
CASE "约会衣装"
	SELECTCASE TEXTS("季節")
	CASE "春", "秋", "夏"
		CALL SET_SHIRT, "露脐吊帯衫/黄色"
		CALL SET_BOTTOM, "塑身長褲/青"
		CALL SET_SHOES, "凉鞋"
	CASEELSE

	ENDSELECT
ENDSELECT

;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K2
IF PLACE("自宅")
	CSTR:改髪 = 马尾辫
ELSE
	CALL SETFLAG, "普段の髪型復元", TARGET
ENDIF


