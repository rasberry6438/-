;お願い・取引での選択肢を追加。番号は80～89を使ってよい
@WISH_K35_ADDSELECT
;-------------------------------------------------
;妊娠可能素質取得のお願い　性転換のお願いをリビルド
;-------------------------------------------------
IF BASE:MASTER:魂 > 100 && ASSI && COND("悪魔の取引可能", ASSI) + COND("天使の取引可能", ASSI)
	IF TALENT:女性
		STR:選択肢 = %STR:選択肢% [80] %TEXT_LJ("男性化して", 16)% … 男に戻ってもらう/
	ELSE
		STR:選択肢 = %STR:選択肢% [80] %TEXT_LJ("女性化して", 16)% … 女になってもらう/
	ENDIF
	IF TALENT:Ａ妊娠体質
		STR:選択肢 = %STR:選択肢% [81] %TEXT_LJ("妊娠不可になって", 16)% … 妊娠できないように戻ってもらいます/
	ELSE
		STR:選択肢 = %STR:選択肢% [81] %TEXT_LJ("妊娠可能になって", 16)% … 男のまま妊娠できるようになってもらいます/
	ENDIF
ELSE
	IF TALENT:女性
		STR:選択肢 = %STR:選択肢%灰色/ [80] %TEXT_LJ("男性化して", 16)% … %TEXTS("助手の名称")%が魂の取引可能＆%CALLNAME:MASTER%の魂が1.01必要です/
	ELSE
		STR:選択肢 = %STR:選択肢%灰色/ [80] %TEXT_LJ("女性化して", 16)% … %TEXTS("助手の名称")%が魂の取引可能＆%CALLNAME:MASTER%の魂が1.01必要です/
	ENDIF
	IF TALENT:Ａ妊娠体質
		STR:選択肢 = %STR:選択肢%灰色/ [81] %TEXT_LJ("妊娠不可になって", 16)% … %TEXTS("助手の名称")%が魂の取引可能＆%CALLNAME:MASTER%の魂が1.01必要です/
	ELSE
		STR:選択肢 = %STR:選択肢%灰色/ [81] %TEXT_LJ("妊娠可能になって", 16)% … %TEXTS("助手の名称")%が魂の取引可能＆%CALLNAME:MASTER%の魂が1.01必要です/
	ENDIF
ENDIF

;お願い・取引で増やした選択肢の地の文と台詞
@KOJO_WISH_K35_ADDSELECT, ARGS
SELECTCASE ARGS
CASE "男性化して"
	IF COND("妊娠中") || COND("受精確認")
		PRINTFORMW 「待った」
		PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为%CALLNAME:MASTER%の言葉を手で制した。
		PRINTFORMW 「今そんなことしたらどうなるかわかんねえだろ」
		PRINTFORMW 「……言ってる意味、わかるよな？」
		PRINTL
		PRINTFORMW ……被%CALLNAME:TARGET%拒绝了。
	ELSE
		IF CEVENT("男性化：初回") == 0
			IF TALENT:恋慕
				PRINTFORMW 「え……あ、なんだ。戻しちゃうの？」
				PRINTFORMW 「まあ、%CNAME("二人称")%がそっちの方が良いって言うなら別にいいけどさ……」
			ELSE
				PRINTFORMW 「あれ、なんだよ。もう戻しちゃうの？」
				PRINTFORMW 「そっかぁー。もうちょっと堪能したかった気がするけどなぁ」
			ENDIF
			CALL SET_CEVENT, "男性化：初回"
		ELSE
			IF TALENT:恋慕
				PRINTFORMW 「まーた戻すー……まぁ好きにすればいいけどさぁ」
				PRINTFORMW 「あんまり振り回さないでくれよ……」
			ELSE
				PRINTFORMW 「なんだよ、また戻すつもりかぁ？」
				PRINTFORMW 「人の体を好き放題しやがってー。迷惑な%CNAME("主人")%桑だよ、まったく」
			ENDIF
		ENDIF
			PRINTL
			BASE:MASTER:魂 -= 100
			CALL CHANGE_SEX, TARGET
			PRINTFORMW 与%CALLNAME:PLAYER%进行了灵魂的交易、%CALLNAME:TARGET%变成了男人。
			PRINTL
			PRINTFORMW 魂-1.00（你）
			PRINTFORM 変化に伴い、%CALLNAME:TARGET%の体型は
			SETCOLOR DEF_COLOR("黄色")
			PRINTFORM [%CONDS("体型", TARGET)%]
			RESETCOLOR
			PRINTFORMW 变成了。
	ENDIF
CASE "女性化して"
	IF CEVENT("女性化：初回") == 0
		PRINTFORMW 「おっ、やっぱりそういうことしちゃう？ できちゃう？」
		PRINTFORMW 「ふっふーん。いいよいいよ、%CNAME("一人称")%もそういうのは興味なくはないからな」
		PRINTFORMW 「頼むから可愛くしてくれよなー？」
	ELSE
		IF TALENT:恋慕
			PRINTFORMW 「あ、なになに？ また女？」
			PRINTFORMW 「なんだよ、やっぱりそういう方が好きなんじゃねえかよ。このこの」
		ELSE
			PRINTFORMW 「んー？ また女になるの？」
			PRINTFORMW 「なにをコロコロ変えることがあるかねぇ、まったく」
		ENDIF
	ENDIF
	PRINTL
	BASE:MASTER:魂 -= 100
	TALENT:苗条 = 1
	CALL CHANGE_SEX, TARGET
	TALENT:苗条 = 0
	PRINTFORMW 与%CALLNAME:PLAYER%进行了灵魂的交易、%CALLNAME:TARGET%变成了女生。
	PRINTL
	PRINTFORMW 魂-1.00（你）
	PRINTFORM 変化に伴い、%CALLNAME:TARGET%の体型は
	SETCOLOR DEF_COLOR("黄色")
	PRINTFORM [%CONDS("体型", TARGET)%]
	RESETCOLOR
	PRINTFORMW 变成了。
	PRINTL
	IF CEVENT("女性化：初回") == 0
		IF TALENT:巨乳
			PRINTFORMW 「うぉ、デッケー！ 本当に女变成了って感じするー！」
			PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为自分の胸を揺らしながら無邪気にはしゃいでいる……
		ELSEIF TALENT:貧乳
			PRINTFORMW 「……アレ。小さいんだけど。でっかくなったりしねえの、ココ」
			PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为つまらなさそうに自分の胸をつついている……
		ELSE
			PRINTFORMW 「おぉ……本当に女变成了。すげぇ……」
			PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为女性らしく膨らんだ自分の胸を興味深そうに揉んでいる……
		ENDIF
		CALL SET_CEVENT, "女性化：初回"
	ELSE
		IF TALENT:巨乳
			PRINTFORMW 「うーん……でかい」
			PRINTFORMW 「地味に困るんだよなぁコレ……重いし、胸罩も高いし……」
		ELSEIF TALENT:貧乳
			PRINTFORMW 「お、デカくない。なんだかんだ言ってこういう方が楽で良いんだよな」
			PRINTFORMW 「特に面白味を感じないのが難点だけど」
		ELSE
			PRINTFORMW 「お、いい尺寸。結局平衡良いのが一番だなー」
			PRINTFORMW 「どうよ%CNAME("主人")%？ やっぱ美少女だろ、%CNAME("一人称")%」
		ENDIF
	ENDIF
CASE "妊娠不可になって"
	IF COND("妊娠中") || COND("受精確認")
		PRINTFORMW 「待った」
		PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为%CALLNAME:MASTER%の言葉を手で制した。
		PRINTFORMW 「今そんなことしたらどうなるかわかんねえだろ」
		PRINTFORMW 「……言ってる意味、わかるよな？」
		PRINTL
		PRINTFORMW ……被%CALLNAME:TARGET%拒绝了。
	ELSE
		IF CEVENT("妊娠不可：初回") == 0
			PRINTFORMW 「……ふぅ～ん？」
			PRINTFORMW %CALLNAME:MASTER%のお願いを聞くと、%CALLNAME:TARGET%正在认真地读着标题为含みのある表情で%CALLNAME:MASTER%の顔を覗き込んだ。
			IF TALENT:出産経験
				PRINTFORMW 「そっか、満足したか」
				PRINTFORMW 「%CNAME("一人称")%は別にこのままでも構わないかなーって思ってたけど」
				PRINTFORMW 「ま、%CNAME("二人称")%に合わせてやろうかね」
			ELSE
				PRINTFORMW 「やめちゃうんだ。へぇ～」
				PRINTFORMW 「ま、別に構わないけどなー。%CNAME("一人称")%としても安心するし」
				PRINTFORMW 「結局なにがしたかったのかよくわからなかったのが気になるけどな～」
				PRINTFORMW %CALLNAME:MASTER%のお願いを聞き入れながらも、%CALLNAME:TARGET%正在认真地读着标题为どこか坦率ではなかった……
			ENDIF
			CALL SET_CEVENT, "妊娠不可：初回"
		ELSE
			PRINTFORMW 「やーれやれ、またかい」
			PRINTFORMW 「あんまり%CNAME("一人称")%を振り回さないでくれよ。愛しの%CNAME("主人")%桑？」
			PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为含みのある態度で%CALLNAME:MASTER%のお願いを聞き入れた。
		ENDIF
		CALL SETFLAG, "妊娠不能にする", TARGET
		BASE:MASTER:魂 -= 100
		PRINTL
		PRINTFORMW 魂-1.00（%CALLNAME:MASTER%）
	ENDIF
CASE "妊娠可能になって"
	IF TALENT:相思相愛
		IF CEVENT("妊娠可：初回") == 0
			PRINTFORMW 「……」
			PRINTFORMW 「本気で言ってる？」
			PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为真顔で聞き返した。
			PRINTFORMW 片刻后の沈黙の後、%CALLNAME:TARGET%正在认真地读着标题为深い溜め息をついた。
			PRINTFORMW 「……わかった。いいよ」
			PRINTFORMW 「%CNAME("二人称")%が腹の中でどう思ってるかは知らないけど」
			PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为いつになく真剣な顔で%CALLNAME:MASTER%に迫った……
			PRINTFORMW 「%CNAME("一人称")%が“いいよ”って言った意味を酱とわかってくれよ？」
			CALL SET_CEVENT, "妊娠可：初回"
		ELSE
			PRINTFORMW 「ふーん、またか」
			PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为含みのある顔で鼻を鳴らした。
			PRINTFORMW 「どういう心変わりか%CNAME("一人称")%にはよくわかんねえけど」
			PRINTFORMW 「ま、別に構わねえよ。断る理由はない」
			PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为妙に強気な態度で%CALLNAME:MASTER%に迫った……
			PRINTFORMW 「これも惚れた弱みだから。な？」
		ENDIF
		PRINTL
		BASE:MASTER:魂 -= 100
		PRINTFORMW 然后、%CALLNAME:ASSI%の力を借りた魂の取引が始まった……
		PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为子を宿せる肉体に変化していく……
		PRINTL
		IF CEVENT("妊娠可通常：初回") == 0
			PRINTFORMW 「……ん、終わった？」
			PRINTFORMW 「ふぅん……あんまり変わった気しないけど」
			PRINTFORMW 「ま、当たってみてのお楽しみって奴か……」
			CALL SET_CEVENT, "妊娠可通常：初回"
		ELSE
			IF TALENT:出産経験
				PRINTFORMW 「ふふっ……それじゃ、また一緒に頑張ろうか？」
			ELSE
				PRINTFORMW 「さぁて……今度は本気になってくれるのかな？」
			ENDIF
		ENDIF
		PRINTL
		CALL SETFLAG, "妊娠可能にする", TARGET
		PRINTFORMW %CALLNAME:MASTER%の魂と引き換えに、%CALLNAME:TARGET%正在认真地读着标题为妊娠する体变成了。
		PRINTL
		PRINTFORMW 魂-1.00（你）
	ELSE
		PRINTFORMW 「……」
		PRINTFORMW 「哈？」
		PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为真顔で首を傾げた。
		PRINTFORMW 「いや、言ってる意味がわからねえんだけど」
		PRINTFORMW 「まあいいや、聞かなかったことにするから。んじゃ」
		PRINTL
		PRINTFORMW ……被%CALLNAME:TARGET%拒绝了。
		PRINTFORMW 不知道%CALLNAME:TARGET%会改变主意呢……
		CALL PRINT_STR, "イエロー_(※妊娠可能になってもらうには、相手が[相思相愛]の必要が有ます)_W_"
	ENDIF
ENDSELECT

