;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K19
SIF CEVENT("淫魔覚醒：万音") && CEVENT("相思相愛：万音") == 0
	CSTR:瞳色 = 金
SIF CEVENT("淫魔覚醒：万音") || CEVENT("相思相愛：万音")
	CSTR:嘴形 = ワ

IF CEVENT("学校食堂の大姐姐：万音")
	;これから学校に行く領帯ミング
	IF COND("昼")
		CALL SET_CEVENT, "正体偽装"
		CSTR:髪色 = 黒髪
		CSTR:瞳色 = 黒
	;夜の自宅日常が始圆圈領帯ミング
	ELSEIF COND("夜")
		CALL DEL_CEVENT, "正体偽装"
		CSTR:髪色 = 紫髪
		SIF CSTR:瞳色 == "黒"
			CSTR:瞳色 = 紫
	ENDIF
ENDIF
