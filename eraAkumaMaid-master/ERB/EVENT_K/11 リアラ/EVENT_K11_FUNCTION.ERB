;-------------------------------------------------
;	随机口上 あえぎ 単語
;-------------------------------------------------
@LEARA_RAND_TALK_WORD(ARG, ARGS:0, ARGS:1, ARGS:2)
#FUNCTIONS
#DIMS TALKS
#DIMS VOICES
#DIM TALK_COUNT
#DIM NEED_SPACE

; 初期化
VARSET TALKS
VARSET NEED_SPACE

; 語数
IF ARG == 0
	TALK_COUNT = RAND:3 + 2
ELSE
	TALK_COUNT = ARG
ENDIF

$LEARA_RAND_TALK_WORD_LP1
VARSET VOICES

; 汎用
;   上述の条件に一致しない、あるいはそちらで無生成(随机)で抜けた場合の処理
;   なんにでも使えるように当たり障りのないも(= 意味のない喘ぎ)とする
SELECTCASE RAND:100
	; あ行
	CASE  0
		VOICES = 啊/啊啊/啊啊~/啊呜/啊唔~/啊唔/啊呜~/啊哈/啊哈~/咿呀/咿呀~/呀～
	CASE  1
	CASE  2
	CASE  3
	CASE  4
		VOICES = 哦咕/哦咕~/哦、咕～
	; か行
	CASE 10
	CASE 11
	CASE 12
	CASE 13
	CASE 14
	; さ
	CASE 20
	CASE 21
	CASE 22
	CASE 23
	CASE 24
	; た
	CASE 30
	CASE 31
	CASE 32
	CASE 33
	CASE 34
	; な
	CASE 40
	CASE 41
	CASE 42
	CASE 43
	CASE 44
	; は
	CASE 50
	CASE 51
		VOICES = 咿！/咿呀/咿呀~/噫！
	CASE 52
	CASE 53
	CASE 54
	; ま
	CASE 60
	CASE 61
	CASE 62
	CASE 63
	CASE 64
	; や
	CASE 70
	;CASE 71
	CASE 72
	;CASE 73
	CASE 74
	; ら
	CASE 80
	CASE 81
	CASE 82
	CASE 83
	CASE 84
	; わ
	CASE 90
	;CASE 91
	;CASE 92
	;CASE 93
	CASE 94
	; ん
	CASE 99
		VOICES = 嗯/嗯啊/嗯/嗯咕
ENDSELECT

; 非該当の繰り返し
SIF STRLENS(VOICES) == 0
	GOTO LEARA_RAND_TALK_WORD_LP1

VOICES = %TEXTR(VOICES)%

; 修正
IF RAND:2
	VOICES += "っ"
ENDIF

NEED_SPACE = 1
SELECTCASE RAND:2
	CASE 0
		VOICES += "♪"
	CASE 1
		VOICES += "_H_"
		SIF RAND:2
			VOICES += "H_"
	CASEELSE
		VOICES += "。"
		NEED_SPACE = 0
ENDSELECT

; 繰り返し判定
IF TALK_COUNT > 0
	SIF STRLENS(VOICES) == 0
		GOTO LEARA_RAND_TALK_WORD_LP1
	TALK_COUNT -= 1
	TALKS += TEXTR(VOICES)
	SIF NEED_SPACE && TALK_COUNT
		TALKS += "　"
	GOTO LEARA_RAND_TALK_WORD_LP1
ENDIF

RETURNF TALKS

