SIF STRLENS(TALKS)
	RETURNF TALKS

; 絶頂した
;TALKS = %LEARA_RAND_TALK_EXTACY(ARG, ARGS:0, ARGS:1, ARGS:2)%
SIF STRLENS(TALKS)
	RETURNF TALKS

