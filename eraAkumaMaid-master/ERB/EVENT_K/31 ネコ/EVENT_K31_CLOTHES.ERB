;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K31, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	IF COND("発情期") && COND("調教空白期間") >= 10 && CFLAG:好感度 >= 5000
		CALL SET_PANTIES, "Ｈ的内衣"
		CALL SET_BRA, "Ｈ的胸罩"
	ELSE
		CSTR:胖次 = 低腰胖次/颜色很朴素的/
		CSTR:胸罩 = 吊帯背心/黒/
	ENDIF
	
;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "吊坠"
;学園での便装です
CASE "制服"
	CALL SET_SHIRT, "詰襟运动衫"
	CALL SET_SKIRT, "格子裙"
	CALL SET_SHOES, "运动鞋"
	IF COND("秋") + COND("冬")
		CALL SET_BOTTOM, "紧身短褲"
		CALL SET_SOCKS, "長筒襪"
	ELSE
		CALL SET_BOTTOM, "五分褲"
		CALL SET_SOCKS, "短袜"
	ENDIF

;学園の体育の授業で着ます。この格好のまま部室に現れたりもする
CASE "体操服"
	CALL SET_SHIRT, "詰襟运动衫"
	CALL SET_BOTTOM, "五分褲"
	CALL SET_SOCKS, "短袜"
	CALL SET_SHOES, "运动鞋"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅で着ます
CASE "便装"
	IF CEVENT("ネコイベント：圣诞猫") && DAYEV("圣诞节")
		CALL SET_COSTUME, "聖誕服"
	ELSEIF COND("冬") && PLACE("自宅")
		CALL SET_COSTUME, "上下运动衫"
		CALL SET_OTHER, "宽袖棉和服"
	ELSEIF (COND("秋") || COND("冬")) && COND("夜")
		CALL SET_SHIRT, "前開連帽風衣/灰色"
		CALL SET_BOTTOM, "热褲"
		CALL SET_SOCKS, "長筒襪"
	ELSEIF (COND("夏") || RAND:2) && CFLAG:シルシ <= 1
		CALL SET_SHIRT, "吊帯背心/黒"
		CALL SET_BOTTOM, "热褲"
	ELSE
		IF RAND:2 && TALENT:恋慕 && CFLAG:シルシ <= 1
			CALL SET_SHIRT, "露肩外衣"
			CALL SET_BOTTOM, "热褲"
			CALL SET_SOCKS, "長筒襪"
		ELSE
			CALL SET_SHIRT, "花纹奇怪的T恤"
			CALL SET_BOTTOM, "热褲"
			CALL SET_SOCKS, "短袜"
		ENDIF
	ENDIF

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF COND("冬") && PLACE("自宅")
		CALL SET_OTHER, "灰色の前開連帽風衣"
		CALL SET_SHIRT, "花纹奇怪的T恤"
		CALL SET_BOTTOM, "热褲"
	ELSEIF COND("夏") && COND("夜") == 0
		CALL SET_SHIRT, ""
		CALL SET_OTHER, "前開連帽風衣/灰色"
		CALL SET_BRA, ""
	ELSE
		CALL SET_SHIRT, "吊帯背心"
		CALL SET_BOTTOM, "热褲"	
	ENDIF
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	CALL SET_OTHER, "灰色の前開連帽風衣"
	CALL SET_SHIRT, "花纹奇怪的T恤"
	CALL SET_BOTTOM, "热褲"
	IF COND("冬") || COND("秋")
		CALL SET_SOCKS, "長筒襪"
	ELSE
		CALL SET_SOCKS, "短袜"
	ENDIF
	CALL SET_SHOES, "运动鞋"

;もちろん约会の際に着ます
CASE "约会衣装"
	IF TALENT:恋慕
		IF COND("冬")
			CALL SET_OTHER, "灰色の前開連帽風衣"
			CALL SET_SHIRT, "花纹奇怪的T恤"
			CALL SET_BOTTOM, "热褲"
			CALL SET_SOCKS, "長筒襪"
			CALL SET_SHOES, "运动鞋"

		ELSE
			;75％変Ｔ
			IF RAND:4
				CALL SET_SHIRT, "花纹奇怪的T恤"
				CALL SET_BOTTOM, "热褲"
				CALL SET_SOCKS, "短袜"
				CALL SET_SHOES, "运动鞋"
			ELSEIF RAND:3
				CALL SET_SHIRT, "露肩外衣"
				CALL SET_BOTTOM, "热褲"
				CALL SET_SOCKS, "長筒襪"
				CALL SET_SHOES, "运动鞋"
			ELSE
				CALL SET_SHIRT, "夏日礼服/黒"
				CALL SET_SHOES, "无后跟鞋"
				CALL SET_OTHER, "妇人礼帽"
			ENDIF
		ENDIF
	ELSE
		CALL SET_SHIRT, "花纹奇怪的T恤"
		CALL SET_BOTTOM, "热褲"
		CALL SET_SOCKS, "短袜"
		CALL SET_SHOES, "运动鞋"
	ENDIF
CASE "朝袭衣装"
;朝Ｈの際に着ます
	IF COND("同居中")
		IF CFLAG:便当
			IF RAND:2
				CSTR:改髪 = 麻花辫２
			ELSE
				CSTR:改髪 = 马尾辫
			ENDIF
			CALL SET_OTHER, "厨房围裙"
		ENDIF
		CALL SET_SHIRT, "花纹奇怪的T恤"
		CALL SET_BOTTOM, "热褲"
	ELSE

	ENDIF
;夜袭Ｈの際に着ます
CASE "夜袭衣装"
	IF COND("夏") && RAND:2
		CALL SET_SHIRT, ""
		CALL SET_BRA, ""
		CALL SET_OTHER, "前開連帽風衣/灰色"
	ELSE
		CALL SET_BRA, ""
		CALL SET_SHIRT, "花纹奇怪的T恤"
		CALL SET_BOTTOM, ""
	ENDIF
	CALL SET_SOCKS, ""
	CALL SET_SHOES, ""
ENDSELECT

;変な柄処理
IF CHECK_SHIRT("変な柄")
	IF RAND:4 == 0
		CSTR:服 += @"柄：＼（^o^）／/ＡＡ/"
	ELSE
		CSTR:服 += @"柄：%TEXTR("週休七日/猫じゃらせない/果報は寝て待て/恋人では有ません/三食午睡付き/逃走本能/朝三暮四/三寒四温/一日三食")%/"
	ENDIF
ENDIF

;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K31
IF CHECK_SHIRT("オフショル")
	CSTR:改髪 = 麻花辫２
ELSEIF PLACE("自宅")
	CSTR:改髪 = 马尾辫
ELSE
	CALL SETFLAG, "普段の髪型復元", TARGET
ENDIF

;-------------------------------------------------
;感情やシチュに応じて、角色独自の表情を設定する。設定しなくてもかまいません
;主にEMOTION_PLUSなどで颜绘を出す際の文字列の組み合わせの代わりに使う関数です
;-------------------------------------------------
@EMOTION_K31, ARGS

SELECTCASE ARGS
;一人で何かしてる状態などです
CASE "闲"
	IF RAND:3 == 0
		STR:颜绘改髪 = 对话框・・・/飘忽/へ字２
	ELSEIF RAND:2
		STR:颜绘改髪 = 飘忽/通常眉/無口系２
	ELSE
		STR:颜绘改髪 = 飘忽/通常眉/へ字２
	ENDIF
CASE "睡眠"
	STR:颜绘改髪 = 闭眼２/对话框睡眠/斜眉/無口系２
CASE "欣喜"
	IF CEVENT("ネコイベント：偽酔酒")
		STR:颜绘改髪 = 对话框爱心/困扰眉/赤面２/微笑２
	ELSEIF COND("発情期")
		IF TALENT:恋慕
			STR:颜绘改髪 = 赤面/蹙眉/半開４
		ELSE
			STR:颜绘改髪 = 斜眼%CONDS("眼形の番号")%/左闭眼２/紅潮/半開/憤怒眉
		ENDIF
	ELSE
		IF TALENT:恋慕
			STR:颜绘改髪 = 紅潮２/飘忽/へ字/斜眉２
		ELSE
			STR:颜绘改髪 = 紅潮/憤怒眉/闭眼２/栗口
		ENDIF
	ENDIF
CASE "甜言蜜语"
	IF CEVENT("ネコイベント：偽酔酒")
		STR:颜绘改髪 = 对话框爱心/困扰眉/赤面２/微笑２
	ELSEIF COND("発情期")
		IF TALENT:恋慕
			STR:颜绘改髪 = 赤面/蹙眉/半開４
		ELSE
			STR:颜绘改髪 = 斜眼%CONDS("眼形の番号")%/左闭眼２/紅潮/半開/憤怒眉
		ENDIF
	ELSE
		IF TALENT:恋慕
			STR:颜绘改髪 = 紅潮２/飘忽/へ字/斜眉２
		ELSE
			STR:颜绘改髪 = 紅潮/憤怒眉/闭眼２/栗口
		ENDIF
	ENDIF
CASE "心情好"
	IF CEVENT("ネコイベント：偽酔酒")
		STR:颜绘改髪 = いー/笑颜４/赤面
	ELSE
		IF TALENT:恋慕
			STR:颜绘改髪 = 紅潮/半開
		ELSE
			STR:颜绘改髪 = 嘲笑２/通常眉
		ENDIF
	ENDIF
CASE "心情差"
	STR:颜绘改髪 = 蹙眉/へ字
CASE "躁动难忍"
	IF COND("発情期")
		IF TALENT:恋慕
			STR:颜绘改髪 = 对话框乱/半開/闭眼２/赤面２/蹙眉
		ELSE
			STR:颜绘改髪 = 赤面/無口系２/飘忽
		ENDIF
	ELSE
		IF TALENT:恋慕
			STR:颜绘改髪 = 飘忽/紅潮/困惑眉/左闭眼２/へ字
		ELSE
			STR:颜绘改髪 = 困惑眉/栗口/闭眼２/赤面/对话框乱
		ENDIF
	ENDIF
CASE "刚睡醒"
	STR:颜绘改髪 = 对话框困倦/無口系２/斜眉/高光无
CASE "憤怒"
	IF TALENT:恋慕
		STR:颜绘改髪 = 左闭眼/哈欠小/对话框憤怒		
	ELSE
		STR:颜绘改髪 = 目陰効果/对话框憤怒/半開４
	ENDIF
CASE "害羞"
	IF TALENT:恋慕
		STR:颜绘改髪 = 紅潮/飘忽/へ字/斜眉２
	ELSE
		STR:颜绘改髪 = 左闭眼２/半開４/紅潮
	ENDIF
CASE "惊嚇"
	STR:颜绘改髪 = 〇〇/憤怒眉/哈欠小
CASE "小悪魔"
	IF TALENT:恋慕
		STR:颜绘改髪 = 紅潮/斜眉/斜眼%CONDS("眼形の番号")%/会話口
	ELSE
		STR:颜绘改髪 = 嘲笑/紅潮２/通常眉
	ENDIF
CASE "红潮恍惚"
	IF TALENT:恋慕
		STR:颜绘改髪 = 对话框・・・/紅潮/半開/通常眉
	ELSE
		STR:颜绘改髪 = 斜眉２/飘忽/左闭眼２/紅潮/へ字２
	ENDIF
;CASE ""
;	STR:颜绘改髪 = 
ENDSELECT

