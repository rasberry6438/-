;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K22, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	IF CEVENT("美式校服化：琉娜") && COND("冬") == 0
		CSTR:胖次 = 低腰胖次/颜色很Ｈ的/
		IF RAND:2
			CSTR:胸罩 = 比基尼胸罩/颜色很Ｈ的/
		ELSE
			CSTR:胸罩 = 半杯胸罩/颜色很Ｈ的/
		ENDIF
	ELSE
		CSTR:胖次 = 低腰胖次/颜色很朴素的/
		CSTR:胸罩 = 普通的胸罩/颜色很朴素的/
	ENDIF

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "颈環"

;学園での便装です。設定必須です
CASE "制服"
	IF CEVENT("美式校服化：琉娜") && COND("冬") == 0
		CALL SET_SHIRT, "宽松罩衫"
		CALL SET_SKIRT, "微格子裙"
		CALL SET_SOCKS, "泡泡袜"
		CALL SET_SHOES, "运动鞋"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"

;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	SELECTCASE TEXTS("季節")
	CASE "夏"
		IF RAND:2 && COND("昼")
			CALL SET_COSTUME, "工装裤"
			CALL SET_SOCKS, "短袜"
			CALL SET_SHOES, "靴"
		ELSE
			IF RAND:2
				CALL SET_SHIRT, "吊帯背心"
			ELSE
				CALL SET_SHIRT, "花纹奇怪的T恤"
			ENDIF
			CALL SET_BOTTOM, "热褲"
			CALL SET_SOCKS, "短袜"
			CALL SET_SHOES, "运动鞋"
		ENDIF
	CASE "冬"
		IF RAND:2
			CALL SET_COSTUME, "工装裤"
			CALL SET_SOCKS, "过膝长袜"
			CALL SET_SHOES, "靴"
			CALL SET_OTHER, "围巾/厚厚的外套"
		ELSE
			CALL SET_SHIRT, "露背毛衣"
			CALL SET_BOTTOM, "低腰牛仔褲"
			CALL SET_SOCKS, "过膝长袜"
			CALL SET_SHOES, "运动鞋"
			CALL SET_OTHER, "围巾/厚厚的外套"
		ENDIF
	CASEELSE
		IF RAND:2
			CALL SET_COSTUME, "工装裤"
			CALL SET_SOCKS, "短袜"
			CALL SET_SHOES, "靴"
		ELSE
			CALL SET_SHIRT, TEXTR("衬衫/露背毛衣")
			CALL SET_BOTTOM, "低腰牛仔褲"
			CALL SET_SOCKS, "短袜"
			CALL SET_SHOES, "运动鞋"
		ENDIF
	ENDSELECT

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	SELECTCASE TEXTS("季節")
	CASE "夏"
		IF RAND:3 == 0
			CALL SET_SHIRT, "衬衫"
		ELSEIF RAND:2
			CALL SET_SHIRT, "吊帯背心"
		ELSE
			CALL SET_SHIRT, "花纹奇怪的T恤"
		ENDIF
		SIF RAND:2
			CALL SET_SOCKS, "短袜"
	CASE "冬"
		CALL SET_SHIRT, "露背毛衣"
		CALL SET_BOTTOM, "低腰牛仔褲"
		CALL SET_SOCKS, "过膝长袜"
		CALL SET_OTHER, "宽袖棉和服"
	CASEELSE
		CALL SET_SHIRT, TEXTR("衬衫/露背毛衣")
		CALL SET_BOTTOM, "低腰牛仔褲"
		CALL SET_SOCKS, "短袜"
	ENDSELECT
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	SELECTCASE TEXTS("季節")
	CASE "夏"
		CALL SET_SHIRT, "衬衫"
		CALL SET_BOTTOM, "热褲"
		CALL SET_SOCKS, "短袜"
		CALL SET_SHOES, "运动鞋"
	CASE "冬"
		CALL SET_SHIRT, "露背毛衣"
		CALL SET_BOTTOM, "低腰牛仔褲"
		CALL SET_SOCKS, "过膝长袜"
		CALL SET_SHOES, "运动鞋"
		CALL SET_OTHER, "围巾/厚厚的外套"
	CASEELSE
		CALL SET_SHIRT, "衬衫"
		CALL SET_BOTTOM, "低腰牛仔褲"
		CALL SET_SOCKS, "短袜"
		CALL SET_SHOES, "运动鞋"
	ENDSELECT
	SIF COND("髪型変更可能")
		CSTR:前髪 = 遮住一只眼睛
ENDSELECT

;変な柄処理
IF CHECK_SHIRT("変な柄")
	IF RAND:2
		IF RAND:5 == 0
			CSTR:服 += @"柄：I'm a dragon./習字風/英字/"
		ELSE
			CSTR:服 += @"柄：%TEXTR("居家服/新春番茄狩り/今日の料理担当/絶許神/万丈だ。")%/習字風/"
		ENDIF
	ELSE
		CSTR:服 += @"柄：%TEXTR("威風堂々/臥薪嘗胆/青息吐息/画竜点睛/火樹銀花/常鱗凡介")%/"
	ENDIF
ENDIF
;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K22
IF PLACE("自宅")
	CSTR:前髪 = %TEXTR("单眼遮盖/乱髪/乱髪２/乱髪３/乱髪４")%
ELSE
	IF COND("昼")
		CALL SETFLAG, "普段の髪型復元", TARGET
	ELSE
		CSTR:前髪 = %TEXTR("单眼遮盖/乱髪/乱髪２/乱髪３/乱髪４")%
	ENDIF
ENDIF
