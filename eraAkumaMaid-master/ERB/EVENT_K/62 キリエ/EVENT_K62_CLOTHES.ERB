;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K62, ARGS

SELECTCASE ARGS
;角色クター独自の内衣の組み合わせを設定できます。設定必須です。一定の確率で着用します
;もしも普段は付けない、という事ならCSTR:胖次 = と等号の右側を書き込まない事で出来ます
;CFLAG:随机内衣OFF = 1とした場合には、ここで設定した内衣のみを身に着けるようになります
CASE "内衣"
	CSTR:胖次 = 內褲/淡色/简约/
	CSTR:胸罩 = 简约胸罩/淡色/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, ""

;学園での便装です。設定必須です。
CASE "制服"
	CALL SET_COSTUME, "露脐装超短裙領帶西装/青"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服布鲁马"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"
	CSTR:改髪 = 无特殊髪型

;自宅など学園外で着ます。設定必須です
CASE "便装"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		CALL SET_SHIRT, "针织毛衣"
		CALL SET_BOTTOM, "打底褲"
	CASE "秋"
		IF RAND:2
			CALL SET_SHIRT, "针织毛衣"
			CALL SET_BOTTOM, "打底褲"
		ELSE
			CALL SET_SHIRT, "针织露肩外衣"
			CALL SET_BOTTOM, "キュロット"
		ENDIF
	CASE "夏"
			CALL SET_SHIRT, "露脐Ｔ恤"
			CALL SET_BOTTOM, "短褲"
	CASEELSE
		IF RAND:2
			CALL SET_SHIRT, "切驳服"
			CALL SET_SKIRT, "百褶裙"
		ELSE
			CALL SET_SHIRT, "露肩外衣"
			CALL SET_BOTTOM, "キュロット"
		ENDIF
	ENDSELECT
	CALL SET_PANTIES, "蕾丝的胖次"
	CALL SET_BRA, "蕾丝胸罩"

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	SELECTCASE TEXTS("季節")
	CASE "春", "秋"
		CALL SET_SHIRT, "宽大的Ｔ恤"
	CASE "夏"
		CALL SET_SHIRT, "吊帯衫"
	CASEELSE
		CALL SET_SHIRT, "运动衫"
		CALL SET_BOTTOM, "运动衫"
	ENDSELECT
	CALL SET_PANTIES, "蕾丝的胖次"
	CALL SET_BRA, "蕾丝胸罩"

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		CALL SET_SHIRT, "针织毛衣"
		CALL SET_SKIRT, "刺绣長裙"
		CALL SET_BOTTOM, "连褲襪"
		CALL SET_SHOES, "小皮靴"
	CASE "秋"
		IF RAND:2
			CALL SET_SHIRT, "针织毛衣"
			CALL SET_SKIRT, "刺绣長裙"
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_SHOES, "小皮靴"
		ELSE
			CALL SET_SHIRT, "针织露肩外衣"
			CALL SET_BOTTOM, "牛仔褲"
			CALL SET_SHOES, "小皮靴"
		ENDIF
	CASE "夏"
			CALL SET_SHIRT, "无袖女式衬衫"
			CALL SET_SKIRT, "百褶裙"
			CALL SET_BOTTOM, "紧身短褲"
			CALL SET_SHOES, "小皮靴"
	CASEELSE
		IF RAND:2
			CALL SET_SHIRT, "切驳服"
			CALL SET_SKIRT, "百褶裙"
			CALL SET_BOTTOM, "紧身短褲"
			CALL SET_SHOES, "小皮靴"
		ELSE
			CALL SET_SHIRT, "露肩外衣"
			CALL SET_BOTTOM, "キュロット"
			CALL SET_SHOES, "小皮靴"
		ENDIF
	ENDSELECT
	CALL SET_PANTIES, "蕾丝的胖次"
	CALL SET_BRA, "蕾丝胸罩"

;もちろん约会の際に着ます
CASE "约会衣装"
	IF TALENT:恋慕
		;服
		SELECTCASE TEXTS("季節")
		CASE "冬"
			IF RAND:3 == 0
				CALL SET_SHIRT, "露背针织毛衣"
			ELSEIF RAND:2 == 0
				CALL SET_SHIRT, "縦毛衣"
			ELSE
				CALL SET_SHIRT, "開胸高領毛衣"
			ENDIF
		CASE "秋", "春"
			IF RAND:3 == 0
				CALL SET_SHIRT, "切驳服"
			ELSEIF RAND:2 == 0
				CALL SET_SHIRT, "针织露肩外衣"
			ELSE
				CALL SET_SHIRT, "露肩外衣"
			ENDIF
		CASEELSE
			IF RAND:3 == 0
				CALL SET_SHIRT, "无袖女式衬衫"
			ELSEIF RAND:2 == 0
				CALL SET_SHIRT, "吊帯衫"
			ELSE
				CALL SET_SHIRT, "紧身長袍"
			ENDIF
		ENDSELECT
		;裙、休闲褲
		SELECTCASE TEXTS("季節")
		CASE "冬", "秋"
			SIF CHECK_SHIRT("連衣裙") == 0
				CALL SET_SKIRT, "刺绣長裙"
		CASEELSE
			IF RAND:2 == 0
				CALL SET_BOTTOM, "キュロット"
			ELSE
				CALL SET_BOTTOM, "短褲"
			ENDIF
		ENDSELECT
		;连褲襪
		SELECTCASE TEXTS("季節")
		CASE "冬", "秋"
			CALL SET_BOTTOM, "连褲襪"
		CASEELSE
			
		ENDSELECT
		IF RAND:3 == 0
			CALL SET_SHOES, "平底鞋"
		ELSEIF RAND:2 == 0
			CALL SET_SHOES, "无后跟鞋"
		ELSE
			CALL SET_SHOES, "高跟鞋"
		ENDIF
	ELSE
		SELECTCASE TEXTS("季節")
		CASE "冬"
			CALL SET_SHIRT, "针织毛衣"
			CALL SET_SKIRT, "刺绣長裙"
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_SHOES, "小皮靴"
		CASE "秋"
			IF RAND:2
				CALL SET_SHIRT, "针织毛衣"
				CALL SET_SKIRT, "刺绣長裙"
				CALL SET_BOTTOM, "连褲襪"
				CALL SET_SHOES, "小皮靴"
			ELSE
				CALL SET_SHIRT, "针织露肩外衣"
				CALL SET_BOTTOM, "牛仔褲"
				CALL SET_SHOES, "小皮靴"
			ENDIF
		CASE "夏"
				CALL SET_SHIRT, "无袖女式衬衫"
				CALL SET_SKIRT, "百褶裙"
				CALL SET_BOTTOM, "紧身短褲"
				CALL SET_SHOES, "小皮靴"
		CASEELSE
			IF RAND:2
				CALL SET_SHIRT, "切驳服"
				CALL SET_SKIRT, "百褶裙"
				CALL SET_BOTTOM, "紧身短褲"
				CALL SET_SHOES, "小皮靴"
			ELSE
				CALL SET_SHIRT, "露肩外衣"
				CALL SET_BOTTOM, "キュロット"
				CALL SET_SHOES, "小皮靴"
			ENDIF
		ENDSELECT
	ENDIF
	CALL SET_PANTIES, "蕾丝的胖次"
	CALL SET_BRA, "蕾丝胸罩"

;朝Ｈの際に着ます
CASE "朝袭衣装"
	IF COND("同居中")

	ELSE

	ENDIF
;夜袭Ｈの際に着ます
CASE "夜袭衣装"

ENDSELECT


