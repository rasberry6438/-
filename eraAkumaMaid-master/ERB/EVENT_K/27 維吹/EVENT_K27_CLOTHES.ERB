;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K27, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 內褲/白/
	CSTR:胸罩 = 普通的胸罩/颜色很朴素的/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での便装です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "水手服"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服运动衫"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "競泳泳装"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	;服装に興味がないのでいつも雑な服を着ている
	IF COND("夏")
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SOCKS, "短袜"
	ELSE
		CALL SET_SHIRT, "女式衬衫"
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SOCKS, "短袜"
	ENDIF

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	;自室では裸足
	IF COND("夏")
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_BOTTOM, "牛仔褲"
	ELSE
		CALL SET_SHIRT, "女式衬衫"
		CALL SET_BOTTOM, "牛仔褲"
	ENDIF
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	CALL SET_SHIRT, "女式衬衫"
	CALL SET_BOTTOM, "牛仔褲"
	CALL SET_SOCKS, "短袜"
	CALL SET_SHOES, "运动鞋"
	;寒さに耐性があるが着てないと変なので着てる
	IF COND("冬")
		CALL SET_OTHER, "外套"
	ENDIF

;もちろん约会の際に着ます
CASE "约会衣装"
	CALL SET_SHIRT, "女式衬衫"
	CALL SET_BOTTOM, "牛仔褲"
	CALL SET_SOCKS, "短袜"
	CALL SET_SHOES, "运动鞋"
	;寒さに耐性があるが着てないと変なので着てる
	IF COND("冬")
		CALL SET_OTHER, "外套"
	ENDIF
ENDSELECT

