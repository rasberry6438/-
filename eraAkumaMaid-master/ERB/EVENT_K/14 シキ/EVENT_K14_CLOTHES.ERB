;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K14, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 四角褲/男式色/男物/
	CSTR:胸罩 = 

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"

;学園での便装です
CASE "制服"
	CALL SET_COSTUME, "水手服"
	SIF COND("秋") || COND("冬")
		CALL SET_BOTTOM, "运动衫休闲褲"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする
CASE "体操服"
	CALL SET_COSTUME, "体操服运动衫"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅で着ます
CASE "便装"
	CALL SET_COSTUME, "上下运动衫"
	SIF RAND:2
		CALL SET_SHIRT, "Ｔ恤"

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	CALL SET_COSTUME, "Ｔ恤运动衫"

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	IF TALENT:恋慕
		CALL SET_SHIRT, "連衣裙/白"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	ELSE
		CALL SET_COSTUME, "Ｔ恤运动衫"
	ENDIF
ENDSELECT


;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K14
IF COND("夜")
	;髪型変更
	IF TALENT:恋慕
		CALL SETFLAG, "普段の髪型復元", TARGET

		SELECTCASE RAND:4
		CASE 0
			CSTR:改髪 = 双马尾
		CASE 1
			CSTR:後髪 = 自然
		CASE 2
			CSTR:改髪 = 三股辫
		CASEELSE
			CSTR:前髪 = 編髪
			CSTR:後髪 = 自然
		ENDSELECT
	ENDIF
ENDIF
