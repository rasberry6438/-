;-------------------------------------------------
;互动指令の選択肢を追加
@DAILY2_K14_ADDSELECT
;吸血イベント
STR:選択肢 += "血を分ける/"

;互动指令で増やした選択肢の地の文と台詞
@KOJO_DAILY2_K14_ADDSELECT, ARGS
SELECTCASE ARGS
CASE "血を分ける"
	PRINTFORMW %CALLNAME:MASTER%向%CALLNAME:TARGET%一样松開了领口。
	PRINTL 
	
	;本日吸血済み
	IF CFLAG:織吸血フラグ == 1
		IF CFLAG:織吸血量 < 100
			SELECTCASE RAND:3
			CASE 0
				PRINTFORML 「今天已经好了！」
			CASE 1
				PRINTFORML 「哼……・・・不，没什么」
			CASEELSE
				PRINTFORML 「不，没関系，・・・真没関系。」
			ENDSELECT
		ELSEIF CFLAG:織吸血量 < 300
			SELECTCASE RAND:3
			CASE 0
				PRINTFORML 「今天已经没事了……」
			CASE 1
				PRINTFORML 「够了……喂，你知道节制吗？」
			CASEELSE
				PRINTFORML 「不，喝得那么多…！」
			ENDSELECT
		ELSEIF TALENT:恋慕
			SELECTCASE RAND:3
			CASE 0
				PRINTFORML 「今天已经喝够了！不要诱惑我！」
			CASE 1
				PRINTFORML 「呼……・・・不要太诱惑我了吧？」
			CASEELSE
				PRINTFORML 「嗯~什么？你还想再吸吗？」
			ENDSELECT
		ELSE
			SELECTCASE RAND:3
			CASE 0
				PRINTFORML 「不，我不喝那么多」
			CASE 1
				PRINTFORML 「呼……不，喝多了的话，你作为人类会出问题的。」
			CASEELSE
				PRINTFORML 「今天已经喝了，没関系。」
			ENDSELECT
		ENDIF
		PRINTFORMW 今天血已经够了。


	;吸血を断った日
	ELSEIF CFLAG:織吸血フラグ == 2
		;吸血をした事がない
		IF CFLAG:織吸血量 == 0
			PRINTFORML 「不、不……所以说没什么好的！」
			PRINTFORMW 织为了摆脱诱惑，用力挥着手拒绝了。。
			PRINTL 
			PRINTFORMW %CALLNAME:TARGET%看到了%CALLNAME:MASTER%的脖子，但好像还是吸血冲动的自制力很强。

		;レアパターン・断ったけど血を飲む
		ELSEIF RAND:64 == 0 && BASE:MASTER:魂 >= 20
			PRINTFORML 「・・・那么想让我吸吗？」
			PRINTFORMW %CALLNAME:TARGET%像是认了似的叹了一口气。
			PRINTL
			;恋慕
