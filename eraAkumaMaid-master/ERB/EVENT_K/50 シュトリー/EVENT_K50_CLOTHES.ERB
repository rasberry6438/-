;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K50, ARGS
#DIMS CLOTH_COLOR
#DIMS COSTUME
CLOTH_COLOR =
COSTUME =

;期間限定
IF DAYEV("万圣节") && COND("夜")
	SELECTCASE ARGS
	CASE "便装", "居家服", "外出装"
		CALL SETFLAG, "扒成裸体", TARGET
		CSTR:贴身制服 = 拘束衣/皮革/腋露出/谷間露出/露脐/
		CALL SET_GLOVE, "皮革袖套"
		CALL SET_SHOES, "及膝襪"
		CSTR:靴 = サイハイ靴/直到大腿/
		CALL SET_OTHER, "皮革颈環"
		RETURN 0
	ENDSELECT
ENDIF

SELECTCASE ARGS
;角色クター独自の内衣の組み合わせを設定できます。設定必須です。一定の確率で着用します。
;もしも普段は付けない、という事ならCSTR:胖次 = と等号の右側を書き込まない事で出来ます。
CASE "内衣"
	COSTUME = 小悪魔の胖次
	IF CEVENT("購入：儿童胖次")
		COSTUME = %COSTUME%/儿童胖次
	ELSE
		COSTUME = %COSTUME%/內褲
	ENDIF
	
	IF CEVENT("購入：和装内衣セット")
		COSTUME = %COSTUME%/和装内衣セット
	ELSE
		COSTUME = %COSTUME%/三角胖次
	ENDIF

	COSTUME = %TEXTR(COSTUME)%

	SELECTCASE COSTUME
	CASE "儿童胖次"
		CLOTH_COLOR = %TEXTR("白/草莓紋/小熊紋/鱼紋/猫紋/小鸡紋/蝴蝶结紋/水玉模様/緑色")%
		CSTR:胖次 = 儿童胖次/%CLOTH_COLOR%/
		CSTR:胸罩 = 吊帯衫//%CLOTH_COLOR%/
	CASE "和装内衣セット"
		CLOTH_COLOR = %TEXTR("黒/赤/薄桃色/白")%
		CSTR:胸罩 = 裹胸布/%CLOTH_COLOR%/
		CSTR:胖次 = 兜襠布/%CLOTH_COLOR%/高開衩/Ｔ字褲/
	CASE "小悪魔の胖次"
		CSTR:胖次 = 小悪魔の胖次/黒/低腰/低腰胖次/
		CSTR:胸罩 = 小悪魔の胸罩/黒/半杯/
	CASE "內褲"
		CLOTH_COLOR = %TEXTR("黄色/橙色/黒/紫/青/紺色/薄青色/真紅/赤/薄桃色/白/純白/緑色/薄緑")%
		CSTR:胖次 = 內褲/%CLOTH_COLOR%/简约/
		CSTR:胸罩 = 简约胸罩/%CLOTH_COLOR%/
	CASE "三角胖次"
		CLOTH_COLOR = %TEXTR("黄色/橙色/黒/紫/青/紺色/薄青色/真紅/赤/薄桃色/白/純白/緑色/薄緑")%

		SELECTCASE CLOTH_COLOR
		CASE "黄色", "橙色"
			CSTR:胖次 = 三角胖次/%CLOTH_COLOR%/正面蝴蝶結%TEXTR("三角/紐")%黄/
		CASE "黒", "緑色", "薄緑"
			CSTR:胖次 = 三角胖次/%CLOTH_COLOR%/正面蝴蝶結%TEXTR("三角/紐")%黒/
		CASE "紫"
			CSTR:胖次 = 三角胖次/%CLOTH_COLOR%/正面蝴蝶結%TEXTR("三角/紐")%白/
		CASE "青", "紺色", "薄青色"
			CSTR:胖次 = 三角胖次/%CLOTH_COLOR%/正面蝴蝶結%TEXTR("三角/紐")%青/
		CASE "真紅", "赤"
			CSTR:胖次 = 三角胖次/%CLOTH_COLOR%/正面蝴蝶結%TEXTR("三角/紐")%赤/
		CASEELSE
			CSTR:胖次 = 三角胖次/%CLOTH_COLOR%/正面蝴蝶結%TEXTR("三角/紐")%%TEXTR("白/赤")%/
		ENDSELECT
		CSTR:胸罩 = 文胸/%CLOTH_COLOR%/
	ENDSELECT
;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	SIF CEVENT("眼鏡ＯＮ")
		CALL SET_OTHER, "眼鏡"

;学園での便装です。設定必須です。
;水手服, 露脐装超短裙水手服, 西装外衣, 露脐装超短裙西装外衣, 美式校服など
CASE "制服"
	CALL SET_COSTUME, "露脐装超短裙水手服/青"
	IF COND("夏")
		CALL SET_SOCKS, "短襪"
	ELSEIF  COND("冬")
		CALL SET_OTHER, "V领毛衣"
		CALL SET_SOCKS, "高筒襪"
	ELSE
		CALL SET_SOCKS, "膝下襪"
	ENDIF
	SIF COND("归途")
		CALL SET_OTHER, "白色贝雷帽"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服布鲁马, 体操服五分褲, 体操服紧身短褲, 体操服运动衫など
CASE "体操服"
	CALL SET_COSTUME, "体操服紧身短褲/赤"
	IF COND("夏")
		CALL SET_SOCKS, "短襪"
	ELSE
		CALL SET_SOCKS, "膝下襪"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;死库水, 競泳泳装, 白比基尼, 黒比基尼など
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	COSTUME = 露脐吊帯背心/吊帯衫/Ｔ恤/開放型ショルダー女式衬衫
	SIF CEVENT("購入：哥特連衣裙")
		COSTUME = %COSTUME%/哥特連衣裙
	COSTUME = %TEXTR(COSTUME)%

	SELECTCASE COSTUME
	CASE "哥特連衣裙"
		CALL SET_SHIRT, "哥特連衣裙"
		IF COND("合意：性処理")
			CALL SET_OTHER, "黒色颈環/礼服頭花"
		ELSE
			CALL SET_OTHER, "颈環/礼服頭花"
		ENDIF
	CASE "露脐吊帯背心"
		CALL SET_SHIRT, "露脐吊帯背心/黒"
		CALL SET_BRA, ""
		CALL SET_BOTTOM, "紧身短褲/灰"
	CASE "吊帯衫"
		CSTR:服 = 吊帯衫/%TEXTR("白/青/橙色")%/汗水浸湿的/提起裙角/腋露出/
		CALL SET_BRA, ""
		CALL SET_BOTTOM, "热褲"
		SIF COND("冬")
			CALL SET_OTHER, @"%TEXTR("白色/青い/红色")%フルジップ連帽風衣"
	CASE "Ｔ恤"
		CALL SET_SHIRT, "Ｔ恤"
		CALL SET_SKIRT, "フレア迷你裙"
	CASE "開放型ショルダー女式衬衫"
		IF COND("冬")
			CALL SET_SHIRT, "针织露肩外衣"
		ELSE
			CSTR:服 = 開放型ショルダー女式衬衫/汗水浸湿的/
		ENDIF
		CALL SET_SKIRT, "百褶迷你裙"
	ENDSELECT

	;靴と襪子
	SELECTCASE COSTUME
	CASE "哥特連衣裙"
		CALL SET_SOCKS, "褶边襪"
		CALL SET_SHOES, "平底鞋"
	CASE "露脐吊帯背心"
		CALL SET_SOCKS, ""
		CALL SET_SHOES, ""
	CASEELSE
		IF COND("夏")
			CALL SET_SOCKS, "短襪"
			CALL SET_SHOES, "シューズ"
		ELSE
			CALL SET_SOCKS, "高筒襪"
			CALL SET_SHOES, "靴"
		ENDIF
	ENDSELECT
;自分的房間(not主人公的房間)で着ます
CASE "居家服"

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	COSTUME = 吊帯衫/Ｔ恤/開放型ショルダー女式衬衫
	SIF CEVENT("購入：哥特連衣裙")
		COSTUME = %COSTUME%/哥特連衣裙
	COSTUME = %TEXTR(COSTUME)%

	SELECTCASE COSTUME
	CASE "哥特連衣裙"
		CALL SET_SHIRT, "哥特連衣裙"
		IF COND("合意：性処理")
			CALL SET_OTHER, "黒色颈環/礼服頭花"
		ELSE
			CALL SET_OTHER, "颈環/礼服頭花"
		ENDIF
	CASE "吊帯衫"
		CSTR:服 = 吊帯衫/%TEXTR("白/青/橙色")%/汗水浸湿的/提起裙角/腋露出/
		CALL SET_BRA, ""
		CALL SET_BOTTOM, "热褲"
		CALL SET_OTHER, @"%TEXTR("白色/青い/红色")%フルジップ連帽風衣"
	CASE "Ｔ恤"
		CALL SET_SHIRT, "Ｔ恤"
		SIF COND("冬")
			CALL SET_OTHER, "羽绒夹克"
		CALL SET_SKIRT, "フレアMicro迷你裙"
	CASE "開放型ショルダー女式衬衫"
		IF COND("冬")
			CALL SET_SHIRT, "针织露肩外衣"
			CALL SET_OTHER, "チェスター外套"
		ELSE
			CSTR:服 = 開放型ショルダー女式衬衫/汗水浸湿的/
		ENDIF
		CALL SET_SKIRT, "百褶迷你裙"
	ENDSELECT

	;靴と襪子
	SELECTCASE COSTUME
	CASE "哥特連衣裙"
		CALL SET_SOCKS, "褶边襪"
		CALL SET_SHOES, "平底鞋"
	CASEELSE
		IF COND("夏")
			CALL SET_SOCKS, "短襪"
			CALL SET_SHOES, "シューズ"
		ELSE
			CALL SET_SOCKS, "高筒襪"
			CALL SET_SHOES, "靴"
		ENDIF
	ENDSELECT
;もちろん约会の際に着ます
CASE "约会衣装"
	CALL SET_SHIRT, "女式衬衫"
	CALL SET_SKIRT, "フレア裙"
	CALL SET_SOCKS, "短襪"
	CALL SET_SHOES, "短靴"
	CALL SET_OTHER, "蝴蝶結領帯丝巾"
	SIF COND("冬")
		CALL SET_OTHER, "披风外套"
ENDSELECT


