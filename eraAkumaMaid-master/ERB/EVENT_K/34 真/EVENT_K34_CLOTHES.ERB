;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K34, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CALL SET_PANTIES, "內褲/正面蝴蝶結三角白/緑色"
	CALL SET_BRA, "简约胸罩/薄緑"

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "眼鏡"

;学園での便装です。設定必須です
CASE "制服"
	IF COND("夏")
		CALL SET_COSTUME, "露脐装超短裙西装外衣"
	ELSE
		CALL SET_COSTUME, "西装外衣"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服五分褲"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "競泳泳装"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	CALL SET_SHIRT, "連帽風衣/黒"
	CALL SET_SKIRT, "格子裙/赤"

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	CALL SET_SHIRT, "Ｔ恤/白"
	CALL SET_BOTTOM, "五分褲"

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	CALL SET_SHIRT, "V领毛衣/濃紫"
	CALL SET_SKIRT, "百褶裙"
	CALL SET_SOCKS, "襪子"
	CALL SET_SHOES, "运动鞋"

;もちろん约会の際に着ます
CASE "约会衣装"
	CALL SET_SHIRT, "格子連衣裙黒蝴蝶結"
	CALL SET_SOCKS, "襪子"
	CALL SET_SHOES, "短靴"
	IF COND("冬")
		CALL SET_OTHER, "眼鏡/红色鸭舌帽/黑色前開連帽風衣"
	ELSE
		CALL SET_OTHER, "眼鏡/红色鸭舌帽"
	ENDIF
ENDSELECT

