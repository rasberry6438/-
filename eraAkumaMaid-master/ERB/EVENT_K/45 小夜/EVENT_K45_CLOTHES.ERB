;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K45, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 內褲/淡色/
	CSTR:胸罩 = 简约胸罩/淡色/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	IF CFLAG:眼鏡修理中 >= 1
		CALL SET_OTHER, ""		
	ELSE
		CALL SET_OTHER, "黑框眼鏡/黒"
	ENDIF
;学園での便装です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "西装外衣"
	SIF COND("秋") + COND("冬")
		CALL SET_BOTTOM, "连褲襪"

;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "体操服运动衫"
	ELSE
		CALL SET_COSTUME, "体操服五分褲"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	;残念前輩取り繕う
	IF COND("夏")
		CALL SET_SHIRT, "Ｔ恤"
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	ELSE
		CALL SET_SHIRT, "针织毛衣"
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	ENDIF

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	;中学の頃の运动衫が心地いい残念前輩
	IF COND("夏")
		CALL SET_SHIRT, "Ｔ恤"
		CALL SET_BOTTOM, "运动衫休闲褲"
		CALL SET_SOCKS, "短襪"
	ELSE
		CALL SET_SHIRT, "运动衫"
		CALL SET_BOTTOM, "运动衫休闲褲"
		CALL SET_SOCKS, "短襪"
	ENDIF

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	IF TALENT:恋慕
		IF DAYEV("圣诞节")
			CALL SET_SHIRT, "毛衣"
			CALL SET_BOTTOM, "热褲"
			CALL SET_OTHER, "粗呢外套"
			CALL SET_SOCKS, "長筒襪"
			CALL SET_SHOES, "運動鞋"
			CALL SET_PANTIES, "紐丁字褲/紫"
			CALL SET_BRA, "褶边の文胸/紫"
		ELSE
			CALL SET_SHIRT, "女式衬衫"
			CALL SET_SKIRT, "裙"
			CALL SET_SOCKS, "長筒襪"
			CALL SET_SHOES, "无后跟鞋"
		ENDIF
	ELSEIF COND("秋") + COND("冬")
		CALL SET_SHIRT, "针织毛衣"
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	ELSE
		CALL SET_SHIRT, "切驳服"
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SHOES, "運動鞋"
	ENDIF

ENDSELECT


