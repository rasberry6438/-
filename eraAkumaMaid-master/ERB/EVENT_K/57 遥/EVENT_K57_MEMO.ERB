@K57_MEMO
#DIM DYNAMIC PAGE
#DIM DYNAMIC LCOUNT
;できるだけ同じ機能を持つものは同じような名前にしたいので、メイン画面のMEMO_SHOPから名前を拝借する
#DIMS MENU_MEMO

IF CFLAG:ＴＳ進行中 >= 1
	;ここから選択肢の生成
	VARSET MENU_MEMO

	;ちんちんが小さくなったこと
	MENU_MEMO = １页目/
	
	
	;胸が少し大きくなったこと
	SIF CFLAG:ＴＳ進行中 >= 2
		MENU_MEMO += "２页目/"
	
	;胸が貧乳クラスまで大きくなったこと
	SIF CFLAG:ＴＳ進行中 >= 3
		MENU_MEMO += "３页目/"
	
	;胸が普通クラスまで大きくなったこと
	SIF CFLAG:ＴＳ進行中 >= 4
		MENU_MEMO += "４页目/"
	
	SIF CFLAG:ＴＳ進行中 >= 5
		MENU_MEMO += "５页目/"
	
	;身体に淫紋が付いたこと
	SIF CFLAG:ＴＳ進行中 >= 6
		MENU_MEMO += "６页目/"
	
	;選択肢の生成終わり
	PRINTFORMW 要查看哪一页？
	CALL PRINT_SELECT, @"%MENU_MEMO%"

	;RESULTの結果を就这様PAGEに代入する
	PAGE = RESULT

ENDIF

$MEMO_LOOP

	;ここから本文の描写処理
	DRAWLINE

	FOR LCOUNT, 0, 16
		;空白が出てきた場合はそこで打ち切る
		SIF MEMO_NARRATIVE(PAGE, LCOUNT) == ""
			BREAK
		PRINTFORML %MEMO_NARRATIVE(PAGE, LCOUNT)%
	NEXT

	DRAWLINE
	PRINTL 


	IF PAGE >= 1
		CALL PRINT_STR, "[100]翻回上一页"
	ELSE
		CALL PRINT_STR, @"_灰色_[100]察看前一頁に返回"
	ENDIF

	CALL PRINT_STR, @"　　　[200]合上（现在在{PAGE+1}页）　　　"

	IF PAGE < 5 && PAGE < CFLAG:ＴＳ進行中-1
		CALL PRINT_STR, "[300]看下一页"
	ELSE
		CALL PRINT_STR, @"_灰色_[300]察看下一頁を見る"
	ENDIF

	PRINTL 

	DRAWLINE

	INPUT

	SELECTCASE RESULT
	CASE 100
		SIF PAGE >= 1
			PAGE--
	CASE 200
		RETURN 1
	CASE 300
		SIF PAGE < 5 && PAGE < CFLAG:ＴＳ進行中-1
			PAGE++
	ENDSELECT

GOTO MEMO_LOOP

