;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K57, ARGS

SELECTCASE ARGS
;角色クター独自の内衣の組み合わせを設定できます。設定必須です。一定の確率で着用します。
;もしも普段は付けない、という事ならCSTR:胖次 = と等号の右側を書き込まない事で出来ます。
CASE "内衣"
	IF TALENT:伪娘 || VAGINA(TARGET)
		IF TALENT:淫乱
			CSTR:胖次 = Micro比基尼
			CSTR:胸罩 = Micro比基尼胸罩
		ELSE
			CSTR:胖次 = 縞胖次
			CSTR:胸罩 = 普通胸罩
		ENDIF
	ELSE
		CSTR:胖次 = 鬥士胖次/黒/
		IF CEVENT("乳頭の虜")
			CSTR:胸罩 = 運動胸罩
		ELSEIF CFLAG:ＴＳ進行中 >= 3
			CSTR:胸罩 = 裹胸布
		ELSE
			CSTR:胸罩 = 
		ENDIF
	ENDIF

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	;さやえんどう桑の案をいただきました。まことに有がとうございます
	SIF CEVENT("お休み")
		CALL SET_OTHER, "無人"

;学園での便装です。設定必須です。
;水手服, 露脐装超短裙水手服, 西装外衣, 露脐装超短裙西装外衣, 美式校服など
;黑色水手服を着せたい場合には CALL SET_COSTUME, "水手服/黒" のように書き込むことで色を変えることが出来ます
;(RESOURCES→MAIDFACE→13服 フォルダ内にある MAIDFACE13.csv の該当衣装を見て色を選ばないとならないため上級者向きです)
CASE "制服"
	IF CEVENT("女装") || TALENT:伪娘
		CALL SET_COSTUME, "水手服"
	ELSE
		CALL SET_COSTUME, "男子西装"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服布鲁马, 体操服高開衩布鲁马, 体操服五分褲, 体操服紧身短褲, 体操服运动衫など
CASE "体操服"
	IF (CEVENT("女装") || TALENT:伪娘) && TALENT:淫乱
		CALL SET_COSTUME, "体操服布鲁马"
	ELSE
		CALL SET_COSTUME, "体操服运动衫"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;死库水, 競泳泳装, 白比基尼, 黒比基尼など
CASE "泳装"
	IF CEVENT("女装") + TALENT:伪娘 && CEVENT("乳頭の虜")
		CALL SET_COSTUME, "死库水"
	ELSEIF VAGINA(TARGET)
		CALL SET_COSTUME, "死库水"
	ELSE
		CALL SET_COSTUME, "衝浪胖次"
	ENDIF

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("冬")
		CALL SET_BOTTOM, "休闲褲"
		CALL SET_SOCKS, "襪子"
		CALL SET_GLOVE, "手套"
		IF TALENT:伪娘
			CALL SET_SHIRT, "萌袖毛衣/連衣裙"
			CALL SET_SKIRT, "下摆/連衣裙/超短迷你"
			CALL SET_SHOES, "莫卡辛软皮鞋"
			CALL SET_OTHER, "披肩"
		ELSE
			CALL SET_SHIRT, "毛衣"
			CALL SET_SHOES, "靴"
		ENDIF
	ELSEIF COND("夏")
		IF TALENT:伪娘
			CALL SET_SHIRT, "連衣裙/白"
			CALL SET_SHOES, "无后跟鞋"
		ELSE
			CALL SET_SHIRT, "吊帯背心"
			CALL SET_BOTTOM, "五分褲"
			CALL SET_SHOES, "凉鞋"
		ENDIF
	ELSEIF COND("春")
		IF TALENT:伪娘
			CALL SET_SHIRT, "宽松女式衬衫"
			CALL SET_SKIRT, "迷你裙"
			CALL SET_SHOES, "无后跟鞋"
			CALL SET_OTHER, "髮箍"
		ELSE
			CALL SET_SHIRT, "Ｔ恤"
			CALL SET_BOTTOM, "五分褲"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "運動鞋"
		ENDIF
	ELSE
		IF TALENT:伪娘
			CALL SET_SHIRT, "Ｔ恤"
		ELSE
			CALL SET_SHIRT, "連帽風衣"
		ENDIF
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "運動鞋"
		CALL SET_OTHER, "海豚吊坠"
	ENDIF

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF COND("夏")
		CALL SET_SHIRT, "吊帯背心"
		CALL SET_BRA, ""
		CALL SET_SHOES, "裸足"
		SIF TALENT:伪娘
			CALL SET_BOTTOM, "五分褲"
	ELSE
		CALL SET_SHIRT, "宽大的Ｔ恤"
		IF COND("冬")
			CALL SET_BOTTOM, "休闲褲"
		ELSEIF TALENT:淫乱 && RAND:2
			CALL SET_BOTTOM, ""
		ELSE
			CALL SET_BOTTOM, "五分褲"
		ENDIF
	ENDIF

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
IF COND("春")
	CALL SET_SHIRT, "Ｔ恤"
	CALL SET_SOCKS, "襪子"
	IF CEVENT("女装")
		CALL SET_SKIRT, "巻き裙"
		CALL SET_SHOES, "平底鞋"
	ELSE
		CALL SET_BOTTOM, "五分褲"
		CALL SET_SHOES, "運動鞋"
	ENDIF
ELSEIF COND("夏")
	IF CEVENT("女装")
		CALL SET_SHIRT, "夏日礼服/連衣裙"
		IF TALENT:淫乱
			CALL SET_SKIRT, "迷你裙/連衣裙"
		ELSE
			CALL SET_SKIRT, "裙/連衣裙"
		ENDIF
		CALL SET_SHOES, "无后跟鞋"
		CALL SET_OTHER, "草帽"
	ELSE
		CALL SET_SHIRT, "吊帯背心"
		CALL SET_BOTTOM, "五分褲"
		CALL SET_SHOES, "凉鞋"
	ENDIF
ELSEIF COND("秋")
	IF CEVENT("女装")
		CALL SET_SHIRT, "Ｔ恤/連衣裙"
		CALL SET_SKIRT, "下摆/連衣裙/超短迷你"
		IF TALENT:淫乱 && RAND:2
			CALL SET_BOTTOM, ""
		ELSE
			CALL SET_BOTTOM, "五分褲"
		ENDIF
		CALL SET_SOCKS, "宽松的短襪"
	ELSE
		CALL SET_SHIRT, "連帽風衣"
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SOCKS, "襪子"
	ENDIF
	CALL SET_SHOES, "運動鞋"
ELSE
	IF CEVENT("女装")
		CALL SET_SHIRT, "萌袖毛衣"
		CALL SET_BOTTOM, "低腰牛仔褲"
		CALL SET_OTHER, "针织帽"
	ELSE
		CALL SET_SHIRT, "毛衣"
		CALL SET_BOTTOM, "休闲褲"
	ENDIF
	CALL SET_SOCKS, "襪子"
	CALL SET_SHOES, "靴"
	CALL SET_OTHER, "手套"
ENDIF

;もちろん约会の際に着ます
CASE "约会衣装"
	IF CEVENT("女装")
		CALL SET_SHIRT, "Ｔ恤"
		CALL SET_BOTTOM, "キュロット"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "靴"
	ELSE
		IF EXP:约会経験 <= 5
			CALL SET_SHIRT, "怪图案Ｔ恤"
		ELSE
			IF COND("冬")
				CALL SET_SHIRT, "毛衣"
			ELSE
				CALL SET_SHIRT, "前開的衬衫"
			ENDIF
		ENDIF
		IF RAND:2
			CALL SET_BOTTOM, "牛仔褲"
		ELSE
			CALL SET_BOTTOM, "休闲褲"
		ENDIF
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "靴"
	ENDIF
	IF COND("冬")
		IF CEVENT("女装") && RAND:2
			CALL SET_OTHER, "披肩"
		ELSE
			CALL SET_OTHER, "外套"
		ENDIF
		SIF RAND:3 == 0 || COND("種族：吸血鬼")
			CALL SET_OTHER, "针织帽"
	ELSEIF COND("夏") && (RAND:3 == 0 || COND("種族：吸血鬼"))
		CALL SET_OTHER, "草帽"
	ELSEIF COND("種族：吸血鬼")
		IF CEVENT("女装")
			CALL SET_OTHER, "贝雷帽"
		ELSE
			CALL SET_OTHER, "妇人礼帽"
		ENDIF
	ENDIF
ENDSELECT

IF CHECK_SHIRT("変な柄")
	IF RAND:2
		CSTR:服 += @"柄：%TEXTR("You are Dick/Mamma stand up Yellowstone/Back Bay Sadism/I am Boo")%/英字/"
	ELSE
		CSTR:服 += @"柄：%TEXTR("大感謝祭/切り捨て御免/相対性理論/欧米")%/"
	ENDIF
ENDIF
;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K57
IF PLACE("自宅")
	CSTR:改髪 = 无特殊髪型
ELSE
	IF CEVENT("女装") || TALENT:伪娘
		CSTR:改髪 = 马尾辫
	ELSE
		CALL SETFLAG, "普段の髪型復元", TARGET
	ENDIF
ENDIF

SIF COND("種族：吸血鬼")
	CSTR:髪色 = 銀髪

@K57_CLOTHCHANGE, ARG

SIF ARG == 0
	ARG = TARGET

IF CEVENT("女装", ARG) || TALENT:ARG:伪娘 || VAGINA(ARG)
	IF TALENT:淫乱
		CSTR:ARG:喜欢的胖次 = Micro比基尼/丁字褲/低腰胖次/Ｈ的内衣
		CSTR:ARG:喜欢的胸罩 = Micro比基尼胸罩/Micro胸罩/半杯胸罩/開放型胸罩
	ELSE
		CSTR:ARG:喜欢的胖次 = 縞胖次/三角胖次
		CSTR:ARG:喜欢的胸罩 = 普通胸罩/運動胸罩
	ENDIF
ELSE
	CSTR:ARG:喜欢的胖次 = 四角褲/僕サー简约胖次
	CSTR:ARG:喜欢的胸罩 =无胸罩
ENDIF
