;-------------------------------------------------
;部員同士での交流。自分はTARGETとして呼ばれ、話相手の部員はPARTNER()として呼ばれる
;話相手への呼びかけはCNAME("partner")で出来る
;TFLAG:台詞スキップ = 1で話している相手のセリフのスキップ、TFLAG:地の文スキップ = 1で続く地の文のスキップをする事が出来る
;-------------------------------------------------
@KOJO_COMM_K1, ARGS
#DIM MEMO_LINECOUNT
;対話相手にしたい角色の名前を/区切りでこれに突っ込んでFIND_TaiTa(EVENT_TABLE)とするとそのうち一人が選ばれる
#DIMS EVENT_TABLE

EVENT_TABLE = 
MEMO_LINECOUNT = LINECOUNT

SELECTCASE ARGS
;話しかける側のセリフ。COND("対話可能")を満たす相手を選んでPARTNER()にする事で、特定の相手に話しかけることもできる
CASE "お誘いする"
	;特定の相手に話しかける場合はEVENT_TABLEに対話相手の名前を / 区切りで並べて ; を消す
	;例１）弗理希艾尔or濡烏の君or西西莉亚から一人選ぶ場合
	;EVENT_TABLE = 弗理希艾尔/濡烏の君/西西莉亚
	;例２）部員全てから一人選ぶ場合
	;EVENT_TABLE = 全員

	IF FIND_TaiTa(EVENT_TABLE)
		;話し相手をpartnerにする
		CALL SET_PARTNER, FIND_TaiTa(EVENT_TABLE)
		CALL EMOTION_PLUS, "交流中", TARGET, PARTNER()
	ENDIF

	IF COND("相性◎", PARTNER()) || COND("相性☆", PARTNER()) || COND("相性○", PARTNER())
		SELECTCASE TEXTS("季節")
		CASE "春"

		CASE "初夏"
			IF COND("今年の泳装選択済") == 0
				PRINTFORML 「天气变热了呢～……%CNAME("partner")%已经买了今年的游装吗？」
				PRINTFORMW 「如果还没有的话下次、要不要和我一起去看看」
			ELSE
				PRINTFORML 「对了、%CNAME("partner")%。今天的课结束后有什么安排吗？」
				PRINTFORMW 「如果可以的话、一起去购物吧……有点、想看夏季用品♪」
			ENDIF
		CASE "夏", "初秋"

		CASE "秋"

		CASE "晩秋"
		CASE "冬"

		ENDSELECT
	ELSE
		SELECTCASE CSTR:PARTNER():学年
		;同級生以下
		CASE "初等部", "中等部", "１年生", "２年生"
			PRINTFORML 「内内~、%CNAME("partner")%。如果可以的话、要不要和我聊天？」
			;入部して結構経っている
			IF COND("在籍日数", PARTNER() ) >= 7
				PRINTFORMW 「没有%CNAME("主人")%在的话也没怎么一起聊天过♪」
			ELSE
				PRINTFORMW 「%CNAME("主人")%の事……各种各样的事我都可以告诉你哟♪」
			ENDIF
		;年上と学生以外
		CASEELSE
			IF RAND:2
				PRINTFORML 「%CNAME("partner")%、现在方便说话吗？」
				;入部して結構経っている
				IF COND("在籍日数", PARTNER() ) >= 7
			;		PRINTFORMW 「%CNAME("主人")%抜きで一緒に話したことって、あんまりなかったですし」
				ELSE
			;		PRINTFORMW 「%CNAME("主人")%の事とか……色々と教えてさしあげますよ」
				ENDIF
			ELSE
				PRINTFORML 「%CNAME("partner")%、现在有空闲时间吗？」
				PRINTFORMW 「如果有空的话就好了……一起喝杯茶怎么样」
			ENDIF
		ENDSELECT
	ENDIF
;話しかけられる側のセリフ。括弧は『』を使うのが望ましい
CASE "誘われた"


ENDSELECT

