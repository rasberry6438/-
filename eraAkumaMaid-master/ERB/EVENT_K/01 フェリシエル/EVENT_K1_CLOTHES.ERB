;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K1, ARGS

SELECTCASE ARGS
CASE "内衣"
	CSTR:胖次 = 蕾丝的胖次/純白/透明/
	CSTR:胸罩 = 蕾丝胸罩/純白/透明/
CASE "飾品"

CASE "制服"
	CALL SET_COSTUME, "露脐装超短裙領帶西装"
CASE "体操服"
	CALL SET_COSTUME, "体操服布鲁马"
CASE "泳装"
	CALL SET_COSTUME, "競泳泳装/青"

CASE "便装", "居家服"
	CALL SET_COSTUME, "女仆装"
	CSTR:服 = %REPLACE(CSTR:服, "女仆装", "潇洒的女仆装")%
	CALL SET_SOCKS, "吊帯襪"
	CALL SET_SHOES, "小皮靴"
	CALL SET_OTHER, "颈環/礼服頭花"

CASE "外出装", "约会衣装"
	CALL SET_COSTUME, "露脐装超短裙領帶西装"
ENDSELECT

