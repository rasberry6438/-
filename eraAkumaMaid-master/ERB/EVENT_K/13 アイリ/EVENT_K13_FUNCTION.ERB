;-------------------------------------------------
;猫の日（游戏内５６日）に猫内衣を着ける
;部室入室時、もしくは性処理時に変更
;-------------------------------------------------
@CATDAY_K13
;今日は猫の日？
IF TEXTS("日期対応イベント") == "猫の日"
	;既に今回の猫の日イベントを見たならRETURN 0
	SIF CEVENT("猫の日")
		RETURN 0
;猫の日でないなら次の猫の日に備えてフラグ消しつつRETURN 0
ELSE
	CALL DEL_CEVENT, "猫の日"
	RETURN 0
ENDIF

;着替えさせたり脱がせた際は勝手に着替えない
SIF CFLAG:Cosplay中 || CSTR:没収済胖次 != "" || COND("全裸状態終了可能")
	RETURN 0
SIF COND("Ｈ的サプライズ可能") == 0
	RETURN 0
;泳装の場合は制服に更衣
IF CHECK_CLO("泳装")
	CALL SETFLAG, "扒成裸体", TARGET
	CALL SET_COORDINATE, "制服", TARGET
	CALL FOLLOW_RULES
	CALL SET_OTHER, "围巾"
ENDIF

CALL SET_BRA, "猫型胸罩"
CALL SET_PANTIES, "肉球印花胖次"
CALL SET_CEVENT, "猫の日"

;-------------------------------------------------
;躁动难忍室内二人きりで就寝選択で発生
;一人でアレします
;-------------------------------------------------
@SOLOPLAY_K13
#DIM MEMO_ORGASM
#DIM LCOUNT

PRINTFORMW %CALLNAME:TARGET%は欲求不満が限界らしくどうにも我慢ができなさそうだ…
PRINTFORMW %CALLNAME:TARGET%はそわそわしながらこちらを見ている…
PRINTFORMW 「……」
CALL PRINT_SELECT, "推倒てみる/寝たふりをしてみる"
IF RESULT == 0
	PRINTFORMW 「あっ…」
	IF COND("発情中")
		PRINTFORMW 「……ばれちゃう、わよね…やっぱり」
	ELSE
		PRINTFORMW 「……べ、別に、待ってなかったし」
	ENDIF
	CALL SET_CEVENT, "調教開始：限界"
	TFLAG:床イン = 1
ELSE
	PRINTFORMW 「%TEXTR("もう、何なのよ……今日はナシなの…？/せめて自分的房間で寝てよぉ…/…起きて、起きてってば、ねぇ")%」
	PRINTFORMW %CALLNAME:TARGET%は%CALLNAME:MASTER%が寝てしまったことに落胆している…
	PRINTFORMW 「……」
	PRINTFORMW そして、%CALLNAME:MASTER%が起きないと悟ると、自己自分を慰めることにしたようだ…
	PRINTFORMW ……
	IF ITEM:跳蛋 && RAND:2
		PRINTFORMW %CALLNAME:TARGET%はこっそりと跳蛋を取り出し、スイッチを入れた…
		IF RAND:2
			PRINTFORMW ｳﾞｨｲｲｲｲｲ…という無機質なモーター音に時おり艶っぽい声が混じる。
			PRINTFORMW 粉紅色の振動部を何度も敏感な場所に着けては離しを繰り返し、快感を貪っている様子だ
			PRINTFORMW やがて%CALLNAME:TARGET%は跳蛋を阴蒂に押しあてたまま体をきゅうっ、と強張らせた…
		ELSE
			PRINTFORMW その表情を快感で切なそうにゆがませ的同时、自ら阴蒂をいじめている…
			CALL PRINT_STRW, "「んぅぅぅぅん…_H_」"
			PRINTFORMW やがて、体をビクビクと痙攣させて絶頂を迎えた%CALLNAME:TARGET%はぐったりと脱力し、床に伸びてしまった…
		ENDIF
		CALL SIMULATE_TRAIN_FIRST
		MEMO_ORGASM = EXP:絶頂経験
		FOR LCOUNT, 0, 10
			CALL SIMULATE_TRAIN_COM, 30, 1
			;すでに絶頂済みならここでおしまい
			SIF EXP:絶頂経験 > MEMO_ORGASM
				BREAK
		NEXT
		CALL SIMULATE_TRAIN_CALC
		CALL SIMULATE_TRAIN_SHOW
	ELSE
		IF RAND:4 == 0
			PRINTFORMW %CALLNAME:TARGET%は寝転がった姿勢で秘所を愛撫し始めた。
			PRINTFORMW 切なそうな表情で必死に手を動かしている…とても気持ちよさそうだ
			PRINTFORMW 高まっていくにつれて、もう片方の手で堵住口から、くぐもった甜声が漏れ始める…
			PRINTFORMW 「んぅぅっ……」
			PRINTFORMW やがて、ひときわ大号的喘ぎと共に、一瞬だけ体が跳ねる。
			PRINTFORMW %CALLNAME:TARGET%はしばらくの間余韻に浸った後、おもむろに善后工作を始めた…
		ELSEIF RAND:3 == 0
			PRINTFORMW %CALLNAME:TARGET%は、床にうずくまりくぐもった喘ぎ声を挙げながら手慰みの快感にふけっている
			PRINTFORMW その息遣いは徐々に荒さを増して行き、やがて頂点に達すると同時にビク、と体を震わせた…
			CALL PRINT_STRW, "「はぁ……はぁ……_H_」"
			PRINTFORMW 幸せそうな表情で横たわる%CALLNAME:TARGET%の姿はとても扇情的だった…
		ELSEIF RAND:2
			PRINTFORMW %CALLNAME:TARGET%は少しためらいながらも秘所に手を伸ばした…
			PRINTFORMW 発情期で快感が強すぎるのか、自己的愛撫を嫌がるように身をよじっている
			PRINTFORMW それでも貪欲に官能を求めて敏感な場所を責め立てる姿はなんとも可愛らしく見えた
			PRINTFORMW そして、%CALLNAME:MASTER%が隣で寝ていることなどすっかり忘れてしまったのか、嬌声を抑えようともせずにはしたなく絶頂を迎えた。
		ELSE
			PRINTFORM %CALLNAME:TARGET%是
			IF CHECK_CLO("裸体") || CHECK_CLO("没穿下衣")
				PRINTFORMW 恐る恐る裸の下半身に手を伸ばし、声を抑えながら淫核を擦り始めた…
			ELSEIF EQUIP:贴身制服
				PRINTFORMW %BODYS(TARGET)%の股布をずらすと、声を抑えながら淫核を擦り始めた…
			ELSE
				IF EQUIP:下衣 && EQUIP:裙
					PRINTFORM %SKIRT(TARGET)%と%BOTTOM(TARGET)%
				ELSEIF EQUIP:下衣
					PRINTFORM %BOTTOM(TARGET)%
				ELSEIF EQUIP:裙
					PRINTFORM %SKIRT(TARGET)%
				ENDIF
				SIF EQUIP:胖次 == 0
					PRINTFORMW を脱ぎ捨て下半身裸になると、声を抑えながら淫核を擦り始めた…
			ENDIF
			IF EQUIP:胖次
				PRINTFORMW を脱ぎ捨て、内衣の上から淫核を擦り始めた…
				PRINTFORMW やがて気分が盛り上がって来たのか、%PANTIES(TARGET)%までも脱ぎ捨て、下半身裸の冰雹もない姿のまま自慰に耽り続ける…
			ELSEIF EQUIP:胖次 == 0
				PRINTFORMW やがて気分が盛り上がって来たのか、徐々に喘ぎ声を漏らし始め、冰雹もない姿のまま自慰に耽り続ける…
			ENDIF
			PRINTFORMW その後満足いくまで一人で暴れまわり、善后工作を終えた%CALLNAME:TARGET%は、何食わぬ顔で再びくつろぎ始めた…
		ENDIF
		CALL SIMULATE_TRAIN_FIRST
		MEMO_ORGASM = EXP:絶頂経験
		FOR LCOUNT, 0, 10
			CALL SIMULATE_TRAIN_COM, 3, 1
			;すでに射精済みならここでおしまい
			SIF EXP:絶頂経験 > MEMO_ORGASM
				BREAK
		NEXT
		CALL SIMULATE_TRAIN_CALC
		CALL SIMULATE_TRAIN_SHOW
		WAIT
	ENDIF
ENDIF
