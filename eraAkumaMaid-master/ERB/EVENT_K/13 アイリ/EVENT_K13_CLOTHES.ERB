;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K13
IF (PLACE("部室") || COND("约会中")) && TALENT:恋慕 && (COND("春") || COND("夏")) && (RAND:10 + CFLAG:ポニテ手応え >= 9)
	CSTR:前髪 = 自然刘海２
	CSTR:改髪 = 马尾辫
	;部室にいると髪型違うよアピールしてくる分岐用
	SIF PLACE("部室")
		CALL SET_CEVENT, "髪型変化：アイリ"
ELSEIF (PLACE("部室") || COND("约会中")) && TALENT:恋慕 && (COND("秋") || COND("冬")) && (RAND:10 + CFLAG:卷髪手応え >= 9)
	CSTR:前髪 = 透明刘海
	CSTR:後髪 = 卷髪
	SIF PLACE("部室")
		CALL SET_CEVENT, "髪型変化：アイリ"
ELSE
	CALL SETFLAG, "普段の髪型復元", TARGET
	SIF CEVENT("髪型変化：アイリ")
		CALL DEL_CEVENT, "髪型変化：アイリ"
ENDIF


