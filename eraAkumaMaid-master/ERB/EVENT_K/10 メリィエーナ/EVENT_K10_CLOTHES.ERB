;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K10, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 蕾丝的胖次/黒/透明/
	CSTR:胸罩 = 蕾丝胸罩/黒/透明/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "眼鏡/髪卡"

;学園での便装です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_SHIRT, "运动衫/赤"
	CALL SET_BODYS, "競泳泳装/黒"
	CALL SET_SHOES, "凉鞋"
;自宅など学園外で着ます。設定必須です
CASE "便装"
	SELECTCASE TEXTS("季節")
	CASE "夏"
		CALL SET_SHIRT, "縦毛衣/茶"
	CASE "冬"
		CALL SET_SHIRT, "縦毛衣/赤"
	CASEELSE
		CALL SET_SHIRT, "縦毛衣/灰"
	ENDSELECT
	IF RAND:4 == 0
		CALL SET_SKIRT, "長裙"
		IF RAND:2 == 0
			CALL SET_SOCKS, "吊帯長筒襪"
		ELSE
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_PANTIES, "三角胖次/黒"
		ENDIF
	ELSEIF RAND:3 == 0
		CALL SET_SKIRT, "紧身裙"
		IF RAND:2 == 0
			CALL SET_SOCKS, "吊帯長筒襪"
		ELSE
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_PANTIES, "三角胖次/黒"
		ENDIF
	ELSEIF RAND:2 == 0
		CALL SET_BOTTOM, "休闲褲"
	ELSE
		CALL SET_BOTTOM, "牛仔褲"
	ENDIF
;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF CFLAG:睡眠
		IF RAND:3 == 0
			CALL SET_BRA, "吊帯衫/黒"
		ELSEIF RAND:2 == 0
			CALL SET_SHIRT, "情趣内衣/緑"
		ELSE
			CALL SET_SHIRT, "前開的衬衫/白"
		ENDIF
	ELSEIF RAND:4 == 0
		CALL SET_SHIRT, "针织露肩外衣"
	ELSEIF RAND:4 == 0
		CALL SET_SHIRT, "露肩外衣/灰"
	ELSE
		SELECTCASE TEXTS("季節")
		CASE "夏"
			CALL SET_SHIRT, "縦毛衣/茶"
		CASE "冬"
			CALL SET_SHIRT, "縦毛衣/赤"
		CASEELSE
			CALL SET_SHIRT, "縦毛衣/灰"
		ENDSELECT
	ENDIF
	IF RAND:2 == 0
		IF RAND:10 == 0
			CALL SET_SOCKS, ""
		ELSEIF RAND:2 == 0
			CALL SET_SOCKS, "吊帯長筒襪"
		ELSE
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_PANTIES, "三角胖次/黒"
		ENDIF
	ENDIF
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	IF RAND:4 == 0
		CALL SET_SHIRT, "前開的衬衫/黒"
		CALL SET_SKIRT, "牛仔褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	ELSE
		IF TEXTS("季節") == "夏"
			IF RAND:2 == 0
				CALL SET_SHIRT, "蕾丝女式衬衫/米色"
			ELSE
				CALL SET_SHIRT, "无袖女式衬衫/Ａ"
			ENDIF
		ELSE
			IF RAND:10 == 0
				CALL SET_SHIRT, "V领毛衣/灰"
			ELSEIF RAND:3 == 0
				CALL SET_SHIRT, "粗呢外套/白"
			ELSEIF RAND:2 == 0
				CALL SET_SHIRT, "外套/赤"
			ELSE
				CALL SET_SHIRT, "圆领衬衫/白"
			ENDIF
		ENDIF
		IF RAND:10 == 0
			CALL SET_SKIRT, "休闲褲"
		ELSEIF RAND:3 == 0
			CALL SET_SKIRT, "ゆるふわ裙"
		ELSEIF RAND:2 == 0
			CALL SET_SKIRT, "紧身裙"
		ELSE
			CALL SET_SKIRT, "長裙"
		ENDIF
		IF RAND:10 == 0
			CALL SET_SOCKS, "及膝襪/白"
		ELSEIF RAND:2 == 0
			CALL SET_SOCKS, "吊帯長筒襪"
		ELSE
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_PANTIES, "三角胖次/黒"
		ENDIF
		IF RAND:10 == 0
			CALL SET_SOCKS, "高跟鞋"
		ELSEIF RAND:2 == 0
			CALL SET_SOCKS, "運動鞋"
		ELSE
			CALL SET_SOCKS, "平底鞋"
		ENDIF
	ENDIF
;もちろん约会の際に着ます
CASE "约会衣装"
	IF TEXTS("季節") == "冬"
		CALL SET_SHIRT, "粗呢外套/青"
		IF RAND:2 == 0
			CALL SET_SKIRT, "紧身裙"
			CALL SET_SOCKS, "及膝襪"
			CALL SET_SHOES, "平底鞋"
		ELSE
			CALL SET_SKIRT, "ゆるふわ裙"
			IF RAND:2 == 0
				CALL SET_SOCKS, "吊帯長筒襪"
			ELSE
				CALL SET_BOTTOM, "连褲襪"
				CALL SET_PANTIES, "三角胖次/黒"
			ENDIF
			CALL SET_SHOES, "高跟鞋"
		ENDIF
	ELSEIF TEXTS("季節") == "夏"
		CALL SET_SHIRT, "夏日礼服/緑"
		CALL SET_SOCKS, "及膝襪"
		CALL SET_SHOES, "高跟鞋"
	ELSE
		CALL SET_SHIRT, "哥特礼服"
		IF RAND:2 == 0
			CALL SET_SOCKS, "吊帯長筒襪"
		ELSE
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_PANTIES, "三角胖次/黒"
		ENDIF
		CALL SET_SHOES, "高跟鞋"
	ENDIF
ENDSELECT


;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K10
IF CFLAG:髪型変更のお願い中 == 0
	IF PLACE("学園内")
		IF RAND:9 == 0
			CSTR:髪長 = 披肩
			CSTR:改髪 = 侧边马尾
		ELSEIF RAND:8 == 0
			CSTR:髪長 = 長
			CSTR:改髪 = 编起来
		ELSEIF RAND:7 == 0
			CSTR:髪長 = 長
			CSTR:改髪 = 单辫
		ELSEIF RAND:6 == 0
			CSTR:髪長 = 長
			CSTR:改髪 = 大三股辫
		ELSE
			CALL SETFLAG, "普段の髪型復元", TARGET
		ENDIF
	ELSE
		CALL MAIDFACE_AFTERSCHOOL_K10
	ENDIF	
ENDIF

@MAIDFACE_AFTERSCHOOL_K10
IF CFLAG:髪型変更のお願い中 == 0
	IF CSTR:改髪 == "单辫"
		IF RAND:9 == 0
			CSTR:髪長 = 長
			CSTR:改髪 = 马尾辫
		ELSEIF RAND:8 == 0
			CSTR:髪長 = 長
			CSTR:改髪 = 无特殊髪型
		ELSE
			CALL SETFLAG, "普段の髪型復元", TARGET
		ENDIF
	ENDIF	
ENDIF


;人类⇔悪魔の外見変更処理
@CHANGEFACE_K10, ARGS
SELECTCASE ARGS
	CASE "人类"
		CSTR:後髪 = 直髪
		CSTR:髪色 = 黒髪
		CSTR:瞳色 = 茶
		TALENT:角 = 0
	CASE "悪魔"
		CSTR:後髪 = 卷髪
		CSTR:髪色 = 棕髪
		CSTR:瞳色 = 金
		TALENT:角 = 1
ENDSELECT
