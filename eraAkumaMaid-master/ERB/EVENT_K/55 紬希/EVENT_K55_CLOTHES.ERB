;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K55, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
;相思相愛後の特定イベントでTSした時に着ける内衣は未設定
CASE "内衣"
;IF CEVENT(TSほにゃらら的な)
;ELSE
	CSTR:胖次 = 三角胖次/純白/
;ENDIF
;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 眼鏡

;学園での便装です。設定必須です
CASE "制服"
	IF COND("夏")
		CALL SET_COSTUME, "露脐装超短裙西装外衣"
	ELSE
		CALL SET_COSTUME, "西装外衣"
		CALL SET_BOTTOM, "连褲襪"
	ENDIF
	;女の子で、淫乱か特定ABL&MARKが一定の数値以上だと5％で没穿内褲无胸罩
	IF RAND:100 >= 95 && TALENT:伪娘 == 0 && (TALENT:淫乱 || (ABL:露出癖 >= 5 && MARK:屈服刻印 >= 3 && MARK:快楽刻印 >= 3))
		CALL SET_COSTUME, "露脐装超短裙西装外衣"
		CSTR:胖次 = 
		CSTR:胸罩 = 
	ELSEIF COND("夏")
		CALL SET_COSTUME, "露脐装超短裙西装外衣"
		CSTR:胸罩 = 褶边の胸罩/純白/
		CSTR:胖次 = 三角胖次/正面蝴蝶結三角赤/純白/
	ELSE
		CALL SET_COSTUME, "西装外衣"
		CSTR:胸罩 = 褶边の胸罩/純白/
		CSTR:胖次 = 三角胖次/正面蝴蝶結三角赤/純白/
		CALL SET_BOTTOM, "连褲襪"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服布鲁马"
	CSTR:胸罩 = 褶边の胸罩/純白/
	CSTR:胖次 = 三角胖次/正面蝴蝶結三角赤/純白/

;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "競泳泳装"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF RAND:2
		CALL SET_SHIRT, "女式衬衫"
		CALL SET_SKIRT, "フレア裙"
		CALL SET_SOCKS, "及膝襪"
		CALL SET_SHOES, "小皮靴"
		CALL SET_OTHER, "蝴蝶結領帯丝巾"
	ELSEIF COND("秋") + COND("冬")
		CALL SET_SHIRT, "针织毛衣"
		CALL SET_SKIRT, "裙"
		CALL SET_SOCKS, "及膝襪"
		CALL SET_SHOES, "小皮靴"
	ELSE
		CALL SET_SHIRT, "切驳服"
		CALL SET_SKIRT, "裙"
		CALL SET_SOCKS, "及膝襪"
		CALL SET_SHOES, "小皮靴"
	ENDIF
	IF COND("夏") && TALENT:伪娘
		CSTR:胖次 = 三角胖次/正面蝴蝶結三角赤/純白/
	ELSE
		CSTR:胖次 = 三角胖次/正面蝴蝶結三角赤/純白/
		CALL SET_BOTTOM, "连褲襪"
	ENDIF
	IF RAND:100 >= 95 && TALENT:伪娘 == 0 && TALENT:相思相愛 && ABL:露出癖 >= 5 && MARK:快楽刻印 >= 3
		CSTR:胖次 = 
		CSTR:胸罩 = 
	ELSEIF RAND:100 >= 80 && TALENT:恋慕
		CSTR:胖次 = 三角胖次/正面蝴蝶結紐白/薄桃色/
		CSTR:胸罩 = 褶边の胸罩/純白/
	ELSE	
		CSTR:胖次 = 三角胖次/正面蝴蝶結三角赤/純白/
		CSTR:胸罩 = 褶边の胸罩/純白/
	ENDIF
;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	CALL SET_SHIRT, "連衣裙"
	;恋慕かABL、MARKが一定値以上だと无胸罩没穿内褲でいることがある
	;自室なので、こちらの方が没穿内褲无胸罩率はやや高め
	;勝負内衣は自室だとむしろ履いてないかも
	IF COND("夏") && TALENT:伪娘
		CSTR:胖次 = 三角胖次/正面蝴蝶結三角赤/純白/
	ELSE
		CSTR:胖次 = 三角胖次/正面蝴蝶結三角赤/純白/
		CALL SET_BOTTOM, "连褲襪"
	ENDIF
	IF RAND:100 >= 95 && TALENT:伪娘 == 0 && TALENT:相思相愛 && ABL:露出癖 >= 5 && MARK:快楽刻印 >= 3
		CSTR:胖次 = 
		CSTR:胸罩 = 
	ELSEIF RAND:100 >= 80 && TALENT:恋慕
		CSTR:胖次 = 三角胖次/正面蝴蝶結紐白/薄桃色/
		CSTR:胸罩 = 褶边の胸罩/純白/
	ELSE	
		CSTR:胖次 = 三角胖次/正面蝴蝶結三角赤/純白/
		CSTR:胸罩 = 褶边の胸罩/純白/
	ENDIF

;便装と共用
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	IF COND("夏")
		CALL SET_SHIRT, "浴衣"
		CALL SET_SOCKS, "短布襪"
		CALL SET_SHOES, "草履"
	ELSE
		CALL SET_SHIRT, "和服"
		CALL SET_SOCKS, "短布襪"
		CALL SET_SHOES, "草履"
	ENDIF
	IF COND("夏") && TALENT:伪娘
		CSTR:胖次 = 三角胖次/正面蝴蝶結三角赤/純白/
	ELSE
		CSTR:胖次 = 三角胖次/正面蝴蝶結三角赤/純白/
		CALL SET_BOTTOM, "连褲襪"
	ENDIF
	IF RAND:100 >= 95 && TALENT:伪娘 == 0 && TALENT:相思相愛 && ABL:露出癖 >= 5 && MARK:快楽刻印 >= 3
		CSTR:胖次 = 
		CSTR:胸罩 = 
	ELSEIF RAND:100 >= 80 && TALENT:恋慕
		CSTR:胖次 = 三角胖次/正面蝴蝶結紐白/薄桃色/
		CSTR:胸罩 = 褶边の胸罩/薄桃色/
	ELSE	
		CSTR:胖次 = 三角胖次/正面蝴蝶結三角赤/純白/
		CSTR:胸罩 = 褶边の胸罩/純白/
	ENDIF
	
ENDSELECT


