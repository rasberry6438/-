;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K54, ARGS

SELECTCASE ARGS
;角色クター独自の内衣の組み合わせを設定できます。設定必須です。一定の確率で着用します
;もしも普段は付けない、という事ならCALL SET_PANTIES, "と等号の右側を書き込まない事で出来ます
;CFLAG:随机内衣OFF = 1とした場合には、ここで設定した内衣のみを身に着けるようになります
CASE "内衣"
	CALL SET_PANTIES, "內褲"
	CALL SET_BRA, "简约胸罩/Ｈ的颜色"

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, ""

;学園での便装です。設定必須です。
;水手服, 露脐装超短裙水手服, 西装外衣, 露脐装超短裙西装外衣, 背心,美式校服、V领毛衣など
;黑色水手服を着せたい場合には CALL SET_COSTUME, "水手服/黒" のように書き込むことで色を変えることが出来ます
;また、V领毛衣に限りCALL SET_COSTUME, "V领毛衣/濃紫/萌え袖"のようにして色の他に"萌え袖"をオプション指定できます
;(RESOURCES→MAIDFACE→13服 フォルダ内にある MAIDFACE13.csv の該当衣装を見て色を選ばないとならないため上級者向きです)
;また、女式衬衫等の上に裤吊帯を着けたい場合には CALL SET_OTHER, "裤吊帯" として下さい
CASE "制服"
	SELECTCASE TEXTS("季節")
	CASE "夏"
		CALL SET_SHIRT, "水手服/青"
		CALL SET_SKIRT, "Micro百褶裙/白"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "運動鞋"
		CALL SET_GLOVE, "指抜きブローブ"
		CALL SET_OTHER, "灰色の露肩夹克"
	CASE "春", "秋"
		CALL SET_SHIRT, "水手服/青"
		CALL SET_SKIRT, "迷你百褶裙/白"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "運動鞋"
		CALL SET_GLOVE, "指抜きブローブ"
		CALL SET_OTHER, "灰色の露肩夹克"
	CASE "冬"
		CALL SET_SHIRT, "水手服/青"
		CALL SET_SKIRT, "長百褶裙/白"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "運動鞋"
		CALL SET_GLOVE, "指抜きブローブ"
		CALL SET_OTHER, "灰色の露肩夹克"
	ENDSELECT
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服布鲁马, 体操服高開衩布鲁马, 体操服五分褲, 体操服紧身短褲, 体操服运动衫など
CASE "体操服"
	CALL SET_SHIRT, "体操服/赤"
	CALL SET_BOTTOM, "紧身短褲/柄"
	CALL SET_SOCKS, "襪子"
	CALL SET_SHOES, "運動鞋"
	CALL SET_GLOVE, "指抜きブローブ"
	CALL SET_OTHER, "红色前開运动衫"
	
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;死库水, 競泳泳装, 白比基尼, 黒比基尼など
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	SELECTCASE RAND:2
	CASE 0
		CALL SET_OTHER, "青い露肩夹克"
		CALL SET_SHIRT, "長連帽風衣/青"
		CALL SET_SOCKS, "襪子"
		CALL SET_GLOVE, "指抜きブローブ"
	CASE 1
		CALL SET_SHIRT, "无袖高領毛衣/白"
		CALL SET_BOTTOM, "牛仔热褲/黒"
		CALL SET_GLOVE, "指抜きグローブ/黒"
		CALL SET_SOCKS, "襪子"
	ENDSELECT
	
;自分的房間(not主人公的房間)で着ます
CASE "居家服"

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	CALL SET_OTHER, "黑色露肩夹克"
	CALL SET_BOTTOM, "黑色裤襪"
	CALL SET_SHIRT, "露肩外衣/灰色"
	CALL SET_GLOVE, "指抜きブローブ"
;もちろん约会の際に着ます
CASE "约会衣装"
	SELECTCASE RAND:2
		CASE 0
			CALL SET_SHIRT, "萌袖毛衣/黒"
			CALL SET_SKIRT, "迷你百褶裙/白"
			CALL SET_GLOVE, "指抜きグローブ/黒"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "平底鞋"
		CASE 1
			CALL SET_SHIRT, "无袖高領毛衣/緑色"
			CALL SET_BOTTOM, "热褲/青"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "運動鞋"
			CALL SET_GLOVE, "指抜きブローブ"
			CALL SET_OTHER, "桃色の前開V领毛衣"
	ENDSELECT
;朝Ｈの際に着ます
CASE "朝袭衣装"
		CALL SET_SHIRT, @"%CALLNAME:MASTER%の衬衫"
		CALL SET_PANTIES, "三角胖次/黒"
;夜袭Ｈの際に着ます
CASE "夜袭衣装"
		CALL SET_SHIRT, "睡衣/薄緑"
ENDSELECT

