;;;隊長の生成を試みる
;;;@D20XX_Leader_Generator(RACE)
;;;RACE = アルサバーニとかの種族
@D20XX_Leader_Generator(RACE)
	#DIMS DYNAMIC RACE
	#DIM DYNAMIC Lcount
	
	FOR Lcount, 0, 10000
		SIF D20XX_Unit:Lcount:0 != ""
			BREAK
	NEXT
	SIF Lcount == 9999
		RETURN
	CALL D20XX_Face_RandomFcsv(RACE)
	D20XX_Leader:Lcount:0 = %RESULTS%
	D20XX_Leader:Lcount:1 = %D20XX_Leader_NameGenerator()%
	RETURN Lcount

;;;隊長の名前を返す奴...のスタブ
@D20XX_Leader_NameGenerator()
	#FUNCTIONS
	#DIMS DYNAMIC _Name
	
	_Name = %HUNI(@"亜漢字%TEXTR("1/2/3/4")%")%
	IF RAND(3) == 0
		_Name += @"%HUNI(@"亜漢字%TEXTR("1/2/3/4")%")%{RAND:100}"
	ELSE
		_Name += @"%TEXTR("子/美/暃/閠/駲/代")%{RAND:100}"
	ENDIF
	RETURNF _Name