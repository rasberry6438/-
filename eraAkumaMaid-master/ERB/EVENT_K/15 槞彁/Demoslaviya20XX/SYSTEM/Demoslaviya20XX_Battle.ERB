		PRINTFORML 
		PRINTFORMW %D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"射撃回数")%発 発射！
		PRINTFORML 
	;#endregion

	;#region
		FOR LCount, 0, TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"射撃回数"))
			HitRandomValue = RAND:100 + 1
			PRINTFORML 
			IF Dexterity/10 >= HitRandomValue
				PRINTFORMW {Dexterity} >= {HitRandomValue} ！！阴蒂ティカル！！ ダメージ二倍！！
				CALL D20XX_DamageCalc(TargetUnit,1)
				D20XX_Unit:TargetUnit:4 = %TOSTR(TOINT(D20XX_Unit:TargetUnit:4) - TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"制圧力")))%
				
			ELSEIF Dexterity >= HitRandomValue
				PRINTFORMW {Dexterity} >= {HitRandomValue} 命中！
				CALL D20XX_DamageCalc(TargetUnit,0)
				D20XX_Unit:TargetUnit:4 = %TOSTR(TOINT(D20XX_Unit:TargetUnit:4) - TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"制圧力")))%
				
			ELSEIF HitRandomValue >= 95
				PRINTFORMW {Dexterity} <= {HitRandomValue} ！！ファンブル！！ 不発弾だった！

			ELSEIF Dexterity < HitRandomValue
				PRINTFORMW {Dexterity} <= {HitRandomValue} 外れ！
				D20XX_Unit:TargetUnit:4 = %TOSTR(TOINT(D20XX_Unit:TargetUnit:4) - TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"制圧力")))%
			ENDIF
			SIF TOINT(D20XX_Unit:TargetUnit:4) < 0
				D20XX_Unit:TargetUnit:4 = 0
		NEXT
	;#endregion
	;#region 撃破処理
		IF TOINT(D20XX_Unit:TargetUnit:2) <= 0
			PRINTFORMW 撃破されました！
			TRYCALLFORM Demoslavia20XX_KOJO_%D20XX_Unit:D20XX_SelectUnit:8%("敵撃破")
			;CALL D20XX_Unit_Del(TargetUnit)
			D20XX_MAP:Y_TargetField:X_TargetField:1 = "-1"
		ENDIF
	;#endregion

@D20XX_DamageCalc(TargetUnit,IsCritical)
	#DIM DYNAMIC IsCritical
	#DIM DYNAMIC TargetUnit
	#DIM DYNAMIC Damage

		IF IsCritical > 0
			Damage = TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"威力")) * 2 - TOINT(D20XX_GET_UNITDATA(D20XX_Unit:TargetUnit:1,"装甲"))
			PRINTFORML 威力( %D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"威力")% ) × 阴蒂ティカルヒットBOUNS( 2 ) - 装甲( %D20XX_GET_UNITDATA(D20XX_Unit:TargetUnit:1,"装甲")% ) = {Damage}ダメージ
		ELSE
			Damage = TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"威力")) - TOINT(D20XX_GET_UNITDATA(D20XX_Unit:TargetUnit:1,"装甲"))
			PRINTFORML 威力(%D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"威力")%) - 装甲(%D20XX_GET_UNITDATA(D20XX_Unit:TargetUnit:1,"装甲")%) = {Damage}ダメージ
		ENDIF

		IF Damage > 0
			IF TOINT(D20XX_Unit:TargetUnit:5) > 0
				PRINTFORML !!Booooom!!
				PRINTFORML era起爆！ダメージ無効化！
				PRINTFORML 
				PRINTFORML 
				PRINTFORMW 残era %D20XX_Unit:TargetUnit:5% → {TOINT(D20XX_Unit:TargetUnit:5) - 1}
				D20XX_Unit:TargetUnit:5 = %TOSTR(TOINT(D20XX_Unit:TargetUnit:5) - 1)%
			ELSE
				PRINTFORML %D20XX_Unit:TargetUnit:2% - {Damage} = {TOINT(D20XX_Unit:TargetUnit:2) - Damage}
				D20XX_Unit:TargetUnit:2 = %TOSTR(TOINT(D20XX_Unit:TargetUnit:2) - Damage)%
			ENDIF
		ELSE
			SIF D20XX_TarnMode == "Player"
				CALL D20XX_KOJO_イェニェル("0ダメージ")
		ENDIF

;;;ARGS = 武器種類名
;;;ARG:0 = 計算中残射程量
;;;ARG:1 = 現在計算中心点Y座標
;;;ARG:2 = 現在計算中心点X座標
@D20XX_AttackRangeCalc(WeaponName,AttackRange,Y_Before,X_Before)
	#DIMS DYNAMIC WeaponName
	#DIM DYNAMIC AttackRange
	#DIM DYNAMIC X_Before
	#DIM DYNAMIC Y_Before
	#DIM DYNAMIC X_After
	#DIM DYNAMIC Y_After

	#DIM DYNAMIC LCount

	;#region とりあえず遮蔽物判定抜きの攻撃可能範囲を設定する
		;1時方向のへクスへ移動したときのコスト計算
		IF X_Before+1 <= 199 && Y_Before-1 >= 0;MAPの右端でも上端でも無いことの確認
			X_After = X_Before + 1
			Y_After = Y_Before - 1
			IF D20XX_AttackRangeMap:Y_After:X_After < AttackRange - 1
				D20XX_AttackRangeMap:Y_After:X_After = AttackRange - 1
				CALL D20XX_AttackRoute_Add(Y_Before,X_Before)
				CALL D20XX_AttackRangeCalc(WeaponName,D20XX_AttackRangeMap:Y_After:X_After,Y_After,X_After)
				CALL D20XX_AttackRoute_GetLast(Y_Before,X_Before)
				CALL D20XX_AttackRoute_DelLast
			ENDIF
		ENDIF
		
		;3時方向のへクスへ移動したときのコスト計算
		IF X_Before+2 <= 199;MAPの右端では無いことの確認
			X_After = X_Before + 2
			Y_After = Y_Before 
			IF D20XX_AttackRangeMap:Y_After:X_After < AttackRange - 1
				D20XX_AttackRangeMap:Y_After:X_After = AttackRange - 1 
				CALL D20XX_AttackRoute_Add(Y_Before,X_Before)
				CALL D20XX_AttackRangeCalc(WeaponName,D20XX_AttackRangeMap:Y_After:X_After,Y_After,X_After)
				CALL D20XX_AttackRoute_GetLast(Y_Before,X_Before)
				CALL D20XX_AttackRoute_DelLast
			ENDIF
		ENDIF

		;5時方向のへクスへ移動したときのコスト計算
		IF X_Before+1 <= 199 && Y_Before+1 <= 200;MAPの右端でも下端でも無いことの確認
			X_After = X_Before + 1
			Y_After = Y_Before + 1
			IF D20XX_AttackRangeMap:Y_After:X_After < AttackRange - 1
				D20XX_AttackRangeMap:Y_After:X_After = AttackRange - 1
				CALL D20XX_AttackRoute_Add(Y_Before,X_Before)
				CALL D20XX_AttackRangeCalc(WeaponName,D20XX_AttackRangeMap:Y_After:X_After,Y_After,X_After)
				CALL D20XX_AttackRoute_GetLast(Y_Before,X_Before)
				CALL D20XX_AttackRoute_DelLast
			ENDIF
		ENDIF

		;7時方向のへクスへ移動したときのコスト計算
		IF X_Before-1 >= 0 && Y_Before+1 <= 200;MAPの左端でも下端でも無いことの確認
			X_After = X_Before - 1
			Y_After = Y_Before + 1
			IF D20XX_AttackRangeMap:Y_After:X_After < AttackRange - 1
				D20XX_AttackRangeMap:Y_After:X_After = AttackRange - 1
				CALL D20XX_AttackRoute_Add(Y_Before,X_Before)
				CALL D20XX_AttackRangeCalc(WeaponName,D20XX_AttackRangeMap:Y_After:X_After,Y_After,X_After)
				CALL D20XX_AttackRoute_GetLast(Y_Before,X_Before)
				CALL D20XX_AttackRoute_DelLast
			ENDIF
		ENDIF

		;9時方向のへクスへ移動したときのコスト計算
		IF X_Before-2 >= 0;MAPの左端では無いことの確認
			X_After = X_Before - 2
			Y_After = Y_Before 
			IF D20XX_AttackRangeMap:Y_After:X_After < AttackRange - 1
				D20XX_AttackRangeMap:Y_After:X_After = AttackRange - 1
				CALL D20XX_AttackRoute_Add(Y_Before,X_Before)
				CALL D20XX_AttackRangeCalc(WeaponName,D20XX_AttackRangeMap:Y_After:X_After,Y_After,X_After)
				CALL D20XX_AttackRoute_GetLast(Y_Before,X_Before)
				CALL D20XX_AttackRoute_DelLast
			ENDIF
		ENDIF

		;11時方向のへクスへ移動したときのコスト計算
		IF X_Before-1 >= 0 && Y_Before-1 >= 0;MAPの左端でも上端でも無いことの確認
			X_After = X_Before - 1
			Y_After = Y_Before - 1
			IF D20XX_AttackRangeMap:Y_After:X_After < AttackRange - 1
				D20XX_AttackRangeMap:Y_After:X_After = AttackRange - 1
				CALL D20XX_AttackRoute_Add(Y_Before,X_Before)
				CALL D20XX_AttackRangeCalc(WeaponName,D20XX_AttackRangeMap:Y_After:X_After,Y_After,X_After)
				CALL D20XX_AttackRoute_GetLast(Y_Before,X_Before)
				CALL D20XX_AttackRoute_DelLast
			ENDIF
		ENDIF
	;#endregion
;;;WeaponName = 使用武器名
;;;ARG:0 = Y座標
;;;ARG:1 = X座標
@D20XX_AttackRoute_Add(ARG:0,ARG:1)
	#DIM DYNAMIC LCount
	FOR LCount, 0, TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"射程"))
		IF D20XX_AttackRoute:LCount:0 == -1 && D20XX_AttackRoute:LCount:1 == -1
			D20XX_AttackRoute:LCount:0 = ARG:0
			D20XX_AttackRoute:LCount:1 = ARG:1
			BREAK
		ENDIF
	NEXT
@D20XX_AttackRoute_GetLast(Return_Y,Return_X)
	#DIM REF Return_Y
	#DIM REF Return_X
	#DIM LCount
	FOR LCount, 0, TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"射程"))
		IF D20XX_AttackRoute:LCount:0 == -1 && D20XX_AttackRoute:LCount:1 == -1 && LCount > 0
			Return_Y = D20XX_AttackRoute:(LCount-1):0
			Return_X = D20XX_AttackRoute:(LCount-1):1
			BREAK
		ENDIF
	NEXT
@D20XX_AttackRoute_DelLast
	#DIM LCount
	FOR LCount, 0, TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"射程"))
		IF D20XX_AttackRoute:LCount:0 == -1 && D20XX_AttackRoute:LCount:1 == -1 && LCount > 0
			D20XX_AttackRoute:(LCount-1):0 = -1
			D20XX_AttackRoute:(LCount-1):1 = -1
			BREAK
		ENDIF
	NEXT
	