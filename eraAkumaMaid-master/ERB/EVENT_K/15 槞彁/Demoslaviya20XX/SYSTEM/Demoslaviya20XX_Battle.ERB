@D20XX_HitCalc(Y_TargetField,X_TargetField)
	#DIM DYNAMIC Y_TargetField
	#DIM DYNAMIC X_TargetField
	
	#DIM DYNAMIC TargetUnit
	#DIMS DYNAMIC TargetField
	#DIM DYNAMIC Dexterity

	#DIM DYNAMIC HitRandomValue
	#DIM DYNAMIC HitCount
	#DIM DYNAMIC CriticalHitCount
	#DIM DYNAMIC LCount

	#DIM DYNAMIC BaseHitRate
	#DIM DYNAMIC FieldHitRate
	#DIM DYNAMIC ControlHitRate
	
	TargetField = %D20XX_MAP:Y_TargetField:X_TargetField:0%
	TargetUnit = TOINT(D20XX_MAP:Y_TargetField:X_TargetField:1)

	IF TOINT(D20XX_Unit:D20XX_SelectUnit:3) <= 0
		CALL D20XX_KOJO_イェニェル("行動力没有")
		RETURN 0
	ENDIF

	PRINTFORMW %D20XX_SelectWeapon%
	IF D20XX_SelectWeapon == "Error" || D20XX_SelectWeapon == "" || D20XX_SelectWeapon == "None"
		CALL D20XX_KOJO_イェニェル("武器未選択")
		RETURN 0
	ENDIF

	IF D20XX_AttackRangeMap:Y_TargetField:X_TargetField < 0
		CALL D20XX_KOJO_イェニェル("射程外警告")
		RETURN 0
	ENDIF

	IF TOINT(D20XX_MAP:Y_TargetField:X_TargetField:1) <= 0
		TRYCALLFORM D20XX_KOJO_%D20XX_Unit:D20XX_SelectUnit:8%_敵の居ない場所へ攻撃
		CALL D20XX_KOJO_イェニェル("射撃地点的不在警告")
		$AttackQuestion_TargetUnitNone
			PRINTFORML [0] 命令が聞こえなかったのか？
			PRINTFORML [1] 有がとう、訂正する
			INPUT
			IF RESULT == 0
				;什麼也不做で街道抜けるわよ
			ELSEIF RESULT == 1
				RETURN 0
			ELSE 
				GOTO AttackQuestion_TargetUnitNone
			ENDIF
	ENDIF

	IF D20XX_Unit:TOINT(D20XX_MAP:Y_TargetField:X_TargetField:1):0 == "自軍" || D20XX_Unit:TOINT(D20XX_MAP:Y_TargetField:X_TargetField:1):0 == "友軍"
		CALL D20XX_KOJO_イェニェル("同士討ち警告")
		TRYCALLFORM D20XX_KOJO_%D20XX_Unit:D20XX_SelectUnit:8%("同士討ち")
		$AttackQuestion_TargetIsFriend
			PRINTFORML [0] 構わん、撃て
			PRINTFORML [1] ははっ、冗談だよ
			INPUT
			IF RESULT == 0
				;什麼也不做で街道抜けるわよ
			ELSEIF RESULT == 1
				RETURN 0
			ELSE 
				GOTO AttackQuestion_TargetIsFriend
			ENDIF
	ENDIF



	IF (TargetUnit > 0);指定座標にユ针织が居るか確認
		;#region 命中判定
			
			;#region 命中確率の計算
				PRINTFORML 武器基礎命中率(%D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"命中率")%)
				BaseHitRate = TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"命中率"))
				
				IF STRFIND(D20XX_GET_UNITDATA(D20XX_Unit:TargetUnit:1, "スキル"), "【飛行】") == -1;飛行ユ针织は地形による遮蔽BOUNSは貰えないわよ！
					PRINTFORML ×地形効果 %D20XX_GET_HEXDATA(TargetField,"領帯ル名")% ({(TOINT(D20XX_GET_HEXDATA(TargetField,"遮蔽率")))})
					FieldHitRate = 100 - TOINT(D20XX_GET_HEXDATA(TargetField,"遮蔽率"))

					PRINTFORML FieldHitRate = {FieldHitRate}
				ENDIF

				PRINTFORML ×ターゲット指揮統制率 ( 2 - %D20XX_Unit:TargetUnit:4%/%D20XX_GET_UNITDATA(D20XX_Unit:TargetUnit:1,"指揮統制率")%)
				ControlHitRate = 200 - TOINT(D20XX_Unit:TargetUnit:4) * 100 / TOINT(D20XX_GET_UNITDATA(D20XX_Unit:TargetUnit:1,"指揮統制率"))

				Dexterity = MathEX_Per(MathEX_Per(BaseHitRate , FieldHitRate), ControlHitRate)
				

				PRINTFORML ( %D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"命中率")% - {(100 - TOINT(D20XX_GET_HEXDATA(TargetField,"遮蔽率")))/100} ) × {(TOINT(D20XX_Unit:TargetUnit:4)/TOINT(D20XX_GET_UNITDATA(D20XX_Unit:TargetUnit:1,"指揮統制率")))} = 命中確率 {Dexterity}％

				PRINTFORML 
				PRINTFORMW %D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"射撃回数")%発 発射！
				PRINTFORML 
			;#endregion

			;#region
				FOR LCount, 0, TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"射撃回数"))
					HitRandomValue = RAND:100 + 1
					PRINTFORML 
					IF Dexterity/10 >= HitRandomValue
						PRINTFORMW {Dexterity} >= {HitRandomValue} ！！阴蒂ティカル！！ ダメージ二倍！！
						CALL D20XX_DamageCalc(TargetUnit,1)
						D20XX_Unit:TargetUnit:4 = %TOSTR(TOINT(D20XX_Unit:TargetUnit:4) - TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"制圧力")))%
						
					ELSEIF Dexterity >= HitRandomValue
						PRINTFORMW {Dexterity} >= {HitRandomValue} 命中！
						CALL D20XX_DamageCalc(TargetUnit,0)
						D20XX_Unit:TargetUnit:4 = %TOSTR(TOINT(D20XX_Unit:TargetUnit:4) - TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"制圧力")))%
						
					ELSEIF HitRandomValue >= 95
						PRINTFORMW {Dexterity} <= {HitRandomValue} ！！ファンブル！！ 不発弾だった！

					ELSEIF Dexterity < HitRandomValue
						PRINTFORMW {Dexterity} <= {HitRandomValue} 外れ！
						D20XX_Unit:TargetUnit:4 = %TOSTR(TOINT(D20XX_Unit:TargetUnit:4) - TOINT(D20XX_GET_WEAPONDATA(D20XX_SelectWeapon,"制圧力")))%
					ENDIF
					SIF TOINT(D20XX_Unit:TargetUnit:4) < 0
						D20XX_Unit:TargetUnit:4 = 0
				NEXT
			;#endregion
			;#region 撃破処理
				IF TOINT(D20XX_Unit:TargetUnit:2) <= 0
					PRINTFORMW 敵を撃破！
					TRYCALLFORM Demoslavia20XX_KOJO_%D20XX_Unit:D20XX_SelectUnit:8%("敵撃破")
					;CALL D20XX_Unit_Del(TargetUnit)
					D20XX_MAP:Y_TargetField:X_TargetField:1 = "-1"
				ENDIF
			;#endregion
		;#endregion
	ELSE
		CALL D20XX_KOJO_イェニェル("着弾地点敵不在")
	ENDIF
	;攻撃したら残行動力を0にする
	D20XX_Unit:D20XX_SelectUnit:3 = 0
	RETURN 1
