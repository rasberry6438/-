;;;<Summary>
;;;	ユ针织追加する
;;;</Summary>
;;;<param name="ARGS:0">敵味方識別(「自軍」「敵」「友軍」)</param>
;;;<param name="ARGS:1">ユ针织種類名　種類はDATA/D20XX_武器データ.ERBを参照　ここに有る物だけよ</param>
;;;<param name="ARGS:2">残HP(TOINT可能な物のみ　正の整数のみを推奨)</param>
;;;<param name="ARGS:3">残行動力(TOINT可能な物のみ　正の整数のみを推奨)</param>
;;;<param name="ARGS:4">残指揮統制率（TOINT可能な物のみ　正の整数のみを推奨）</param>
;;;<param name="ARGS:5">残ERA（TOINT可能な物のみ　正の整数のみを推奨）</param>
;;;<param name="ARGS:6">武装（武器1,武器2,武器3　武器は三種類まで　武器との境界識別符号は「,」武器に入れられる名前はDATA/D20XX_武器データ.ERBを参照）</param>
;;;<param name="ARGS:7">状態（状態1,状態2,状態3...　境界識別符号は「,」DATA/D20XX_ユ针织状態.ERBを参照）</param>
;;;<param name="ARGS:8">AI種類(敵の場合のみ 無くても問題が無いようにする)</param>
;;;<param name="ARGS:9">性格(口上選択用に 無くても問題ないように作る)</param>
@D20XX_Unit_Add(ARGS:0, ARGS:1, ARGS:2, ARGS:3, ARGS:4, ARGS:5, ARGS:6, ARGS:7, ARGS:8, ARGS:9)
	#DIM DYNAMIC LCOUNT
	#DIM DYNAMIC NewUnitID
	#DIMS DYNAMIC IsError
	#DIMS DYNAMIC WeaponList,4
	#DIMS DYNAMIC StatusList,100

	IsError = False
	;#region 引数の内容確認
		;敵味方識別符号
		IF ARGS:0 != "敵"&&ARGS:0 != "自軍"&&ARGS:0 != "友軍"&&ARGS:0 != "None"
			PRINTFORML 
			PRINTFORML ※系统信息
			PRINTFORML メソッド名：D20XX_Unit_Add
			PRINTFORML 敵でも味方でもないユ针织が設定されましたよ
			PRINTFORML ここに設定して良い物は "敵","自軍","友軍","None" の三つだよ
			PRINTFORML 第三勢力とか用意する場合は、酱とD20XX_Unit_Addの許可敵味方識別符号引数に追加してね
			PRINTFORML (設定された奴 = %ARGS:0%)
			IsError = True
		ENDIF

		;ユ针织種類名
		IF D20XX_GET_UNITDATA(ARGS:1,"ユ针织名") == "Error"
			PRINTFORML 
			PRINTFORML ※系统信息
			PRINTFORML メソッド名：Demoslaviya_Unit_Add
			PRINTFORML ユ针织種類名がDATA/Demoslavia20XX_ユ针织データ.ERBに無かったよ
			PRINTFORML ユ针织データの中で設定してる名前かどうか確認してね
			PRINTFORML 設定された奴 = %ARGS:1%(ダブルクォーテーションは表示されないはずだよ)
			IsError = True
		ENDIF

		;HP
		IF ISNUMERIC(ARGS:2) == 0
			PRINTFORML 
			PRINTFORML ※系统信息
			PRINTFORML ※系统信息
			PRINTFORML メソッド名：Demoslaviya_Unit_Add
			PRINTFORML HPにTOINT出来ないデータが設定されたよ
			PRINTFORML 設定された奴 = %ARGS:2%(ダブルクォーテーションは表示されないはずだよ)
			IsError = True
		ENDIF

		;残行動力
		IF ISNUMERIC(ARGS:3) == 0
			PRINTFORML 
			PRINTFORML ※系统信息
			PRINTFORML メソッド名：Demoslaviya_Unit_Add
			PRINTFORML 残行動力にTOINT出来ないデータが設定されたよ
			PRINTFORML 設定された奴 = %ARGS:3%(ダブルクォーテーションは表示されないはずだよ)
			IsError = True
		ENDIF

		;残指統制率
		IF ISNUMERIC(ARGS:4) == 0
			PRINTFORML 
			PRINTFORML ※系统信息
			PRINTFORML メソッド名：Demoslaviya_Unit_Add
			PRINTFORML 残指揮統制率にTOINT出来ないデータが設定されたよ
			PRINTFORML 設定された奴 = %ARGS:4%(ダブルクォーテーションは表示されないはずだよ)
			IsError = True
		ENDIF
		
		;残ERA
		IF ISNUMERIC(ARGS:5) == 0
			PRINTFORML 
			PRINTFORML ※系统信息
			PRINTFORML メソッド名：Demoslaviya_Unit_Add
			PRINTFORML 残ERAにTOINT出来ないデータが設定されたよ
			PRINTFORML 設定された奴 = %ARGS:5%(ダブルクォーテーションは表示されないはずだよ)
			IsError = True
		ENDIF

		;武装
		SPLIT ARGS:6, ",", WeaponList
			IF WeaponList:3 != ""
				PRINTFORML 
				PRINTFORML ※系统信息
				PRINTFORML メソッド名：Demoslaviya_Unit_Add
				PRINTFORML 武器が三種類以上設定されたよ、一ユ针织につき武器は三種類までだよ
				PRINTFORML 設定された奴 = %ARGS:6%(ダブルクォーテーションは表示されないはずだよ)
				IsError = True
			ENDIF
			FOR LCOUNT, 0, 3;武器は3種類まで、
				IF WeaponList:LCOUNT != "" && D20XX_GET_WEAPONDATA(WeaponList:LCOUNT,"武器名") == "Error"
					PRINTFORML 
					PRINTFORML ※系统信息
					PRINTFORML メソッド名：Demoslaviya_Unit_Add
					PRINTFORML 武器名に存在しない名前が設定されたよ
					PRINTFORML 武器名には真名を設定してね、当たり前だけどDATA/D20XX_ユ针织データ.ERBにはネタバレ満載だから気をつけてね
					PRINTFORML 設定された奴 = %WeaponList:LCOUNT%(ダブルクォーテーションは表示されないはずだよ)
					IsError = True
				ENDIF
			NEXT
		
		;状態
		;SPLIT ARGS:7, ",", StatusList
		;	FOR LCOUNT, 0, 100;とりあえず100回回しておく
		;		IF D20XX_GET_STATEDATA(StatusList:LCOUNT,"状態名") == "Error"
		;			PRINTFORML 
		;			PRINTFORML ※系统信息
		;			PRINTFORML メソッド名：Demoslaviya_Unit_Add
		;			PRINTFORML DATA/D20XX_状態.ERBに存在しないデータが設定されましたよー
		;			PRINTFORML 設定された奴 = %WeaponList:LCOUNT%(ダブルクォーテーションは表示されないはずだよ)
		;			IsError = True
		;		ENDIF
		;	NEXT
		;エラーがあったら返回
		SIF IsError == "True"
			RETURN 1
	;#endregion
	

	;#region 追加できるUnitIDを見つける
		NewUnitID = 1
		FOR LCOUNT, 1, 10000;0は何もない状態という意味のデータなので1から開始よー
			IF D20XX_Unit:LCOUNT:0 == "None"
				BREAK
			ELSEIF LCOUNT == 9999
				PRINTFORML 
				PRINTFORML ※系统信息※
				PRINTFORML D20XX_Unit配列にこれ以上データが入らなかったよ
				PRINTFORML このメッセージが出る場合って9割方バグがどこかに有ると思われるので教えてくだしい
				PRINTFORML 本当にMAP上に10001体もユ针织だそうとデバッグみたいなPLAYしてたらごめんね
				PRINTFORML ちょっと対応出来て無いっす
				PRINTFORML 頭のいい人が無限に角色クターデータを保持出来るようにしてくれると信じてる
				PRINTFORML 文字列データでN次元配列とか実現しても良いけど境界識別符号大量的用意するの辛いし、何より読みにくい
				PRINTFORMW Yeah
				RETURN 1
			ELSE
				NewUnitID++
			ENDIF
		NEXT
	;#endregion

	FOR LCOUNT, 0, 10
		D20XX_Unit:NewUnitID:LCOUNT = %ARGS:LCOUNT%
	NEXT 
	RETURN NewUnitID
;;;<Summary>
;;;	初期状態でMapにユ针织を追加するメソッド
;;;</Summary>
;;;<param name="ARGS:0">X座標</param>
;;;<param name="ARGS:1">Y座標</param>
;;;<param name="ARGS:2">敵味方識別</param>
;;;<param name="ARGS:2">ユ针织名</param>
;;;<param name="ARGS:3">(省略可)武装</param>
;;;<param name="ARGS:4">(省略可)AI種類</param>
;;;<param name="ARGS:5">(省略可)性格</param>
@D20XX_Unit_Add_Default(ARGS:0,ARGS:1,ARGS:2,ARGS:3,ARGS:4,ARGS:5,ARGS:6)
	#DIMS DYNAMIC IsError
	
	#DIMS DYNAMIC Weapon
	#DIMS DYNAMIC AI_Type
	#DIMS DYNAMIC Personality
	;X座標
	IF ISNUMERIC(ARGS:0) == 0
		PRINTFORML 
		PRINTFORML ※系统信息
		PRINTFORML メソッド名：D20XX_Unit_Add_Default
		PRINTFORML X座標に数字以外が設定されましたよ
		PRINTFORML 設定された奴 = %ARGS:0%(ダブルクォーテーションは表示されないはずだよ)
		IsError = True
	ENDIF
	;Y座標
	IF ISNUMERIC(ARGS:1) == 0
		PRINTFORML 
		PRINTFORML ※系统信息
		PRINTFORML メソッド名：D20XX_Unit_Add_Default
		PRINTFORML Y座標に数字以外が設定されましたよ
		PRINTFORML 設定された奴 = %ARGS:1%(ダブルクォーテーションは表示されないはずだよ)
		IsError = True
	ENDIF
	IF ARGS:2 != "敵"&& ARGS:2 != "自軍"&& ARGS:2 != "友軍"
		PRINTFORML 
		PRINTFORML ※系统信息
		PRINTFORML メソッド名：D20XX_Unit_Add_Default
		PRINTFORML 敵と味方以外のデータが敵味方識別引数に入ってきましたわ！
		PRINTFORML 設定された奴 = %ARGS:2%(ダブルクォーテーションは表示されないはずだよ)
	ENDIF
	IF D20XX_GET_UNITDATA(ARGS:3,"ユ针织名") == "Error"
		PRINTFORML 
		PRINTFORML ※系统信息
		PRINTFORML メソッド名：D20XX_Unit_Add_Default
		PRINTFORML 指定されたユ针织名が見つかりませんでしたわよ
		PRINTFORML 設定された奴 = %ARGS:2%(ダブルクォーテーションは表示されないはずだよ)
		IsError = True
	ENDIF
	
	SIF IsError == "True"
		RETURN 1
	
	IF ARGS:4 != ""
		Weapon = ARGS:4
	ELSE 
		Weapon = D20XX_GET_UNITDATA(ARGS:3,"武装")
	ENDIF

	IF ARGS:5 != ""
		AI_Type = ARGS:5
	ELSE 
		;後々随机にAIを選択するようにする
		AI_Type = 
	ENDIF

	IF ARGS:6 != ""
		Personality = ARGS:6
	ELSE
		;後々随机に正確を選択するようにする
		Personality = 
	ENDIF
	CALL D20XX_Unit_Add(ARGS:2,ARGS:3,D20XX_GET_UNITDATA(ARGS:3,"HP"),D20XX_GET_UNITDATA(ARGS:3,"行動力"),D20XX_GET_UNITDATA(ARGS:3,"指揮統制率"),D20XX_GET_UNITDATA(ARGS:3,"ERA"),D20XX_GET_UNITDATA(ARGS:3,"武装"),"",AI_Type,Personality)
	;PRINTFORMW UnitID = {RESULT}
	D20XX_MAP:TOINT(ARGS:1):TOINT(ARGS:0):1 = {RESULT}

