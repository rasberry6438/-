;;;ARG:0 = Y座標
;;;ARG:1 = X座標
@D20XX_MoveRoute_Add(ARG:0,ARG:1)
	#DIM LCount
	FOR LCount, 0, TOINT(D20XX_GET_UNITDATA(D20XX_Unit:D20XX_SelectUnit:1,"行動力"))
		IF D20XX_MoveRoute:LCount:0 == -1 && D20XX_MoveRoute:LCount:1 == -1
			D20XX_MoveRoute:LCount:0 = ARG:0
			D20XX_MoveRoute:LCount:1 = ARG:1
			BREAK
		ENDIF
	NEXT
@D20XX_MoveRoute_GetLast(Return_Y,Return_X)
	#DIM REF Return_Y
	#DIM REF Return_X
	#DIM LCount
	FOR LCount, 0, TOINT(D20XX_GET_UNITDATA(D20XX_Unit:D20XX_SelectUnit:1,"行動力"))
		IF D20XX_MoveRoute:LCount:0 == -1 && D20XX_MoveRoute:LCount:1 == -1 && LCount > 0
			Return_Y = D20XX_MoveRoute:(LCount-1):0
			Return_X = D20XX_MoveRoute:(LCount-1):1
			BREAK
		ENDIF
	NEXT
@D20XX_MoveRoute_DelLast
	#DIM LCount
	FOR LCount, 0, TOINT(D20XX_GET_UNITDATA(D20XX_Unit:D20XX_SelectUnit:1,"行動力"))
		IF D20XX_MoveRoute:LCount:0 == -1 && D20XX_MoveRoute:LCount:1 == -1 && LCount > 0
			D20XX_MoveRoute:(LCount-1):0 = -1
			D20XX_MoveRoute:(LCount-1):1 = -1
			BREAK
		ENDIF
	NEXT
	