;;;ARG:1 = 移動先X座標
@D20XX_Move(Y_After,X_After)
	#DIM DYNAMIC X_After
	#DIM DYNAMIC Y_After
	#DIM DYNAMIC X_Before
	#DIM DYNAMIC Y_Before
	#DIM DYNAMIC LCount
	
	;#region 初期設定
		CALL D20XX_UnitSearch(D20XX_SelectUnit)
		IF RESULT:0 == 1
			Y_Before = RESULT:1
			X_Before = RESULT:2
		ENDIF
	;#endregion
	IF D20XX_MoveCostMap:Y_After:X_After >= 0 && TOINT(D20XX_Map:Y_After:X_After:1) == 0
		D20XX_Map:Y_Before:X_Before:1 = TOSTR({0})
		D20XX_Map:Y_After:X_After:1 = {D20XX_SelectUnit}
	ENDIF

	SIF D20XX_MoveCostMap:Y_After:X_After >= 0
		D20XX_Unit:D20XX_SelectUnit:3 = {D20XX_MoveCostMap:Y_After:X_After}

