;;;<Summary>
;;;	ユ针织をMapの海から見つける
;;;</Summary>
;;;<param name="ARG">尋找ユ针织のID</param>
;;;<returns>
;;;	RETURN:0 = 検索結果(1 = 見つかった, 0 = 見つからなかった)
;;; RETURN:1 = 見つかったY座標
;;;	RETURN:2 = 見つかったX座標
;;;</returns>
@D20XX_UnitSearch(SearchUnit)
	#DIM DYNAMIC X_Count
	#DIM DYNAMIC Y_Count
	#DIM DYNAMIC ResultData,3
	#DIM DYNAMIC SearchUnit
	ResultData:0 = 0
	FOR Y_Count,0,200
		FOR X_Count,0,200
			IF SearchUnit == TOINT(D20XX_MAP:Y_Count:X_Count:1)
				ResultData:0 = 1
				ResultData:1 = Y_Count
				ResultData:2 = X_Count
				BREAK
			ENDIF
		NEXT
	NEXT
	RETURN  ResultData:0,ResultData:1,ResultData:2

