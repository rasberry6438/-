;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K20, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 內褲/白/
	CSTR:胸罩 = 裹胸布/白/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	SIF CEVENT("卡莉斯塔：眼鏡着用")
		CALL SET_OTHER, "玳瑁眼鏡"

;学園での便装です。設定必須です
CASE "制服"
	IF CEVENT("卡莉斯塔：制服男装")
		;校服は一時封印
		;CALL SET_COSTUME, TEXTR("男子西装/校服")
		CALL SET_COSTUME, "男子西装"
		;冬以外は随机で半休闲褲
		SIF COND("冬") == 0 && RAND:3 == 0
			CALL SET_BOTTOM, "五分褲"
	ELSE
		CALL SET_COSTUME, "西装外衣"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服布鲁马"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("周六") + COND("周日")
		SELECTCASE TEXTS("季節")
		CASE "秋", "冬"
			CALL SET_SHIRT, "女式衬衫"
			CALL SET_BOTTOM, "休闲褲"
			CALL SET_SOCKS, "及膝襪"
			CALL SET_SHOES, "短靴"
			CALL SET_OTHER, "围巾/风衣外套"
		CASEELSE
			CALL SET_SHIRT, "女式衬衫"
			CALL SET_BOTTOM, "五分褲"
			CALL SET_SOCKS, "及膝襪"
			CALL SET_SHOES, "短靴"
		ENDSELECT
	ELSEIF CEVENT("卡莉斯塔：女仆装")
		CALL SET_SHIRT, "潇洒的女仆装/連衣裙"
		CALL SET_SKIRT, "围裙/連衣裙"
		CALL SET_SOCKS, "及膝襪"
		CALL SET_SHOES, "短靴"
		CALL SET_OTHER, "礼服頭花"
	ELSE
		CALL SET_SHIRT, "執事服"
		CALL SET_BOTTOM, "西褲"
		CALL SET_SOCKS, "及膝襪"
		CALL SET_SHOES, "短靴"
	ENDIF
;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	CALL SET_SHIRT, "女式衬衫"
	CALL SET_BOTTOM, "五分褲"
	CALL SET_SOCKS, "及膝襪"

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"

ENDSELECT
