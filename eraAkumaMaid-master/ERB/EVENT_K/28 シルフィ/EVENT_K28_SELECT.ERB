;-------------------------------------------------
;Talk指令の選択肢を追加
@DAILY1_K28_ADDSELECT
SIF CFLAG:喧嘩中
	STR:選択肢 += "道歉/"


;Talk指令で増やした選択肢の地の文と台詞
@KOJO_DAILY1_K28_ADDSELECT, ARGS
SELECTCASE ARGS
CASE "道歉"
	IF CEVENTS("追加選択肢からＨ") == ""
		PRINTFORMW %CALLNAME:MASTER%%CALLNAME:TARGET%に心から謝罪した…
		PRINTFORMW 「……」
		IF RAND:3 == 0 && CANTRAIN("逆Ａ振動棒")
			PRINTFORMW 「では、これでどうでしょう？」
			PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为おもむろに肛用振動棒を取り出した…
			PRINTFORMW 「休闲褲を降ろして、お尻をこっちに向けてください…」
			CALL SET_CEVENT, "仲直り：逆Ａ振動棒"
		ELSEIF RAND:2 && CANTRAIN("足交") && EXP:足交経験 && ABL:施虐属性 >= 3
			PRINTFORMW 「そうですね…今から私が何をしても、大人しくしていられるなら考えてあげます。」
			PRINTFORMW 「そこに横になってください」
			CALL SET_CEVENT, "仲直り：足交"
		ELSE
			PRINTFORMW 「であれば、そうですね…私の手を借りずに、一人で射精できたら許してあげます」
			PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为%CALLNAME:MASTER%に向けて手机を構えながら冷たく言い放った…
			PRINTFORMW 「ほら、早くやってみてくださいよ」
			CALL SET_CEVENT, "仲直り：自慰"
		ENDIF
		PRINTL [0]従う(これを選ぶとＨします)
		PRINTL [1]断る(これを選ぶとＨしません)
		CALL SET_CEVENT, @"追加選択肢からＨ：%ARGS%"
		FLAG:SELECT_USERSHOP = 100
	ELSE
		IF TFLAG:床イン
			IF CEVENT("仲直り：逆Ａ振動棒")
				PRINTFORMW 「大丈夫ですよ、酱と痛くしてあげますからね…」
			ELSEIF CEVENT("仲直り：足交")
				PRINTFORMW %CALLNAME:TARGET%正在认真地读着标题为%CALLNAME:MASTER%の阴茎を両足で挟み込んだ…
				PRINTFORMW 「…%CNAME("一人称")%は怒ってますからね…覚悟してもらいますよ」
			ELSEIF CEVENT("仲直り：自慰")
				
			ENDIF
		ELSE
			PRINTFORMW 「……是这様吗」
			CALL DEL_CEVENT_GROUP, "仲直り"
		ENDIF
	ENDIF
ENDSELECT

