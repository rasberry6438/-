@COM172
;浴室PLAY
CALL PRINT_TRAIN_NAME(SELECTCOM)

CALL TRAIN_MESSAGE_B

SIF REFUSE_CHECK()
	RETURN 0

STR:前回指令 = %STR:今回指令%

;浴室場への出入り
CALL SETFLAG, "浴室PLAY"

RETURN 1

@FLAG_COM172, ARG

@SOURCE_COM172, ARG
CALL VARSET_COMF

SOURCE:0:露出 = 200

;PALAM:欲情をみる
SELECTCASE PALAM:欲情
CASE IS < PALAMLV:1
	TIMES SOURCE:0:露出, 0.80
CASE IS < PALAMLV:2
	TIMES SOURCE:0:露出, 0.90
CASE IS < PALAMLV:3
	TIMES SOURCE:0:露出, 1.00
CASE IS < PALAMLV:4
	TIMES SOURCE:0:露出, 1.10
CASE IS >= PALAMLV:4
	TIMES SOURCE:0:露出, 1.20
ENDSELECT

CALL CALC, "調教ソース", ARG


@TRAIN_MESSAGE_COM172
IF TEQUIP:浴室PLAY
	PRINTFORMW 和%CALLNAME:TARGET%回到部屋了……
ELSE
	PRINTFORM %CALLNAME:TARGET%
	IF CHECK_CLO("泳装姿")
		PRINTFORM 就那樣穿著泳衣
		CALL SET_SHIRT, ""
		CALL SET_BOTTOM, ""
		CALL SET_SOCKS, ""
		CALL SET_GLOVE, ""
	ELSEIF CHECK_CLO("全裸") == 0
		PRINTFORM 在更衣室脫掉衣服後
		CALL SETFLAG, "衣装全脱ぎ", TARGET
	ENDIF
	PRINTFORMW 一起向浴室走去……
	IF TEQUIP:眼罩
		PRINTFORM 被眼罩遮住雙眼的%CALLNAME:TARGET%、將%CALLNAME:PLAYER%
		IF TALENT:坦率 || TALENT:内気
			PRINTFORM 的手牽起、戰戰兢兢地
		ELSE
			PRINTFORM 的手腕摸索著抓住、為了防止滑倒而小心地
		ENDIF
		PRINTFORMW 走進了浴室……
	ELSEIF TALENT:害羞 && ABL:露出癖 < 3 && CHECK_CLO("裸体")
		PRINTFORMW 進入浴室的%CALLNAME:TARGET%臉色羞紅、用雙手徒勞的遮掩著美麗的身體……
	ELSEIF TALENT:献身 && (TALENT:好色 || TALENT:淫乱)
		PRINTFORMW 進入浴室的%CALLNAME:TARGET%浮現追逐快樂的笑容、拿起肥皂潤滑著身體……
	ELSEIF TALENT:献身
		PRINTFORMW 進入浴室的%CALLNAME:TARGET%為了幫助%CALLNAME:MASTER%擦洗而拿起了角落的浴桶……
	ELSEIF (TALENT:好色 || TALENT:淫乱 || TALENT:小悪魔 || TALENT:坏心眼) && TALENT:害羞 == 0 && CHECK_CLO("裸体")
		PRINTFORMW 進入浴室的%CALLNAME:TARGET%對美麗的身體完全不做遮掩、反而擺出誘惑的姿勢、向%CALLNAME:MASTER%露出%TEXTR("挑逗的/大膽的")%笑容……
	ELSEIF TALENT:不知羞恥 && CHECK_CLO("裸体")
		PRINTFORMW 進入浴室的%CALLNAME:TARGET%即使美麗的嬌軀完全的暴露在%CALLNAME:MASTER%眼前、也完全沒有一絲羞澀的表現……
	ENDIF
ENDIF


