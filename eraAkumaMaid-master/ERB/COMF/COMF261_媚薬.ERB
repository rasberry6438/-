@COM261
;媚薬
CALL PRINT_TRAIN_NAME(SELECTCOM)

CALL TRAIN_MESSAGE_B

SIF REFUSE_CHECK()
	RETURN 0

STR:前回指令 = %STR:今回指令%

TEQUIP:媚薬 = 0
ITEM:媚薬 -= 1

RETURN 1

@FLAG_COM261, ARG
IF TEQUIP:推倒
	;錬金術があれば効果ＵＰ
	SELECTCASE MAX(TALENT:ASSI:錬金術, TALENT:錬金術)
	CASE 2
		TEQUIP:PLAYER:媚薬 = 200
	CASE 1
		SIF TALENT:ASSI:錬金術 + TALENT:錬金術
			TEQUIP:PLAYER:媚薬 = 100
	ENDSELECT

	CALL ADD_STATE, PLAYER, "媚薬"
ELSE
	IF ASSI:1 > 0 && CADV("淫蕩薬師")
		TEQUIP:媚薬 = 200
	ELSEIF TALENT:ASSI:錬金術 + TALENT:MASTER:錬金術
		TEQUIP:媚薬 = 100
	ENDIF
ENDIF
;ここでTEQUIP:媚薬がさらに+100（基本値）され、薬毒耐性はその後に75％軽減される
CALL ADD_STATE, TARGET, "媚薬"

@SOURCE_COM261, ARG
CALL VARSET_COMF

SOURCE:0:逸脱 = 2000
SIF TALENT:好色
	SOURCE:0:逸脱 /= 2
SIF TEQUIP:推倒
	SOURCE:0:逸脱 /= 2

CALL CALC, "調教ソース", ARG


@TRAIN_MESSAGE_COM261
IF TEQUIP:推倒
	;騎乗位出来るなら騎乗位ルート
	CALL COM_ABLE65
	IF RESULT && TALENT:好色*3 + TALENT:淫乱*3 + ABL:欲望 >= 3 && PENIS(PLAYER) && COND("Ｖ熟達")
		PRINTFORMW %CALLNAME:TARGET%向%CALLNAME:PLAYER%挺立的陰莖傾倒下媚藥、隨後再次吞嚥因藥物變得更加敏感的陰莖、開始揮舞腰肢。
		CALL SET_INSERT, TARGET, PLAYER, 65
	ELSEIF CHECK_COM("接吻")
		PRINTFORMW %CALLNAME:TARGET%將%CALLNAME:PLAYER%壓住、將媚藥含在嘴中、用激烈的吻讓%CALLNAME:PLAYER%喝下了。
	ELSE
		PRINTFORMW %CALLNAME:TARGET%從準備好的藥物中挑選出粉紅的藥液、強硬地讓動彈不得的%CALLNAME:PLAYER%喝下了媚藥。
	ENDIF
ELSE
	PRINTFORM %CALLNAME:TARGET%將
	IF ASSI:1 > 0 && CADV("淫蕩薬師")
		PRINTFORM 經過特別調合的、就連處女也會耽溺於快感的強力
	ELSEIF TALENT:ASSI:錬金術 + TALENT:MASTER:錬金術
		PRINTFORM 經過特別調合的
	ENDIF
	PRINTFORML 媚藥喝下了。
ENDIF
IF TALENT:薬毒耐性
	PRINTFORMW 儘管%CALLNAME:TARGET%對於藥毒具有耐性、但仍然產生了略微的效果——嬌嫩的肌膚漸漸湧現出漸漸地紅潮……
ELSE
	PRINTFORMW 很快、%CALLNAME:TARGET%大口喘息起來、而全身的肌膚也被猛烈的紅潮席捲……
ENDIF

PRINTL 
CALL PRINT_STRL, "由于媚薬的効果_イエロー_欲情与全快楽变得更容易上升_、_イエロー_苦痛と恐怖と反感变得不容易上升_。_W"
CALL PRINT_STRW, "※但是、由于副作用_青_恭順と習得变得不容易上升_なり、_青_獲得的珠的量也会减少_※_W"

