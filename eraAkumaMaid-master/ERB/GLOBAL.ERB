@SAVE_CONFIGURE
#DIM LCOUNT
;まずは読み込んでおく
LOADGLOBAL

;既にセーブされている場合、上書きするかどうか格子
IF GLOBAL:Config保存の日時
	PRINTL 已经有Config数据存在了。要覆盖吗？
	PRINTLC [0] 是
	PRINTLC [1] 否
	PRINTL 
	CALL INPUT_SELECT, 2
	SIF RESULT == 1
		RETURN 0
ENDIF

;Config保存の日時
GETTIME
RESULT /= 1000000000
RESULT %= 1000000
GLOBAL:Config保存の日時 = RESULT

;FLAG:50～FLAG:199を同じ番号のGLOBALに保存
FOR LCOUNT, 50, 200
	GLOBAL:LCOUNT = FLAG:LCOUNT
NEXT
;以上設定をセーブする
SAVEGLOBAL

PRINTW 保存了Config


@LOAD_CONFIGURE
#DIM LCOUNT

;まずは読み込む
LOADGLOBAL

;FLAG:50～FLAG:199を同じ番号のGLOBALにする
FOR LCOUNT, 50, 200
	FLAG:LCOUNT = GLOBAL:LCOUNT
NEXT

;使用中のConfigのVERをFLAGに保存
FLAG:VER_Config = GLOBAL:Config保存の日時

PRINTW 加载了Config
