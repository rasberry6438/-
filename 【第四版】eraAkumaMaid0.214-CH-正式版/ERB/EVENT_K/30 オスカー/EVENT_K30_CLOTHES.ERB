;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K30, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 褶边の胖次/Ｈ的颜色/正面蝴蝶結紐/
	CSTR:胸罩 = 褶边の胸罩/Ｈ的颜色/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での便装です。設定必須です
CASE "制服"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		CALL SET_SHIRT, "衬衫"
		CALL SET_SKIRT, "刺绣長裙"
		CALL SET_SOCKS, "吊帯長筒襪"
		CALL SET_SHOES, "靴"
		CALL SET_GLOVE, "絲綢手套"
		CALL SET_OTHER, "围巾/织布外套"
	CASE "夏"
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_SKIRT, "迷你裙"
		CALL SET_SOCKS, "褶边襪"
		CALL SET_SHOES, "小皮靴"
	CASEELSE
		CALL SET_SHIRT, "衬衫"
		CALL SET_SKIRT, "刺绣長裙"
		CALL SET_SOCKS, "吊帯長筒襪"
		CALL SET_SHOES, "小皮靴"
		CALL SET_GLOVE, "絲綢手套"
	ENDSELECT
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "体操服运动衫"
	ELSE
		CALL SET_COSTUME, "体操服五分褲"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "黒比基尼"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("夏")
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_SOCKS, "褶边襪"
		CALL SET_SHOES, "小皮靴"
	ELSE
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_SKIRT, "迷你裙"
		CALL SET_SOCKS, "褶边襪"
		CALL SET_SHOES, "小皮靴"
	ENDIF

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF RAND:3 == 0
		CALL SET_SHIRT, "衬衫"
		CALL SET_BRA, ""
	ELSEIF RAND:2
		CALL SET_PANTIES, "蕾丝的胖次"
		CALL SET_BRA, "蕾丝胸罩"
	ELSE
		CALL SET_PANTIES, "褶边の胖次"
		CALL SET_BRA, "褶边の胸罩"
	ENDIF

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	IF COND("冬")
		CALL SET_SHIRT, "哥特蘿莉礼服"
		CALL SET_SOCKS, "吊帯長筒襪"
		CALL SET_SHOES, "小皮靴"
		CALL SET_GLOVE, "礼服袖套"
		CALL SET_OTHER, "围巾/织布外套"
	ELSE
		CALL SET_SHIRT, "哥特蘿莉礼服"
		CALL SET_SOCKS, TEXTR("褶边襪/吊帯長筒襪")
		CALL SET_SHOES, "小皮靴"
		CALL SET_GLOVE, "礼服袖套"
	ENDIF

	IF COND("髪型変更可能")
		IF RAND:3 == 0
			CSTR:前髪 = %TEXTR("自然刘海２/斜刘海/斜刘海２")%
		ELSEIF RAND:2
			CSTR:前髪 = 編髪
			CSTR:改髪 = 编起来
		ELSE
			CSTR:前髪 = %TEXTR("自然刘海２/斜刘海/斜刘海２/編髪")%
			CSTR:改髪 = 马尾辫
		ENDIF
	ENDIF
ENDSELECT


;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K30
IF PLACE("自宅")
	CSTR:前髪 = %TEXTR("自然刘海２/斜刘海/斜刘海２/分叉毛刺/分叉毛刺２/分叉毛刺３/分叉毛刺４")%
ELSE
	IF COND("昼")
		CSTR:前髪 = %TEXTR("自然刘海２/斜刘海/斜刘海２")%
	ELSE
		CSTR:前髪 = %TEXTR("自然刘海２/斜刘海/斜刘海２/分叉毛刺/分叉毛刺２/分叉毛刺３/分叉毛刺４")%
	ENDIF
ENDIF
