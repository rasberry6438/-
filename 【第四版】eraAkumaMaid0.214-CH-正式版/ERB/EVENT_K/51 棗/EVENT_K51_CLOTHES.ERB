;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K51, ARGS

SELECTCASE ARGS
;角色クター独自の内衣の組み合わせを設定できます。設定した場合、一定の確率で着用します
CASE "内衣"
	CALL SET_PANTIES, TEXTR("內褲/三角胖次/褶边の胖次")
	IF CHECK_PANTIES("褶边の胖次")
		CALL SET_BRA, "褶边の胸罩"
	ELSE
		CALL SET_BRA, TEXTR("简约胸罩/满杯胸罩/褶边の胸罩")
	ENDIF
;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	;CALL SET_OTHER, ""

;学園での便装です。設定必須です。
;水手服, 露脐装超短裙水手服, 西装外衣, 露脐装超短裙西装外衣, 美式校服など
CASE "制服"
	CALL SET_COSTUME, "西装外衣"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服布鲁马, 体操服五分褲, 体操服紧身短褲, 体操服运动衫など
CASE "体操服"
	CALL SET_COSTUME, "体操服运动衫"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;死库水, 競泳泳装, 白比基尼, 黒比基尼など
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	CALL SET_SHIRT, "女式衬衫"
	CALL SET_SKIRT, "裙"
	CALL SET_SOCKS, "短襪"
	CALL SET_SHOES, "運動鞋"

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	CSTR:服 = 睡衣/
	CSTR:下身衣装 = 睡衣休闲褲/不可移開/不可手交/休闲褲/

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	CALL SET_SHIRT, "女式衬衫"
	CALL SET_SKIRT, "裙"
	CALL SET_SOCKS, "短襪"
	CALL SET_SHOES, "運動鞋"
;もちろん约会の際に着ます
CASE "约会衣装"
	IF COND("春") 
		IF COND("髪型変更可能")
			CALL CHANGE_MAIDFACE, "長", TARGET
			CALL CHANGE_MAIDFACE, "侧盘頭", TARGET
		ENDIF
		IF RAND:2 == 0
			CALL SET_SHIRT, "蕾丝女式衬衫/米色"
		ELSE
			CALL SET_SHIRT, "女式衬衫"
		ENDIF
		CALL SET_SKIRT, "裙"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "平底鞋"
	ELSEIF COND("夏")
		IF COND("髪型変更可能")
			CALL CHANGE_MAIDFACE, "長", TARGET
			CALL CHANGE_MAIDFACE, "侧盘頭", TARGET
		ENDIF
		CALL SET_SHIRT, "夏日礼服"
		CALL SET_SHOES, "无后跟鞋"
	ELSEIF COND("秋")
		IF COND("髪型変更可能")
			CALL CHANGE_MAIDFACE, "長", TARGET
			CALL CHANGE_MAIDFACE, "侧盘頭", TARGET
		ENDIF
		IF RAND:2 == 0
			CALL SET_SHIRT, "蕾丝女式衬衫/黒"
		ELSE
			CALL SET_SHIRT, "褶边女式衬衫"
		ENDIF
		CALL SET_SKIRT, "裙"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "平底鞋"
	ELSEIF COND("冬")
		IF COND("髪型変更可能")
			CALL CHANGE_MAIDFACE, "長", TARGET
			CALL CHANGE_MAIDFACE, "侧盘頭", TARGET
		ENDIF
		CALL SET_SHIRT, "针织毛衣"
		CALL SET_SKIRT, "裙"
		CALL SET_SOCKS, "膝下襪"
		CALL SET_SHOES, "小皮靴"
	ENDIF
ENDSELECT


;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;髪型変更のお願い中だとここでの変更は起きません
;-------------------------------------------------
@MAIDFACE_K51
IF PLACE("自宅")
	CALL CHANGE_MAIDFACE, "長", TARGET
	CALL CHANGE_MAIDFACE, "无特殊髪型", TARGET
ELSE
	CALL SETFLAG, "普段の髪型復元", TARGET
ENDIF

;-------------------------------------------------
;感情やシチュに応じて、角色独自の表情を設定する。設定しなくてもかまいません
;主にEMOTION_PLUSなどで颜绘を出す際の文字列の組み合わせの代わりに使う関数です
