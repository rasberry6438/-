;;;解説役イェニェル口上
;;;コンセプトは畜生天使
;;;ダエモスラビヤ語訛りが有るけども普通に話せる
;;;いつかこの子の口上も作りたいわね
;;;-------------------------------------------------
@D20XX_KOJO_イェニェル(SelectKojo)
	#DIMS SelectKojo
	SELECTCASE SelectKojo
		CASE "武器未選択"
			CALL PRINT_NamariL("「武器を選択してくれないと攻撃できないぞ？」")
		CASE "同士討ち警告"
			CALL PRINT_NamariL("「おいおい...いくら相手が悪魔だからって...味方も殺すことわ無いだろ...」")
			CALL PRINT_NamariL("「まさか...本当に撃つのカ...？」")
		CASE "射撃地点敵不在警告"
			CALL PRINT_NamariL("「そこに撃っても敵わ居ないぜ？本当に撃つのか？」")
		CASE "0ダメージ"
			CALL PRINT_NamariW("「ちっ、ダメージを与えられなかったようだぜ」")
		CASE "着弾地点敵不在"
			CALL PRINT_NamariL("「ハッハ、着弾地点に敵は居なかったようだぞォ？」")
			PRINTFORMW イェニェルはニヤニヤと小馬鹿にしながら%CALLNAME:MASTER%の方を見た
		CASE "射程外警告"
			CALL PRINT_NamariL("「そこは射程外だから打てないぜ？」")
			CALL PRINT_NamariL("「あぁ、射程の長武器がご所望でしたら、是非イェニェル兵器廠社え」")
			PRINTFORMW イェニェルは素晴らしい満面の営業スマイルを%CALLNAME:MASTER%に向けた
		CASE "敵ユ针织選択警告"
			PRINTFORML -イェニェル-
			CALL PRINT_NamariW("「流石の僕でも敵の動きを操作わ出来ないな...」")
		CASE "ユ针织未選択"
			PRINTFORM 選択中ユ针织：
			CALL PRINT_NamariL("「どいつえの命令をするのか教えてくれ」")
		CASE "游戏終了"
			CALL PRINT_NamariW("「お？もう帰りたいのか？」")
			CALL PRINT_NamariW("「仕方が無いなァ！特別に帰らせてやろう！」")
			CALL PRINT_NamariW("「また、人类界で好きなだけ打情骂俏したまえ！」")
			CALL CALL_LIB("余計なお世話")
			CALL PRINT_NamariW("「ワハハハ！」")
			
			PRINTFORMW %CALLNAME:MASTER%と%CALLNAME:TARGET%の周囲の空気がパチパチと音をたてながら青白く発光し始めた。
			RESETBGCOLOR
			PRINTFORMW バシュウ----.......
			PRINTFORMW 眩暈が%CALLNAME:MASTER%を襲う...
			PRINTFORMW ・
			PRINTFORMW ・
			PRINTFORMW ・
	ENDSELECT 

