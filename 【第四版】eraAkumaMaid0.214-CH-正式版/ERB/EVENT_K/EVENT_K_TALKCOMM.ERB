;基本的には@TaiTaChara_KXXシリーズと同じ処理(TaiTaってなんの略称なの...)
;何が違うかというとSHOP画面でTalkを選んだ時に表示する
;つまり長会話でもWAITを使う会話でも大丈夫！やったね！
@CtoC_Comm_K15
;イベントが起きる角色の名前を/区切りでこれに突っ込み、TEXTRで取り出す
#DIMS EVENT_TABLE
;イベント発生中の角色
#DIM ACTOR
;イベント発生中の角色の默认のCALLNAME
#DIMS CALLNAME_ACTOR

#DIM CHOICE

;現在この場にいる、自分以外の全角色の名前を取得する
EVENT_TABLE = %NAMES("現在存在角色一覧", TARGET)%
;誰も居ないなら終わり
SIF EVENT_TABLE == ""
	RETURN 0

;この角色のイベントが起きる
CALLNAME_ACTOR = %TEXTR(EVENT_TABLE)%
ACTOR = FIND_COND(CALLNAME_ACTOR)

SELECTCASE CALLNAME_ACTOR
	CASE "西西莉亚"
		IF CEVENT("西西莉亚初会話") == 0
			CALL EVENT_槞彁COMM_LIBRARY("日常Talk：西西莉亚：初めまして")
			CALL SET_CEVENT, "西西莉亚初会話"
		ELSE
			CALL EVENT_槞彁COMM_LIBRARY("日常Talk：西西莉亚：打招呼：お誘い")
			CALL PRINT_SELECT("是/否")

			CHOICE = RESULT
			SELECTCASE CHOICE
				CASE 0
					CALL EVENT_槞彁COMM_LIBRARY("日常Talk：西西莉亚：打招呼：勉強")
				CASE 1
					PRINTFORMW %CALLNAME:TARGET%通过しょぼんとしながら戻っていった。
			ENDSELECT
		ENDIF
	CASEELSE
ENDSELECT
