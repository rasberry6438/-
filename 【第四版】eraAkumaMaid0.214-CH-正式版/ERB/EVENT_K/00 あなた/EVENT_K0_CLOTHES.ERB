;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K0, ARGS
#DIMS MEMO_CLOMASTER

MEMO_CLOMASTER = 
SELECTCASE ARGS
CASE "内衣"
	IF SAVESTR:ARGS != ""
		MEMO_CLOMASTER = %SAVESTR:ARGS%
	ELSEIF TALENT:男性
		CALL SET_PANTIES, "四角褲/黒"
	ELSE
		CALL SET_PANTIES, "內褲"
		CALL SET_BRA, "简约胸罩"
	ENDIF
CASE "飾品"
	CALL SET_OTHER, SAVESTR:ARGS
CASE "制服"
	IF SAVESTR:ARGS != ""
		MEMO_CLOMASTER = %SAVESTR:ARGS%
	ELSEIF TALENT:男性
		CALL SET_SHIRT, "男子西装/茶色"
		CALL SET_BOTTOM, "休闲褲/黒"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "運動鞋"
	ELSE
		CALL SET_COSTUME, "西装外衣"
	ENDIF
CASE "体操服"
	IF SAVESTR:ARGS != ""
		MEMO_CLOMASTER = %SAVESTR:ARGS%
	ELSEIF TALENT:男性
		CALL SET_COSTUME, "体操服运动衫"
	ELSE
		CALL SET_COSTUME, "体操服布鲁马"
	ENDIF
CASE "泳装"
	IF SAVESTR:ARGS != ""
		MEMO_CLOMASTER = %SAVESTR:ARGS%
	ELSEIF TALENT:男性
		CALL SET_COSTUME, "衝浪胖次"
	ELSE
		CALL SET_COSTUME, "競泳泳装"
	ENDIF
CASE "便装"
	IF SAVESTR:ARGS != ""
		MEMO_CLOMASTER = %SAVESTR:ARGS%
	ELSEIF TALENT:男性
		CALL SET_SHIRT, "男子西装/茶色"
		CALL SET_BOTTOM, "休闲褲/黒"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "運動鞋"
	ELSE
		CALL SET_COSTUME, "西装外衣"
	ENDIF
CASE "居家服"
	IF SAVESTR:ARGS != ""
		MEMO_CLOMASTER = %SAVESTR:ARGS%
	ELSEIF SAVESTR:便装 != ""
		MEMO_CLOMASTER = %SAVESTR:便装%
	ELSEIF TALENT:男性
		CALL SET_SHIRT, "男子西装/茶色"
		CALL SET_BOTTOM, "休闲褲/黒"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "運動鞋"
	ELSE
		CALL SET_COSTUME, "西装外衣"
	ENDIF
CASE "外出装"
	IF SAVESTR:ARGS != ""
		MEMO_CLOMASTER = %SAVESTR:ARGS%
	ELSEIF TALENT:男性
		CALL SET_SHIRT, "男子西装/茶色"
		CALL SET_BOTTOM, "休闲褲/黒"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "運動鞋"
	ELSE
		CALL SET_COSTUME, "西装外衣"
	ENDIF
CASE "约会衣装"
	IF SAVESTR:ARGS != ""
		MEMO_CLOMASTER = %SAVESTR:ARGS%
	ELSEIF SAVESTR:外出装 != ""
		MEMO_CLOMASTER = %SAVESTR:外出装%
	ELSEIF TALENT:男性
		CALL SET_SHIRT, "男子西装/茶色"
		CALL SET_BOTTOM, "休闲褲/黒"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "運動鞋"
	ELSE
		CALL SET_COSTUME, "西装外衣"
	ENDIF
ENDSELECT

IF MEMO_CLOMASTER != ""
	STR:換装衣装 = %MEMO_CLOMASTER%
	CALL SETFLAG, "衣装の換装", TARGET
ENDIF
