;-------------------------------------------------
;TARG_STRに、単語1/単語2/…/単語n の書式で書かれたSEARCH_STRSの単語のどれかが含まれるか
;最初に引っかかった単語の文字列を返す。
;見つからなければ空文字""を返す。
;-------------------------------------------------
@K61_INCLUDES(TARG_STR, SEARCH_STRS)
#FUNCTIONS
#DIM LCOUNT

#DIMS TARG_STR
#DIMS SEARCH_STRS

VARSET LOCALS
SPLIT SEARCH_STRS, "/", LOCALS

FOR LCOUNT, 0, 100
    STRFIND TARG_STR, LOCALS:LCOUNT
    IF RESULT:0 > -1
        RETURNF LOCALS:LCOUNT
    ENDIF
NEXT

RETURNF ""

