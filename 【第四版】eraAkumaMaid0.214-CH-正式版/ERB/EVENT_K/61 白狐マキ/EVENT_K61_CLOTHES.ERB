;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K61, ARGS

;ファッションには無頓着、暗めの色から随意
SELECTCASE ARGS
	CASE "内衣"
		;角色クター独自の内衣の組み合わせを設定できます。設定必須です。一定の確率で着用します
		;もしも普段は付けない、という事ならCSTR:胖次 = と等号の右側を書き込まない事で出来ます
		;CFLAG:随机内衣OFF = 1とした場合には、ここで設定した内衣のみを身に着けるようになります
		CSTR:胖次 = 內褲/淡色/简约/
		CSTR:胸罩 = 吊帯衫/淡色/

	CASE "飾品"
		;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
		CALL SET_OTHER, ""

	CASE "制服"
		;学園での便装です。設定必須です。
		;水手服, 露脐装超短裙水手服, 西装外衣, 露脐装超短裙西装外衣, 背心,美式校服、V领毛衣など
		;黑色水手服を着せたい場合には CALL SET_COSTUME, "水手服/黒" のように書き込むことで色を変えることが出来ます
		;また、V领毛衣に限りCALL SET_COSTUME, "V领毛衣/濃紫/萌袖"のようにして色の他に"萌袖"をオプション指定できます
		;(RESOURCES→MAIDFACE→13服 フォルダ内にある MAIDFACE13.csv の該当衣装を見て色を選ばないとならないため上級者向きです)
		;また、女式衬衫等の上に褲吊帯を着けたい場合には CALL SET_OTHER, "褲吊帯" として下さい
		IF COND("冬")
			CALL SET_COSTUME, "水手服"
			CALL SET_BOTTOM, "运动衫休闲褲"
			CALL SET_OTHER, "运动衫/围巾"
		ELSE
			CALL SET_COSTUME, "水手服"
		ENDIF
	CASE "体操服"
		;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
		;体操服布鲁马, 体操服高開衩布鲁马, 体操服五分褲, 体操服紧身短褲, 体操服运动衫など
		IF COND("冬")
			CALL SET_COSTUME, "体操服运动衫"
		ELSE
			CALL SET_COSTUME, "体操服布鲁马"
		ENDIF
	CASE "泳装"
		;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
		;死库水, 競泳泳装, 白比基尼, 黒比基尼など
		CALL SET_COSTUME, "死库水"

	CASE "便装", "居家服"
		;自宅など学園外で着ます。設定必須です
		;NOTE 便装と居家服の違いはなんだ……公共の場に出る可能性があるなら分離する必要がある。
		IF COND("冬")
			CALL SET_SHIRT, "宽大的Ｔ恤/黒"
			CALL SET_BOTTOM, "运动衫休闲褲"
			CALL SET_OTHER, "連帽風衣"
		ELSEIF COND("夏")
			CALL SET_SHIRT, "宽大的Ｔ恤/黒"
		ELSE
			CALL SET_SHIRT, "宽大的Ｔ恤/黒"
			CALL SET_BOTTOM, "运动衫休闲褲"
		ENDIF

	CASE "外出装"
		;约会以外で家から外出際に着ます。情人旅館呼出とかね
		CALL SET_SHIRT, "長袖Ｔ恤/黒"
		CALL SET_SKIRT, "裙"
		CALL SET_SHOES, "運動鞋"
		CALL SET_SOCKS, "膝下襪"

		IF COND("冬")
			CALL SET_SOCKS, "長筒襪"
			CALL SET_OTHER, "鸭舌帽/連帽風衣/围巾"
		ELSEIF COND("夏")
		ELSE
			CALL SET_OTHER, "連帽風衣"
		ENDIF
	CASE "约会衣装"
		;外出装に发卡だけ追加でつける。どうしたら漂亮なのかわかっていない。
		CALL SET_SHIRT, "長袖Ｔ恤/黒"
		CALL SET_SKIRT, "裙"
		CALL SET_SHOES, "運動鞋"
		CALL SET_SOCKS, "膝下襪"
		CALL SET_OTHER, "橘子の发卡"

		IF COND("冬")
			CALL SET_SOCKS, "長筒襪"
			CALL SET_OTHER, "鸭舌帽/連帽風衣/围巾/橘子の发卡"
		ELSEIF COND("夏")
		ELSE
			CALL SET_OTHER, "連帽風衣/橘子の发卡"
		ENDIF

	CASE "朝袭衣装"
		;朝Ｈの際に着ます
		IF COND("同居中")

		ELSE

		ENDIF
	CASE "夜袭衣装"
		;夜袭Ｈの際に着ます

ENDSELECT


