; RYOKO_SWEET_VOICE_RAND_SITUATION
;   汎用喘ぎ関数のシチュエーション判断
;   〇〇/○○/○○/... 形式
;===========================================================
@RYOKO_SWEET_VOICE_RAND_SITUATION
#FUNCTIONS
#DIMS SITUATION

	VARSET SITUATION

	; 大本のシチュエーション
	SIF COND("調教中")
		SITUATION += "調教中/"
	SIF COND("约会中")
		SITUATION += "约会中/"
	SIF COND("性処理中")
		SITUATION += "性処理中/"
	SIF COND("朝袭相手") && COND("朝")
		SITUATION += "朝袭中/"

	; PLAY内容
	IF INSERT("Ｖ挿入")
		SITUATION += "Ｖ挿入/"
		IF TEQUIP:PLAYER:避孕套
			SITUATION += "避孕套ハメ中/"
		ELSE
			IF COND("危険日")
				SITUATION += "危険日ナマハメ中/"
			ELSE
				SITUATION += "ナマハメ中/"
			ENDIF
		ENDIF
	ENDIF
	SIF INSERT("Ａ挿入")
		SITUATION += "Ａ挿入/"
	SIF COND("喜欢的体位中")
		SITUATION += "喜欢的体位/"
	SIF COND("Ｈ的いちゃつき中", MASTER)
		SITUATION += "Ｈ的いちゃつき中/"

	; 服装系
	SIF CHECK_CLO("裸体")
		SITUATION += "裸体/"
	SIF CHECK_CLO("内衣姿")
		SITUATION += "内衣姿/"
	SIF CHECK_CLO("没穿外衣")
		SITUATION += "没穿外衣/"
	SIF CHECK_CLO("没穿下衣")
		SITUATION += "没穿下衣/"
	SIF CHECK_CLO("没穿内褲")
		SITUATION += "没穿内褲/"
	SIF CHECK_CLO("无胸罩")
		SITUATION += "无胸罩/"
	SIF CHECK_CLO("泳装姿")
		SITUATION += "泳装姿/"

	; 場所
	IF PLACE("野外")
		SITUATION += "屋外/%SAVESTR:現在位置%/"
	ELSE
		SITUATION += "屋内/%SAVESTR:現在位置%/"
	ENDIF

	; 他情報
	SIF COND("危険日")
		SITUATION += "危険日/"
	SIF MARK:淫紋 == 1
		SITUATION += "淫紋贴纸/"
	SIF MARK:淫紋 >= 2
		SITUATION += "淫紋/"

	RETURNF SITUATION
