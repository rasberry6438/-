@RYOKO_COM_CHECK(ARGS)
#FUNCTION
	; TARGETの確認
	SIF NO:TARGET != 32
		RETURNF 0

	SELECTCASE ARGS
		CASE "素股誤挿入"
			SIF SELECTCOM != 93
				RETURNF 0
			SIF FIRSTCOM(SELECTCOM) == 0
				RETURNF 0
			SIF EXP:Ｖ性交経験 == 0
				RETURNF 0
			SIF CHECK_COM("展示肉棒")
				RETURNF 0
			SIF CEVENT("調教：素股誤挿入") || CEVENT("調教：素股誤挿入発生済み")
				RETURNF 0
			SIF !CHECK_CLO("Ｖ露出")
				RETURNF 0
			SIF PALAM:Ｖ潤 < 3000
				RETURNF 0
			;SIF RAND:4
			;	RETURNF 0
			
			RETURNF 1
	ENDSELECT

	RETURNF 0

