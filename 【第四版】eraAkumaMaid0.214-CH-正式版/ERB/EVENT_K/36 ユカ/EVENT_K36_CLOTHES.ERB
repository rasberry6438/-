;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K36, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 條紋胖次/條紋色/
	CSTR:胸罩 = 條紋の胸罩/條紋色/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での便装です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "水手服"
	CALL SET_BOTTOM, "紧身短褲"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "体操服运动衫"
	ELSE
		CALL SET_COSTUME, "体操服五分褲"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	;普段は中学生男子みたいな服を着てる。
	IF COND("冬")
		IF RAND:2
			CALL SET_SHIRT, "针织毛衣"
			CALL SET_BOTTOM, "休闲褲"
			CALL SET_SOCKS, "膝下襪"
			CALL SET_SHOES, "運動鞋"
		ELSE
			CALL SET_SHIRT, "运动衫"
			CALL SET_BOTTOM, "运动衫休闲褲"
			CALL SET_SOCKS, "短襪"
			CALL SET_SHOES, "運動鞋"
		ENDIF
	ELSEIF COND("夏")
		IF RAND:2
			CALL SET_SHIRT, "Ｔ恤"
			CALL SET_BOTTOM, "短褲"
			CALL SET_SOCKS, "短襪"
			CALL SET_SHOES, "運動鞋"
		ELSE
			CALL SET_SHIRT, "无袖女式衬衫"
			CALL SET_BOTTOM, "短褲"
			CALL SET_SOCKS, "短襪"
			CALL SET_SHOES, "運動鞋"
		ENDIF
	ELSE
		CALL SET_SHIRT, "連帽風衣"
		CALL SET_SKIRT, "裙"
		CALL SET_BOTTOM, "五分褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	ENDIF

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF TALENT:恋慕 && COND("欲求不満") >= 2
		CALL SET_SHIRT, "宽大的Ｔ恤"
		CALL SET_SOCKS, "及膝襪"
		CALL SET_PANTIES, ""
		CALL SET_BRA, ""
	ENDIF

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		CALL SET_SHIRT, "短外套"
		CALL SET_BOTTOM, "休闲褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	CASE "秋"
		CALL SET_SHIRT, "针织露肩外衣"
		CALL SET_BOTTOM, "短褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	CASE "夏"
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_BOTTOM, "短褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	CASEELSE
		CALL SET_SHIRT, "女式衬衫"
		CALL SET_BOTTOM, "短褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "運動鞋"
	ENDSELECT

ENDSELECT


