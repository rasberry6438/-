;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K28, ARGS

SELECTCASE ARGS
;角色クター独自の内衣の組み合わせを設定できます。設定した場合、一定の確率で着用します
CASE "内衣"
	CALL SET_PANTIES, "丁字褲/辣妹"
	CSTR:胸罩 = 

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "眼鏡"
;学園での便装です。設定必須です。
;水手服, 露脐装超短裙水手服, 西装外衣, 露脐装超短裙西装外衣, 美式校服など
CASE "制服"
	CALL SET_COSTUME, "露脐装超短裙水手服"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服布鲁马, 体操服五分褲, 体操服紧身短褲, 体操服运动衫など
CASE "体操服"
	CALL SET_COSTUME, "体操服布鲁马"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;死库水, 競泳泳装, 白比基尼, 黒比基尼など
CASE "泳装"
	IF BASE:魂 < 30
		CALL SET_COSTUME, "Micro比基尼"
	ELSE
		CALL SET_COSTUME, "白比基尼"
	ENDIF
;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("夏")
		CALL SET_SHIRT, "吊帯背心"
		CALL SET_BOTTOM, "五分褲"
	ELSE
		CALL SET_SHIRT, "Ｔ恤"
		CALL SET_BOTTOM, "运动衫休闲褲"
	ENDIF
	CALL SET_BRA, ""
;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF (COND("夏") || BASE:魂 < 30) && ABL:露出癖 >= 5 && RANDIF(2, BASE:魂 < 30)
		CALL SETFLAG, "变成裸体", TARGET
		IF BASE:魂 < 30 && RAND:2
			CALL SET_PANTIES, "叶子胖次", TARGET
		ELSE
			CALL SET_PANTIES, TEXTR(CSTR:喜欢的胖次), TARGET
		ENDIF
	ELSEIF BASE:魂 < 30
		IF RAND:2
			CALL SET_COSTUME, "超短水手服"
		ELSE
			CALL SETFLAG, "变成裸体", TARGET
			CALL SET_PANTIES, "蕾丝的胖次", TARGET
		ENDIF
	ELSE
		CALL CLOTHES_K28, "便装"
	ENDIF
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	CALL SET_SHIRT, "連帽風衣"
	CALL SET_BOTTOM, "运动衫休闲褲"
	CALL SET_BRA, ""
	CALL SET_SOCKS, "襪子"
	CALL SET_SHOES, "运动鞋"
;もちろん约会の際に着ます
CASE "约会衣装"
	IF COND("夏")
		CALL SET_SHIRT, "連衣裙/白"
		CALL SET_SHOES, "无后跟鞋"
		CALL SET_OTHER, "草帽"
	ELSEIF COND("冬")
		CALL SET_SHIRT, "针织毛衣"
		CALL SET_SHOES, "短靴"
		CALL SET_BOTTOM, "牛仔褲"
	ELSE
		CALL SET_SHIRT, "紧身長袍"
		CALL SET_SHOES, "无后跟鞋"
		CALL SET_SKIRT, "裙"
	ENDIF
ENDSELECT


