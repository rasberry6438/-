$K11_WISH_LP1

SELECTCASE ARGS
CASE "取引開始"
	SELECTCASE RAND:10
		CASE 0
			PRINTFORMW 「%TEXTR("哦？/啊啦？/嗯？")%　有%TEXTR("想要拜托/有求于/乞求于")%%CNAME("一人称")%的事情？」
		CASE 1
			CALL PRINT_STR, @"「来～了~。对%CALLNAME:TARGET%酱有什么吩咐吗？」_W"
