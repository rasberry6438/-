;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K56, ARGS

SELECTCASE ARGS
;角色クター独自の内衣の組み合わせを設定できます。設定必須です。一定の確率で着用します。
;もしも普段は付けない、という事ならCSTR:胖次 = と等号の右側を書き込まない事で出来ます。
CASE "内衣"
	SELECTCASE RAND:17
		CASE 0
			CALL SET_PANTIES, "內褲/黒/正面蝴蝶結紐赤"
		CASE 1
			CALL SET_PANTIES, "內褲/純白/正面蝴蝶結三角赤"
		CASE 2
			CALL SET_PANTIES, "三角胖次/黒/正面蝴蝶結三角赤"
		CASE 3
			CALL SET_PANTIES, "褶边の胖次/桃色/正面蝴蝶結紐赤"
		CASE 4
			CALL SET_PANTIES, "低腰胖次/黒"
		CASE 5
			CALL SET_PANTIES, "低腰胖次/純白"
		CASE 6
			CALL SET_PANTIES, "超低腰胖次/黒"
		CASE 7
			CALL SET_PANTIES, "超低腰胖次/白"
		CASE 8
			CALL SET_PANTIES, "超低腰胖次/赤"
		CASE 9
			CALL SET_PANTIES, "高開衩胖次/純白"
		CASE 10
			CALL SET_PANTIES, "高開衩胖次/黒"
		CASE 11
			CALL SET_PANTIES, "高開衩胖次/赤"
		CASE 12
			CALL SET_PANTIES, "紐丁字褲/黒"
		CASE 13
			CALL SET_PANTIES, "Micro內褲/黒"
		CASE 14
			CALL SET_PANTIES, "Micro內褲/白"
		CASE 15
			CALL SET_PANTIES, "Micro內褲/赤"
		CASE 16
			CALL SET_PANTIES, "Ｃ胖次/桃色"
	ENDSELECT
	CALL SET_BRA, "Ｈ的胸罩"


;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	IF COND("夏")
		CALL SET_OTHER, "专家眼鏡"
	ELSEIF COND("冬")
		CALL SET_OTHER, "黑框眼鏡"
	;春秋
	ELSE
		CALL SET_OTHER, "眼鏡"
	ENDIF

;学園での便装です。設定必須です。
;水手服, 露脐装超短裙水手服, 西装外衣, 露脐装超短裙西装外衣, 美式校服など
;黑色水手服を着せたい場合には CALL SET_COSTUME, "水手服/黒" のように書き込むことで色を変えることが出来ます
;(RESOURCES→MAIDFACE→13服 フォルダ内にある MAIDFACE13.csv の該当衣装を見て色を選ばないとならないため上級者向きです)
CASE "制服"
	IF COND("夏")
		SELECTCASE RAND:2
			CASE 0
				CALL SET_SHIRT, "水手服/白"
				CALL SET_SKIRT, "迷你百褶裙/紺色"
			CASE 1
				CALL SET_SHIRT, "蝴蝶結領帯丝巾女式衬衫/赤"
				CALL SET_SKIRT, "迷你格子裙/赤"
		ENDSELECT
	ELSEIF COND("冬")
		CALL SET_SHIRT, "西装外衣/茶色"
		CALL SET_SKIRT, "迷你格子裙/赤"
	;春秋
	ELSE
		CALL SET_SHIRT, "水手服/青"
		CALL SET_SKIRT, "迷你百褶裙/紺色"
	ENDIF
	CALL SET_SOCKS, "襪子"
	CALL SET_SHOES, "小皮靴"

;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服布鲁马, 体操服高開衩布鲁马, 体操服五分褲, 体操服紧身短褲, 体操服运动衫など
CASE "体操服"
	IF COND("夏")
		CALL SET_SHIRT, "体操服/赤"
	ELSEIF COND("冬")
		CALL SET_SHIRT, "运动衫/赤"
	;春秋
	ELSE
		CALL SET_SHIRT, "体操服/赤"
		CALL SET_OTHER, "红色前開运动衫"
	ENDIF
	;全季節共通の布鲁马
	SELECTCASE RAND:4
		CASE 0
			CALL SET_PANTIES, "高開衩布鲁马/赤"
		CASE 1
			CALL SET_PANTIES, "高開衩布鲁马/紺色"
		CASE 2
			CALL SET_BOTTOM, "布鲁马/赤"
		CASE 3	
			CALL SET_BOTTOM, "布鲁马/紺色"
	ENDSELECT
	CALL SET_SOCKS, "襪子"
	CALL SET_SHOES, "運動鞋"

;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;死库水, 競泳泳装, 白比基尼, 黒比基尼など
CASE "泳装"
	CALL SET_BODYS, "新死库水/紺色"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("冬")
		SELECTCASE RAND:2
			CASE 0
				SELECTCASE RAND:2
					CASE 0
						CALL SET_SHIRT, "連帽風衣/白"
						CALL SET_SKIRT, "迷你百褶裙/赤"
					CASE 1
						CALL SET_OTHER, "红色前開連帽風衣"
						CALL SET_SHIRT, "圆领衬衫/白"
						CALL SET_SKIRT, "迷你百褶裙/黒"
				ENDSELECT
			CASE 1
				CALL SET_SHIRT, "長連帽風衣/白"
		ENDSELECT
	ELSE
		SELECTCASE RAND:4
			CASE 0
				CALL SET_SHIRT, "蝴蝶結領帯丝巾女式衬衫/赤"
			CASE 1
				CALL SET_SHIRT, "圆领衬衫/白"
			CASE 2
				CALL SET_SHIRT, "圆领衬衫/赤"
			CASE 3
				CALL SET_SHIRT, "无袖女式衬衫"
		ENDSELECT
		CALL SET_SKIRT, "迷你百褶裙"
	ENDIF

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	CALL SET_SHIRT, "前開的衬衫/白"
	CALL SET_PANTIES, "前貼/白"
	CSTR:胸罩 =

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	IF COND("夏")
		CALL SET_SHIRT, "无袖女式衬衫"
	ELSEIF COND("冬")
		CALL SET_SHIRT, "V领毛衣/橙色"
		CALL SET_SOCKS, "襪"
	;春秋
	ELSE
		CALL SET_SHIRT, "无袖高領毛衣/黒"
		CALL SET_SOCKS, "襪"
	ENDIF
	CALL SET_SKIRT, "迷你百褶裙"
	CALL SET_SHOES, "小皮靴"

;もちろん约会の際に着ます
CASE "约会衣装"
	IF COND("冬")
		CALL SET_SHIRT, "圆领衬衫"
		CALL SET_SKIRT, "迷你紧身裙/黒"
		CALL SET_BOTTOM, "连褲襪/黒"
		CALL SET_SHOES, "小皮靴"
		CALL SET_OTHER, "橙色の围巾/眼鏡/贝雷帽/外套"
	ELSEIF COND("夏")
		CALL SET_SHIRT, "露肩連衣裙/白"
		CALL SET_SHOES, "凉鞋"
		CALL SET_OTHER, "太阳鏡/草帽"
	;春秋
	ELSE
		CALL SET_SHIRT, "露肩外衣/米色"
		CALL SET_SKIRT, "迷你紧身裙/黒"
		CALL SET_PANTIES, "拘束衣胖次/黒"
		CALL SET_SOCKS, "吊帯襪/黒"
		CALL SET_SHOES, "平底鞋"
		CALL SET_OTHER, "眼鏡/红色鸭舌帽"
	ENDIF
ENDSELECT

