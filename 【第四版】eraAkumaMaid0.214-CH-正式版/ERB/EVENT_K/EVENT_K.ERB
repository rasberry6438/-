@KOJO_MESSAGE_COM
#DIM MEMO_LINECOUNT

CALL BLANKLINE

;口上があるかどうかを行数で格子
MEMO_LINECOUNT = LINECOUNT

;口枷着用時には通常の口上をスキップする（OFFだと口を塞いでるのに喋りまくる）
IF TEQUIP:口枷 && SELECTCOM != 135
	CALL TRAIN_MESSAGE_C
ELSEIF CFLAG:睡眠 == 0
	;絶頂口上
	TRYCALLFORM KOJO_MESSAGE_COMING_K{NO:TARGET}

	IF LINECOUNT == MEMO_LINECOUNT
		;指令口上
		TRYCALLFORM KOJO_MESSAGE_COM_K{NO:TARGET}

		;汎用口上など
		IF LINECOUNT == MEMO_LINECOUNT
			;六九式
			IF SELECTCOM == 99
				TRYCALLFORM COM_ABLE{TEQUIP:六九式}
				SIF RESULT
					SELECTCOM = TEQUIP:六九式
				IF PREVCOM == TEQUIP:六九式
					TRYCALLFORM COM_ABLE{TEQUIP:PLAYER:六九式}
					SIF RESULT
						SELECTCOM = TEQUIP:PLAYER:六九式
				ENDIF
				TRYCALLFORM KOJO_MESSAGE_COM_K{NO:TARGET}
				SELECTCOM = 99
			ELSEIF SELECTCOM == 97
				SELECTCOM = 90
				TRYCALLFORM KOJO_MESSAGE_COM_K{NO:TARGET}
				SELECTCOM = 97
			ELSE
				CALL TRAIN_MESSAGE_C
			ENDIF
		ENDIF
	ENDIF
ENDIF

CALL BLANKLINE

;口上側でフラグを弄る？
TRYCALLFORM KOJO_ENDCOM_K{NO:TARGET}

;射精ゲージの格子
CALL CHECK_BASEPLAYER2

;効果を及ぼすのはメインPLAYヤー一人のみ
