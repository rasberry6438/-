@CHECK_MESSAGE_PALAMCNG()
#FUNCTIONS
LOCALS = 
;-------------------------------------------------
;処女喪失
;-------------------------------------------------
IF NOWEX:処女喪失 > 0
	LOCALS = 処女喪失
	RETURNF LOCALS
ENDIF

;-------------------------------------------------
;初めての絶頂（二回目以降の絶頂は優先度が低いので下の方にある）
;-------------------------------------------------
LOCAL = 1
IF NOWEX:Ｃ絶頂 > 0 && PENIS(TARGET) == 0 && FIRST_EV("Ｃ絶頂") == 0
	SIF LOCALS == "" || RAND:LOCAL == 0
		LOCALS = Ｃ絶頂
	LOCAL += 1
ENDIF
IF NOWEX:尿道絶頂 > 0 && FIRST_EV("尿道絶頂") == 0
	SIF LOCALS == "" || RAND:LOCAL == 0
		LOCALS = 尿道絶頂
	LOCAL += 1
ENDIF
IF NOWEX:Ｖ絶頂 > 0 && FIRST_EV("Ｖ絶頂") == 0
	SIF LOCALS == "" || RAND:LOCAL == 0
		LOCALS = Ｖ絶頂
	LOCAL += 1
ENDIF
IF NOWEX:Ａ絶頂 > 0 && FIRST_EV("Ａ絶頂") == 0
	SIF LOCALS == "" || RAND:LOCAL == 0
		LOCALS = Ａ絶頂
	LOCAL += 1
ENDIF
IF NOWEX:Ｂ絶頂 > 0 && FIRST_EV("Ｂ絶頂") == 0
	SIF LOCALS == "" || RAND:LOCAL == 0
		LOCALS = Ｂ絶頂
	LOCAL += 1
ENDIF
IF NOWEX:Ｍ絶頂 > 0 && FIRST_EV("Ｍ絶頂") == 0
	SIF LOCALS == "" || RAND:LOCAL == 0
		LOCALS = Ｍ絶頂
	LOCAL += 1
ENDIF

SIF LOCALS != ""
	RETURNF LOCALS
;-------------------------------------------------
;絶頂放尿した
;-------------------------------------------------
IF NOWEX:絶頂漏尿 > 0
	LOCALS = 絶頂放尿
	RETURNF LOCALS
ENDIF

;-------------------------------------------------
;絶頂しまくり （３回に一回程度しゃべる。多重絶頂だと確率ＵＰ）
;-------------------------------------------------
LOCAL = 3
IF EX:Ｃ絶頂 >= 10 && PENIS(TARGET) == 0 && NOWEX:Ｃ絶頂 >= MAX(NOWEX:Ａ絶頂, NOWEX:Ｂ絶頂, NOWEX:Ｍ絶頂, NOWEX:尿道絶頂, 1)
	SIF RAND:LOCAL == 0
		LOCALS = Ｃ絶頂10回以上
	LOCAL += 1
ENDIF
IF EX:尿道絶頂 >= 10 && NOWEX:尿道絶頂 >= MAX(NOWEX:Ｃ絶頂, NOWEX:Ｖ絶頂, NOWEX:Ａ絶頂, NOWEX:Ｂ絶頂, NOWEX:Ｍ絶頂, 1)
	SIF RAND:LOCAL == 0
		LOCALS = 尿道絶頂10回以上
	LOCAL += 1
ENDIF
IF EX:Ｖ絶頂 >= 10 && NOWEX:Ｖ絶頂 >= MAX(NOWEX:Ｃ絶頂, NOWEX:Ａ絶頂, NOWEX:Ｂ絶頂, NOWEX:Ｍ絶頂, NOWEX:尿道絶頂, 1)
	SIF RAND:LOCAL == 0
		LOCALS = Ｖ絶頂10回以上
	LOCAL += 1
ENDIF
IF EX:Ａ絶頂 >= 10 && NOWEX:Ａ絶頂 >= MAX(NOWEX:Ｃ絶頂, NOWEX:Ａ絶頂, NOWEX:Ｂ絶頂, NOWEX:Ｍ絶頂, NOWEX:尿道絶頂, 1)
	SIF RAND:LOCAL == 0
		LOCALS = Ａ絶頂10回以上
	LOCAL += 1
ENDIF
IF EX:Ｂ絶頂 >= 10 && NOWEX:Ｂ絶頂 >= MAX(NOWEX:Ｃ絶頂, NOWEX:Ａ絶頂, NOWEX:Ｂ絶頂, NOWEX:Ｍ絶頂, NOWEX:尿道絶頂, 1)
	SIF RAND:LOCAL == 0
		LOCALS = Ｂ絶頂10回以上
	LOCAL += 1
