	SIF LOCALS == "" || RAND:LOCAL == 0
		LOCALS = 射精した
	LOCAL += 1
ENDIF
IF NOWEX:噴乳 > 0
	SIF LOCALS == "" || RAND:LOCAL == 0
		LOCALS = 噴乳した
