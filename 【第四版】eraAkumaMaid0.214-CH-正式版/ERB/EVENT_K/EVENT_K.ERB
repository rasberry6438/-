ENDIF

SIF LOCALS != ""
	RETURNF LOCALS

;-------------------------------------------------
;通常の絶頂（初回絶頂は優先度が高いので上の方にある）
;-------------------------------------------------
LOCAL = 4
IF NOWEX:Ｃ絶頂 > 0 && PENIS(TARGET) == 0 && FIRST_EV("Ｃ絶頂")
	SIF RAND:LOCAL == 0
		LOCALS = Ｃ絶頂
	LOCAL += 1
ENDIF
IF NOWEX:尿道絶頂 > 0 && FIRST_EV("尿道絶頂")
	SIF RAND:LOCAL == 0
		LOCALS = 尿道絶頂
