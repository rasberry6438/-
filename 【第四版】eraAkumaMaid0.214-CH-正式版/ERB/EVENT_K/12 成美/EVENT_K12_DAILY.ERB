@KOJO_GREETING_K12, ARGS
#DIM MEMO_LINECOUNT
;イベント発生中の角色
#DIM ACTOR
;イベント発生中の角色の默认のCALLNAME
#DIMS CALLNAME_ACTOR

MEMO_LINECOUNT = LINECOUNT

SELECTCASE ARGS
CASE "朝拘束"
	CALL PRINT_STRW, "「はぁ、はぁ……我慢できない……_H_」"
	CALL PRINT_STRW, @"「%CNAME("一人称")%がこんな变成了のは%CNAME( "二人称")%のせいなんだから、責任とってよね……_H_」"

CASE "朝袭"

CASE "打招呼"
	SELECTCASE CSTR:朝袭
	CASE "朝乳交"
		CALL PRINT_STR, @"「%TEXTR("嗯/啊/哈")%、明明是早上，却这么热……唔_H_」_W"
		CALL PRINT_STR, @"「啊，早上好，%CNAME("二人称")% _H_」_W"
		CALL PRINT_STR, "「我是来叫醒你的，看到你这么精神，不由得就……_H_」_W"
	CASE "朝騎乗位"
		PRINTFORMW 「%TEXTR("嗯/啊嗯/哈啊")%，这个好啊……啊」
		IF TALENT:恋慕
			CALL PRINT_STR, @"「啊、早上好，%CNAME("二人称")%_H_　今天看起来也很精神呢_H_」_W"
		ELSE
			PRINTFORMW 「……啊，早上好，%CNAME("二人称")%……那个，这是为了治疗……！」
		ENDIF
	CASE "朝接吻"
		CALL PRINT_STR, @"「嗯_H_早上好，%CNAME("二人称")% _H_　睁開眼睛了吗？」_W"
	CASE "朝添い寝"
		PRINTFORMW 「呵呵，早上好♪睡脸可真可爱啊♪」
	CASE "朝口交"
		PRINTFORMW %TEXTR("嗯/咕唧/呼呼")%，这个很好吃……啊」
		IF TALENT:恋慕
			CALL PRINT_STR, @"「啊，早上好，%CNAME("二人称")% _H_」_W"
			CALL PRINT_STR, "「等一下，我现在就把它弄干净……_H_」_W"
		ELSE
			PRINTFORMW 「……啊，早上好，%CNAME("二人称")%……那个，这是为了治疗……！」
		ENDIF
	CASE "朝六九式"
		PRINTFORMW %TEXTR("嗯/咕唧/呼呼")%，这个很好吃……啊」
		IF TALENT:恋慕
			IF CALCF("精飲経験", MASTER, TARGET) > 500 && TALENT:扶她
				CALL PRINT_STR, @"「啊，早上好，%CNAME("二人称")% _H_」_W"
				CALL PRINT_STR, @"「在刚醒过来的时候，让%CNAME("一人称")%喝点牛奶怎么样？……_H_」_W"
				PRINTFORMW 勃起的阴茎在眼前晃动……
			ELSE
			CALL PRINT_STR, @"「啊，早上好，%CNAME("二人称")% _H_」_W"
			CALL PRINT_STR, "「等一下，我现在就把它弄干净……_H_」_W"
			ENDIF
		ELSE
			PRINTFORMW 「……啊，早上好，%CNAME("二人称")%……那个，这是为了治疗……！」
		ENDIF
	ENDSELECT
	
	IF COND("体育")
		IF TALENT:恋慕
			PRINTFORMW 「今天是有体育课的日子呢……可不要老盯着别的孩子看啊！」
		ELSE
			PRINTFORMW 「今天是有体育课的日子呢。%CNAME("二人称")%擅长运动吗？」
		ENDIF
	ELSE
	ENDIF
CASE "一番乗り"
	PRINTFORMW 「其他人好像还没来呢」
	IF TALENT:恋慕
		CALL PRINT_STR, "「呵呵，那就稍微大胆点吧。_H_」_W"
		PRINTFORMW 一旁的%CALLNAME:TARGET%将身体紧贴过来……
	ENDIF
CASE "ただいま"
	PRINTFORMW 「我回来了」
	PRINTFORMW 回到家的%CALLNAME:TARGET%来到%CALLNAME:MASTER%面前目不转睛地看着…
	CALL PRINT_STR, "「到家了吗_H_」_W"
	CALL PRINT_STR, "「呵呵、现在奖励一个的吻。_H_」_W"
CASE "既に入室"
	;家で出迎えてくれる時
	IF COND("夜")
		PRINTFORMW 「%CNAME("二人称")%回来了啊、」
		IF TALENT:恋慕
			PRINTFORMW 「吃饭吗？要洗澡吗？还是……哇、和%CNAME("一人称")%做吧？」
			CALL PRINT_SELECT, "吃饭/洗澡/和成美做"
			IF RESULT == 0
				;ごはんにする
				IF CALCF("精飲経験", MASTER, TARGET) > 500 && TALENT:扶她
					;今日のごはんはざーめんよ(はぁと)
					CALL PRINT_STR, "「我知道了，那么再见……嗯_H_」_W"
					PRINTFORMW %CALLNAME:TARGET%慢慢地把裙子提高、好象是不穿内褲还有些残留的柔软萎缩的阴茎被看见了……！
					CALL PRINT_STR, @"「今日的晚饭是%CNAME("二人称")%最喜欢的%CNAME("一人称")%的精液哦_H_」_W"
					PRINTFORMW 
					PRINTFORMW 「……開什么玩笑。啊、呀！？」
					PRINTFORMW 好不容易才在胯下接吻。
				ELSE
					PRINTFORMW 「知道了。马上就可以了，稍微等一下哦♪」
					PRINTFORMW %CALLNAME:TARGET%卷起袖子向厨房走去……
				ENDIF
			ELSEIF RESULT == 1
				;お浴室にする
				PRINTFORMW 「那我准备一下，请稍等。」
				PRINTFORMW 「诶？你在准备什么？」
				CALL PRINT_STR, "「我们一起洗澡，你不是一定要做那个准备吗?_H_」_W"
			ELSE
				;成美にする
				PRINTFORMW 「呵呵，好開心啊♪」
				PRINTFORMW 「但是，不好好吃饭可不行。」
				IF TEXTS("曜日") == "土"
					CALL PRINT_STR, "「因为明天是休息日，所以一直到早上也不会分開_H_」_W"
				ELSE
					CALL PRINT_STR, "「就算期间饿了也不能分開哦_H_」_W"
				ENDIF
			ENDIF
		ELSE
			PRINTFORMW 「饭准备好了，要先洗澡吗？不过先做哪个都没関系的」
		ENDIF
	ELSE
		;部室で出迎え
		PRINTFORMW 「你好，%CNAME("二人称")%」
		PRINTFORMW 「明明在同一个教室上课，现在才来吗？呵呵」
	ENDIF

CASE "入室打招呼"
	SELECTCASE CFLAG:MASTER:PREV_DAILYCATE
	;Talk
	CASE 1
		SELECTCASE CSTR:MASTER:PREV_DAILYCOM
		CASE "甜言蜜语"
			IF TALENT:相思相愛
				CALL PRINT_STRW, "「不知道……他们看起来関系相当好呢？_H_」"
				PRINTFORMW 「%CNAME("一人称")%、姑且也算是%CNAME("二人称")%的恋人」
				PRINTFORMW 「当然、也会和%CNAME("一人称")%搭话的吧？」
				PRINTFORMW %CALLNAME:TARGET%的笑容令人害怕…
			ELSE
				PRINTFORMW 「你、你好~……」
				PRINTFORMW %CALLNAME:TARGET%小声地打招呼，一脸不融洽地走了进来……
			ENDIF
		CASE "打招呼舐陰", "打招呼口交"
			PRINTFORMW 「你好……你在干什么呢？」
			IF TALENT:恋慕 && TALENT:扶她
				PRINTFORMW 「打招呼？哼……那当然了，你也和我一样跟我打招呼吧？」
				PRINTFORMW %CALLNAME:TARGET%浮现笑容指向自己的胯股之间……
			ELSE
				PRINTFORMW 「打招呼……这到底是哪里的打招呼啊！」
				PRINTFORMW 「这样的话至少在床上做吧……」
			ENDIF
		ENDSELECT
	;互动
	CASE 2
	;卖个破绽
	CASE 3
	;胖次
	CASE 4
		PRINTFORMW 「你好……你在干什么呢？」
	;性処理
	CASE 6
		PRINTFORMW 「……变态」
		PRINTFORMW 被%CALLNAME:TARGET%冷眼相见了……
	;それ以外
	CASEELSE
		SELECTCASE CSTR:MASTER:PREV_DAILYCOM
		CASE "胖次交易"
			PRINTFORMW 「你好……你在干什么呢？」
			PRINTFORMW 「诶？收到内褲了吗？」
			IF COND("合意：胖次交易")
				PRINTFORMW 「仅仅是%CNAME("一人称")%本身还不够让你满足……」
				PRINTFORMW 「%CNAME("二人称")%有收集内褲的兴趣吗？」
				PRINTFORMW %CALLNAME:TARGET%一脸惊讶……
			ELSE 
				PRINTFORMW 「……变态」
				PRINTFORMW 被%CALLNAME:TARGET%冷眼相见了……
			ENDIF
		ENDSELECT
	ENDSELECT

	;何か発言してたらここまで
	SIF LINECOUNT > MEMO_LINECOUNT
		RETURN 1
		
	PRINTFORMW 「你好，%CNAME("二人称")%」
	PRINTFORMW 「明明在同一个教室上课，现在才来吗？呵呵」
CASE "抜け出された"

CASE "便当"
	PRINTFORMW 「怎么样？连我自己都觉得做得很好」
	PRINTFORMW %CALLNAME:TARGET%做的便当确实很好吃。
	IF TALENT:相思相愛
		PRINTFORMW 但是，\@ TALENT:扶她 ? 二人 # %CALLNAME:MASTER% \@の弁当には%TEXTR("レバー/山芋/ウナギ")%など、精力の付きそうなものばかりが並んでいるのが気になる…
		PRINTFORMW 「不知道这种东西有没有效果？……呐，吃吃看吧？」
	ELSE
		PRINTFORMW 「今天试着做了%TEXTR("日式/西式/中式")%的便当♪」
	ENDIF
ENDSELECT

