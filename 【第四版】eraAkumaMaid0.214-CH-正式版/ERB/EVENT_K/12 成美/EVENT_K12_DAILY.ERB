		;梦话
		CALL KOJO_SLEEP_K12
		WAIT
	ELSEIF CFLAG:股間確認済 && RAND:2
		PRINTFORMW 
	;心情好
	ELSEIF CFLAG:心情好
		PRINTFORMW 
	ELSE
		PRINTFORMW 
	ENDIF
CASE "掀起裙子"
	SELECTCASE STR:日常イベント名
	CASE "撩起裙子"
		;胖次チラ直後
		IF COND("胖次チラ直後")
			PRINTFORMW 
		ELSE
			PRINTFORMW 
		ENDIF
	;掀起裙子
	CASEELSE
		;刚睡醒の胡乱な状態を襲う
		IF CFLAG:刚睡醒
			PRINTFORMW 
		;睡眠中の悪戯
		ELSEIF CFLAG:睡眠
			;梦话
			CALL KOJO_SLEEP_K12
			WAIT
