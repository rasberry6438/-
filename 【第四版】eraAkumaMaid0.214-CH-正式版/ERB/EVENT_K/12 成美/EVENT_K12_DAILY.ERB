CASE "拭汗"
	PRINTFORMW 
;睡眠中の悪戯
CASE "趁睡袭击"
	;梦话
	CALL KOJO_SLEEP_K12
	WAIT
CASE "互动"
	SELECTCASE STR:日常イベント名
	CASE "托一托胸部"
		PRINTFORMW 
	CASE "按摩"
		PRINTFORMW 
	CASE "接吻"
		IF CSTR:PREV_DAILYCOM == STR:日常イベント名
			PRINTFORMW 
