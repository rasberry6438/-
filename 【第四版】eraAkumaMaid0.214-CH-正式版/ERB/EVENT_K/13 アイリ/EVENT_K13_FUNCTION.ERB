;-------------------------------------------------
;猫の日（游戏内５６日）に猫内衣を着ける
;部室入室時、もしくは性処理時に変更
;-------------------------------------------------
@CATDAY_K13
;今日は猫の日？
IF TEXTS("日期対応イベント") == "猫の日"
	;既に今回の猫の日イベントを見たならRETURN 0
	SIF CEVENT("猫の日")
		RETURN 0
;猫の日でないなら次の猫の日に備えてフラグ消しつつRETURN 0
ELSE
	CALL DEL_CEVENT, "猫の日"
	RETURN 0
ENDIF

;着替えさせたり脱がせた際は勝手に着替えない
SIF CFLAG:Cosplay中 || CSTR:没収済胖次 != "" || COND("全裸状態終了可能")
	RETURN 0
SIF COND("Ｈ的サプライズ可能") == 0
	RETURN 0
;泳装の場合は制服に更衣
IF CHECK_CLO("泳装")
	CALL SETFLAG, "变成裸体", TARGET
	CALL SET_COORDINATE, "制服", TARGET
	CALL FOLLOW_RULES
	CALL SET_OTHER, "围巾"
ENDIF

CALL SET_BRA, "猫型胸罩"
CALL SET_PANTIES, "肉球印花胖次"
CALL SET_CEVENT, "猫の日"

;-------------------------------------------------
;躁动难忍室内二人きりで就寝選択で発生
;一人でアレします
;-------------------------------------------------
