;Talk指令の選択肢を追加
@DAILY1_K34_ADDSELECT
SIF STATE("酔酒")
	STR:選択肢 += "烟/"

;Talk指令で増やした選択肢の地の文と台詞
@KOJO_DAILY1_K34_ADDSELECT, ARGS
SELECTCASE ARGS
CASE "烟"
	CALL EMOTION_PLUS, "目陰/烟"
	PRINTFORMW 「呼唔……」
	PRINTL
	IF CEVENT("初回喫煙") == 0
		PRINTFORMW ――突然、%CALlNAME:TARGET%が烟を吸い始めた！？
		PRINTL
		PRINTFORMW 「あぁ……%CNAME("主人")%もどうです？」
		PRINTL
		PRINTFORMW ……よく見ると本物ではなく、電子烟のようだった。
		CALL SET_CEVENT, "初回喫煙"
	ELSE
		PRINTFORMW %CALLNAME:TARGET%通过電子烟を吸っている。
		PRINTFORMW %TEXTR("どうにも慣れている様子が気になる/どうしてそんなものを持っているのだろうか/なんとも堂に入った姿だ")%……
	ENDIF
	SIF BASE:欲求不満 >= 15
		BASE:欲求不満 -= (RAND:10)
ENDSELECT
