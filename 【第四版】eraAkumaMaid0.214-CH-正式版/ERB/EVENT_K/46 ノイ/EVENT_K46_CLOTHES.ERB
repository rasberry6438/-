;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K46, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	IF CEVENT("女装")
		CALL SET_PANTIES, "紐丁字褲"
		CALL SET_BRA, "開放型胸罩"
	ELSE
		CSTR:胖次 = 四角褲/黒/
		CSTR:胸罩 = 
	ENDIF
;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "黑框眼鏡"

;学園での便装です。設定必須です
CASE "制服"
	IF CEVENT("女装")
		SELECTCASE RAND:3
		CASE 0
			CALL SET_SHIRT, "制服"
			CALL SET_SKIRT, "紧身裙"
			CALL SET_BOTTOM, "開放型连褲襪"
			CALL SET_SHOES, "高跟鞋"
		CASE 1
			CALL SET_SHIRT, "宽松女式衬衫"
			CALL SET_SKIRT, "迷你裙"
			CALL SET_BOTTOM, "打底褲"
			CALL SET_SHOES, "靴"
		CASEELSE
			CALL SET_SHIRT, "偶像衣装"
			CALL SET_SOCKS, "膝下襪"
			CALL SET_SHOES, "平底鞋"
			CALL SET_OTHER, "髮箍"
		ENDSELECT
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF CEVENT("女装")
		CALL SET_COSTUME, "体操服布鲁马"
	ELSE
		CALL SET_COSTUME, "体操服运动衫"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	IF CEVENT("女装")
		CALL SET_COSTUME, "競泳泳装"
	ELSE
		CALL SET_COSTUME, "衝浪胖次"
	ENDIF

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF CEVENT("女装")
		CALL SET_SHIRT, "褶边女式衬衫"
		CALL SET_SKIRT, "迷你裙"
		CALL SET_SOCKS, "膝下襪"
		CALL SET_SHOES, "小皮靴"
	ELSEIF RAND:2 && COND("冬") == 0
		CALL SET_SHIRT, "Ｔ恤"
		CALL SET_BOTTOM, "五分褲"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "運動鞋"
	ELSE
		CALL SET_SHIRT, "制服"
		CALL SET_BOTTOM, "休闲褲"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "靴"
	ENDIF
;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF RAND:2
		CALL SET_SHIRT, "宽大的Ｔ恤"
		CALL SET_PANTIES, ""
		CALL SET_BRA, ""
	ELSE
		CALL SETFLAG, "变成内衣姿态", TARGET
	ENDIF
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	IF CEVENT("女装")
		CALL SET_SHIRT, "衬衫"
		CALL SET_BOTTOM, "褲裙"
		CALL SET_SOCKS, "膝下襪"
		CALL SET_SHOES, "芭蕾舞鞋"
	ELSE
		IF RAND:2
			CALL SET_SHIRT, "前開的衬衫/緑色"
		ELSE
			CALL SET_SHIRT, "連帽風衣"
		ENDIF
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "運動鞋"
	ENDIF
;もちろん约会の際に着ます
CASE "约会衣装"
	IF CEVENT("女装")
		IF COND("冬")
			CALL SET_SHIRT, "褶边女式衬衫"
			CALL SET_BOTTOM, "休闲褲"
			CALL SET_SOCKS, "膝下襪"
			CALL SET_SHOES, "莫卡辛软皮鞋"
			CALL SET_GLOVE, "手套"
			CALL SET_OTHER, "粗呢外套"
		ELSE
			CALL SET_SHIRT, "洛丽塔連衣裙"
			CALL SET_SOCKS, "膝下襪"
			CALL SET_SHOES, "无后跟鞋"
			CALL SET_OTHER, "颈环"
		ENDIF
	ELSE
		IF COND("冬")
			CALL SET_SHIRT, "Ｔ恤"
			CALL SET_SHIRT, "休闲褲"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "長靴"
			CALL SET_GLOVE, "手套"
			CALL SET_OTHER, "粗呢外套"
		ELSE
			CALL SET_SHIRT, "衬衫"
			CALL SET_BOTTOM, "五分褲"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "靴"
		ENDIF
		IF COND("髪型変更可能") && RAND:3 == 0
			CSTR:前髪 = 不对称
			CSTR:改髪 = 单辫
		ENDIF
	ENDIF

ENDSELECT


;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K46
IF CEVENT("女装")
	CSTR:髪長 = 披肩
	CSTR:眉形 = 憤怒眉
	CSTR:前髪 = 单眼遮盖
	CSTR:後髪 = 直髪
	CSTR:改髪 = 无特殊髪型
ELSE
	CALL SETFLAG, "普段の髪型復元", TARGET
	CSTR:眉形 = 憤怒眉短
	SIF RAND:3 == 0
		CSTR:前髪 = 自然刘海２
ENDIF
