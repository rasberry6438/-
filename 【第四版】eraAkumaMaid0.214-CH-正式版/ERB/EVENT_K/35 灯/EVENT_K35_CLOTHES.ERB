;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K35, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CALL SET_PANTIES, "蕾丝的胖次/桃色"
	CALL SET_BRA, "蕾丝胸罩/桃色"

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での便装です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "露脐装超短裙西装外衣"
	CALL SET_BOTTOM, "连褲襪/黒"

;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服高開衩布鲁马"

;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "高開衩競泳泳装"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	CALL SET_SHIRT, "露肩外衣"

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	; IF CEVENT("灯服買った") && RAND:2
	; 	CALL SET_SHIRT, "紧身長袍/紺色"
	; 	CALL SET_SKIRT, "休闲褲"
	; 	CALL SET_PANTIES, "蕾丝的胖次"
	; 	CALL SET_BRA, "蕾丝胸罩"
	IF TALENT:恋慕 && RAND:2
		CALL SET_SHIRT, "情趣内衣/黒"
		CALL SET_PANTIES, "Micro內褲/黒"
		CALL SET_BRA, "Micro胸罩/黒"
	ELSE
		CALL SET_SHIRT, "前開的衬衫"
		CALL SET_PANTIES, "鬥士胖次"
		CALL SET_BRA, ""
	ENDIF

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
		CALL SET_SHIRT, "吊帯衫/白"
		CALL SET_BOTTOM, "牛仔褲/青"
		CALL SET_SHOES, "无后跟鞋"

;もちろん约会の際に着ます
CASE "约会衣装"
	IF COND("夏")
		CALL SET_SHIRT, "夏日礼服/白"
		CALL SET_SHOES, "凉鞋"
	ELSE
		CALL SET_SHIRT, "哥特連衣裙"
		CALL SET_BOTTOM, "褲襪/黒"
		CALL SET_GLOVE, "手套/黒"
		CALL SET_SHOES, "靴"
	ENDIF
ENDSELECT


;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K35
IF PLACE("自宅")
	CSTR:改髪 = 无特殊髪型
	CSTR:嘴形 = 無口系
ELSEIF COND("约会中")
	CSTR:眼形 = 笑颜
	CSTR:嘴形 = いー
	SIF COND("夏")
		CSTR:改髪 = 无特殊髪型
ELSE
	CSTR:改髪 = 双马尾
	CSTR:嘴形 = 嘲笑
ENDIF

;-------------------------------------------------
;感情やシチュに応じて、角色独自の表情を設定する。設定しなくてもかまいません
;主にEMOTION_PLUSなどで颜绘を出す際の文字列の組み合わせの代わりに使う関数です
;-------------------------------------------------
@EMOTION_K35, ARGS

SELECTCASE ARGS
;一人で何かしてる状態などです
CASE "闲"
	STR:颜绘改髪 = 無口系/通常眉３
CASE "睡眠"
	STR:颜绘改髪 = 对话框睡眠/闭眼/へ字４/蹙眉
CASE "有頂天"
	STR:颜绘改髪 = 紅潮/ω２/通常眉３
CASE "甜言蜜语"
	STR:颜绘改髪 = 紅潮/ω２/通常眉３
CASE "心情好"
	STR:颜绘改髪 = 红晕/对话框開心/笑颜/いー
CASE "心情差"
	STR:颜绘改髪 = 困惑眉/半目/へ字４
CASE "躁动难忍"
	STR:颜绘改髪 = 紅潮/通常眉３/いー
