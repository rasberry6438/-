;-------------------------------------------------
;この角色独自の衣装を設定する
;-------------------------------------------------
@CLOTHES_K23, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 蕾丝的胖次/純白/透明/
	CSTR:胸罩 = 蕾丝胸罩/純白/透明/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません

;学園での便装です
CASE "制服"
	IF DAYEV("万圣节", "游戏内") || DAYEV("万圣节")
		;万圣节の時は修道服
		CALL SET_SHIRT, "修道服"
		CALL SET_SKIRT, "裙"
		CALL SET_SHOES, "小皮靴"
		SIF COND("秋") + COND("冬")
			CALL SET_BOTTOM, "连褲襪"
	ELSE
		CALL SET_COSTUME, "露脐装超短裙西装外衣"
		SIF COND("秋") + COND("冬")
			CALL SET_BOTTOM, "连褲襪"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする
CASE "体操服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "体操服紧身短褲"
	ELSE
		CALL SET_COSTUME, "体操服布鲁马"
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする
CASE "泳装"
	CALL SET_COSTUME, "競泳泳装"

;自宅で着ます
CASE "便装"
	IF DAYEV("周日", "游戏内") && COND("昼") && RAND:2 == 0
		;Ｑ．これどこで着るのが良いのだろう
		;Ａ．教会に行く日に着る
		;CSTR,服,修道服/連衣裙/
		;CSTR,裙,裙/
		;CSTR,外套,｜连褲襪/不可移開/不可手交/：冬
		CALL SET_SHIRT, "修道服"
		CALL SET_SKIRT, "裙"
		CALL SET_SHOES, "小皮靴"
		SIF COND("秋") + COND("冬")
			CALL SET_BOTTOM, "连褲襪"
	ELSE
		SELECTCASE TEXTS("季節")
		CASE "夏"
			CALL SET_SHIRT, "无袖女式衬衫"
			CALL SET_SKIRT, "迷你裙"
			CALL SET_SHOES, "小皮靴"
		CASE "冬"
			CALL SET_SHIRT, "女式衬衫"
			CALL SET_SKIRT, "迷你裙"
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_SHOES, "短筒女靴"
			CALL SET_OTHER, "围巾/风衣外套"
		CASEELSE
			CALL SET_SHIRT, "女式衬衫"
			CALL SET_SKIRT, "迷你裙"
			CALL SET_SOCKS, "長筒襪"
			CALL SET_SHOES, "小皮靴"
			CALL SET_OTHER, "围巾/风衣外套"
		ENDSELECT
	ENDIF
;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF TALENT:恋慕 && CEVENT("イベント：童貞を殺す服／玛丽")
		IF COND("冬")
			CALL SET_SHIRT, "褶边女式衬衫"
			CALL SET_SKIRT, "束腰裙"
			CALL SET_BOTTOM, "连褲襪"
		ELSE
			CALL SET_SHIRT, "褶边女式衬衫"
			CALL SET_SKIRT, "束腰裙"
			CALL SET_SOCKS, "褶边过膝襪"
		ENDIF
	;恋をすると生活を正し、居家服を运动衫から便装へと戻す
	ELSEIF TALENT:恋慕 && CEVENT("調教開始：恋慕")
		CALL CLOTHES_K23, "便装"
	ELSE
		CALL SET_COSTUME, "上下运动衫"
	ENDIF
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	IF CEVENT("換装：玛丽") && CEVENT("イベント：童貞を殺す服／玛丽")
		SELECTCASE TEXTS("季節")
		CASE "冬"
			CALL SET_SHIRT, "针织露肩衣"
			CALL SET_SKIRT, "百褶迷你裙"
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_SHOES, "短靴"
		CASE "秋"
			CALL SET_SHIRT, "褶边女式衬衫"
			CALL SET_SKIRT, "束腰裙"
			CALL SET_SOCKS, "褶边过膝襪"
			CALL SET_SHOES, "短靴"
		CASE "夏"
			CALL SET_SHIRT, "褶边女式衬衫"
			CALL SET_SKIRT, "束腰裙"
			CALL SET_SOCKS, "短袜"
			CALL SET_SHOES, "平底鞋"
		CASEELSE
			CALL SET_SHIRT, "褶边女式衬衫"
			CALL SET_SKIRT, "束腰裙"
			CALL SET_SOCKS, "褶边襪"
			CALL SET_SHOES, "平底鞋"
		ENDSELECT
	ENDIF

ENDSELECT

