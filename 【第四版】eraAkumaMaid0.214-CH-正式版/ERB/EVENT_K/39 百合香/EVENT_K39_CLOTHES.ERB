;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K39, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 蕾丝的胖次/淡色/
	CSTR:胸罩 = 蕾丝胸罩/淡色/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での便装です。設定必須です
CASE "制服"
	IF COND("夏")
		CALL SET_COSTUME, "露脐装超短裙西装外衣"
		CSTR:胖次 = 蕾丝的胖次/淡色/
		CSTR:胸罩 = 蕾丝胸罩/淡色/
	ELSE
		CALL SET_COSTUME, "西装外衣"
		CALL SET_BOTTOM, "连褲襪"
	ENDIF
	;淫乱か特定ABL&MARKが一定の数値以上だと5％で没穿内褲无胸罩
	IF RAND:100 >= 95 && (TALENT:淫乱 || (ABL:露出癖 >= 5 && MARK:屈服刻印 >= 3 && MARK:快楽刻印 >= 3))
		CSTR:胖次 = 
		CSTR:胸罩 = 
	ELSE
		CSTR:胖次 = 蕾丝的胖次/淡色/
		CSTR:胸罩 = 蕾丝胸罩/淡色/
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服布鲁马"
	CSTR:胖次 = 蕾丝的胖次/淡色/
	CSTR:胸罩 = 蕾丝胸罩/淡色/
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "競泳泳装"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF RAND:2
		CALL SET_SHIRT, "女式衬衫"
		CALL SET_SKIRT, "丝绸裙"
		CALL SET_SOCKS, "及膝襪"
		CALL SET_SHOES, "小皮靴"
		CALL SET_OTHER, "蝴蝶結領帯丝巾"
	ELSEIF COND("秋") + COND("冬")
		CALL SET_SHIRT, "针织毛衣"
		CALL SET_SKIRT, "裙"
		CALL SET_SOCKS, "及膝襪"
		CALL SET_SHOES, "小皮靴"
	ELSE
		CALL SET_SHIRT, "切驳服"
		CALL SET_SKIRT, "裙"
		CALL SET_SOCKS, "及膝襪"
		CALL SET_SHOES, "小皮靴"
	ENDIF
	IF RAND:100 >= 95 && TALENT:相思相愛 && ABL:露出癖 >= 5 && MARK:快楽刻印 >= 3
		CSTR:胖次 = 
		CSTR:胸罩 = 
	ELSEIF RAND:100 >= 80 && TALENT:恋慕
		CALL SET_PANTIES, "褶边の胖次"
		CALL SET_BRA, "褶边の胸罩"
	ELSE	
		CALL SET_PANTIES, "蕾丝的胖次"
		CALL SET_BRA, "蕾丝胸罩"
	ENDIF
;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	CALL SET_SHIRT, "連衣裙"
	;恋慕かABL、MARKが一定値以上だと无胸罩没穿内褲でいることがある
	;自室なので、こちらの方が没穿内褲无胸罩率はやや高め
	;勝負内衣は自室だとむしろ履いてないかも
	IF RAND:100 >= 75 && (TALENT:恋慕 || (ABL:露出癖 >= 3 && MARK:屈服刻印 >= 3 && MARK:快楽刻印 >= 3))
		CSTR:胖次 = 
		CSTR:胸罩 = 
	ELSE
		CSTR:胖次 = 蕾丝的胖次/淡色/
		CSTR:胸罩 = 蕾丝胸罩/淡色/
	ENDIF

;便装と共用
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	IF COND("夏")
		CALL SET_SHIRT, "浴衣"
		CALL SET_SOCKS, "短布襪"
		CALL SET_SHOES, "草履"
		CALL SET_PANTIES, "褶边の胖次"
		CALL SET_BRA, "褶边の胸罩"
	ELSE
		CALL SET_SHIRT, "和服"
		CALL SET_SOCKS, "短布襪"
		CALL SET_SHOES, "草履"
		CALL SET_PANTIES, "蕾丝的胖次"
		CALL SET_BRA, "蕾丝胸罩"
	ENDIF
	IF RAND:100 >= 90 && TALENT:相思相愛 && ABL:露出癖 >= 5 && MARK:快楽刻印 >= 3
		CSTR:胖次 = 
		CSTR:胸罩 = 
	ELSEIF RAND:100 >= 50
		CALL SET_PANTIES, "褶边の胖次"
		CALL SET_BRA, "褶边の胸罩"
	ELSE	
		CALL SET_PANTIES, "蕾丝的胖次"
		CALL SET_BRA, "蕾丝胸罩"
	ENDIF
	
ENDSELECT


