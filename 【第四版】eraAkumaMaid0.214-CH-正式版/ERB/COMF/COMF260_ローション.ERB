@COM260
;潤滑液
CALL PRINT_TRAIN_NAME(SELECTCOM)

CALL TRAIN_MESSAGE_B

SIF REFUSE_CHECK()
	RETURN 0

STR:前回指令 = %STR:今回指令%

TEQUIP:潤滑液 = 1
ITEM:潤滑液 -= 1

RETURN 1

@FLAG_COM260, ARG

@SOURCE_COM260, ARG


@TRAIN_MESSAGE_COM260
#DIM MEMO_VL
#DIM MEMO_AL
#DIMS CHOICES
#DIMS SELECT_TABLE

MEMO_VL = CUP:Ｖ潤
MEMO_AL = CUP:Ａ潤

CALL SETFLAG, "潤滑追加", 10000

VARSET LOCALS
SELECT_TABLE = 前穴/后穴/两穴
SPLIT SELECT_TABLE, "/", LOCALS

IF TALENT:男性 == 0
	PRINTFORML 想要怎么样涂潤滑液呢？
	CALL PRINT_SELECT, SELECT_TABLE
	CHOICES = %LOCALS:RESULT%
ELSE
	CHOICES = 两穴
ENDIF

SELECTCASE CHOICES
CASE "前穴"
	PRINTFORMW %CALLNAME:PLAYER%將雙手沾滿潤滑液後、避開尻穴附近的肌肤將%CALLNAME:TARGET%的身體%TEXTR("溫柔地撫摸著/精心的愛撫著")%塗抹起來。
	CUP:Ａ潤 = MEMO_AL
CASE "后穴"
	PRINTFORMW %CALLNAME:PLAYER%將雙手沾滿潤滑液後、避開膣口附近的肌肤將%CALLNAME:TARGET%的身體%TEXTR("溫柔地撫摸著/精心的愛撫著")%塗抹起來。
	CUP:Ｖ潤 = MEMO_VL
CASEELSE
	PRINTFORMW %CALLNAME:PLAYER%將雙手沾滿潤滑液後、將%CALLNAME:TARGET%的身體%TEXTR("溫柔地撫摸著/精心的愛撫著")%塗抹起來。
ENDSELECT

IF CHOSECOM(SELECTCOM) == 0
	PRINTFORM %CALLNAME:TARGET%的
	IF TALENT:娇小
		PRINT 小小的
	ELSEIF TALENT:巨乳
		PRINT 豊満的
	ELSEIF TALENT:高大
		PRINT 高挑的
	ENDIF
	PRINTFORM 身體被均勻的抹上了潤滑液、反射出油亮而淫猥的光澤、
	IF TALENT:魅力
		PRINTFORM 比平常更加引人注目的
	ELSEIF TALENT:娇小
		PRINTFORM 誘人而背德的
	ELSEIF TALENT:清楚 || TALENT:高贵
		PRINTFORM 和平日裡高貴典雅的感覺完全不同的
	ENDIF
	PRINTFORM 妖艷的魅力
	IF RAND:2
		PRINTFORMW 漸漸散發出來……
	ELSE
		PRINTFORMW 充滿了部屋、營造出淫靡的氛圍……
	ENDIF
ENDIF
