	;においフェチ分岐
	IF PLAYER == MASTER && COND("气味弱点", MASTER) + TALENT:相思相愛 && (CHOSECOM(SELECTCOM) == 0 || RAND:3 == 0) && INSERT("後背位") + INSERT("背面座位") == 0
		;胸に手を差し入れたかどうか
		IF RANDF(3)
