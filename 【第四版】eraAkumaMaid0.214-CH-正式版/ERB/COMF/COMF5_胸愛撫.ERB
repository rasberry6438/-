@COM5
;胸愛撫
;TEQUIP:胸愛撫で行為を記録する
;0bitで胸を揉む 1bitで乳頭を弄る 2bitで穿環をいじめる 10bitで乳頭を舐める
;乳頭が陥没状態かどうかはCALCF("Ｂ発情") == 0 かどうかで判定可能
;基本的には胸愛撫→胸舐め（可能なら揉みながら）となる

CALL PRINT_TRAIN_NAME(SELECTCOM)

;乳頭を舐めると、ながら接吻フラグは消滅する
SIF CHECK_COM("舔乳頭に変化")
	TEQUIP:接吻 = 0

CALL TRAIN_MESSAGE_B

SIF REFUSE_CHECK()
	RETURN 0

STR:前回指令 = %STR:今回指令%

RETURN 1

@FLAG_COM5, ARG
;口で愛撫起来場合（対象のＢ⇔調教者の口的污垢が移動）
SIF CHECK_COM("舔乳頭")
	CALL EQ_STAIN, TARGET, "Ｂ", PLAYER, "Ｍ"
;指で愛撫起来場合（対象のＢ⇔調教者の指的污垢が移動）
SIF CHECK_COM("胸指愛撫")
	CALL EQ_STAIN, TARGET, "Ｂ", PLAYER, "手"

@SOURCE_COM5, ARG
CALL VARSET_COMF

CALL SOURCE_DOWNBASE_HP, 5

SOURCE:0:性行動 = 60
SOURCE:0:不潔 = 20
SOURCE:0:情愛 = 200
SOURCE:0:露出 = 200


;ABL:Ｂ感覚をみる
SOURCE:0:Ｂ快楽 = CALCF("Ｂ刺激", 1)
SOURCE:0:情愛 += ABL:Ｂ感覚*100

;潤滑液の使用をみる
SIF TEQUIP:潤滑液
	TIMES SOURCE:0:Ｂ快楽, 1.30

;口で愛撫起来場合
IF CHECK_COM("舔乳頭") || COND("喝母乳フラグ", PLAYER)
	SOURCE:0:Ｂ快楽 = SOURCE_EXABL(SOURCE:0:Ｂ快楽, "舌靈活", PLAYER)
;指で愛撫起来場合
ELSE
	SOURCE:0:Ｂ快楽 = SOURCE_EXABL(SOURCE:0:Ｂ快楽, "指靈活", PLAYER)
ENDIF

;鎧を着けたりしてると快Ｂ激減
IF CHECK_SHIRT("鎧") && CHECK_CLO("谷間露出") == 0 && CHECK_CLO("乳頭露出") == 0
	TIMES SOURCE:0:Ｂ快楽, 0.10
	TIMES SOURCE:0:露出, 0.10
ENDIF

;乳頭を責めている時に陥没乳頭だと色々修正
IF CHECK_COM("乳頭弄り") && COND("陥没乳頭")
	;乳頭が露出した
	IF CALCF("Ｂ発情")
		TIMES SOURCE:0:Ｂ快楽, 1.50
	ELSE
		TIMES SOURCE:0:Ｂ快楽, 0.50
	ENDIF
ENDIF

SIF TALENT:Ｂ性向
	CALL CALC, "好みのPLAY", SOURCE:0:Ｂ快楽

CALL CALC, "調教ソース", ARG


@TRAIN_MESSAGE_COM5
#DIMS TEXT_TITS
;TEQUIP:胸愛撫で行為を記録する
;0bitで胸を揉む 1bitで乳頭を弄る 2bitで穿環をいじめる 10bitで乳頭を舐める 11bitで胸部を飲む

PRINTFORM %CALLNAME:PLAYER%将
IF INSERT("合体中")
	PRINTFORM %TEXTS("合体中", PLAYER)%%TEXTS("電話中の")%%CALLNAME:TARGET%の
ELSE
	IF TEQUIP:接吻
		PRINTFORM %TEXTS("接吻継続")%、
		CALL SETFLAG, "追加接吻フラグ", TARGET
	ELSEIF TEQUIP:電話中
		PRINTFORM %TEXTS("電話中の")%
	ENDIF
	PRINTFORM %CALLNAME:TARGET%的
	;胸が露出している服
	IF CHECK_CLO("谷間露出") && CHECK_CLO("乳頭露出") == 0 && RANDF(3)
		IF TALENT:巨乳
			PRINTFORM 大膽地彰顯著的
		ELSEIF TALENT:貧乳
			PRINTFORM 保守的
		ENDIF
