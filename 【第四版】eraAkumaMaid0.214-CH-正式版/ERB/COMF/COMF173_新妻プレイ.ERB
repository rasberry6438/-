@COM173
;新妻PLAY
CALL PRINT_TRAIN_NAME(SELECTCOM)

CALL TRAIN_MESSAGE_B

SIF REFUSE_CHECK()
	RETURN 0

STR:前回指令 = %STR:今回指令%

;圍裙のセット
;終了時は修正无
IF TEQUIP:新妻PLAY
	TEQUIP:新妻PLAY = 0
	RETURN 1
ELSE
	TEQUIP:新妻PLAY = 1
ENDIF

RETURN 1

@FLAG_COM173, ARG

@SOURCE_COM173, ARG
CALL VARSET_COMF

SOURCE:0:情愛 = 500
SOURCE:0:逸脱 = 100

;ABL:奉仕精神をみる
SELECTCASE ABL:奉仕精神
CASE 0
CASE 1
	TIMES SOURCE:0:情愛, 1.20
CASE 2
	TIMES SOURCE:0:情愛, 1.40
CASE 3
	TIMES SOURCE:0:情愛, 1.60
CASE 4
	TIMES SOURCE:0:情愛, 1.80
CASEELSE
	TIMES SOURCE:0:情愛, 2.00
ENDSELECT

SIF TALENT:好奇心
	TIMES SOURCE:0:情愛, 1.50
SIF TALENT:献身
	TIMES SOURCE:0:情愛, 1.50
SIF TALENT:内気
	TIMES SOURCE:0:逸脱, 1.50
SIF TALENT:害羞
	TIMES SOURCE:0:逸脱, 1.20
SIF TALENT:高慢
	TIMES SOURCE:0:逸脱, 2.00

CALL CALC, "調教ソース", ARG


@TRAIN_MESSAGE_COM173
IF TEQUIP:新妻PLAY
	PRINTFORMW 讓%CALLNAME:TARGET%將圍裙脫掉了……
ELSE
	PRINTFORM %CALLNAME:TARGET%
	IF CHECK_CLO("裸体")
		PRINTFORMW 穿上了裸體圍裙……
	ELSE
		PRINTFORMW 穿上了圍裙……
	ENDIF
	;相思相愛
	IF TALENT:相思相愛 && PLAYER == MASTER && !CHECK_CLO("裸体")
		PRINTFORMW %CALLNAME:TARGET%似乎非常高興、向%CALLNAME:MASTER%露出了美麗的笑容……
	ELSEIF ((TALENT:恋慕 && PLAYER == MASTER) || TALENT:容易迷恋) && !CHECK_CLO("裸体")
		PRINTFORMW %CALLNAME:TARGET%的臉頰因羞澀而染上紅暈、扭捏地看向%CALLNAME:MASTER%……
	ELSEIF (TALENT:不知羞恥 || TALENT:好色) && CHECK_CLO("裸体")
		PRINTFORMW %CALLNAME:TARGET%對此似乎漠不關心、只是用渴求快樂的眼神看過來……
	ELSEIF (TALENT:小悪魔 || TALENT:傲慢) && !CHECK_CLO("裸体")
		PRINTFORMW %CALLNAME:TARGET%好奇的打量著現在的自己、眼神閃亮的捲起了下擺……
	ELSEIF (TALENT:坦率 || COND("種族：人形")) && !CHECK_CLO("裸体")
		PRINTFORMW %CALLNAME:TARGET%在換上圍裙後就向廚房走去、%CALLNAME:MASTER%阻止了她……
	ENDIF
ENDIF


@EQUIP_COM173
SIF TEQUIP:新妻PLAY == 0
	RETURN 0
SIF SELECTCOM == 173
	RETURN 0
;新妻PLAY
CALL SOURCE_COM173, 30

RETURN 1

@EQUIP_COM173_2
SIF TEQUIP:新妻PLAY == 0
	RETURN 0
SIF SELECTCOM == 173
	RETURN 0
;新妻PLAY
PRINTL ＜新妻PLAY中＞

SIF ASSIPLAY == 0 && ABL:信頼 >= 3
	TFLAG:好感度BOUNS += 2
SIF ASSIPLAY == 0 && TALENT:恋慕
	TFLAG:好感度BOUNS += 5


RETURN 1
