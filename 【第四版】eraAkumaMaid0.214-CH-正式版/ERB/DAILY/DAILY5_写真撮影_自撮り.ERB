	ACT_TABLE += "チラ見せ写真：上/チラ見せ写真：下/全身自撮り/"
	SIF CFLAG:体育
		ACT_TABLE += "授業直後：体操服姿/"
CASE "学生服"
	ACT_TABLE += "チラ見せ写真：上/"
	SIF CHECK_CLO("胖次視認可能")
		ACT_TABLE += "チラ見せ写真：下/" 
CASE "今年の泳装"
	ACT_TABLE += "泳装写真：今年の泳装/全身自撮り/"
CASE "内衣"
	;变成内衣姿态
	CALL SETFLAG, "变成内衣姿态", TARGET
	ACT_TABLE += "セパレート写真/全身自撮り/"
	SIF CFLAG:体育
		ACT_TABLE += "授業直後：内衣姿/"
CASE "裸体"
	;脱成裸体
	CALL SETFLAG, "扒成裸体", TARGET
	ACT_TABLE += "ヌード写真/全身自撮り/"
	SIF CFLAG:水泳
		ACT_TABLE += "授業直後：裸体/"
