;-------------------------------------------------
;自撮り写真生成
;ARGで自撮りを行う人物を一人指定、ARGSで自撮りシチュを指定できる
;-------------------------------------------------
@PHOTO_SELFY, ARG, ARGS
#DIM LCOUNT
#DIM MEMO_TARGET

SAVESTR:自撮り写真 =

SIF COND("夜") || COND("体育") || COND("水泳") || CHARA_NUM("自撮り可能") == 0
	RETURN 0

MEMO_TARGET = TARGET
TARGET = 0

FOR LCOUNT, 0, 10
	SELECTCASE ARGS
	CASE "阴部"
		TARGET = FIND_COND("自撮り可能", "阴部自撮り可能")
	CASE "胖次"
		TARGET = FIND_COND("自撮り可能", "胖次自撮り可能")
	CASEELSE
		TARGET = FIND_COND("自撮り可能")
	ENDSELECT

	SIF LCOUNT == 0 && ARG
		TARGET = ARG
	SIF TARGET == 0
		BREAK
	CALL PHOTO_SELFY_MAIN, ARGS
NEXT

TARGET = MEMO_TARGET

;-------------------------------------------------
;ARGSで自撮りの種類を指定できる
;-------------------------------------------------
@PHOTO_SELFY_MAIN, ARGS
#DIMS CLOTHES_SELFY
#DIMS CLOTHES_TABLE
#DIMS ACT_TABLE
#DIM LCOUNT
;換装前の衣装の記録
#DIMS MEMO_CLO, 50
#DIM MEMO_EQUIP, 50
#DIM MEMO_STAIN, 20

;着ていた服と汚れを記憶する
FOR LCOUNT, 40, 50
	MEMO_CLO:LCOUNT = %CSTR:LCOUNT%
NEXT
FOR LCOUNT, 40, 50
	MEMO_EQUIP:LCOUNT = EQUIP:LCOUNT
NEXT
FOR LCOUNT, 10, 20
	MEMO_STAIN:LCOUNT = STAIN:LCOUNT
NEXT

;自撮り中フラグON
SETBIT FLAG:状況判定, 41

;どの服装で撮るかを選ぶ
;部屋に一人でいる場合は居家服で撮る
CLOTHES_TABLE = 

SIF COND("今年の泳装選択済") && COND("夜")
	CLOTHES_TABLE += "今年の泳装/"
;裸体　泳装から便装に着替えた場合も撮るかも
SIF COND("夜") + CFLAG:水泳
	CLOTHES_TABLE += "裸体/"
;内衣　体操服から便装に着替えた場合も撮るかも
SIF COND("夜") + CFLAG:体育 && EQUIP:胖次
	CLOTHES_TABLE += "内衣/"

;体操服
IF COND("体育") && CHECK_CLO("体操服姿")
	CLOTHES_TABLE += "体操服/"
;水泳
ELSEIF COND("水泳") && CHECK_CLO("泳装姿")
	CLOTHES_TABLE += "泳装/"
;CSVに設定されてる服
ELSE
	IF CHECK_CLO("裸体")
		CLOTHES_TABLE += "裸体/"
	ELSEIF CHECK_CLO("内衣姿")
		CLOTHES_TABLE += "内衣/"
	ELSEIF CHECK_CLO("学生服姿")
		CLOTHES_TABLE += "学生服/"
	ELSEIF CFLAG:Cosplay中
		CLOTHES_TABLE += "Cosplay/"
	ELSE
		CLOTHES_TABLE += "便装/"
	ENDIF
ENDIF

;格好ごとに何しながら撮るかを決める
CLOTHES_SELFY = %TEXTR(CLOTHES_TABLE)%
ACT_TABLE = 

SELECTCASE CLOTHES_SELFY
CASE "泳装"
	ACT_TABLE += "全身自撮り/"
	IF CHECK_CLO("比基尼姿")
		ACT_TABLE += "セパレート写真/"
	ELSE
		ACT_TABLE += "泳装写真：連衣裙/"
	ENDIF
	SIF CFLAG:水泳
		ACT_TABLE += "授業直後：泳装姿/"
