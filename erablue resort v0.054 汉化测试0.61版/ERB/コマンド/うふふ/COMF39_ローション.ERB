;-------------------------------------------------
;跳蛋
;道具使用コマンド、レベル1
;-------------------------------------------------
@COMNAME39
#FUNCTIONS
TSTR:コマンド名受渡 = 润滑液

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_39
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("道具系")



@COM_TOOLTIP_39
LOCALS = <br>■润滑液<br>
LOCALS += "使用润滑液提升湿润度的指令。"
LOCALS += "<br>指令类型：道具系<br>获取来源：液体・接触"
LOCALS += "<br>专属经验值：道具使用经验(PLAYER)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM39
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

CALL SOURCE_CALC_液体(TARGET, PLAYER, 20000)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 60)
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
ITEM:40 -= 1
EXP:PLAYER:道具使用経験 ++
RETURN 1
;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE39
;跳蛋実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(39)
	RETURN RESULT
;アイテムを持っているか、アイテムなし設定でないとダメ
SIF ITEM:40 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
;前鎧、めくれない服があると無理
SIF TEQUIP:下腹部前鎧あり
	RETURN 0
SIF TEQUIP:下半身服あり && (!TEQUIP:スカートめくり可 && !TEQUIP:ずらし可)
	RETURN 0

;使用者が指を何かに使ってるなら無理
SIF TEQUIP:PLAYER:指
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM39
PRINTFORM %CALLNAME:PLAYER%
IF TEQUIP:下タイツあり && !TEQUIP:下タイツ破れ
	PRINTFORM %CALLNAME:TARGET%的
	PRINTL 下体隔着连裤袜倾倒润滑液…
	RETURN 0
ENDIF
IF TEQUIP:下半身下着あり
	PRINTFORM 隔着内裤
ENDIF
PRINTFORM %CALLNAME:TARGET%的
IF GETBIT(TALENT:TARGET:性別, 1)
	;オトコ
	PRINTL 勃起阴茎上倾倒润滑液…
ELSE
	PRINTL 股间倾倒润滑剂…
ENDIF

