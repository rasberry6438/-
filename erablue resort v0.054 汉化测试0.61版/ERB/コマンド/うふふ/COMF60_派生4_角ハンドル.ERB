
@COMNAME_S60_4
#FUNCTIONS
TSTR:コマンド名受渡 = 抓角后入

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_S_60_4
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("Ｖ系")
弱点コマンドカテゴリ = V_角
オートコマンド許可 = 1

@COM_TOOLTIP_S60_4
LOCALS = <br>■抓角后入<br>
LOCALS += "后入体位时抓握角部加强冲击的指令。<br>仅在后背位、站立背面位模式下可用。"
LOCALS += "<br>指令类型：Ｖ系<br>获取来源：征服・快Ｖ・接触・痛苦・不洁(特定条件时)"
LOCALS += "<br>专属经验值：Ｖ性交经验(TARGET)・Ｃ性交经验_Ｖ插入(PLAYER)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM_S60_4
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

CALL SOURCE_CALC_征服(PLAYER, TARGET, 150)
CALL SOURCE_CALC_快Ｖ(TARGET, PLAYER, 400)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 150)

CALL SOURCE_CALC_快Ｃ(PLAYER, TARGET, 400)

;苦痛
LOCAL = 200 * PAIN_CHECK_V(TARGET) / 1000
CALL SOURCE_CALC_苦痛(TARGET, PLAYER, LOCAL)

;貞操観念
IF !TALENT:恋慕
	IF TALENT:貞操 == 1
		CALL SOURCE_CALC_不潔(TARGET, PLAYER, 500)
	ELSEIF TALENT:貞操 == 0
		CALL SOURCE_CALC_不潔(TARGET, PLAYER, 250)
	ENDIF
ENDIF

CALL SOURCE_CALC_苦痛(TARGET, PLAYER, 200)
RCVAR:TARGET:苦痛コマンドフラグ = 1

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:PLAYER:Ｃ性交経験_Ｖ挿入 ++
EXP:Ｖ性交経験 ++

;同性愛
SIF 同性愛性癖判定(TARGET,PLAYER)
	EXP:TARGET:同性愛経験 += 4
SIF 同性愛性癖判定(PLAYER,TARGET)
	EXP:PLAYER:同性愛経験 += 4

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE_S60_4
;実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE_S("60_4")
	RETURN RESULT
;角必須
SIF !TALENT:TARGET:角あり
	RETURN 0
;体格問題 TARGETのほうが3サイズ大きいと届かない
SIF 体格差計算(PLAYER, TARGET) >= 3
	RETURN 0
;後ろから系モードじゃない時はアウト
SIF !MODE_存在判定_完全一致("後背位", PLAYER, TARGET) && !MODE_存在判定_完全一致("立ちバック", PLAYER, TARGET)
	RETURN 0
;指を何かに使ってるなら無理
SIF TEQUIP:PLAYER:指
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM_S60_4
#DIM 同時キャラ番号
PRINTFORM %CALLNAME:PLAYER%
PRINTFORML 抓握%CALLNAME:TARGET%的角部当作把手猛烈撞击腰肢


