
@COMNAME_S60_11
#FUNCTIONS
TSTR:コマンド名受渡 = 扭动腰肢
SIF MODE_存在判定_完全一致("騎乗位", TARGET, PLAYER)
	TSTR:コマンド名受渡 = 摆动腰肢


;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_S_60_11
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("Ｖ系_被挿入中")
弱点コマンドカテゴリ = C_ちんこ
オートコマンド許可 = 1
連続オート許可 = 1

@COM_TOOLTIP_S60_11
LOCALS = <br>■扭动腰肢<br>
LOCALS += "通过扭动腰部给对方施加快感的指令。<br>骑乘位时效果强化并转为「摆动腰肢」模式。"
LOCALS += "<br>指令类型：Ｖ系or被插入中<br>获取来源：快Ｃ・暴露・接触"
LOCALS += "<br>专属经验值：Ｃ性交经验_Ｖ插入(TARGET)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM_S60_11
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
CALL SOURCE_CALC_快Ｖ(PLAYER, TARGET, 400)
CALL SOURCE_CALC_露出(TARGET, PLAYER, 50)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 150)
CALL SOURCE_CALC_快Ｃ(TARGET, PLAYER, 400)
IF MODE_存在判定_完全一致("騎乗位", TARGET, PLAYER)
	CALL SOURCE_CALC_快Ｃ(TARGET, PLAYER, 400)
	CALL SOURCE_CALC_快Ｖ(PLAYER, TARGET, 400)
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:Ｃ性交経験_Ｖ挿入 ++
EXP:PLAYER:Ｖ性交経験 ++
;同性愛
SIF 同性愛性癖判定(TARGET,PLAYER)
	EXP:TARGET:同性愛経験 += 4
SIF 同性愛性癖判定(PLAYER,TARGET)
	EXP:PLAYER:同性愛経験 += 4

EXP:愛情経験 += TALENT:恋慕 * 2

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE_S60_11
;腸内を締める実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE_S("60_11")
	RETURN RESULT
;挿入系モードじゃない時はアウト
SIF !MODE_存在判定_完全一致("Ｖ挿入系", TARGET, PLAYER)
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM_S60_11
IF MODE_存在判定_完全一致("騎乗位", TARGET, PLAYER)
	PRINTFORML %CALLNAME:PLAYER%主动摆动腰肢刺激%CALLNAME:TARGET%的阴茎…
ELSE
	PRINTFORML %CALLNAME:PLAYER%迎合着%CALLNAME:TARGET%的节奏扭动腰肢，共同攀登快感巅峰…
ENDIF

