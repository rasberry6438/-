
@COMNAME_S62_5
#FUNCTIONS
TSTR:コマンド名受渡 = 拽尾后入肛交

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_S_62_5
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("Ａ系")
弱点コマンドカテゴリ = A_尻尾
オートコマンド許可 = 1

@COM_TOOLTIP_S62_5
LOCALS = <br>■拽尾后入肛交<br>
LOCALS += "后入时抓住尾巴拉扯侵犯肛门的指令。<br>仅在后背位、站立后入模式中可执行。"
LOCALS += "<br>指令类型：Ａ系<br>获取来源：征服・快Ａ・接触・痛苦・不洁(特定条件时)"
LOCALS += "<br>专属经验值：Ａ性交经验(TARGET)・Ｃ肛门经验_Ａ插入(PLAYER)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM_S62_5
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

CALL SOURCE_CALC_征服(PLAYER, TARGET, 150)
CALL SOURCE_CALC_快Ａ(TARGET, PLAYER, 400)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 150)

CALL SOURCE_CALC_快Ｃ(PLAYER, TARGET, 400)

;苦痛
LOCAL = 200 * PAIN_CHECK_A(TARGET) / 1000
CALL SOURCE_CALC_苦痛(TARGET, PLAYER, LOCAL)

;貞操観念
IF !TALENT:恋慕
	IF TALENT:貞操 == 1
		CALL SOURCE_CALC_不潔(TARGET, PLAYER, 500)
	ELSEIF TALENT:貞操 == 0
		CALL SOURCE_CALC_不潔(TARGET, PLAYER, 250)
	ENDIF
ENDIF

CALL SOURCE_CALC_苦痛(TARGET, PLAYER, 200)
RCVAR:TARGET:苦痛コマンドフラグ = 1

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:PLAYER:Ｃ性交経験_Ａ挿入 ++
EXP:Ａ性交経験 ++

;同性愛
SIF 同性愛性癖判定(TARGET,PLAYER)
	EXP:TARGET:同性愛経験 += 4
SIF 同性愛性癖判定(PLAYER,TARGET)
	EXP:PLAYER:同性愛経験 += 4

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE_S62_5
;実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE_S("62_5")
	RETURN RESULT
;尻尾必須
SIF !TALENT:TARGET:尻尾あり
	RETURN 0
;後ろから系モードじゃない時はアウト
SIF !MODE_存在判定_完全一致("Ａ後背位", PLAYER, TARGET) && !MODE_存在判定_完全一致("Ａ立ちバック", PLAYER, TARGET)
	RETURN 0
;指を何かに使ってるなら無理
SIF TEQUIP:PLAYER:指
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM_S62_5
#DIM 同時キャラ番号
PRINTFORM %CALLNAME:PLAYER%
PRINTFORML 抓住%CALLNAME:TARGET%的尾巴%TEXTR("如同缰绳般/用力拉扯")%同时猛烈撞击腰肢


