;電動阴蒂夹実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(42)
	RETURN RESULT
;すでにあるとだめ　(部位使ってる判定と被ってるのでいらない？)
;SIF MODE_存在判定_ターゲット側("阴蒂夹", TARGET)
;	RETURN 0
;クリがない場合駄目
SIF TALENT:TARGET:Ｃ感度 == -2
	RETURN 0
;オトコやふたなりはダメ
SIF TALENT:性別 & 2
	RETURN 0
;アイテムを持っているか，アイテムなし設定でないとダメ
SIF ITEM:2 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
;前鎧，めくれない服，タイツ，下着があると無理
SIF TEQUIP:下腹部前鎧あり
	RETURN 0
SIF TEQUIP:下半身服あり && (!TEQUIP:スカートめくり可 && !TEQUIP:ずらし可)
	RETURN 0
SIF TEQUIP:下タイツあり && !TEQUIP:下タイツ破れ
	RETURN 0
SIF TEQUIP:下半身下着あり
	RETURN 0

;装着者が指を何かに使ってるなら無理
SIF TEQUIP:PLAYER:指
	RETURN 0
;部位使ってると駄目
SIF TEQUIP:TARGET:クリトリス && !TFLAG:コマンド条件制御用
	RETURN 0

RETURN 1

