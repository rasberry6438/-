;-------------------------------------------------
;爱抚角部
;愛撫系コマンド、レベル1
;-------------------------------------------------
@COMNAME12
#FUNCTIONS
TSTR:コマンド名受渡 = 爱抚角部

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_12
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("うふふ_被挿入中")

@COM_TOOLTIP_12
LOCALS = <br>■爱抚角部<br>
LOCALS += "对角色角部进行性意味爱抚的指令。"
LOCALS += "<br>指令类型：嘿咻or被插入中<br>获取来源：快Ｓ・暴露・接触・痛苦"
LOCALS += "<br>专属经验值：角部开发(TARGET)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM12
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

RCVAR:角開発フラグ = 2

CALL SOURCE_CALC_快Ｓ(TARGET, PLAYER, 100)

SIF TALENT:PLAYER:器用な指
	CALL SOURCE_CALC_快Ｓ(TARGET, PLAYER, 50)
CALL SOURCE_CALC_露出(TARGET, PLAYER, 60)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 60)

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　
SIF 同性愛性癖判定(TARGET,PLAYER)
	EXP:TARGET:同性愛経験 += 5
SIF 同性愛性癖判定(PLAYER,TARGET)
	EXP:PLAYER:同性愛経験 += 5
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------

@COM_ABLE12
;爱抚角部
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(12)
	RETURN RESULT
;角がない場合駄目
SIF TALENT:TARGET:角あり == 0
	RETURN 0
;角開発必要
SIF EXP:TARGET:角開発 < 50
	RETURN 0
;指を何かに使ってるなら無理
SIF TEQUIP:PLAYER:指
	RETURN 0
;足コキは体勢的に無理
SIF MODE_存在判定_完全一致("足コキ", TARGET, PLAYER)
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM12
PRINTFORML %CALLNAME:PLAYER%用指甲轻轻刮蹭%CALLNAME:TARGET%的角部…

@MESSAGE_COM12_非口上時

IF EXP:TARGET:角開発 < 100
	PRINTFORML %CALLNAME:TARGET%因瘙痒感扭动着身体…
ELSE
	PRINTFORML %CALLNAME:TARGET%因角部传来的快感露出放松的表情…
ENDIF
