
@COMNAME_S45_1
#FUNCTIONS
TSTR:コマンド名受渡 = 肛门振动棒刺激
SIF MODE_存在判定_ターゲット側("肛门振动棒", PLAYER)
	TSTR:コマンド名受渡 = 肛门振动棒自慰

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_S_45_1
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("道具系&Ａ系")
弱点コマンドカテゴリ = A
オートコマンド許可 = 1

@COM_TOOLTIP_S45_1
LOCALS = <br>■肛门振动棒刺激<br>
LOCALS += "对已插入肛门振动棒的对象进行操作的指令。<br>若肛门振动棒插入自身则转为自慰行为。"
LOCALS += "<br>指令类型：道具系<br>获取来源：快Ａ・接触・痛苦"
LOCALS += "<br>专属经验值：道具使用经验(PLAYER)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM_S45_1
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
IF MODE_存在判定_ターゲット側("肛门振动棒", PLAYER)
	CALL SOURCE_CALC_快Ａ(PLAYER, -1, 500)
ELSE
	CALL SOURCE_CALC_快Ａ(TARGET, PLAYER, 500)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 100)
	CALL SOURCE_CALC_接触(PLAYER, TARGET, 100)

	;苦痛
	LOCAL = 200 * PAIN_CHECK_A(TARGET) / 1000
	CALL SOURCE_CALC_苦痛(TARGET, PLAYER, LOCAL)
ENDIF

RCVAR:TARGET:道具コマンドフラグ = 1

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE_S45_1
;実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE_S("45_1")
	RETURN RESULT
;振动棒モードじゃない時はアウト
SIF !MODE_存在判定_ターゲット側("肛门振动棒", PLAYER) && !MODE_存在判定_ターゲット側("肛门振动棒", TARGET)
	RETURN 0

;指を何かに使ってるなら無理
SIF TEQUIP:PLAYER:指
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM_S45_1
#DIM 同時キャラ番号
PRINTFORM %CALLNAME:PLAYER%
IF MODE_存在判定_ターゲット側("肛门振动棒", PLAYER)
	PRINTFORML 主动扭动插入体内的肛门振动棒，贪婪索取强烈快感…
ELSE
	PRINTFORML 搅动插入%CALLNAME:TARGET%体内的肛门振动棒施加强烈刺激…
ENDIF


