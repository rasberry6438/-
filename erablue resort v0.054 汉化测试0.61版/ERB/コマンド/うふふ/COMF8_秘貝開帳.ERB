	PRINT  - 
	実行値 -= 12
	PRINT 厌男(12)
	＋表示フラグ = 1
ENDIF

;処女
IF TALENT:処女 == 1
	PRINT  - 
	実行値 -= 20
	PRINT 处女(20)
	＋表示フラグ = 1
ELSEIF EXP:Ｖ経験 < EXPLV:2
	PRINT  - 
	実行値 -= 5
	PRINT Ｖ经验不足(5)
	＋表示フラグ = 1
ENDIF

