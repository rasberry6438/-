@MODETYPE_パイズリ(部位番号, 処理モード, プレイヤー番号, ターゲット番号)
#DIM 部位番号
#DIM プレイヤー番号
#DIM ターゲット番号
#DIMS 処理モード

IF 処理モード == "写真用文字列_プレイヤー"
	;モード固有の「～～をする」の文章を入れ込む
	詳細文文字列受け渡し変数 = 将%CALLNAME:TARGET%的%TEXTR("阴茎/阳具/肉棒")%
		IF TALENT:ターゲット番号:バストサイズ == 3
		;魔乳 デカパイも入れたいけどしっかり魔乳に区分したほうが嬉しいかもしれないので魔乳出やすいようにふたつ入れとく。以下も同様
			詳細文文字列受け渡し変数 += @"用沉甸甸的%TEXTR("魔乳/魔乳/巨乳")%夹住，%TEXTR("上下晃动/用乳肉揉搓/用乳压揉搓")%"
		ELSEIF TALENT:ターゲット番号:バストサイズ == 2
		;爆乳
			詳細文文字列受け渡し変数 += @"用丰硕的%TEXTR("爆乳/爆乳/巨乳")%夹住，%TEXTR("上下晃动/用乳肉揉搓/用乳压揉搓")%"
		ELSEIF TALENT:ターゲット番号:バストサイズ == 1
		;巨乳
			詳細文文字列受け渡し変数 += @"用发育丰满的巨乳夹住，%TEXTR("上下晃动/用乳肉揉搓/用乳压揉搓")%"
		ELSEIF TALENT:ターゲット番号:バストサイズ == 0
		;普乳
			詳細文文字列受け渡し変数 += @"用柔软的%TEXTR("胸部/美乳")%夹住，%TEXTR("上下晃动/用乳肉揉搓/用乳压揉搓")%"
		ELSEIF TALENT:ターゲット番号:バストサイズ == -1
		;貧乳
			詳細文文字列受け渡し変数 += @"用挺翘有弹性的%TEXTR("贫乳/微乳")%进行%TEXTR("爱抚/刺激")%"
		ELSEIF TALENT:ターゲット番号:バストサイズ == -2
		;絶壁
			詳細文文字列受け渡し変数 += @"用小巧的微乳进行%TEXTR("爱抚/刺激")%"
		ENDIF
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ELSEIF 処理モード == "写真用文字列_ターゲット"
	;モード固有の「～～をする」の文章を入れ込む
	詳細文文字列受け渡し変数 = %CALLNAME:プレイヤー番号%
	IF TALENT:ターゲット番号:バストサイズ <= -1
	;貧乳以下
		詳細文文字列受け渡し変数 += @"在%TEXTR("小胸/贫乳")%上磨蹭%TEXTR("阴茎/阳具/肉棒")%"
	ELSE
		詳細文文字列受け渡し変数 += @"被%TEXTR("胸部/乳房/奶子")%夹住%TEXTR("阴茎/阳具/肉棒")%"
	ENDIF
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ENDIF

;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
;キスは両者口のみ専有
SELECTCASE 部位番号
	CASE 部位_ペニス
		SIF 処理モード == "ターゲット"
			RETURN 部位状況_占有
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_届かない
	CASE 部位_クリトリス
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_届かない
	CASE 部位_指
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_強占有
	CASE 部位_口
		IF プレイヤー番号 < 0 || ターゲット番号 < 0
			;キャラ不明の場合は一般論
			RETURN 部位状況_届かない
		ELSEIF TALENT:ターゲット番号:体格 == 体格_ハーヴィン並 && TALENT:プレイヤー番号:体格 >= 体格_普通
			;ターゲット側がハーヴィン並体格でプレイヤーがそれなりの体格なら抱え込みパイズリとなり届く
			RETURN 部位状況_なし
		ELSE
			RETURN 部位状況_届かない
		ENDIF
	CASE 部位_胸
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_占有
	CASE 部位_膣
		;プレイヤーの膣には届かない
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_届かない
	CASE 部位_アナル
		;プレイヤーの尻には届かない
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_届かない
ENDSELECT


