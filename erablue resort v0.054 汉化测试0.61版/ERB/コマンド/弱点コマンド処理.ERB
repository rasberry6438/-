@弱点チェック(対象キャラ, 弱点キー)
#FUNCTION
#DIM 対象キャラ
#DIMS 弱点キー

IF MATCH(弱点コマンド枠:対象キャラ:0, 弱点キー)
	RETURNF 1
ELSE
	IF MATCH(追加弱点コマンド枠:対象キャラ:0, 弱点キー)
		RETURNF 1
	ELSE
		RETURNF 0
	ENDIF
ENDIF

@弱点番号算出(対象キャラ, 弱点キー)
#FUNCTION
#DIM 対象キャラ
#DIMS 弱点キー
#DIM 弱点番号

弱点番号 = FINDELEMENT(弱点コマンド枠:対象キャラ:0, 弱点キー, , , 1)

RETURNF 弱点番号

@追加弱点番号算出(対象キャラ, 弱点キー)
#FUNCTION
#DIM 対象キャラ
#DIMS 弱点キー
#DIM 弱点番号

弱点番号 = FINDELEMENT(追加弱点コマンド枠:対象キャラ:0, 弱点キー, , , 1)

RETURNF 弱点番号

@弱点看破処理(対象キャラ, 弱点キー)
#DIM 対象キャラ
#DIMS 弱点キー
#DIM プレイヤー側フラグ

プレイヤー側フラグ = 0
LOCAL = 弱点番号算出(対象キャラ, 弱点キー)
IF LOCAL >= 0
	CALL 弱点の欠片取得処理(弱点キー)
	IF 弱点看破:対象キャラ:LOCAL == 0
		;看破フラグ立てる、以下は履歴登録処理
		弱点看破:対象キャラ:LOCAL = 1
		弱点コマンド欄表示名 = 
		;プレイヤー側判断、フラグ立てた後は邪魔なので削除
		IF STRFIND(弱点キー, "_PLAYER側") >= 0
			プレイヤー側フラグ = 1
		ENDIF
		弱点キー '= REPLACE(弱点キー, "_PLAYER側", "")
		;キーを見てどこの関数から名前を持ってくるかを決定
		IF STRFIND(弱点キー, "RAPE_") >= 0
			IF STRCOUNT(弱点キー, "_") > 1
				CALLFORMF RAPE_COMNAME_S%REPLACE(弱点キー, "RAPE_", "")%
			ELSE
				CALLFORMF RAPE_COMNAME%REPLACE(弱点キー, "RAPE_", "")%
			ENDIF
		ELSEIF STRFIND(弱点キー, "MASSAGE_") >= 0
			IF STRCOUNT(弱点キー, "_") > 1
				CALLFORMF MASSAGE_COMNAME_S%REPLACE(弱点キー, "MASSAGE_", "")%
			ELSE
				CALLFORMF MASSAGE_COMNAME%REPLACE(弱点キー, "MASSAGE_", "")%
			ENDIF
		ELSE
			IF STRCOUNT(弱点キー, "_") > 0
				CALLFORMF COMNAME_S%弱点キー%
			ELSE
				CALLFORMF COMNAME%弱点キー%
			ENDIF
		ENDIF
		SIF 弱点コマンド欄表示名 != ""
			TSTR:コマンド名受渡 '= 弱点コマンド欄表示名
		IF プレイヤー側フラグ
			CALL 履歴データベース登録(CFLAG:MASTER:人物番号, @"<font color='#%カラーパレット_HTML("薄ピンク")%'>发现%CALLNAME:対象キャラ%对%TSTR:コマンド名受渡%（PLAYER侧）的弱点</font>","うふふ")
			CALL 履歴データベース登録(CFLAG:対象キャラ:人物番号, @"<font color='#%カラーパレット_HTML("薄ピンク")%'>被%CALLNAME:MASTER%知晓了自己对%TSTR:コマンド名受渡%（PLAYER侧）的弱点</font>","うふふ")
		ELSE
			CALL 履歴データベース登録(CFLAG:MASTER:人物番号, @"<font color='#%カラーパレット_HTML("薄ピンク")%'>发现%CALLNAME:対象キャラ%对%TSTR:コマンド名受渡%的弱点</font>","うふふ")
			CALL 履歴データベース登録(CFLAG:対象キャラ:人物番号, @"<font color='#%カラーパレット_HTML("薄ピンク")%'>被%CALLNAME:MASTER%知晓了自己对%TSTR:コマンド名受渡%的弱点</font>","うふふ")
		ENDIF
		IF 弱点全看破チェック(対象キャラ)
			CALL 履歴データベース登録(CFLAG:MASTER:人物番号, @"<font color='#%カラーパレット_HTML("薄ピンク")%'>已完全识破%CALLNAME:対象キャラ%的所有弱点</font><img src='えっちハート'>","うふふ実績")
			CALL 履歴データベース登録(CFLAG:対象キャラ:人物番号,@"<font color='#%カラーパレット_HTML("薄ピンク")%'>所有弱点都被%CALLNAME:MASTER%完全识破</font><img src='えっちハート'>","うふふ実績")
		ENDIF
	ENDIF
ELSE
	LOCAL = 追加弱点番号算出(対象キャラ, 弱点キー)
	IF LOCAL >= 0
		CALL 弱点の欠片取得処理(弱点キー)
	ENDIF
ENDIF



@判明済み弱点チェック(対象キャラ, 弱点キー)
#FUNCTION
#DIM 対象キャラ
#DIMS 弱点キー
#DIM 弱点番号

弱点番号 = FINDELEMENT(弱点コマンド枠:対象キャラ:0, 弱点キー, , , 1)

IF 弱点番号 >= 0
	IF 弱点看破:対象キャラ:弱点番号
		RETURNF 1
	ELSE
		RETURNF 0
	ENDIF
ELSE
	弱点番号 = FINDELEMENT(追加弱点コマンド枠:対象キャラ:0, 弱点キー, , , 1)
	IF 弱点番号 >= 0
		RETURNF 1
	ELSE
		RETURNF 0
	ENDIF
ENDIF

@弱点全看破チェック(対象キャラ)
#FUNCTION
#DIM 対象キャラ
#DIM 弱点番号
#DIM 残り数
#DIM 弱点総数

残り数 = 0
弱点総数 = FINDLASTELEMENT(弱点コマンド枠:対象キャラ:0, ".")
FOR 弱点番号, 0, 弱点総数 + 1
	SIF 弱点看破:対象キャラ:弱点番号 == 0
		残り数 ++
NEXT

IF 残り数
	RETURNF 0
ELSE
	RETURNF 1
ENDIF
