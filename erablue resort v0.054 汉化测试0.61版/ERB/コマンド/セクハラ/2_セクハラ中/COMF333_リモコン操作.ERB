
@COMNAME333
#FUNCTIONS
TSTR:コマンド名受渡 = 遥控玩具

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_333
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("セクハラ")

@COM_TOOLTIP_333
LOCALS = <br>■遥控玩具<br>
LOCALS += "通过手持遥控器操控目标佩戴的性玩具的指令。"
LOCALS += "<br>指令类型：性骚扰<br>获取来源：暴露・依道具类型单独设定"
LOCALS += "<br>专属经验值：依道具类型单独设定<br>"
TSTR:ツールチップ受渡 = %LOCALS%


@COM333
#DIM 候補配列, 50

;装着している道具を取得
LOCAL = 0
IF MODE_存在判定_完全一致("阴蒂夹", PLAYER, TARGET)
	CALL SOURCE_CALC_快Ｃ(TARGET, PLAYER, 200)
	CALL SOURCE_CALC_露出(TARGET, PLAYER, 120)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 10)
	SETBIT LOCAL, 0
ENDIF
IF MODE_存在判定_完全一致("飞机杯", PLAYER, TARGET)
	CALL SOURCE_CALC_快Ｃ(TARGET, PLAYER,200)
	CALL SOURCE_CALC_露出(TARGET, PLAYER, 120)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 10)
	SETBIT LOCAL, 1
ENDIF
IF MODE_存在判定_完全一致("振动棒", PLAYER, TARGET)
	CALL SOURCE_CALC_快Ｖ(TARGET, PLAYER, 250)
	CALL SOURCE_CALC_露出(TARGET, PLAYER, 150)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 20)
	SETBIT LOCAL, 2
ENDIF
IF MODE_存在判定_完全一致("肛门振动棒", PLAYER, TARGET)
	CALL SOURCE_CALC_快Ａ(TARGET, PLAYER, 250)
	CALL SOURCE_CALC_露出(TARGET, PLAYER, 150)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 20)
	SETBIT LOCAL, 3
ENDIF
IF MODE_存在判定_完全一致("乳头夹", PLAYER, TARGET)
	CALL SOURCE_CALC_快Ｂ(TARGET, PLAYER,200)
	CALL SOURCE_CALC_露出(TARGET, PLAYER, 120)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 10)
	SETBIT LOCAL, 4
ENDIF

RFLAG:コマンド結果受渡し変数 = LOCAL

EXP:PLAYER:道具使用経験 ++
RCVAR:TARGET:道具コマンドフラグ = 1

;野外
IF GET_TARGETNUM() > 1
	LOCAL:1 = 0
	FOR LOCAL, 1, CHARANUM
		SIF TARGET:LOCAL < 1
			BREAK
		SIF TARGET:LOCAL == TARGET
			CONTINUE
		SIF CFLAG:LOCAL:睡眠 > 0
			CONTINUE
		IF CFLAG:LOCAL:うふふ == 0
			候補配列:(LOCAL:1) = TARGET:LOCAL
			LOCAL:1 ++
		ENDIF
	NEXT
	IF LOCAL:1
		RFLAG:コマンド結果受渡し変数２ = 候補配列:(RAND:(LOCAL:1))
		RCVAR:TARGET:露出コマンドフラグ = 1
	ENDIF
ENDIF

TIME += 5
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE333
;実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(333)
	RETURN RESULT
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;道具どれか装着している時のみ
IF MODE_存在判定_完全一致("阴蒂夹", PLAYER, TARGET)
ELSEIF MODE_存在判定_完全一致("飞机杯", PLAYER, TARGET)
ELSEIF MODE_存在判定_完全一致("振动棒", PLAYER, TARGET)
ELSEIF MODE_存在判定_完全一致("肛门振动棒", PLAYER, TARGET)
ELSEIF MODE_存在判定_完全一致("乳头夹", PLAYER, TARGET)
ELSE
	RETURN 0
ENDIF
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM333

IF RFLAG:コマンド結果受渡し変数２
	PRINTFORML %CALLNAME:TARGET%正在与%CALLNAME:(RFLAG:コマンド結果受渡し変数２)%交谈…
ENDIF

PRINTFORM %CALLNAME:PLAYER%
LOCAL = 0
IF GETBIT(RFLAG:コマンド結果受渡し変数, 0)
	LOCALS = 阴蒂夹
	LOCAL ++
ENDIF
IF GETBIT(RFLAG:コマンド結果受渡し変数, 1)
	LOCALS = 飞机杯
	LOCAL ++
ENDIF
IF GETBIT(RFLAG:コマンド結果受渡し変数, 2)
	LOCALS = 振动棒
	LOCAL ++
ENDIF
IF GETBIT(RFLAG:コマンド結果受渡し変数, 3)
	LOCALS = 肛门振动棒
	LOCAL ++
ENDIF
IF GETBIT(RFLAG:コマンド結果受渡し変数, 4)
	LOCALS = 乳头夹
	LOCAL ++
ENDIF
SIF LOCAL > 1
	LOCALS = 道具類
PRINTFORML 不断调节%CALLNAME:TARGET%佩戴的%LOCALS%强度来观察反应

