@乗機兵装関数_通用型陆行艇_0(処理モード)
;数字部分は武装登録の番号と対応させること
#DIMS 処理モード
#DIM 武装番号
;武装番号は武装登録の番号と対応させること
武装番号 = 0
LOCALS = 

SELECTCASE 処理モード
	CASE "アビ名"
		TSTR:コマンド名受渡 = 滑流推进器
	CASE "残弾セット"
		;残弾種別 0:戦闘中回数制限 1:探索中回数制限 2:クールダウンターン発生
		乗機残弾種別:武装番号 = 2
		乗機残弾数:武装番号 = 3
	CASE "アビ説明文"
		LOCALS += @"　%残弾種別名:(乗機残弾種別:武装番号)%限制：{乗機残弾数:武装番号, 2}回合<br>"
		LOCALS += "　效果：3回合内我方全体行动速度上升[50％/机体槽]。<br>"
		LOCALS += "　　　　3回合内我方全体DA率上升[20%/机体槽]。<br>"
		LOCALS += "　　　　搭载替补成员时，额外提升3回合TA率[10%/机体槽]。<br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "アビ効果"
		CALL アビ対象選択テンプレート_味方全体_生者のみ
		アビ汎用変数:効果割合 = 50
		アビ汎用文字列:バフ・デバフ枠 = 行動速度_乗機
		アビ汎用文字列:バフ・デバフ対象能力 = 行動速度
		アビ汎用変数:持続ターン = 3
		CALL アビテンプレート_有利効果_バフ効果セット

		CALL アビ汎用変数文字列リセット
		アビ汎用変数:効果割合 = 20
		アビ汎用文字列:バフ・デバフ枠 = DA率_乗機
		アビ汎用文字列:バフ・デバフ対象能力 = DA率
		アビ汎用変数:持続ターン = 3
		CALL アビテンプレート_有利効果_バフ効果セット

		IF サブメンバーステータス取得("Lv") > 0
			CALL アビ汎用変数文字列リセット
			アビ汎用変数:効果量 = 10
			アビ汎用文字列:バフ・デバフ枠 = TA率_乗機
			アビ汎用文字列:バフ・デバフ対象能力 = TA率_乗機
			アビ汎用変数:持続ターン = 3
			CALL アビテンプレート_有利効果_バフ効果セット
		ENDIF
ENDSELECT

@乗機兵装関数_通用型陆行艇_1(処理モード, 兵器id = 0)
;数字部分は武装登録の番号と対応させること
#DIMS 処理モード
#DIM 武装番号
#DIM 兵器id
;武装番号は武装登録の番号と対応させること
武装番号 = 1
LOCALS = 

SELECTCASE 処理モード
	CASE "アビ名", "アビ効果"
		;兵装処理系は装備してる兵装の関数に投げる
		TRYCCALLFORM 搭載兵器関数_%DT_CELL_GETS("所持兵器データベース", 兵器id, "兵器名", 1)%(処理モード, 兵器id)
		CATCH
			PRINTW 处理无效
			アビテンプレート用_キャンセルフラグ = 1
			RETURN -1
		ENDCATCH
	CASE "アビ説明文"
		LOCALS += @"　%残弾種別名:(乗機残弾種別:武装番号)%限制：剩余{乗機残弾数:武装番号, 2}次<br>"
		TRYCCALLFORM 搭載兵器関数_%DT_CELL_GETS("所持兵器データベース", 兵器id, "兵器名", 1)%(処理モード, 兵器id)
			詳細文文字列受け渡し変数 = %LOCALS%%詳細文文字列受け渡し変数%
		CATCH
			PRINTW 处理无效
			アビテンプレート用_キャンセルフラグ = 1
			RETURN -1
		ENDCATCH
	CASE "残弾セット"
		乗機残弾種別:武装番号 = DT_CELL_GET("所持兵器データベース", 兵器id, "残弾種別", 1)
		乗機残弾数:武装番号 = DT_CELL_GET("所持兵器データベース", 兵器id, "残弾数_強化後", 1)
;---------------------------------------------------------------------------------------------------------
;編集するのはここから
	CASE "装備条件説明文"
		LOCALS += @"　可装备类别：机械系or魔法系<br>"
		LOCALS += "　可装备距离：远距离<br>"
		LOCALS += "　其他条件：无<br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "装備条件判定"
		;装備不可だと0、可能だと1を返す
		SIF 乗機装備条件判定(兵器id, "機械系_魔法系", "遠距離")
			RETURN 1
		RETURN 0
;編集するのはここまで
;---------------------------------------------------------------------------------------------------------
ENDSELECT

