			ENDIF
		NEXT
		LOCALS += "<br><button value='999'>[999] 返回</button><br>"
		HTML_PRINT LOCALS
		BINPUT
		LOCAL = RESULT
		SELECTCASE LOCAL
			CASE 999
				;リスト表示に戻るだけなのでRETURNしない
			CASE 0 TO 5
				IF DT_CELL_GETS("所持乗機データベース", 表示id, @"武装{LOCAL}", 1) != "固有" && DT_CELL_GETS("所持乗機データベース", 表示id, @"武装{LOCAL}", 1) != "不可"
