@搭載兵器関数_驱散部件(処理モード, 兵器id)
#DIMS 処理モード
#DIM 兵器id
#DIM 兵器_攻撃力補正
#DIM 兵器_命中率補正
#DIM 兵器_攻撃力変動
#DIM 兵器_命中率変動
#DIM 兵器_残弾種別
#DIM 兵器_残弾数
#DIMS 兵器_カテゴリ
#DIMS 兵器_距離適性
#DIMS 兵器名一時保存
LOCALS = 

SELECTCASE 処理モード
	CASE "兵器登録"
		兵器名一時保存 = 驱散部件
		;攻撃力補正、命中率補正は「その兵器を使用した時に補正を掛ける数値」
		;攻撃力変動、命中率変動は「その兵器を装備しているだけで乗機のステータスを変える数値」
		兵器_攻撃力補正 = 0
		兵器_命中率補正 = 0
		兵器_攻撃力変動 = -30
		兵器_命中率変動 = 0
		;残弾種別 0:戦闘中回数制限 1:探索中回数制限 2:クールダウンターン発生
		兵器_残弾種別 = 1
		兵器_残弾数 = 3
		;カテゴリ 基本は「機械系」と「魔法系」の二択。自由文字列なので任意のカテゴリ名を突っ込んでも良い
		;距離適性 基本は「近距離」と「遠距離」と「味方支援」の三択。自由文字列なので任意のカテゴリ名を突っ込んでも良い
		;複数カテゴリをもたせる場合は「近距離_遠距離」のように記載
		兵器_カテゴリ = 魔法系
		兵器_距離適性 = 味方支援

		{
		DT_ROW_ADD "所持兵器データベース", "兵器名", 兵器名一時保存, 
			"攻撃力補正", 兵器_攻撃力補正, "攻撃力補正_強化後", 兵器_攻撃力補正, 
			"命中率補正", 兵器_命中率補正, "命中率補正_強化後", 兵器_命中率補正, 
			"攻撃力変動値", 兵器_攻撃力変動, "攻撃力変動値_強化後", 兵器_攻撃力変動, 
			"命中率変動値", 兵器_命中率変動, "命中率変動値_強化後", 兵器_命中率変動, 
			"残弾種別", 兵器_残弾種別, "残弾数", 兵器_残弾数, "残弾数_強化後", 兵器_残弾数, 
			"兵器カテゴリ", 兵器_カテゴリ, "兵器距離適性", 兵器_距離適性,
		}
	CASE "フレーバー"
		LOCALS += "可解除我方全体负面效果的部件。<br>"
		LOCALS += "遭遇棘手敌人突袭时预先装备会倍感安心。<br>"
		LOCALS += "但另一方面，由于使用机会较少，性价比略显不足。<br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "作成素材"
		作成素材登録:0 = 星晶碎片_5
	CASE "アビ名"
		TSTR:コマンド名受渡 = 驱散部件
	CASE "アビ説明文"
		;残弾などの説明文字列は機体側で記述
		LOCALS += "　效果：消除我方全体的1个减益效果。<br>"
		LOCALS += "　　　　搭载替补成员时，额外再消除1个减益效果。<br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "アビ効果"
		CALL アビ対象選択テンプレート_味方全体_生者のみ
		CALL アビテンプレート_有利効果_デバフ消去
		IF サブメンバーステータス取得("Lv") > 0
			CALL アビテンプレート_有利効果_デバフ消去
		ENDIF
ENDSELECT

@兵器開発対象_驱散部件(処理モード)
#DIMS 処理モード

SELECTCASE 処理モード
	CASE "兵装名"
		RESULTS = 驱散部件
		RETURN
	CASE "優先度"
		RETURN 1
	CASE "複雑さ"
		RETURN 2
	CASE "要求知識"
		RETURN GETNUM(知識素質, "魔法知識")
ENDSELECT
