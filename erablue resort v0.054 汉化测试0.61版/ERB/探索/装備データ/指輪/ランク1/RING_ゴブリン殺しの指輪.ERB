LOCALS += "由于用途受限，属于不太受欢迎的类型。<br>"
LOCALS += "<br>"

詳細文文字列受け渡し変数 = %LOCALS%
基礎販売額 = 7000

@指輪基礎効果文章表示_哥布林杀手之戒(指輪番号, 効果番号)
#DIM 効果番号
#DIM 指輪番号
LOCALS = 
LOCALS += "【基础效果】<br>"
LOCALS += "最大ＨＰ+100 最大ＭＰ+30 攻击力+80 DA率+10% 对哥布林特攻<br>"

LOCALS:1 = %DT_CELL_GETS("所持指輪データベース", 指輪番号, "オプションステータス補正", 1)%
IF LOCALS:1 != ""
	LOCALS += @"<br>【选项效果】<br>%オプション効果表示文字列作成(LOCALS:1)%"
ENDIF

詳細文文字列受け渡し変数 = %LOCALS%

@指輪出現率_哥布林杀手之戒(入手タイプ, 装備ランク)
#DIMS 入手タイプ
#DIM 装備ランク

SIF 装備ランク < 1
	RETURN 0
SELECTCASE 入手タイプ
	CASE "輸入"
		RETURN 装備レアリティ_Ｒ
	CASE "古ぼけた装備"
		RETURN 装備レアリティ_Ｒ
ENDSELECT

@指輪ステータス決定_哥布林杀手之戒(オプション数, 情報取得フラグ = 0, 効果指定 = -1)
#DIM 効果指定
#DIM オプション数
#DIM 情報取得フラグ
#DIMS 基本補正文字列
#DIMS 特殊補正文字列

基本補正文字列 = 最大ＨＰ_100_最大ＭＰ_30_攻撃力_80_DA率_10
特殊補正文字列 = _対ゴブリン特攻

IF 情報取得フラグ
	詳細文文字列受け渡し変数 = %基本補正文字列%
	詳細文文字列受け渡し変数 += @"%特殊補正文字列%"
	;オプション固定用にオプションランクを返す
	RETURN 1
ENDIF

;オプション数に応じてオプション効果をランダムで付加
;基礎指輪なのでLv1のオプションしか付かない
;例外作りたいときは例外の関数作ってもろて

オプション補正文字列 = 
IF オプション数
	FOR LOCAL, 0, オプション数
		CALL オプション効果決定(1)
	NEXT
ENDIF

LOCAL = DT_ROW_ADD("所持指輪データベース", "指輪名", "哥布林杀手之戒", "基礎ステータス補正", 基本補正文字列, "特殊ステータス補正", 特殊補正文字列, "オプションステータス補正", オプション補正文字列)


@固有バフ・デバフ処理_指輪_哥布林杀手之戒_与ダメージ(隊列番号, ダメージ値)
#DIM 隊列番号
#DIM ダメージ値

;対象の種族にゴブリンがあるなら
IF 種族判定関数(戦闘行動対象, "ゴブリン")
	;ダメージ１．５倍
	RETURN ダメージ値 * 150 / 100
ENDIF

;上に引っかからなかったらダメージをそのまま返す
RETURN ダメージ値
