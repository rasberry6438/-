
@指輪個別文章表示_飞翔之戒
LOCALS = 
LOCALS += @"■飞翔之戒<br><br>"
LOCALS += "能让身体轻盈到仿佛能翱翔天际的戒指。<br>"
LOCALS += "虽带来压倒性的速度，但几乎不寄宿攻击或防御的力量。<br>"
LOCALS += "让辅助型队友佩戴更能发挥其价值。<br>"
LOCALS += "<br>"

詳細文文字列受け渡し変数 = %LOCALS%
基礎販売額 = 8000

@指輪基礎効果文章表示_飞翔之戒(指輪番号, 効果番号)
#DIM 効果番号
#DIM 指輪番号
LOCALS = 
LOCALS += "【基础效果】<br>"
LOCALS += "最大ＭＰ+50 行动速度+300 DA率+20%<br>"

LOCALS:1 = %DT_CELL_GETS("所持指輪データベース", 指輪番号, "オプションステータス補正", 1)%
IF LOCALS:1 != ""
	LOCALS += @"<br>【选项效果】<br>%オプション効果表示文字列作成(LOCALS:1)%"
ENDIF

詳細文文字列受け渡し変数 = %LOCALS%

@指輪出現率_飞翔之戒(入手タイプ, 装備ランク)
#DIMS 入手タイプ
#DIM 装備ランク

SIF 装備ランク < 1
	RETURN 0
SELECTCASE 入手タイプ
	CASE "輸入"
		RETURN 装備レアリティ_Ｒ
	CASE "古ぼけた装備"
		RETURN 装備レアリティ_Ｒ
ENDSELECT

@指輪ステータス決定_飞翔之戒(オプション数, 情報取得フラグ = 0, 効果指定 = -1)
#DIM 効果指定
#DIM オプション数
#DIM 情報取得フラグ
#DIMS 基本補正文字列

基本補正文字列 = 最大ＭＰ_50_行動速度_300_DA率_20

IF 情報取得フラグ
	詳細文文字列受け渡し変数 = %基本補正文字列%
	;オプション固定用にオプションランクを返す
	RETURN 1
ENDIF

;オプション数に応じてオプション効果をランダムで付加
;基礎指輪なのでLv1のオプションしか付かない
;例外作りたいときは例外の関数作ってもろて

オプション補正文字列 = 
IF オプション数
	FOR LOCAL, 0, オプション数
		CALL オプション効果決定(1)
	NEXT
ENDIF

LOCAL = DT_ROW_ADD("所持指輪データベース", "指輪名", "飞翔之戒", "基礎ステータス補正", 基本補正文字列, "オプションステータス補正", オプション補正文字列)
