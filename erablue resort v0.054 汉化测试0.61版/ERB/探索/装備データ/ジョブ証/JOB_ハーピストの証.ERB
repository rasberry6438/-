@証関数_琴师之证(処理モード, 対象キャラ)
#DIM 対象キャラ
#DIMS 処理モード

SELECTCASE 処理モード
	CASE "ジョブ証種別"
		証関連文字列受け渡し = 通常ジョブ
	CASE "証名"
		TSTR:コマンド名受渡 = 琴师之证
	CASE "クラス名"
		SIF 対象キャラ <= 0
			RETURN 0
		SELECTCASE GET_JOBSKILL_LEVEL(対象キャラ)
			CASE IS >= 3
				RESULTS = 超级巨星
				RESULTS:1 = Class.III
				RETURN 1
			CASE 2
				RESULTS = 吟游诗人
				RESULTS:1 = Class.II
				RETURN 1
			CASEELSE
				RESULTS = 琴师
				RESULTS:1 = Class.I
				RETURN 1
		ENDSELECT
	CASE "フレーバー"
		詳細文文字列受け渡し変数 '= "以各种诗曲支援同伴的乐器使职业证。<br>"
		詳細文文字列受け渡し変数 += "因优美歌声与出众风采，为受欢迎而叩响此职业之门者众多。<br>"
		詳細文文字列受け渡し変数 += "其中绝大多数人不久便离去之事自不用说。<br>"
ENDSELECT

