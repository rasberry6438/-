@証関数_斗士之证(処理モード, 対象キャラ)
#DIM 対象キャラ
#DIMS 処理モード

SELECTCASE 処理モード
	CASE "ジョブ証種別"
		証関連文字列受け渡し = 通常ジョブ
	CASE "証名"
		TSTR:コマンド名受渡 = 斗士之证
	CASE "クラス名"
		SIF 対象キャラ <= 0
			RETURN 0
		SELECTCASE GET_JOBSKILL_LEVEL(対象キャラ)
			CASE IS >= 3
				RESULTS = 武器大师
				RESULTS:1 = Class.III
				RETURN 1
			CASE 2
				RESULTS = 战士
				RESULTS:1 = Class.II
				RETURN 1
			CASEELSE
				RESULTS = 斗士
				RESULTS:1 = Class.I
				RETURN 1
		ENDSELECT
	CASE "フレーバー"
		詳細文文字列受け渡し変数 '= "初出茅庐的战士常用的前卫型职业证。<br>"
		詳細文文字列受け渡し変数 += "简单易用的技能深受众多战士喜爱。<br>"
		詳細文文字列受け渡し変数 += "据说即使成为老手仍继续使用此证的战士也不在少数。<br>"
ENDSELECT

