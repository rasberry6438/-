;-------------------------------------------------
;探索メンバーに誘う
;-------------------------------------------------
@COMNAME600
#FUNCTIONS
TSTR:コマンド名受渡 = 邀请进行探索

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_600
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("探索")

@COM600
#DIM ループ用

IF CFLAG:TARGET:好感度レベル < 11
	RFLAG:コマンド結果受渡し変数 = 1
	RETURN 1
ENDIF
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
; ;後々ここからメンバー入れ替え関数に飛ばす
; IF BATTLE_STATE:3:キャラ登録番号
; 	PRINTFORML メンバーがいっぱいです。
; 	RFLAG:コマンド結果受渡し変数 = 2
; 	RETURN
; ENDIF

; ;現状は無条件で勧誘可能
FOR ループ用, 0, 4
	IF !BATTLE_STATE:ループ用:キャラ登録番号
		BATTLE_STATE:ループ用:キャラ登録番号 = TARGET
		PRINTFORMW %NAME表示(TARGET)%已添加到搜索成员中
		BREAK
	ENDIF
NEXT

;編成許可フラグを立てる
CFLAG:TARGET:探索参加許可フラグ = 1

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE600
#DIM ループ用
;移動実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(600)
	RETURN RESULT
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;非戦闘キャラはダメ
SIF TALENT:非戦闘キャラ
	RETURN 0
;既にメンバーにいたら無効
SIF CFLAG:TARGET:探索参加許可フラグ
	RETURN 0

RETURN 1

;-------------------------------------------------
;メッセージ
;-------------------------------------------------

@MESSAGE_COM600
#DIM ループ用

IF RFLAG:コマンド結果受渡し変数
	PRINTFORML %CALLNAME:PLAYER%邀请%CALLNAME:TARGET%进行探索却被拒绝了……
ELSE
	PRINTFORML %CALLNAME:PLAYER%邀请%CALLNAME:TARGET%进行探索
	PRINTFORML %CALLNAME:TARGET%欣然接受了邀请
ENDIF


