;COM300_会話
;--------------------------------------------------
;RFLAG:コマンド結果受渡し変数
	;-1:失敗  0:通常成功  1:大成功
;ABL:MASTER:話術技能によって効果上昇

@KOJO_COM_1180_300(対象キャラ)
#DIM 対象キャラ
CALL 口上変数初期化
SELECTCASE RFLAG:コマンド結果受渡し変数
	CASE -1
		;失敗
		KSTR:(K++) = 「で――話がそれだけならもう行ってもいい？」
		KSTR:(K++) = どうも会話が弾まない、他の話題にした方が良さそうだ
		
	CASE 0
		;通常成功
		SELECTCASE RAND:2
		CASE 0
			KSTR:(K++) = 「そうね。私も良いここは良い所だと思うわ」
			KSTR:(K++) = 「ま、私には陽気が過ぎるけどね」
			KSTR:(K++) = 相変わらずそっけない態度ではあるが、楽しんで滞在はしてくれているようだ
		CASE 1
			KSTR:(K++) = 「アンタは何時もいそがしそうにしてるわね」
			KSTR:(K++) = 「別にいいけど、たまには休んだら？」
			KSTR:(K++) = なんだか機嫌が良さそうだ。
		ENDSELECT
	CASEELSE
		;大成功
		SELECTCASE RAND:3
		CASE 0
			KSTR:(K++) = 「はぁ…あんたのその破天荒な所、うちの弟妹にそっくり」
			KSTR:(K++) = 「そういうのはあの子達だけでまにあってるんだけど？」
			KSTR:(K++) = そういう彼女からは苦笑いからほんのりと優しさがこぼれていた。
		CASE 1
			KSTR:(K++) = 「本当、あんたも暇なのか急がしいのかよくわからないし」
			KSTR:(K++) = くだらない話を彼女はそう切り出され悪い事をしてしまったかと謝ると
			KSTR:(K++) = 「別に、そんな事を言っているつもり何てないけど？」
			KSTR:(K++) = 存外、彼女は貴方との会話を楽しんでいるようだ。
		CASE 2
			KSTR:(K++) = 「はぁ、私に好きなタイプ？　そんなの特に考えた事もないけど」
			KSTR:(K++) = 「少なくても自分勝手でわがままで性欲バカは論外な事は確かね」
			KSTR:(K++) = 「でも、時々だけど…優しい所があって、いざと言う時は頼りになる―――そういうのは嫌いじゃないかもね」
		ENDSELECT
ENDSELECT
CALL 口上変数表示(対象キャラ, 0)

