@固有アビ_20_1(ARGS, キャラ番号)
#DIM キャラ番号
#DIM 消費ＭＰ
#DIM 効果数値
#DIM 効果数値２
#DIM 効果成功率
#DIM 対象キャラ
#DIMS アビ名

 IF 基礎BATTLE_STATE:キャラ番号:Lv >= 20
 	アビ名 = アルベスの槍＋＋
 	消費ＭＰ = 30
 	効果数値 = 300
 	効果数値２ = 6
 ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 10
 	アビ名 = アルベスの槍＋
 	消費ＭＰ = 25
 	効果数値 = 250
 	効果数値２ = 5
 ELSE
	アビ名 = アルベスの槍
	消費ＭＰ = 20
	効果数値 = 200
	効果数値２ = 5
 ENDIF

SELECTCASE ARGS
	CASE "アビ名"
		TSTR:コマンド名受渡 = %アビ名%
	CASE "アビ説明文"
		詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>敵一体に［攻撃力✕{効果数値}％］の自属性ダメージを与える。
		詳細文文字列受け渡し変数 += @"<br>（{効果数値２}ターン）のアルベス・フェルマーレ効果を与える。"
		詳細文文字列受け渡し変数 += @"<br>＞効果なし"
		RETURN 消費ＭＰ
	CASE "アビ効果"
;ダメージ部分
	CALL アビ対象選択テンプレート_敵単体
	アビ汎用変数:効果割合 = 効果数値
	CALL アビテンプレート_ダメージ処理_自属性
	CALL アビ汎用変数文字列リセット
;アルベス・フェルマーレ（A・F）付与部分
	アビ汎用文字列:バフ・デバフ枠 = Ａ・Ｆ
	アビ汎用変数:持続ターン = 効果数値２
	アビ汎用変数:基礎成功確率 = 100
	アビ汎用変数:消去不可オプション = 1
	CALL アビテンプレート_不利効果_デバフ効果セット
ENDSELECT

