	PRINTBUTTONLC "[2]广域投放", 2
	PRINTL （所需卢比：5000卢比　　预计吸引：３～５人）
ENDIF
IF MONEY < 10000
	SETCOLOR 0x666666
	PRINTPLAIN [3]全域投放　（卢比不足）
	PRINTL 
	RESETCOLOR
