@雇用レポート表示()
;長期雇用、従業員の一覧を見せる
#DIM 表示モード
#DIM 対象キャラ
#DIM 表示配列, 2000
#DIM 表示数
#DIM ページ数
#DIM 次ページフラグ
#DIM 入室禁止フラグ
#DIM 表示マップ種別
#DIM TARGET登録

;表示キャラを登録
VARSET 表示配列
表示数 = 0
FOR 対象キャラ, 1, CHARANUM
	IF 表示モード == 0 && CFLAG:対象キャラ:長期雇用
		表示配列:表示数 = 対象キャラ
		表示数 ++
	ELSEIF 表示モード && TALENT:対象キャラ:従業員
		表示配列:表示数 = 対象キャラ
		表示数 ++
	ENDIF
NEXT

$表示LOOP

DRAWLINE
PRINTL 现在显示度假村雇佣角色一览表。
DRAWLINE
PRINT 　
IF 表示モード == 0
	SETCOLOR カラーパレット("黄")
	PRINTBUTTON "[长期雇佣角色]", 9995
	RESETCOLOR
	PRINT  / 
	PRINTBUTTON "[员工角色]", 9996
ELSE
	PRINTBUTTON "[长期雇佣角色]", 9995
	PRINT  / 
	SETCOLOR カラーパレット("黄")
	PRINTBUTTON "[员工角色]", 9996
	RESETCOLOR
ENDIF
PRINTL
DRAWLINE


;順番に表示
次ページフラグ = 0
LOCALS = <div rect='30,0, 5900, 3000' border='31' bcolor='#C0C0C0' padding='50,25,50'><nobr>
FOR LOCAL, 0, 表示数
	SIF LOCAL < ページ数 * 20
		CONTINUE
	IF LOCAL >= ページ数 * 20 + 20
		次ページフラグ = 1
		BREAK
	ENDIF
	LOCALS += @"・%NAME表示(表示配列:LOCAL), 50, LEFT%"
	LOCALS += @"好感度：{CFLAG:(表示配列:LOCAL):好感度レベル, 3}/100　"
	IF TALENT:(表示配列:LOCAL):恋慕
		LOCALS += @"<font color='#%カラーパレット_HTML("ピンク")%'>爱慕</font>　"
	ELSE
		LOCALS += "　　　"
	ENDIF
	IF TALENT:(表示配列:LOCAL):セフレ
		LOCALS += @"<font color='#%カラーパレット_HTML("薄ピンク")%'>炮友</font>　"
	ELSE
		LOCALS += "　　　　"
	ENDIF

	IF SAVESTR:ゲームフェイズ管理 == "通常モード" && TFLAG:調教モード <= 1 && あなた特殊能力:居場所感知
		IF CFLAG:(表示配列:LOCAL):現在位置 == 998
			LOCALS += @"当前位置：自动探索中"
		ELSEIF CFLAG:(表示配列:LOCAL):現在位置 == 999
			LOCALS += @"当前位置：岛屿外"
		ELSE
			LOCALS += @"<button value='{LOCAL}'>当前位置：%GETPLACENAME(CFLAG:(表示配列:LOCAL):現在マップ種別, CFLAG:(表示配列:LOCAL):現在位置)%</button>"
		ENDIF
	ENDIF
	LOCALS += "<br>"
NEXT
LOCALS += "</nobr></div>"
IF ページ数 > 0
	LOCALS += "<div rect='500,2800, 2000, 200'><button value='9997'>[9997] 上一页</button></div>"
ENDIF
IF 次ページフラグ
	LOCALS += "<div rect='1500,2800, 2000, 200'><button value='9998'>[9998] 下一页</button></div>"
ENDIF
LOCALS += "<div rect='3600,2800, 2600, 200'><button value='9994'>[9994] 系统说明</button>　　　<button value='9999'>[9999] 返回</button></div>"
HTML_PRINT LOCALS, 1

FOR LOCAL, 0, 30
	PRINTL
NEXT

IF チュートリアルフラグ:雇用レポート == 0
	RESULT = 9994
ELSE
	BINPUT
ENDIF
LOCAL = RESULT
SELECTCASE LOCAL
	CASE 9994
		CALL 雇用レポートチュートリアル()
	CASE 9995
		表示モード = 0
		RESTART
	CASE 9996
		表示モード = 1
		RESTART
	CASE 9997
		ページ数 --
	CASE 9998
		ページ数 ++
	CASE 9999
		RETURN 0
	CASEELSE
		対象キャラ = 表示配列:LOCAL
		LOCAL = CFLAG:対象キャラ:現在位置
		表示マップ種別 = CFLAG:対象キャラ:現在マップ種別
		TARGET登録 = 対象キャラ

		;クイック移動処理
		SIF 表示マップ種別 == CFLAG:MASTER:現在マップ種別 && LOCAL == CFLAG:MASTER:現在位置
			RETURN 0
		;まずはエリア移動から
		TFLAG:SELECTCOM受け渡し = 400
		SELECTCOM = 400
		IF 表示マップ種別 != CFLAG:MASTER:現在マップ種別
			IF 表示マップ種別 == 999
				IF CFLAG:MASTER:現在マップ種別 != 0
					TFLAG:エリア切り替え時_目的地格納 = 100
					CALL COM400
				ENDIF
			ELSEIF CFLAG:MASTER:現在マップ種別 == 999
				CFLAG:MASTER:現在マップ種別 = 0
				IF 施設改造度:20:0
					CFLAG:MASTER:現在位置 = 2001
				ELSE
					CFLAG:MASTER:現在位置 = 20
				ENDIF
				IF 表示マップ種別 != 0
					TFLAG:エリア切り替え時_目的地格納 = 表示マップ種別 + 100
					CALL COM400
				ENDIF
			ELSE
				TFLAG:エリア切り替え時_目的地格納 = 表示マップ種別 + 100
				CALL COM400
			ENDIF
		ENDIF
		;どっかで立ち止まったなら以降の処理キャンセル
		SIF RFLAG:立ち止まらないフラグ < 0
			RETURN 0
		;次にエリア内移動
		CALL 入室不可処理(表示マップ種別, LOCAL)
		入室禁止フラグ = RESULT
		IF 表示マップ種別 == 999
			IF 入室禁止フラグ
				CFLAG:MASTER:現在マップ種別 = 0
				IF 施設改造度:20:0
					CFLAG:MASTER:現在位置 = 2001
				ELSE
					CFLAG:MASTER:現在位置 = 20
				ENDIF
			ELSE
				CFLAG:MASTER:現在マップ種別 = 999
				CFLAG:MASTER:現在位置 = LOCAL
				SIF TARGET登録
					TFLAG:TARGET変更用 = TARGET登録
			ENDIF
		ELSEIF LOCAL != CFLAG:MASTER:現在位置
			IF CFLAG:MASTER:現在マップ種別 == 2 && LOCAL >= 1000
				;そのまま目的地に移動させる
				IF 入室禁止フラグ
					RETURN 0
				ENDIF
				CFLAG:MASTER:現在位置 = LOCAL
			ELSEIF CFLAG:MASTER:現在マップ種別 == 1 && LOCAL >= 1000
				;そのまま目的地に移動させる
				IF 入室禁止フラグ
					RETURN 0
				ENDIF
				CFLAG:MASTER:現在位置 = LOCAL
			ELSE
				TFLAG:長距離移動時_目的地格納 = LOCAL
				CALL SKIP_MOVE(CFLAG:MASTER:現在マップ種別, LOCAL)
				;現在位置を更新し、次も移動の扱いにする
				CFLAG:MASTER:現在位置 = RESULT
				;マップ間をまたいで移動時の処理
				CALL マップ遷移判定処理(CFLAG:MASTER:現在マップ種別, CFLAG:MASTER:現在位置)
				IF RESULT
					CFLAG:MASTER:現在位置 = RESULT
				ENDIF
				TIME += 1
				TFLAG:SELECTCOM受け渡し = 400
				SELECTCOM = 400
				CALL COM400
				CALL 入室不可処理(CFLAG:MASTER:現在マップ種別, CFLAG:MASTER:現在位置, 1)
				SIF TARGET登録
					TFLAG:TARGET変更用 = TARGET登録
			ENDIF
		ENDIF
		RETURN 0
ENDSELECT
GOTO 表示LOOP
