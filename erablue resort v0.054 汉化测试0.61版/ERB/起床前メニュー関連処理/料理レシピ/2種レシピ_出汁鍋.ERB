@特殊料理_2種レシピ_高汤火锅(ARGS)

SELECTCASE ARGS
	CASE "レシピ参照"
		;レシピブック用にレシピ文章をRESULTSへ
		RESULTS = 
		RESULTS += "　主食材　：蔬菜类食材<br>"
		RESULTS += "　副食材　：肉类食材・无・无<br>"
		RESULTS += "　烹饪用具：锅<br>"

		;メインが野菜
		SIF !レシピ判定_分類_メイン("野菜")
			RETURN 0

		;追加は肉
		SIF !レシピ判定_分類_サブ("肉")
			RETURN 0

		;調理器具は鍋
		SIF 使用食材:9 != 3
			RETURN 0

		;全部抜けてきたら一致
		;料理名と関数名は一致させること！
		料理名受け渡し = 高汤火锅
		RETURN 1
	CASE "料理基礎ステータス"
		;レシピブック用に収入をRESULTSへ
		RESULTS = 
		RESULTS += "　卢比收入：料理等级 ✕ 料理等级 ✕ ２ ＋ ３<br>"
		RESULTS += "　ＺＰ收入：料理等级 ✕ 料理等级 ÷ １０ ＋ １（最低２）<br>"
		;-----------------------------------------------------
		;ルピ収入
		;基本は「開発料理ランク保存 * 開発料理ランク保存 * 2」に追加食材の数だけ＋した値
		;(追加食材はランク２以下だと１個につき＋１、ランク３以上だと＋２)
		;なので基本よりちょい上になるように設定すること
		RESULT:1 = 開発料理ランク保存 * 開発料理ランク保存 * 2 + 3
		;-----------------------------------------------------
		;ZP収入
		;基本はMAX(開発料理ランク保存 * 開発料理ランク保存 / 10, 1)
		;追加食材を３つ全部埋めたら＋１
		;基本よりちょい上になるように設定すること
		RETURN MAX(開発料理ランク保存 * 開発料理ランク保存 / 10, 1) + 1
		;-----------------------------------------------------
	CASE "料理特殊ステータス"
		詳細文文字列受け渡し変数 = 【素材原味特化】<br>
		詳細文文字列受け渡し変数 += "　当原属性为光时，停留角色的奥义值提升效率<br>　＋１０％。"
		;増加処理は@装備再計算処理に記述
ENDSELECT


