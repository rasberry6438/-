@特殊料理_4種レシピ_寿司拼盘(ARGS)

SELECTCASE ARGS
	CASE "レシピ参照"
		;レシピブック用にレシピ文章をRESULTSへ
		RESULTS = 
		RESULTS += "　主食材　：鱼类食材<br>"
		RESULTS += "　副食材　：鱼类食材・名称含「米」的食材・名称含「米」的食材<br>"
		RESULTS += "　烹饪用具：菜刀<br>"

		;メインが魚
		SIF !レシピ判定_分類_メイン("魚")
			RETURN 0

		;追加は米・魚・米
		SIF !レシピ判定_名前含む_サブ("米", 2)
			RETURN 0
		SIF !レシピ判定_分類_サブ("魚")
			RETURN 0

		;調理器具は包丁
		SIF 使用食材:9 != 1
			RETURN 0

		;全部抜けてきたら一致
		;料理名と関数名は一致させること！
		料理名受け渡し = 寿司拼盘
		RETURN 1
	CASE "料理基礎ステータス"
		;レシピブック用に収入をRESULTSへ
		RESULTS = 
		RESULTS += "　卢比收入：料理等级 ✕ 料理等级 ✕ ２ ＋ ８<br>"
		RESULTS += "　ＺＰ收入：料理等级 ✕ 料理等级 ÷ １０ ＋ ３（最低４）<br>"
		;-----------------------------------------------------
		;ルピ収入
		;基本は「開発料理ランク保存 * 開発料理ランク保存 * 2」に追加食材の数だけ＋した値
		;(追加食材はランク２以下だと１個につき＋１、ランク３以上だと＋２)
		;なので基本よりちょい上になるように設定すること
		RESULT:1 = 開発料理ランク保存 * 開発料理ランク保存 * 2 + 8
		;-----------------------------------------------------
		;ZP収入
		;基本はMAX(開発料理ランク保存 * 開発料理ランク保存 / 10, 1)
		;追加食材を３つ全部埋めたら＋１
		;基本よりちょい上になるように設定すること
		RETURN MAX(開発料理ランク保存 * 開発料理ランク保存 / 10, 1) + 3
		;-----------------------------------------------------
	CASE "料理特殊ステータス"
		詳細文文字列受け渡し変数 = 【寿司！　美味到爆！！】<br>
		詳細文文字列受け渡し変数 += "　使菜单效果带来的ZP获取量增加１０％。"
		;増加処理は@EVENTEND0で記述
ENDSELECT


@料理効果_メニュー効果収入補正_寿司拼盘(ルピ収入, ZP収入)
#DIM ルピ収入
#DIM ZP収入

;表示文字列
RSTR:リゾート収支計算_記録文字列 += @"因『寿司拼盘』效果ZP收入提升！<br>"

;RESULTにルピ補正、RESULT:1にZP補正
RESULT:1 = ZP収入 / 10
RETURN 0
