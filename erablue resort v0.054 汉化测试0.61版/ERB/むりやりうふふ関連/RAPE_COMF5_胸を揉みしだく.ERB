;-------------------------------------------------
;揉捏胸部
;愛撫系コマンド、レベル2
;-------------------------------------------------
@RAPE_COMNAME5
#FUNCTIONS
TSTR:コマンド名受渡 = 揉捏胸部



;===================================================
;コマンドタイプ
;===================================================
@RAPE_COMTYPE_5
#FUNCTION
TFLAG:コマンドタイプ受渡 = RAPE_COMTYPE("うふふ_被挿入中")


@RAPE_COM_TOOLTIP_5
LOCALS = <br>■揉捏胸部<br>
LOCALS += "肆意揉捏对方胸部的指令。因粗暴揉捏会产生一定痛感。"
LOCALS += "<br>强奸指令类型：嘿咻or被插入中<br>获取来源：快Ｂ・暴露・接触・痛苦"
LOCALS += "<br>专属经验值：无<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@RAPE_COM5
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

CALL SOURCE_CALC_露出(TARGET, PLAYER, 50)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 80)
CALL SOURCE_CALC_快Ｂ(TARGET, PLAYER, 100)
SIF TALENT:PLAYER:器用な指
	CALL SOURCE_CALC_快Ｂ(TARGET, PLAYER, 50)

;スパンキングが100ならまぁこのくらいでしょ
CALL SOURCE_CALC_苦痛(TARGET, PLAYER, 60)


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:同性愛経験 += 5
	EXP:PLAYER:同性愛経験 += 5
ENDIF

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@RAPE_COM_ABLE5
;胸愛撫実行判定
;一括管理
SIF GLOBAL_RAPE_COMABLE(5)
	RETURN RESULT
;Bがない場合駄目
SIF TALENT:TARGET:Ｂ感度 == -2
	RETURN 0
SIF GETBIT(TALENT:TARGET:性別, 0) == 0
	RETURN 0

;鎧があると無理
SIF TEQUIP:上半身鎧あり
	RETURN 0
;指を何かに使ってる・届かないなら無理
SIF TEQUIP:PLAYER:指
	RETURN 0
;胸を何かに使ってる・届かないなら無理
SIF TEQUIP:TARGET:胸
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@RAPE_MESSAGE_COM5

PRINTFORM %CALLNAME:PLAYER%

IF CFLAG:TARGET:睡眠
	IF TCVAR:TARGET:泥酔眠姦
		PRINTFORM 醉倒了
	ELSE
		PRINTFORM 睡着了
	ENDIF
ENDIF

IF MODE_確認_完全一致("Ｖ挿入系", PLAYER, TARGET) > -1 || MODE_確認_完全一致("Ａ挿入系", PLAYER, TARGET) > -1 || MODE_確認_完全一致("Ｖ挿入系", TARGET, PLAYER) > -1 || MODE_確認_完全一致("Ａ挿入系", TARGET, PLAYER) > -1
	PRINTFORM 在与%CALLNAME:TARGET%保持插入的状态下，对%OPPAI_DESCRIPTION(TARGET)%
ELSE
	PRINTFORM 对%CALLNAME:TARGET%的%OPPAI_DESCRIPTION(TARGET)%
ENDIF
;欲望のPALAMLV3以上＋
IF PALAM:欲情 >= PALAMLV:3
	PRINTFORML %TEXTR("顶端已完全硬挺的乳头被捏起/被揉捏搓弄，硬挺乳头在掌心辗转把玩/被粗暴揉捏变形")%
ELSE
	PRINTFORML %TEXTR("肆意揉捏/粗暴蹂躏/当作玩具把玩")%…
ENDIF

