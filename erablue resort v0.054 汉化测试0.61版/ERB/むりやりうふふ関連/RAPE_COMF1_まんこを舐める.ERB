LOCALS += "将脸埋入对方股间，以阴蒂为中心进行舌部刺激取乐。<br>因未获得同意，不会衍生为「69式」。<br>若执行者持有[舌头灵巧][猫舌]特质，效果将产生增减。"
LOCALS += "<br>强奸指令类型：嘿咻<br>获取来源：快Ｃ・暴露・接触・体液"
LOCALS += "<br>专属经验值：口交经验(你)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@RAPE_COM1
;-------------------------------------------------
;モードの設定
;-------------------------------------------------

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

LOCAL = 150
;舌を使う調教では、調教者の舌使いによって、快感のソース増加
SIF TALENT:PLAYER:舌使い
	TIMES LOCAL , 1.50
;猫舌では減少
SIF TALENT:PLAYER:猫舌
	TIMES LOCAL , 0.75
CALL SOURCE_CALC_快Ｃ(TARGET, PLAYER, LOCAL)

CALL SOURCE_CALC_液体(TARGET, PLAYER, 60)
CALL SOURCE_CALC_露出(TARGET, PLAYER, 80)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 100)

;下タイツがある場合は破く。
IF TEQUIP:下タイツあり == 1
	TEQUIP:下タイツ破れ = 1
	RFLAG:コマンド結果受渡し変数 = 1
ENDIF
;前張りがあったら剥がす
IF TEQUIP:下半身下着あり == 2
	TEQUIP:下半身下着あり = 0
	RFLAG:コマンド結果受渡し変数２ = 1
ENDIF
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:同性愛経験 += 3
	EXP:PLAYER:同性愛経験 += 3
ENDIF


;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
SIF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快楽経験 += 1
;口淫経験
EXP:PLAYER:口淫経験 ++

CALL 初体験日登録処理(PLAYER, TARGET, "ファーストキス", DAY * 1440 + TIME, GETPLACENAME(CFLAG:PLAYER:現在マップ種別, CFLAG:PLAYER:現在位置), "クリトリス", "", 1)
IF RESULT
	CALL 履歴データベース登録(CFLAG:PLAYER:人物番号, @"<font color='#%カラーパレット_HTML("薄ピンク")%'>向%CALLNAME:TARGET%的[阴蒂]献上初吻</font><img src='えっちハート'>","うふふ")
ENDIF

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@RAPE_COM_ABLE1
;クンニ実行判定
;一括管理
SIF GLOBAL_RAPE_COMABLE(1)
	RETURN RESULT
;クリがない場合駄目
SIF TALENT:TARGET:Ｃ感度 == -2
	RETURN 0
;女性器がないとダメ
SIF GETBIT(TALENT:TARGET:性別, 0) == 0
	RETURN 0
;下半身着衣
;前鎧、めくれない服があると無理
SIF TEQUIP:下腹部前鎧あり
	RETURN 0
SIF TEQUIP:下半身服あり && (!TEQUIP:スカートめくり可 && !TEQUIP:ずらし可)
	RETURN 0

	
;シックスナインには派生しない。処理に自信がないのでフェラ中で禁止をかける。
IF MODE_確認_完全一致("フェラチオ系", TARGET, PLAYER) > -1
	RETURN 0
ELSE
	;口を何かに使ってる・届かないなら無理
	SIF TEQUIP:PLAYER:口
		RETURN 0
	;クリを何かに使ってる・届かないなら無理
	SIF TEQUIP:TARGET:クリトリス
		RETURN 0
ENDIF
;挿入系時は個別にOFF
SIF MODE_確認_完全一致("Ｖ挿入系", PLAYER, TARGET) > -1 || MODE_確認_完全一致("Ａ挿入系", PLAYER, TARGET) > -1
	RETURN 0
SIF MODE_確認_完全一致("Ｖ挿入系", TARGET, PLAYER) > -1 || MODE_確認_完全一致("Ａ挿入系", TARGET, PLAYER) > -1
	RETURN 0

;オートコマンド中の制限
IF FLAG:オートコマンド判定中フラグ
	SIF 初体験済みチェック("ファーストキス", PLAYER) == 0 
		RETURN 0
ENDIF

RETURN 1

