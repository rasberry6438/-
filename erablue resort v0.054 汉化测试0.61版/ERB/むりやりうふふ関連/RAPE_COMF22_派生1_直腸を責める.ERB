
@RAPE_COMNAME_S22_1
#FUNCTIONS
TSTR:コマンド名受渡 = 刺激直肠
;男・ふたなり相手だと前立腺責めになる
SIF GETBIT(TALENT:TARGET:性別, 2)
	TSTR:コマンド名受渡 = 刺激前列腺

;===================================================
;コマンドタイプ
;===================================================
@RAPE_COMTYPE_S_22_1
#FUNCTION
TFLAG:コマンドタイプ受渡 = RAPE_COMTYPE("Ａ系")

@RAPE_COM_TOOLTIP_S22_1
LOCALS = <br>■刺激直肠<br>
LOCALS += "用阴茎强烈刺激肠道入口的指令。<br>对象为男性・扶她时转变为[刺激前列腺]。<br>仅在Ａ插入系模式中可执行。"
LOCALS += "<br>强奸指令类型：Ａ系<br>获取来源：快Ａ・接触・痛苦"
LOCALS += "<br>专属经验值：Ａ性交经验(TARGET)・前列腺开发(TARGET・特定条件时)・Ｃ性交经验_Ａ插入(PLAYER)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@RAPE_COM_S22_1
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

;ペニスがあるなら前立腺もある
IF GETBIT(TALENT:TARGET:性別, 1)
	RCVAR:前立腺開発フラグ = 3
ENDIF
CALL SOURCE_CALC_快Ａ(TARGET, PLAYER, 500)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 150)
CALL SOURCE_CALC_快Ｃ(PLAYER, TARGET, 500)

;苦痛
LOCAL = 200 * PAIN_CHECK_A(TARGET) / 1000
CALL SOURCE_CALC_苦痛(TARGET, PLAYER, LOCAL)


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:PLAYER:Ｃ性交経験_Ａ挿入 ++
EXP:Ａ性交経験 ++

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:同性愛経験 += 4
	EXP:PLAYER:同性愛経験 += 4
ENDIF

EXP:愛情経験 += TALENT:恋慕 * 2

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@RAPE_COM_ABLE_S22_1
;入口を責める実行判定
;一括管理
SIF GLOBAL_RAPE_COMABLE_S("22_1")
	RETURN RESULT
;Ａ挿入系モードじゃない時はアウト
SIF MODE_確認_完全一致("Ａ挿入系", PLAYER, TARGET) < 0
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@RAPE_MESSAGE_COM_S22_1
#DIM 同時キャラ番号
PRINTFORM %CALLNAME:PLAYER%


IF GETBIT(TALENT:TARGET:性別, 1)
	PRINTFORM 反复研磨%CALLNAME:TARGET%紧绷的前列腺
ELSE
	PRINTFORM 细致挖掘%CALLNAME:TARGET%的直肠褶皱
ENDIF

