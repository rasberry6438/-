	IF プラモ_所有キット:プラモデータ変数 >= 1
		LOCALS = 【已拥有】
	ELSE
		LOCALS = 【{プラモデータ変数:1}PP】
	ENDIF
	プラモ_メッセージウィンドウ下部:(LOCAL:1) = [{プラモ_購入可能リスト:(LOCAL:1)}]%プラモデータ文字列:3%：　　%LOCALS%
	LOCAL:1 ++
	プラモデータ変数:0 = 0
ELSE
	RETURN 0
ENDIF

GOTO LOOP







