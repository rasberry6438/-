@サイド領域_実行処理_戦闘中
#DIM 入力数値

IF STRCOUNT(RESULTS, "サイド領域_サイド切り替え_")
	サイド描画表示種類_戦闘用 = %REPLACE(RESULTS, "サイド領域_サイド切り替え_", "")%
	RETURN 1
ENDIF

SELECTCASE サイド描画表示種類_戦闘用
	CASE "戦闘ログ"
		IF RESULTS == "サイド領域_スクロール_上"
			サイド描画縦スクロール保存 = MIN(STRCOUNT(サイド描画_戦闘ログ保存, "<br>"), サイド描画縦スクロール保存 + 35)
		ELSEIF RESULTS == "サイド領域_スクロール_下"
			サイド描画縦スクロール保存 = MAX(0, サイド描画縦スクロール保存 -35)
		ENDIF
ENDSELECT

RETURN 0


@サイド描画表示種類_戦闘ログ(表示文字列, 追加表示文字列)
#DIMS REF 表示文字列
#DIMS REF 追加表示文字列
#DIM 繰り返し回数
#DIMS ログ表示用文字列

ログ表示用文字列 = %サイド描画_戦闘ログ保存%

IF STRCOUNT(ログ表示用文字列, "<br>") > 35
	追加表示文字列 += "<div rect='6000, 4125, 3825, 100'>　　　　　"
	IF STRCOUNT(ログ表示用文字列, "<br>") > 35 + サイド描画縦スクロール保存
		追加表示文字列 += "<button value='サイド領域_スクロール_上'>[向上滚动]</button>"
	ELSE
		追加表示文字列 += "　　　　　　　　"
	ENDIF
	追加表示文字列 += "　　　　　　　　　　　　"
	SIF サイド描画縦スクロール保存 > 0
		追加表示文字列 += "<button value='サイド領域_スクロール_下'>[向下滚动] </button>"
	追加表示文字列 += "</div>"
ENDIF

;<br>の数で表示行数を判定
;36行まで表示可能
IF STRCOUNT(ログ表示用文字列, "<br>") > 35 + サイド描画縦スクロール保存
	FOR 繰り返し回数, 0, STRCOUNT(ログ表示用文字列, "<br>") - 35 - サイド描画縦スクロール保存
		ログ表示用文字列 = %REPLACE(ログ表示用文字列, "^.*?<br>", "")%
	NEXT
ENDIF

表示文字列 += @"%ログ表示用文字列%"



