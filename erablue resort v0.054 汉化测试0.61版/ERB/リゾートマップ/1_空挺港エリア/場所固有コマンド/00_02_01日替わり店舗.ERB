;一括管理
SIF GLOBAL_COMABLE(380)
	RETURN RESULT
;隠密中はダメ
SIF CFLAG:PLAYER:隠密
	RETURN 0
;特定曜日だけ
IF GET_DAY() == "日"
	;おせんべ
