;-------------------------------------------------
;呼叫助手
;-------------------------------------------------
@MASSAGE_COMNAME60
#FUNCTIONS
#DIM 同室

TSTR:コマンド名受渡 = 呼叫助手

FOR 同室, 1, CHARANUM
	SIF TARGET:同室 < 1
		BREAK
	IF CFLAG:(TARGET:同室):マッサージ助手
		TSTR:コマンド名受渡 = 遣返助手
	ENDIF
NEXT

;===================================================
;コマンドタイプ
;===================================================
@MASSAGE_COMTYPE_60
#FUNCTION
TFLAG:コマンドタイプ受渡 = MASSAGE_COMTYPE("通常マッサージ")

@MASSAGE_COM_TOOLTIP_60
LOCALS = <br>■呼叫助手<br>
LOCALS += "呼叫一名协助按摩的助手。存在助手时，按摩效果提升"
LOCALS += "<br>可与呼叫的助手交换按摩施术角色"
LOCALS += "<br>指令类型：常规按摩<br>获取来源：无"
LOCALS += "<br>专属经验值：无<br>"
TSTR:ツールチップ受渡 = %LOCALS%


@MASSAGE_COM60
#DIM 表示候補, 5000
#DIM 現在ページ
#DIM 呼び出し人数
#DIM 対象キャラ
#DIM DYNAMIC 初回実行フラグ = 1
#DIM リスタートフラグ
#DIM 実行結果
#DIM 入力内容
#DIM REDRAW_TEMP
#DIM 描画開始行
#DIM 助手キャラ
#DIM 同室
#DIM CONST 表示人数 = 15

助手キャラ = 0
FOR 同室, 1, CHARANUM
	SIF TARGET:同室 < 1
		BREAK
	IF CFLAG:(TARGET:同室):マッサージ助手
		助手キャラ = TARGET:同室
	ENDIF
NEXT

IF 助手キャラ
	;遣返助手コマンドになっているはず
	PLAYER = MASTER
	FLAG:モード管理 = 0
	CFLAG:助手キャラ:マッサージ助手 = 0
	RFLAG:コマンド結果受渡し変数 = 助手キャラ * -1
	CFLAG:助手キャラ:同行 = 0
	;あんまり行儀よくないけど現在位置を直接どっかにやる
	CFLAG:助手キャラ:現在位置 = 2
	;同行を消すためTARGET配列から消す
	ARRAYREMOVE TARGET, FINDELEMENT(TARGET, 助手キャラ), 1
	RETURN 0
ENDIF

IF 初回実行フラグ
	初回実行フラグ = 0
	; 呼び出しキャラ情報を初期化
	VARSET 表示候補, -1
	現在ページ = 0
	VARSET 呼び出し対象
	呼び出し人数 = 0
	CALL マッサージ助手候補キャラ登録(表示候補)
	; 描画周りの初期状態を記憶
	描画開始行 =LINECOUNT
	REDRAW_TEMP = CURRENTREDRAW()
	REDRAW 0
ENDIF

PRINTL
DRAWLINE
PRINTL 要呼叫谁呢？
DRAWLINE
LOCAL:1 = 0
;キャラの表示
FOR LOCAL, (現在ページ * 表示人数), ((現在ページ * 表示人数) + 表示人数)
	;登録が終わったら表示終了
	IF 表示候補:LOCAL == -1
		BREAK
	ENDIF
	;選択中のキャラの色を変更
	SIF MATCH(呼び出し対象, 表示候補:LOCAL)
		SETCOLOR カラーパレット("黄")
	PRINTBUTTONLC @"[{LOCAL, 2}] %ADD_STR_SPACE(NAME表示省略(NAME表示(表示候補:LOCAL)), "]"), 41, LEFT%", LOCAL
	RESETCOLOR
	PRINTFORM 按摩技能：{ABL:(表示候補:LOCAL):マッサージ技能, 2}　
	; 体力の状態に合わせて体力の色を変更
	IF MAXBASE:(表示候補:LOCAL):体力 == BASE:(表示候補:LOCAL):体力
		SETCOLOR 0x50B050
	ELSEIF MAXBASE:(表示候補:LOCAL):体力 < BASE:(表示候補:LOCAL):体力 / 3
		SETCOLOR カラーパレット("赤")
	ENDIF
	PRINTFORM 体力：{BASE:(表示候補:LOCAL):体力, 4} / {MAXBASE:(表示候補:LOCAL):体力, 4}　
	RESETCOLOR
	; 性欲の状態に合わせて性欲の色を変更
	IF BASE:(表示候補:LOCAL):性欲 > 2000
		SETCOLOR カラーパレット("ピンク")
	ELSEIF BASE:(表示候補:LOCAL):性欲 > 1000
		SETCOLOR カラーパレット("薄ピンク")
	ENDIF
	PRINTFORM 性欲：{BASE:(表示候補:LOCAL):性欲, 4}　
	RESETCOLOR
	; 发情期表示
	IF CFLAG:(表示候補:LOCAL):発情期フラグ < 0
		SETCOLOR カラーパレット("えっちな色")
		PRINT 发情期
		PRINT_IMG "えっちハート"
		PRINT 　
		RESETCOLOR
	ELSE
		PRINT 　　　　　
	ENDIF
	; 陥落状態表示
	IF TALENT:(表示候補:LOCAL):恋慕
		SETCOLOR カラーパレット("えっちな色")
		PRINT 爱慕
		RESETCOLOR
	ELSEIF TALENT:(表示候補:LOCAL):セフレ
		PRINT 炮友
	ENDIF
	PRINTL
NEXT

DRAWLINE
;ページめくり表示
IF 現在ページ > 0
	PRINTBUTTONLC "[900] 上一页", 900
ELSE
	PRINTLC 　
ENDIF
PRINTFORM - {現在ページ + 1} -
IF 表示候補:((現在ページ * 表示人数) + 表示人数) > 0
	PRINTBUTTONC "[901] 下一页", 901
ENDIF
PRINTL
;確定と選択解除ボタン
IF 呼び出し人数
	PRINTBUTTONLC @"[998] 呼叫%CALLNAME:(呼び出し対象:0)%", 998
ELSE
	SETCOLOR カラーパレット("グレーアウト")
	PRINTFORMLC [---] ---呼叫
	RESETCOLOR
ENDIF
PRINTBUTTONLC @"[996] 取消选择", 996
PRINTL 
PRINTBUTTONLC "[999] 取消", 999

BINPUT
入力内容 = RESULT
リスタートフラグ = 0
実行結果 = 0
SELECTCASE 入力内容
	CASE 900
		現在ページ = MAX(現在ページ - 1, 0)
		リスタートフラグ = 1
	CASE 901
		SIF LOCAL:1 == 0
			現在ページ += 1
		リスタートフラグ = 1
	CASE 999
		実行結果 = -1
	CASE 996
		呼び出し対象:0 = 0
		呼び出し人数 = 0
		リスタートフラグ = 1
	CASE 998
		; 呼び出し対象確定
		対象キャラ = 呼び出し対象:0
		CFLAG:対象キャラ:現在位置 = CFLAG:PLAYER:現在位置
		CFLAG:対象キャラ:現在マップ種別 = CFLAG:PLAYER:現在マップ種別
		CFLAG:対象キャラ:マッサージ助手 = 1
		;野外オナニー時に備えて隠密を消す
		CALL 野外オナニー途中終了(対象キャラ)
		CFLAG:対象キャラ:隠密 = 0
		;先に同室フラグを建てることで発覚口上をスキップする
		CFLAG:対象キャラ:同室 = 1
		RFLAG:コマンド結果受渡し変数 = 対象キャラ
		実行結果 = 0
	CASEELSE
		対象キャラ = 表示候補:入力内容
		IF 呼び出し対象:0 == 対象キャラ
			呼び出し対象:0 = 0
			呼び出し人数 = 0
		ELSE
			呼び出し対象:0 = 対象キャラ
			呼び出し人数 = 1
		ENDIF
		リスタートフラグ = 1
ENDSELECT
CLEARLINE LINECOUNT - 描画開始行
SIF リスタートフラグ == 1
	RESTART
REDRAW REDRAW_TEMP
RETURN 実行結果

;-------------------------------------------------
;マッサージ助手候補キャラ登録
;-------------------------------------------------
@マッサージ助手候補キャラ登録(表示候補)
#DIM REF 表示候補
LOCAL:1 = 0
FOR LOCAL, 1, CHARANUM
	;滞在してないキャラは出さない
	SIF CFLAG:LOCAL:滞在期間 < 0
		CONTINUE
	;セフレでも恋慕でもないキャラは出さない
	SIF !TALENT:LOCAL:恋慕 && !TALENT:LOCAL:セフレ
		CONTINUE
	;睡眠中はアウト
	SIF CFLAG:LOCAL:睡眠
		CONTINUE
	;既に同室者はアウト
	SIF MATCH(TARGET, LOCAL)
		CONTINUE
	表示候補:(LOCAL:1) = LOCAL
	LOCAL:1 += 1
NEXT

RETURN LOCAL:1

