@GET_SUCCESS_RATE
#FUNCTION
VARSET LOCAL

;反抗的.素直
LOCAL -= TALENT:態度 * 5
;気丈
SIF TALENT:度胸 > 0
	LOCAL -= 5

;プライド高い
SIF TALENT:プライド > 0
	LOCAL -= 15
;プライド低い
SIF TALENT:プライド < 0
	LOCAL += 5
;目立ちたがり
SIF TALENT:目立ちたがり
	LOCAL += 2
;即落ち
SIF TALENT:即落ち
	LOCAL += 10
;性別嗜好
SIF (TALENT:性別嗜好 & 1 && !(TALENT:PLAYER:2 & 1)) || (TALENT:性別嗜好 & 2 && TALENT:PLAYER:2 & 1)
	LOCAL -= 7

;調教者の素質
;謎の魅力
SIF TALENT:PLAYER:謎の魅力
	LOCAL += 6

;好感度
LOCAL += CFLAG:好感度レベル / 10

;ムード
LOCAL += BASE:ムード / 100

;理性
LOCAL += (1000 - BASE:理性) / 100

;恋慕
SIF TALENT:恋慕
	LOCAL += 20
	
SIF LOCAL < 0
	LOCAL = 0

RETURNF LOCAL



