;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K33, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 內褲/淡色/
	CSTR:胸罩 = 吊帯衫/淡色/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での便装です。設定必須です
CASE "制服"
	IF COND("冬")
		CALL SET_COSTUME, "西装外衣"
		CALL SET_SHOES, "靴"
	ELSEIF COND("夏")
		CALL SET_COSTUME, "水手服"
	ELSE
		CALL SET_COSTUME, "西装外衣"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	IF COND("冬")
		CALL SET_COSTUME, "体操服运动衫"
	ELSEIF COND("夏")
		CALL SET_COSTUME, "体操服紧身短褲"
	ELSE
		CALL SET_COSTUME, "体操服五分褲"
	ENDIF

;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
;夏は无胸罩で冬はそれなりに防寒対策をする
;恋慕でやや攻めた服装になる
CASE "便装"
	;恋慕变成了ら便装をすこし過激にする
	IF TALENT:恋慕
		IF COND("冬")
			CALL SET_SHIRT, TEXTR("萌袖毛衣/短外套")
