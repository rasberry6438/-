			CALL SET_SOCKS, "高筒襪"
			CALL SET_SHOES, "靴"
			CALL SET_OTHER, "披肩"
		ELSEIF COND("夏")
			CALL SET_SHIRT, "宽大的Ｔ恤"
			CALL SET_SOCKS, "膝下襪"
			CALL SET_SHOES, "運動鞋"
			CALL SET_BRA, ""
		ELSE
			CALL SET_SHIRT, "女式衬衫"
			CALL SET_SOCKS, "膝下襪"
			CALL SET_SHOES, "運動鞋"
			CALL SET_BRA, ""
		ENDIF
	ELSE
		IF COND("冬")
			CALL SET_SHIRT, TEXTR("萌袖毛衣/短外套")
			CALL SET_BOTTOM, "五分褲"
			CALL SET_SOCKS, "高筒襪"
			CALL SET_SHOES, "靴"
			CALL SET_OTHER, "披肩"
		ELSEIF COND("夏")
			CALL SET_SHIRT, "宽大的Ｔ恤"
			CALL SET_BOTTOM, "五分褲"
			CALL SET_SOCKS, "膝下襪"
			CALL SET_SHOES, "運動鞋"
		ELSE
			CALL SET_SHIRT, "女式衬衫"
			CALL SET_BOTTOM, "五分褲"
			CALL SET_SOCKS, "膝下襪"
			CALL SET_SHOES, "運動鞋"
		ENDIF
	ENDIF

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	;欲求次第で身体の火照りに耐えられなくて脱いじゃう
	IF COND("欲求不満") >= 3
		CALL SETFLAG, "变成裸体", TARGET
	ELSEIF COND("欲求不満") >= 2
