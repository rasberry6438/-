;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K73, ARGS

SELECTCASE ARGS
;角色クター独自の内衣の組み合わせを設定できます。設定必須です。一定の確率で着用します
;もしも普段は付けない、という事ならCSTR:胖次 = と等号の右側を書き込まない事で出来ます
;CFLAG:随机内衣OFF = 1とした場合には、ここで設定した内衣のみを身に着けるようになります
CASE "内衣"
	CSTR:胖次 = 內褲/白
	CSTR:胸罩 = 简约胸罩/淡色/
;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"

;学園での便装です。設定必須です。
;水手服, 露脐装超短裙水手服, 西装外衣, 露脐装超短裙西装外衣, 背心,美式校服、V领毛衣など
;黑色水手服を着せたい場合には CALL SET_COSTUME, "水手服/黒" のように書き込むことで色を変えることが出来ます
;また、V领毛衣に限りCALL SET_COSTUME, "V领毛衣/濃紫/萌袖"のようにして色の他に"萌袖"をオプション指定できます
;(RESOURCES→MAIDFACE→13服 フォルダ内にある MAIDFACE13.csv の該当衣装を見て色を選ばないとならないため上級者向きです)
;また、女式衬衫等の上に褲吊帯を着けたい場合には CALL SET_OTHER, "褲吊帯" として下さい
CASE "制服"
	CALL SET_SHIRT, "背心/紺"
	CALL SET_SKIRT, "迷你百褶裙/白"
	CALL SET_BRA, "蕾丝胸罩/白"
	CALL SET_SOCKS, "膝下襪"
	CALL SET_SHOES, "小皮靴"
		IF RAND:3
			CALL SET_OTHER, "白色围巾Ｃ/橙色の前開V领毛衣"
		ELSEIF RAND:2
			CALL SET_OTHER, "白色围巾Ｂ/橙色の前開V领毛衣"
		ELSE
			CALL SET_OTHER, "白色围巾/橙色の前開V领毛衣"
		ENDIF
	SELECTCASE TEXTS("季節")
		CASE "春", "秋", "冬"
		CASE "夏"
			CALL SET_OTHER, "橙色の前開V领毛衣"
	ENDSELECT
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服布鲁马, 体操服高開衩布鲁马, 体操服五分褲, 体操服紧身短褲, 体操服运动衫など
CASE "体操服"
	CALL SET_SHIRT, "体操服/赤"
	CALL SET_BOTTOM, "五分褲/桃色"
	CALL SET_SOCKS, "短襪"
	CALL SET_SHOES, "運動鞋"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;死库水, 競泳泳装, 白比基尼, 黒比基尼など
CASE "泳装"
	CALL SET_BODYS, "紧身短褲型死库水/紺色"
;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("昼")
		SELECTCASE TEXTS("季節")
		CASE "春"
			CALL SET_SHIRT, "露肩外衣/灰色"
			CALL SET_BOTTOM, "热褲/青"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "運動鞋"
		CASE "夏"
			CALL SET_SHIRT, "露肩外衣/灰色"
			CALL SET_BOTTOM, "热褲/青"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "運動鞋"
		CASE "秋", "冬"
			CALL SET_SHIRT, "格子連衣裙/橙色"
			CALL SET_BOTTOM, "牛仔褲/黒"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "運動鞋"
			IF RAND:3
					CALL SET_OTHER, "紫の围巾Ｃ"
				ELSEIF RAND:2
					CALL SET_OTHER, "紫の围巾Ｂ"
				ELSE
					CALL SET_OTHER, "紫の围巾"
				ENDIF
		ENDSELECT
	ELSE
		CALL SET_SHIRT, "長連帽風衣/緑色"
		CALL SET_BOTTOM, "褲襪/赤"
	ENDIF
;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"

;朝Ｈの際に着ます
CASE "朝袭衣装"
	CALL SET_SHIRT, "宽大的Ｔ恤/青"
;夜袭Ｈの際に着ます
CASE "夜袭衣装"

ENDSELECT


;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;CALL SETFLAG, "普段の髪型復元", TARGET で変化させた髪型などを普段のものに戻すことが出来る
;-------------------------------------------------
@MAIDFACE_K73
IF TEXTS("日期対応イベント") == "新年"
	CALL SET_SHIRT, "振袖/紫"
	CALL SET_PANTIES, "兜襠布/白"
	CALL SET_BRA, "半杯胸罩/赤"
	CALL SET_SOCKS, "短布襪"
	CALL SET_SHOES, "草履"
	CALL SET_OTHER, "簪子"
ELSEIF TEXTS("日期対応イベント") == "圣诞节"
	CALL SET_SHIRT, "聖誕服/赤"
	CALL SET_PANTIES, "內褲/白"
	CALL SET_BRA, "简约胸罩/白"
	CALL SET_SOCKS, "及膝襪"
	CALL SET_SHOES, "靴"
	CALL SET_OTHER, "聖誕帽"
ELSEIF TEXTS("日期対応イベント") == "七夕"
	CALL SET_SHIRT, "浴衣/緑色"
	CALL SET_SHOES, "木屐"
ELSEIF COND("约会中")
ELSEIF PLACE("自宅") && RAND:3 == 0
	CSTR:前髪 = %TEXTR("大半遮盖３/自然刘海４/Ｍ字刘海２/乱髪２/乱髪４/交叉前发２")%
	CSTR:改髪 = %TEXTR("无特殊髪型/单辫/麻花辫２")%
ELSE
	IF COND("昼")
		CALL SETFLAG, "普段の髪型復元", TARGET
	ELSE
		CSTR:前髪 = %TEXTR("大半遮盖３/自然刘海４/Ｍ字刘海２/乱髪２/乱髪４/交叉前发２")%
		CSTR:改髪 = %TEXTR("无特殊髪型/单辫/麻花辫２")%
	ENDIF
ENDIF

