@K15_LowQualityFace(ARG:0,ARGS,ARG:1)
	#DIMS MEMO_MAIDFACE
	
	CSTR:ARG:颜绘変化 = %ARGS%
	
	;MAIDFACEを通せば颜绘変化を反映してくれるっぽい
	MEMO_MAIDFACE = %MAIDFACE(TARGET, 1)%

	CALL OVERLAY_GCREATE(MAIDEFACEID, @"%EXTSTR(MEMO_MAIDFACE, "", ",")%", ARG:1, ARG:1)

	SPRITECREATE @"颜绘{MAIDEFACEID}", MAIDEFACEID
	LOCALS += @"颜绘{MAIDEFACEID},%EXTSTR(MEMO_MAIDFACE, ",")%"

	HTML_PRINT CONVERTSTR(LOCALS)
	PRINTL 
	PRINTL 
	PRINTL 
	PRINTL 
	PRINTL 
	PRINTL 
	PRINTL 
	PRINTL 
	MAIDEFACEID += 1