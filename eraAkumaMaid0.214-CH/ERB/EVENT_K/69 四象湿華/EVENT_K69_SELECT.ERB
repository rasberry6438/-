;選択後にＨに直接移動したい場合(ここの エッチする は好きに変えてよい)
;STR:選択肢 += "エッチする/"
;選択後にターンを終了したい場合(ここの ターンを終わらせる は好きに変えてよい)
;STR:選択肢 += "ターンを終わらせる/"

;Talk指令で増やした選択肢の地の文と台詞
@KOJO_DAILY1_K69_ADDSELECT, ARGS
SELECTCASE ARGS
CASE "追加選択肢その１"
	PRINTFORMW %CALLNAME:MASTER%进行了%ARGS%。
	PRINTL 
	PRINTFORMW 「台詞」
	PRINTL 
	PRINTFORMW 受到%ARGS%的%CALLNAME:TARGET%的反应
CASE "追加選択肢之２"
	PRINTFORMW %CALLNAME:MASTER%进行了%ARGS%。
	PRINTL 
	PRINTFORMW 「台詞」
	PRINTL 
	PRINTFORMW 受到%ARGS%的%CALLNAME:TARGET%的反应
;直接Ｈしたい場合
CASE "エッチする"
	;前編
	IF CEVENTS("追加選択肢からＨ") == ""
		PRINTFORMW 接吻特
		PRINTL [0]选项1(选择这个会H)
		PRINTL [1]选项2(选择这个不会H)
		CALL SET_CEVENT, @"追加選択肢からＨ：%ARGS%"
		FLAG:SELECT_USERSHOP = 100
	ELSE
		IF TFLAG:床イン
			PRINTFORMW H时的情况展開
		ELSE
			PRINTFORMW 这边是不会H的情况展開
		ENDIF
	ENDIF
;直接结束回合したい場合
CASE "ターンを終わらせる"
	;前編
	IF CEVENTS("追加選択肢から结束回合") == ""
		PRINTFORMW 接吻特
		PRINTL [0]選択肢１(これを選ぶと结束回合します)
		PRINTL [1]選択肢２(これを選ぶと结束回合しません)
		CALL SET_CEVENT, @"追加選択肢から结束回合：%ARGS%"
		FLAG:SELECT_USERSHOP = 998
	ELSE
		IF TFLAG:结束回合
			PRINTFORMW 结束回合する場合の展開です
		ELSE
			PRINTFORMW こっちは结束回合しない場合の展開です
		ENDIF
	ENDIF

ENDSELECT

