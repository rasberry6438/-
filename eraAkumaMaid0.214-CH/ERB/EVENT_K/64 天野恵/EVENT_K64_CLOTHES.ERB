;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K64, ARGS

SELECTCASE ARGS
;角色クター独自の内衣の組み合わせを設定できます。設定必須です。一定の確率で着用します
;もしも普段は付けない、という事ならCSTR:胖次 = と等号の右側を書き込まない事で出来ます
;CFLAG:随机内衣OFF = 1とした場合には、ここで設定した内衣のみを身に着けるようになります
CASE "内衣"
	CSTR:胖次 = 低腰胖次/黒/
	CSTR:胸罩 = 抹胸/黒/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, ""

;学園での便装です。設定必須です。
;水手服, 露脐装超短裙水手服, 西装外衣, 露脐装超短裙西装外衣, 背心,美式校服、V领毛衣など
;黑色水手服を着せたい場合には CALL SET_COSTUME, "水手服/黒" のように書き込むことで色を変えることが出来ます
;また、V领毛衣に限りCALL SET_COSTUME, "V领毛衣/濃紫/萌袖"のようにして色の他に"萌袖"をオプション指定できます
;(RESOURCES→MAIDFACE→13服 フォルダ内にある MAIDFACE13.csv の該当衣装を見て色を選ばないとならないため上級者向きです)
;また、女式衬衫等の上に褲吊帯を着けたい場合には CALL SET_OTHER, "褲吊帯" として下さい
CASE "制服"
	CALL SET_SHIRT, "宽松女式衬衫"
	CALL SET_SKIRT, "迷你紧身裙/黒"
	CALL SET_PANTIES, "開放型開洞胖次/黒"
	CALL SET_BOTTOM, "開放型褲襪/黒"
	CALL SET_SHOES, "高跟鞋"
	CALL SET_OTHER, "黑框眼鏡/髪卡"

;※保健の老师が学校で体操服や泳装を着る機会は無いと思うが着て欲しいから着せた
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服布鲁马, 体操服高開衩布鲁马, 体操服五分褲, 体操服紧身短褲, 体操服运动衫など
CASE "体操服"
	CALL SET_SHIRT, "运动衫/黒"
	CALL SET_PANTIES, "高開衩布鲁马/紺色"
	CALL SET_SHOES, "運動鞋"

;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;死库水, 競泳泳装, 白比基尼, 黒比基尼など
CASE "泳装"
	CALL SET_BODYS, "競泳泳装/黒"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	SELECTCASE TEXTS("季節")
	CASE "夏"
		CALL SET_SHIRT, "吊帯衫/灰色"
		CALL SET_BOTTOM, "热褲/黒"
	CASE "冬"
		CALL SET_SHIRT, "縦毛衣/黒"
		CALL SET_BOTTOM, "牛仔褲/黒"
	CASEELSE
		CALL SET_SHIRT, "宽松女式衬衫"
		CALL SET_BOTTOM, "牛仔褲/黒"
	ENDSELECT
	CALL SET_PANTIES, TEXTR(CSTR:喜欢的胖次), TARGET

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF CFLAG:睡眠
		CALL SET_SHIRT, "晨衣/黒"
		CALL SET_PANTIES, "Micro比基尼/黒"
		CALL SET_BRA, "Micro胸罩/黒"
	ELSE
		SELECTCASE TEXTS("季節")
		CASE "夏"
			CALL SET_SHIRT, "吊帯衫/灰色"
			CALL SET_BOTTOM, "热褲/黒"
		CASE "冬"
			CALL SET_SHIRT, "縦毛衣/黒"
			CALL SET_BOTTOM, "牛仔褲/黒"
		CASEELSE
			CALL SET_SHIRT, "宽松女式衬衫"
			CALL SET_BOTTOM, "牛仔褲/黒"
		ENDSELECT
	ENDIF

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	SELECTCASE TEXTS("季節")
	CASE "夏"
		CALL SET_SHIRT, "吊帯衫/灰色"
		CALL SET_BOTTOM, "热褲/黒"
		CALL SET_SHOES, "運動鞋"
	CASE "冬"
		CALL SET_SHIRT, "縦毛衣/黒"
		CALL SET_BOTTOM, "牛仔褲/黒"
		CALL SET_SHOES, "高跟鞋"
		CALL SET_OTHER, "黑色粗呢外套"
	CASEELSE
		CALL SET_SHIRT, "宽松女式衬衫"
		CALL SET_BOTTOM, "牛仔褲/黒"
		CALL SET_SHOES, "高跟鞋"
		CALL SET_OTHER, "黑色前開V领毛衣"
	ENDSELECT

;もちろん约会の際に着ます
CASE "约会衣装"
	SELECTCASE TEXTS("季節")
	CASE "夏"
		CALL SET_SHIRT, "宽松女式衬衫"
		CALL SET_SKIRT, "迷你紧身裙/黒"
		CALL SET_BOTTOM, "褲襪/黒"
		CALL SET_SHOES, "高跟鞋"
	CASE "冬"
		CALL SET_SHIRT, "縦毛衣/黒"
		CALL SET_SKIRT, "迷你紧身裙/黒"
		CALL SET_BOTTOM, "褲襪/黒"
		CALL SET_SHOES, "高跟鞋"
		CALL SET_OTHER, "黑色粗呢外套"
	CASEELSE
		CALL SET_SHIRT, "宽松女式衬衫"
		CALL SET_SKIRT, "迷你紧身裙/黒"
		CALL SET_BOTTOM, "褲襪/黒"
		CALL SET_SHOES, "高跟鞋"
		CALL SET_OTHER, "前開V领毛衣/黒"
	ENDSELECT

;朝Ｈの際に着ます
CASE "朝袭衣装"
	IF COND("同居中")
		CALL SET_SHIRT, "晨衣/黒"
		CALL SET_PANTIES, "Micro內褲/黒"
		CALL SET_BRA, "Micro胸罩/黒"
	ELSE
		SELECTCASE TEXTS("季節")
		CASE "夏"
			CALL SET_SHIRT, "吊帯衫/灰色"
			CALL SET_BOTTOM, "热褲/黒"
			CALL SET_SHOES, "運動鞋"
		CASE "冬"
			CALL SET_SHIRT, "縦毛衣/黒"
			CALL SET_BOTTOM, "牛仔褲/黒"
			CALL SET_SHOES, "高跟鞋"
		CASEELSE
			CALL SET_SHIRT, "宽松女式衬衫"
			CALL SET_BOTTOM, "牛仔褲/黒"
			CALL SET_SHOES, "高跟鞋"
		ENDSELECT
	ENDIF
;夜袭Ｈの際に着ます
CASE "夜袭衣装"
	CALL SET_SHIRT, "晨衣/黒"
	CALL SET_PANTIES, "Micro內褲/黒"
	CALL SET_BRA, "Micro胸罩/黒"

ENDSELECT


;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;CALL SETFLAG, "普段の髪型復元", TARGET で変化させた髪型などを普段のものに戻すことが出来る
;-------------------------------------------------
@MAIDFACE_K64
IF CFLAG:髪型変更のお願い中 == 0 && PLACE("学園内")
	CSTR:改髪 = 大三股辫
ELSE
	CALL SETFLAG, "普段の髪型復元", TARGET
ENDIF
