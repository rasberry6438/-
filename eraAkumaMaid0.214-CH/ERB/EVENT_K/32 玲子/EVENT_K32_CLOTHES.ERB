;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K32, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CALL SET_PANTIES, "紐丁字褲/紫"
	CSTR:胸罩 = 半杯胸罩/紫/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での便装です。設定必須です
CASE "制服"
	IF COND("秋") + COND("冬")
		CALL SET_COSTUME, "露脐装超短裙西装外衣"
	ELSE
		CALL SET_COSTUME, "露脐装超短裙水手服"
	ENDIF
	CALL SET_SKIRT, "超露脐装超短裙"

;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服布鲁马"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("夏") + COND("秋") && RAND:2
		CALL SET_SHIRT, "运动衫"
		CALL SET_BOTTOM, "低腰牛仔褲"
		CALL SET_SHOES, "凉鞋"
	ELSEIF RAND:2
		CALL SET_SHIRT, "运动衫"
		CALL SET_BOTTOM, "运动衫休闲褲"
		CALL SET_SOCKS, "短襪"
		CALL SET_SHOES, "凉鞋"
	ELSE
		CALL SET_SHIRT, "女式衬衫"
		CALL SET_SKIRT, "紧身裙"
		CALL SET_SOCKS, "長筒襪"
		CALL SET_SHOES, "平底鞋"
	ENDIF

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF COND("冬") && PLACE("自宅")
		CALL SET_COSTUME, "上下运动衫"
		CALL SET_OTHER, "褞袍"
	ELSEIF RAND:2
		CALL SET_SHIRT, "运动衫"
		CALL SET_PANTIES, ""
	ELSE
		CALL SET_SHIRT, "宽大的Ｔ恤"
		CALL SET_BOTTOM, "紧身短褲"
		CALL SET_PANTIES, ""
		CALL SET_BRA, ""
	ENDIF

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		CALL SET_SHIRT, "针织毛衣"
		CALL SET_BOTTOM, "热褲"
		CALL SET_SOCKS, "長筒襪"
		CALL SET_SHOES, "靴"
	CASE "春"
		CALL SET_SHIRT, "露脐吊帯背心"
		CALL SET_BOTTOM, "热褲"
		CALL SET_SOCKS, "及膝襪"
		CALL SET_SHOES, "平底鞋"
	CASE "夏"
		IF RAND:2
			CALL SET_SHIRT, "露脐吊帯背心"
			CALL SET_BOTTOM, "热褲"
			CALL SET_SOCKS, "及膝襪"
			CALL SET_SHOES, "平底鞋"
		ELSE
			CALL SET_SHIRT, "夏日礼服"
			CALL SET_SOCKS, "短襪"
			CALL SET_SHOES, "凉鞋"
		ENDIF
	CASEELSE
		IF RAND:3 == 0
			CALL SET_SHIRT, "针织毛衣"
			CALL SET_BOTTOM, "热褲"
			CALL SET_SOCKS, "長筒襪"
			CALL SET_SHOES, "靴"
		ELSEIF RAND:2
			CALL SET_SHIRT, "露脐吊帯背心"
			CALL SET_BOTTOM, "热褲"
			CALL SET_SOCKS, "及膝襪"
			CALL SET_SHOES, "平底鞋"
		ELSE
			CALL SET_SHIRT, "夏日礼服"
			CALL SET_SOCKS, "短襪"
			CALL SET_SHOES, "凉鞋"
		ENDIF
	ENDSELECT
	CALL SET_PANTIES, "Ｈ的内衣"
	CALL SET_BRA, "Ｈ的胸罩"

ENDSELECT
