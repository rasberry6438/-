SIF ARG == 0
	ARG = TARGET

SELECTCASE ARGS
CASE "セット"
	SIF CFLAG:ARG:OFC
		SETCOLOR CFLAG:ARG:OFC
CASE "重置"
	SIF CFLAG:ARG:OFC
		RESETCOLOR
ENDSELECT

