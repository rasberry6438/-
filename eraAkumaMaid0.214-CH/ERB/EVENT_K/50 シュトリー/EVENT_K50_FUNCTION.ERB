		NUM_OLDER = CFLAG:(ARG:1):カ胸罩ンド_DAILY % 100
		SIF ARG == NUM_OLDER
			RETURNF 0
		CFLAG:(ARG:1):カ胸罩ンド_DAILY = 10000 + (NUM_OLDER * 100) + ARG
	ELSE
		NUM_OLDER = CFLAG:(ARG:1):カ胸罩ンド_DAILY % 100
		NUM_OLDEST = (CFLAG:(ARG:1):カ胸罩ンド_DAILY - NUM_OLDER) / 100 % 100
