;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K16, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 內褲/白/
	CSTR:胸罩 = 文胸/白/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での便装です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "水手服"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服五分褲"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF COND("冬")
		CALL SET_COSTUME, "上下运动衫"
		SIF PLACE("自宅")
			CALL SET_OTHER, "宽袖棉和服"
	ELSE
		IF RAND:2
			CALL SET_SHIRT, "花纹奇怪的T恤"
			CALL SET_BOTTOM, "五分褲"
			CALL SET_SOCKS, "短袜"
			CALL SET_SHOES, "运动鞋"
		ELSE
			CALL SET_COSTUME, "上下运动衫"
		ENDIF
	ENDIF
;自分的房間(not主人公的房間)で着ます
CASE "居家服"

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	SELECTCASE TEXTS("季節")
	CASE "夏"
		CALL SET_SHIRT, "花纹奇怪的T恤"
		CALL SET_BOTTOM, "五分褲"
		CALL SET_SHOES, "凉鞋"
	CASE "冬"
		CALL SET_SHIRT, "运动衫"
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SOCKS, "短袜"
		CALL SET_SHOES, "运动鞋"
	CASEELSE
		CALL SET_SHIRT, "花纹奇怪的T恤"
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SOCKS, "短袜"
		CALL SET_SHOES, "运动鞋"
	ENDSELECT
ENDSELECT

