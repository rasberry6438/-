			CALL SET_SOCKS, "及膝襪"
			CALL SET_PANTIES, "內褲"
			CALL SET_BRA, "简约胸罩"
		ELSEIF RAND:2
			CALL SET_SHIRT, "褶边女式衬衫"
			CALL SET_SKIRT, "迷你裙"
			CALL SET_SOCKS, "及膝襪"
			CALL SET_SHOES, "小皮靴"
			CALL SET_PANTIES, "條紋胖次"
			CALL SET_BRA, "條紋胸罩"
		ELSE
			CALL SET_SHIRT, "运动衫"
			CALL SET_BOTTOM, "运动衫休闲褲"
			CALL SET_PANTIES, "內褲"
			CALL SET_BRA, ""
		ENDIF
	ENDSELECT
