			CALL SET_SHIRT, "開胸高領毛衣"
			CALL SET_SKIRT, "開衩長裙"
			CALL SET_SOCKS, "及膝襪"
			CALL SET_PANTIES, "內褲"
			CALL SET_BRA, "简约胸罩"
