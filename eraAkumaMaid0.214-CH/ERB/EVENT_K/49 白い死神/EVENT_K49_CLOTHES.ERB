;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K49, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	IF RAND:2
		CSTR:胖次 = 繩系胖次/純白/
	ELSE
		CSTR:胖次 = 褶边の胖次/純白/正面蝴蝶結紐青/
	ENDIF
	CSTR:胸罩 = 吊帯衫/純白/汗水浸湿的/蕾丝情趣内衣/透明/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "十字架と首飾り/古びた手鏡"

;学園での便装です。設定必須です。
;水手服, 露脐装超短裙水手服, 西装外衣, 露脐装超短裙西装外衣, 美式校服など
CASE "制服"
	CSTR:服 = 女仆装にしか見えない制服/連衣裙/女仆装/黒/
	CSTR:裙 = 围裙/長/褶边/連衣裙/
	CSTR:襪子 = 吊帯襪/直到大腿/純白/
	CSTR:靴 = 小皮靴/直到脚腕/
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服布鲁马, 体操服五分褲, 体操服紧身短褲, 体操服运动衫など
CASE "体操服"
	CALL SET_COSTUME, "体操服五分褲"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;死库水, 競泳泳装, 白比基尼, 黒比基尼など
CASE "泳装"
	CALL SET_COSTUME, "白比基尼"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF DAYEV("夏服期間")
		CSTR:服 = 白色和金色装饰的民族衣装夏服/两件套/連衣裙/提起裙角/腋露出
		CSTR:裙 = 裙/連衣裙/白色和金色装饰的民族衣装/夏服/
	ELSE
		CSTR:服 = 白色和金色装饰的民族衣装/两件套/連衣裙/提起裙角
		CSTR:裙 = 裙/連衣裙/白色和金色装饰的民族衣装/
	ENDIF
	IF COND("冬")
		CALL SET_OTHER, "白金披风"
	ENDIF
	IF DAYEV("圣诞节")
		CALL SET_OTHER, "白と金の薄紗"
	ENDIF
	IF PLACE("自宅")
		CALL SET_OTHER, "忌避すべき大鎌"
	ENDIF
	CSTR:靴 = 
;自分的房間(not主人公的房間)で着ます
CASE "居家服"

CASE "兔女郎の日"
	CSTR:胸罩 = 
	CSTR:胖次 = 
	IF ABL:露出癖 >= 5 && TALENT:恋慕 && RAND:3 == 0
		CSTR:贴身制服 = 高開衩兔女郎/Ｔ字褲/漆皮/谷間露出/半杯/
	ELSE
		CSTR:贴身制服 = 兔女郎制服/Ｔ字褲/漆皮/谷間露出/半杯/
	ENDIF
	CSTR:贴身制服 += "白/"
	SIF ABL:露出癖 >= 5 && TALENT:恋慕 && RAND:3 == 0
		CSTR:贴身制服 += "帯拉链的/"
	IF RAND:3 == 0
		CSTR:下身衣装 = 网纹褲襪/不可移開/不可手交/黒/
	ELSEIF RAND:2 == 0
		CSTR:下身衣装 = 连褲襪/不可移開/不可手交/透明/黒/
	ELSE
		CSTR:下身衣装 = 褲襪/不可移開/不可手交/黒/
	ENDIF
	CALL SET_SHOES, "高跟鞋"
	CSTR:飾品 += "蝶形領帯/兔耳/" 
CASE "新年"
	CSTR:服 = 白色和金色装饰的民族衣装/两件套/連衣裙/提起裙角
	CSTR:裙 = 裙/連衣裙/白色和金色装饰的民族衣装/
	CALL SET_OTHER, "白金披风/白と金の薄紗"
CASE "七夕"
	CALL SET_COSTUME, "浴衣/赤"

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	ARGS = 便装
	RESTART
;もちろん约会の際に着ます
CASE "约会衣装"
	IF RAND:3 == 0
		IF DAYEV("夏服期間")
			CSTR:服 = 白色和金色装饰的民族衣装夏服/两件套/連衣裙/提起裙角/腋露出
			CSTR:裙 = 裙/連衣裙/白色和金色装饰的民族衣装/夏服/
		ELSE
			CSTR:服 = 白色和金色装饰的民族衣装/两件套/連衣裙/提起裙角
			CSTR:裙 = 裙/連衣裙/白色和金色装饰的民族衣装/
		ENDIF
		IF COND("冬")
			CALL SET_OTHER, "白金披风"
		ENDIF
	ELSE
		IF COND("夏")
			IF RAND:4 == 0
				CALL SET_SHIRT, "夏日礼服/白"
			ELSEIF RAND:3 == 0
				CSTR:16:服 = 无袖連帽風衣/提起裙角/連衣裙/長連帽風衣/腋露出/白/共通属性追加済/
			ELSEIF RAND:2 == 0
				CALL SET_SHIRT, "无袖高領毛衣/焦茶色"
			ELSE
				CALL SET_SHIRT, "露肩外衣/白"
			ENDIF
			CALL SET_BOTTOM, "热褲/白"
			CALL SET_SHOES, "无后跟鞋"
			CSTR:改髪 = 编起来
		ELSEIF COND("春") || COND("秋")
			IF RAND:3 == 0
				CALL SET_SHIRT, "露肩連衣裙/白"
			ELSE
				IF RAND:4 == 0
					CSTR:16:服 = 无袖女式衬衫/无袖女式衬衫Ｂ/汗水浸湿的/腋露出/白/共通属性追加済/
				ELSEIF RAND:3 == 0
					CALL SET_SHIRT, "无袖高領毛衣/焦茶色"
				ELSEIF RAND:2 == 0
					CALL SET_SHIRT, "无袖毛衣/白"
				ELSE
					CALL SET_SHIRT, "露肩外衣/白"
				ENDIF
				CALL SET_BOTTOM, "低腰牛仔褲/黒"
			ENDIF
			CALL SET_OTHER, "露肩夹克/黒"
			CALL SET_SHOES, "平底鞋"
			IF CFLAG:髪型変更のお願い中 == 0 && RAND:2
				CSTR:後髪 = 卷髪
				CSTR:改髪 = 侧盘頭
			ENDIF
		ELSE
			IF RAND:3 == 0
				CALL SET_SHIRT, "褶边連衣裙/赤"
			ELSE
				IF  RAND:2 == 0
					CALL SET_SHIRT, "露肩外衣/白"
				ELSE
					CALL SET_SHIRT, "针织毛衣/白"
				ENDIF
				CALL SET_BOTTOM, "低腰牛仔褲/黒"
			ENDIF
			CALL SET_OTHER, "露肩夹克/黒"
			CALL SET_SHOES, "平底鞋"
			IF CFLAG:髪型変更のお願い中 == 0 && RAND:2
				CSTR:後髪 = 卷髪
				CSTR:改髪 = 侧盘頭
			ENDIF
		ENDIF
	ENDIF
ENDSELECT


;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K49
IF PLACE("自宅")
	IF DAYEV("夏服期間")
		CSTR:後髪 = 自然
		CSTR:改髪 = 麻花辫２
