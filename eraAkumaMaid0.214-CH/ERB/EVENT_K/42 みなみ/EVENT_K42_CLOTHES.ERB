;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K42, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	IF TALENT:淫乱 && TALENT:恋慕 && ABL:露出癖 >= 5 && RAND:10 >= 8
		CSTR:胖次 = Ｈ的内衣/淡色/
		CSTR:胸罩 = 文胸/淡色/
	ELSEIF TALENT:恋慕
		CSTR:胖次 = 褶边の胖次/純白/
		CSTR:胸罩 = 褶边の胸罩/純白/
	ELSE
		CSTR:胖次 = 褶边の胖次/淡色/
		CSTR:胸罩 = 褶边の胸罩/淡色/
	ENDIF

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での便装です。設定必須です
CASE "制服"
	IF COND("夏")
		CALL SET_COSTUME, "露脐装超短裙西装外衣"
	ELSE
		CALL SET_COSTUME, "西装外衣"
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服紧身短褲"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		CALL SET_SHIRT, "针织毛衣"
		CALL SET_SKIRT, "刺绣長裙"
		CALL SET_BOTTOM, "连褲襪"
		CALL SET_SHOES, "小皮靴"
	CASE "秋"
		IF RAND:2
			CALL SET_SHIRT, "针织毛衣"
			CALL SET_SKIRT, "刺绣長裙"
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_SHOES, "小皮靴"
		ELSE
			CALL SET_SHIRT, "宽松女式衬衫"
			CALL SET_SKIRT, "刺绣長裙"
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_SHOES, "小皮靴"
		ENDIF
	CASE "夏"
			CALL SET_SHIRT, "无袖女式衬衫"
			CALL SET_SKIRT, "百褶裙"
			CALL SET_BOTTOM, "紧身短褲"
			CALL SET_SHOES, "小皮靴"
	CASEELSE
		IF RAND:2
			CALL SET_SHIRT, "无袖女式衬衫"
			CALL SET_SKIRT, "百褶裙"
			CALL SET_BOTTOM, "紧身短褲"
			CALL SET_SHOES, "小皮靴"
		ELSE
			CALL SET_SHIRT, "蝴蝶結女式衬衫"
			CALL SET_SKIRT, "刺绣長裙"
			CALL SET_BOTTOM, "连褲襪"
			CALL SET_SHOES, "小皮靴"
		ENDIF
	ENDSELECT
	CALL SET_PANTIES, "蕾丝的胖次"
	CALL SET_BRA, "蕾丝胸罩"

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF COND("夏")
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_SKIRT, "百褶迷你裙"
		;夏で露出癖5以上かつ淫乱＆恋慕だと20％の確率で没穿内褲无胸罩
		IF TALENT:淫乱 && TALENT:恋慕 && ABL:露出癖 >= 5 && RAND:10 >= 8
			CALL SET_PANTIES, ""
			CALL SET_BRA, ""
		ELSE
			CSTR:胖次 = 褶边の胖次/淡色/
			CSTR:胸罩 = 褶边の胸罩/淡色/
		ENDIF
	ELSE
		CALL SET_SHIRT, "露背针织毛衣"
		;CALL SET_SKIRT, "百褶迷你裙"
		CSTR:胖次 = 褶边の胖次/淡色/
		CSTR:胸罩 = 褶边の胸罩/淡色/
	ENDIF

;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	IF COND("夏")
		CALL SET_SHIRT, "洛丽塔連衣裙"
		CALL SET_BOTTOM, "褲裙"
		CALL SET_SHOES, "无后跟鞋"
		CALL SET_PANTIES, "褶边の胖次"
		CALL SET_BRA, "褶边の胸罩"
	ELSE
		CALL SET_SHIRT, "哥特蘿莉礼服"
		CALL SET_SOCKS, "高筒襪"
		CALL SET_SHOES, "平底鞋"
		CALL SET_PANTIES, "蕾丝的胖次"
		CALL SET_BRA, "蕾丝胸罩"
	ENDIF

ENDSELECT


