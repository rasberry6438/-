;-------------------------------------------------
;喘息生成
; 通用喘息：姆、嗯、唔、哈、哼、呜、呼~
; 亲吻专用：啾、啵、嘶噜、呸咯
; 正事专用：哦、咿~、喔喔
;-------------------------------------------------
@KOJO_K10_RAND_VOICE
#DIM VTIME
#DIM POI
LOCAL = 0
LOCALS = 
IF FLAG:情緒>= 150
	LOCAL = 5
ELSEIF FLAG:情緒>= 120 || (FLAG:情緒>= 90 && FLAG:情緒>= RAND:180)
	LOCAL = 4
ELSEIF FLAG:情緒>= 90 || (FLAG:情緒>= 60 && FLAG:情緒>= RAND:180)
	LOCAL = 3
ELSEIF FLAG:情緒>= 60 || (FLAG:情緒>= 30 && FLAG:情緒>= RAND:180)
	LOCAL = 2
ELSE
	LOCAL = 1
ENDIF
IF INSERT("挿入")
	FOR VTIME,0,LOCAL
		IF RAND:11 < 8
			LOCALS = %LOCALS%%TEXTR("姆/嗯/呜/唔/哈/哼/哦/哼呜/嗯唔/唔嗯/哈唔/喔喔")%
			POI = 1
		ELSE
			LOCALS = %LOCALS%%TEXTR("咿/呼")%
			POI = 2
		ENDIF
		IF VTIME < LOCAL-1 && POI < 2
			LOCALS = %LOCALS%、
		ELSE
			LOCALS = %LOCALS%~
		ENDIF
	NEXT
ELSE
	FOR VTIME,0,LOCAL
		IF RAND:11 < 7
			LOCALS = %LOCALS%%TEXTR("姆/嗯/呜/唔/哈/哼/哼呜/嘶噜/嗯唔/呸咯/呼唔")%
			POI = 1
		ELSE
			LOCALS = %LOCALS%%TEXTR("啾/啵/呼")%
			POI = 2
		ENDIF
		IF VTIME < LOCAL-1 && POI < 2
			LOCALS = %LOCALS%、
		ELSE
			LOCALS = %LOCALS%~
		ENDIF
	NEXT
ENDIF
CALL PRINT_STR, @"「%LOCALS%_HH_」_W"
RETURN 1