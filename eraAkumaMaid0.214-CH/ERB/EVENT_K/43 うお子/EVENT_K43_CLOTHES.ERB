	CALL SETFLAG, "普段の髪型復元", TARGET
ELSEIF PLACE("自宅")
	IF COND("周日")
		CSTR:改髪 = 无特殊髪型
	ELSE
		CALL SETFLAG, "普段の髪型復元", TARGET
	ENDIF
ELSE
	CALL SETFLAG, "普段の髪型復元", TARGET
ENDIF
