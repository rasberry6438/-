;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K43, ARGS

SELECTCASE ARGS
;角色クター独自の内衣の組み合わせを設定できます。設定必須です。一定の確率で着用します
;もしも普段は付けない、という事ならCSTR:胖次 = と等号の右側を書き込まない事で出来ます
;CFLAG:随机内衣OFF = 1とした場合には、ここで設定した内衣のみを身に着けるようになります
CASE "内衣"
	IF MARK:屈服刻印 >= 3 && COND("合意：检查阴部") && RAND:4 == 0
		CALL SET_PANTIES, "開放型開洞胖次/黒"
		CALL SET_BRA, "開放型胸罩/黒"
	ELSEIF MARK:屈服刻印 >= 2 && RAND:3 == 0
		LOCALS = %TEXTR("黒/青/豹纹")%
		CALL SET_PANTIES, @"Micro比基尼/%LOCALS%"
		CALL SET_BRA, @"Micro胸罩/%LOCALS%"
	ELSEIF MARK:屈服刻印 >= 1 && RAND:2
		LOCALS = %TEXTR("黒/青/黄色/豹纹")%
		CALL SET_PANTIES, @"紐丁字褲/%LOCALS%"
		CALL SET_BRA, @"半杯胸罩/%LOCALS%"
	ELSEIF RAND:2
		LOCALS = %TEXTR("黄色/黒/純白")%
		CALL SET_PANTIES, @"蕾丝的胖次/%LOCALS%"
		CALL SET_BRA, @"蕾丝胸罩/%LOCALS%"
	ELSE
		CALL SET_PANTIES, "條紋胖次/青白"
		CALL SET_BRA, "條紋胸罩/青白"
	ENDIF
;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, ""

;学園での便装です。設定必須です。
;水手服, 露脐装超短裙水手服, 西装外衣, 露脐装超短裙西装外衣, 背心,美式校服、V领毛衣など
;黑色水手服を着せたい場合には CALL SET_COSTUME, "水手服/黒" のように書き込むことで色を変えることが出来ます
;また、V领毛衣に限りCALL SET_COSTUME, "V领毛衣/濃紫/萌袖"のようにして色の他に"萌袖"をオプション指定できます
;(RESOURCES→MAIDFACE→13服 フォルダ内にある MAIDFACE13.csv の該当衣装を見て色を選ばないとならないため上級者向きです)
;また、女式衬衫等の上に褲吊帯を着けたい場合には CALL SET_OTHER, "褲吊帯" として下さい
CASE "制服", "便装"
	SELECTCASE TEXTS("季節")
	CASE "春", "秋"
		CALL SET_COSTUME, "露脐装超短裙領帯女式衬衫/赤"
	CASE "夏"
		IF ABL:露出癖 >= 7
			CALL SET_COSTUME, "超短迷你宽松女式衬衫"
		ELSE
			CALL SET_COSTUME, "露脐装超短裙宽松女式衬衫"
		ENDIF
	CASEELSE
		CALL SET_COSTUME, "露脐装超短裙領帶西装/青"
	ENDSELECT
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服布鲁马, 体操服高開衩布鲁马, 体操服五分褲, 体操服紧身短褲, 体操服运动衫など
CASE "体操服"
	CALL SET_COSTUME, "体操服布鲁马/赤"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;死库水, 競泳泳装, 白比基尼, 黒比基尼など
CASE "泳装"
	CALL SET_COSTUME, "高開衩競泳泳装/黒"

;自宅など学園外で着ます。設定必須です
;CASE "便装"


;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	CALL SET_SHIRT, "怪图案Ｔ恤/白"
	CALL SET_BOTTOM, "热褲"
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	SELECTCASE TEXTS("季節")
	CASE "春"
		CALL SET_SHIRT, "无袖女式衬衫/Ｂ"
		CALL SET_BOTTOM, "热褲"
		CALL SET_SHOES, "凉鞋"
	CASE "夏"
		CALL SET_SHIRT, @"吊帯衫/%TEXTR("黄色/黒")%"
		CALL SET_BOTTOM, "迷你热褲"
		CALL SET_SHOES, "凉鞋"
	CASE "秋"
		CALL SET_SHIRT, "无袖女式衬衫/Ｂ"
		CALL SET_BOTTOM, "低腰牛仔褲"
		CALL SET_SHOES, "凉鞋"
	CASEELSE
		CALL SET_SHIRT, "针织毛衣/茶色"
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SHOES, "運動鞋"
	ENDSELECT
;もちろん约会の際に着ます
CASE "约会衣装"
	SELECTCASE TEXTS("季節")
	CASE "春", "秋"
		CALL SET_SHIRT, "无袖女式衬衫/Ｂ"
		CALL SET_BOTTOM, "低腰牛仔褲"
		CALL SET_SHOES, "凉鞋"
	CASE "夏"
		CALL SET_SHIRT, @"吊帯衫/%TEXTR("黄色/黒")%"
		CALL SET_BOTTOM, "热褲"
		CALL SET_SHOES, "凉鞋"
	CASEELSE
		CALL SET_SHIRT, "针织毛衣/茶色"
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SHOES, "運動鞋"
	ENDSELECT
;朝Ｈの際に着ます
CASE "朝袭衣装"
	IF COND("同居中")

	ELSE

	ENDIF
;夜袭Ｈの際に着ます
CASE "夜袭衣装"

ENDSELECT


