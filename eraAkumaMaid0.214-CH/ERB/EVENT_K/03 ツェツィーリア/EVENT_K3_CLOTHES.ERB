;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K3, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 低腰胖次/薄桃色/
	CSTR:胸罩 = 褶边の胸罩/薄桃色/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"

;学園での便装です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "水手服"
	CALL SET_OTHER, "魔女の帽子"

	SELECTCASE TEXTS("季節")
	CASE "冬"
		CALL SET_BOTTOM, "连褲襪"
		CALL SET_GLOVE, "絲綢手套"
	CASEELSE
		CALL SET_SOCKS, "简约短襪"
	ENDSELECT

;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服五分褲"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "白比基尼"

;自宅など学園外で着ます。設定必須です
CASE "便装", "居家服"
	IF TALENT:恋慕 && COND("周六") + COND("周日")
		SELECTCASE TEXTS("季節")
		CASE "春", "夏"
			CALL SET_SHIRT, "哥特連衣裙"
			CALL SET_SOCKS, "褶边襪"
			CALL SET_SHOES, "平底鞋"
			CALL SET_OTHER, "褶边領帯"
		CASEELSE
			CALL SET_SHIRT, "褶边女式衬衫"
			CALL SET_SKIRT, "帯裙撑的蓬蓬裙"
			CALL SET_SOCKS, "吊帯長筒襪"
			CALL SET_SHOES, "短靴"
			CALL SET_GLOVE, "礼服手套"
			CALL SET_OTHER, "半遮帽/披风"
		ENDSELECT
	ELSE
		CALL CLOTHES_K3, "制服"
	ENDIF

	IF ARGS == "居家服"
		IF TALENT:恋慕 && COND("欲求不満") >= 2
			CALL SET_PANTIES, "Ｈ的内衣"
			CALL SET_BRA, "Ｈ的胸罩"
		ENDIF
	ENDIF
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	SELECTCASE TEXTS("季節")
	CASE "春", "夏"
		CALL SET_SHIRT, "露脐吊帯背心"
		CALL SET_BOTTOM, "迷你短褲/青"
		CALL SET_SHOES, "凉鞋"
		CALL SET_PANTIES, "Ｈ的内衣"
		CALL SET_BRA, "Ｈ的胸罩"
	CASEELSE
		CALL SET_SHIRT, "短外套"
		CALL SET_SKIRT, "紧身迷你裙"
		CALL SET_SHOES, "長靴"
		CALL SET_OTHER, "围巾"
		CALL SET_PANTIES, "Ｈ的内衣"
		CALL SET_BRA, "Ｈ的胸罩"
	ENDSELECT
	
;朝Ｈの際に着ます
CASE "朝袭衣装"
	IF COND("同居中")

	ELSE

	ENDIF
;夜袭Ｈの際に着ます
CASE "夜袭衣装"
	CALL SET_SHIRT, "情趣内衣"


ENDSELECT
