;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K11, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = Ｔ字褲/緑色/
	CSTR:胸罩 = 半杯胸罩/薄緑/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "眼鏡"

;学園での便装です。設定必須です
CASE "制服"
	CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
	CALL SET_SHOES, "短靴"
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服布鲁马"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "競泳泳装"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	SELECTCASE TEXTS("季節")
	CASE "夏", "冬"
		CALL SET_SHIRT, "開胸高領毛衣"
		CALL SET_BOTTOM, "热褲"
		CALL SET_SOCKS, "短袜"
		CALL SET_SHOES, "凉鞋"
		CALL SET_PANTIES, "Ｈ的内衣"
		CALL SET_BRA, "胸垫"
	CASE "秋"
		IF RAND:3 == 0
			CALL SET_SHIRT, "露背毛衣"
			CALL SET_BOTTOM, "低腰牛仔褲"
			CALL SET_SOCKS, "过膝长袜"
			CALL SET_SHOES, "靴"
		ELSEIF RAND:2
			CALL SET_SHIRT, "针织毛衣"
			CALL SET_SKIRT, "超露脐装超短裙"
			CALL SET_BOTTOM, "開放型连褲襪"
			CALL SET_SHOES, "長靴"
		ELSE
			CALL SET_SHIRT, "无袖女式衬衫"
			CALL SET_BOTTOM, "热褲"
			CALL SET_SOCKS, "网纹長筒襪"
			CALL SET_SHOES, "短靴"
		ENDIF
		CALL SET_PANTIES, "Ｈ的内衣"
		CALL SET_BRA, "Ｈ的胸罩"
	CASEELSE
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_BOTTOM, "热褲"
		CALL SET_SOCKS, "网纹長筒襪"
		CALL SET_SHOES, "短靴"
		CALL SET_PANTIES, "Ｈ的内衣"
		CALL SET_BRA, "Ｈ的胸罩"
	ENDSELECT
;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	SELECTCASE TEXTS("季節")
	CASE "春", "夏", "秋"
		CALL SET_SHIRT, "情趣内衣"
		CALL SET_PANTIES, "Ｈ的内衣"
		CALL SET_BRA, "Ｈ的胸罩"
	CASEELSE
		CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
		CALL SET_SHOES, "短靴"
		CALL SET_PANTIES, "透明胖次"
		CALL SET_BRA, "半杯胸罩"
	ENDSELECT
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"

;もちろん约会の際に着ます
CASE "约会衣装"
	SELECTCASE TEXTS("季節")
	CASE "秋", "冬"
		CALL SET_SHIRT, "针织毛衣"
		CALL SET_SKIRT, "長裙"
		CALL SET_SOCKS, "吊帯長筒襪"
		CALL SET_SHOES, "長靴"
		CALL SET_PANTIES, "Ｈ的内衣"
		CALL SET_BRA, "Ｈ的胸罩"
	CASE "夏"
		IF RAND:2
			CALL SET_SHIRT, "露脐吊帯背心"
			CALL SET_BOTTOM, "热褲"
			CALL SET_SOCKS, "短袜"
			CALL SET_SHOES, "短靴"
			CALL SET_PANTIES, "高開衩胖次"
			CALL SET_BRA, "Ｈ的胸罩"
		ELSE
			CALL SET_SHIRT, "夏日礼服"
			CALL SET_SOCKS, "吊帯長筒襪"
			CALL SET_SHOES, "凉鞋"
			CALL SET_PANTIES, "高開衩胖次"
			CALL SET_BRA, "Ｈ的胸罩"
		ENDIF
	CASEELSE
		CALL SET_SHIRT, "女式衬衫"
		CALL SET_SKIRT, "迷你裙"
		CALL SET_SOCKS, "膝下襪"
		CALL SET_SHOES, "平底鞋"
		CALL SET_PANTIES, "Ｈ的内衣"
		CALL SET_BRA, "Ｈ的胸罩"
	ENDSELECT
ENDSELECT
