;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K25, ARGS

SELECTCASE ARGS
;高めの頻度で着用します。設定しなくてもかまいません
CASE "内衣"
	CSTR:胖次 = 三角胖次/黒/
	CSTR:胸罩 = Micro胸罩/黒/

;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CSTR:飾品 = 

;学園での便装です。設定必須です
CASE "制服"
	IF DAYEV("万圣节", "游戏内")
		IF CEVENT("乃々：男装")
			;万圣节時男装は中世の庶民風のCosplay
			CALL SET_SHIRT, "中世紧身長袍"
			CALL SET_BOTTOM, "休闲褲"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "靴"
		ELSE
			;女装時は……随机な何か着せる
			SELECTCASE RAND:7
			CASE 0
				IF YOKUBO() && RAND:2
					CALL SET_COSTUME, "拘束衣"
				ELSE
					CALL SET_COSTUME, "女教師"
				ENDIF
			CASE 1
				IF YOKUBO() && RAND:2
					CALL SET_COSTUME, "猫内衣"
				ELSE
					CALL SET_COSTUME, "兔女郎制服"
				ENDIF
			CASE 2
				IF YOKUBO() && RAND:2
					CALL SET_COSTUME, "体操服高開衩布鲁马"
				ELSE
					CALL SET_COSTUME, "啦啦队制服"
				ENDIF
			CASE 3
				CALL SET_COSTUME, "旗袍"
			CASE 4
				CALL SET_COSTUME, "护士"
			CASE 5
				IF YOKUBO() && RAND:2
					CALL SET_COSTUME, "法式女仆装"
				ELSE
					CALL SET_COSTUME, "女仆装"
				ENDIF
			ENDSELECT
		ENDIF
		CFLAG:Cosplay中 = 1
	ELSE
		;男装のお願いをしている場合
		IF CEVENT("乃々：男装")
			;校服は一時封印
			;CALL SET_COSTUME, TEXTR("男子西装/校服")
			CALL SET_COSTUME, "男子西装"
			;冬以外は随机で半休闲褲
			SIF COND("冬") == 0 && RAND:3 == 0
				CALL SET_BOTTOM, "五分褲"
			;内衣を男性用のものに替える
			IF YOKUBO(TARGET) && RAND:2
				;ここは随机で女の子のもののままとそうでない場合に分かれるように
				;こちらを進んだらとりあえず飛ばしておく
			ELSE
				CALL SET_PANTIES, "鬥士胖次"
				CALL SET_BRA, ""
			ENDIF
		ELSE
			CALL SET_COSTUME, "露脐装超短裙西装外衣"
			CALL SET_BOTTOM, "黑色连褲襪"
		ENDIF
	ENDIF

;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "体操服"
	CALL SET_COSTUME, "体操服紧身短褲"
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
CASE "泳装"
	CALL SET_COSTUME, "死库水"

;自宅など学園外で着ます。設定必須です
CASE "便装"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		CALL SET_SHIRT, "西装外衣"
		CALL SET_BOTTOM, "休闲褲"
		CALL SET_SOCKS, "膝下襪"
		CALL SET_SHOES, "長靴"
		CALL SET_GLOVE, "皮革袖套"
	CASE "秋"
		CALL SET_SHIRT, "紧身長袍"
		CALL SET_BOTTOM, "褲裙"
		CALL SET_SOCKS, "長筒襪"
		CALL SET_SHOES, "芭蕾舞鞋"
	CASE "夏"
		CALL SET_SHIRT, "Ｔ恤"
		CALL SET_SKIRT, "百褶迷你裙"
		CALL SET_SHOES, "凉鞋"
	CASEELSE
		CALL SET_SHIRT, "无袖女式衬衫"
		CALL SET_SKIRT, "Micro格子裙"
		CALL SET_SOCKS, "褶边襪"
		CALL SET_SHOES, "平底鞋"
	ENDSELECT

;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF CEVENT("乃々：服追加") && RAND:2
		CALL SET_SHIRT, "情趣内衣"
		CALL SET_OTHER, "蝴蝶結"
		CALL SET_BRA, ""
	ELSEIF COND("夏")
		CALL SET_SHIRT, "宽大的Ｔ恤"
	ELSE
		CALL SET_SHIRT, "衬衫"
		CALL SET_BOTTOM, "五分褲"
		CALL SET_PANTIES, "鬥士胖次"
		CALL SET_BRA, ""
	ENDIF
	SIF COND("髪型変更可能")
		CSTR:前髪 = 单眼遮盖
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		IF CEVENT("乃々：男装")
			CALL SET_SHIRT, "针织毛衣"
			CALL SET_PANTIES, "鬥士胖次"
			CALL SET_BRA, ""
		ELSEIF YOKUBO() && RAND:2
			CALL SET_SHIRT, "露背针织毛衣"
		ELSE
			CALL SET_SHIRT, "萌袖毛衣"
		ENDIF
		CALL SET_BOTTOM, "牛仔褲"
		CALL SET_SOCKS, "襪子"
		CALL SET_SHOES, "莫卡辛软皮鞋"
		SIF RAND:2
			CALL SET_OTHER, "围巾"
	CASE "夏"
		IF CEVENT("乃々：男装")
			CALL SET_SHIRT, "Ｔ恤"
			CALL SET_BOTTOM, "西褲"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "運動鞋"
			CALL SET_PANTIES, "鬥士胖次"
			CALL SET_BRA, ""
		ELSE
			IF RAND:2
				IF RAND:2
					CALL SET_SHIRT, "后背蝴蝶結切驳服"
				ELSE
					CALL SET_SHIRT, "无袖女式衬衫"
				ENDIF
				CALL SET_SKIRT, "長裙"
			ELSE
				CALL SET_SHIRT, "夏日礼服"
			ENDIF
			IF RAND:2
				CALL SET_SHOES, "凉鞋"
			ELSE
				CALL SET_SHOES, "无后跟鞋"
			ENDIF
		ENDIF
	CASEELSE
		IF CEVENT("乃々：男装")
			CALL SET_SHIRT, "切驳服"
			CALL SET_BOTTOM, "五分褲"
			CALL SET_SOCKS, "襪子"
			IF RAND:2
				CALL SET_SHOES, "靴"
			ELSE
				CALL SET_SHOES, "運動鞋"
			ENDIF
			IF YOKUBO() == 0 || RAND:2
				CALL SET_PANTIES, "鬥士胖次"
				CALL SET_BRA, ""
			ENDIF
		ELSE
			CALL SET_SHIRT, "褶边女式衬衫"
			CALL SET_SKIRT, "Micro裙"
			CALL SET_BOTTOM, "黑色连褲襪"
			CALL SET_SHOES, "无后跟鞋"
		ENDIF
	ENDSELECT

;もちろん约会の際に着ます
CASE "约会衣装"
	SELECTCASE TEXTS("季節")
	CASE "冬"
		IF CEVENT("乃々：男装")
			CALL SET_SHIRT, "Ｔ恤"
			CALL SET_BOTTOM, "休闲褲"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "靴"
			CALL SET_OTHER, "羽绒夹克"
			CALL SET_PANTIES, "鬥士胖次"
			CALL SET_BRA, ""
		ELSE
			CALL SET_SHIRT, "紧身長袍"
			CALL SET_BOTTOM, "休闲褲"
			CALL SET_SOCKS, "膝下襪"
			CALL SET_SHOES, "莫卡辛软皮鞋"
			CALL SET_OTHER, "披风外套"
			CALL SET_PANTIES, "開放型開洞胖次"
			CALL SET_BRA, "透明胸罩"
		ENDIF
	CASE "秋"
		IF CEVENT("乃々：男装")
			CALL SET_SHIRT, "Ｔ恤"
			CALL SET_BOTTOM, "牛仔褲"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "靴"
			CALL SET_OTHER, "連帽風衣"
			CALL SET_PANTIES, "鬥士胖次"
			CALL SET_BRA, ""
		ELSE
			CALL SET_SHIRT, "宽松女式衬衫"
			CALL SET_SKIRT, "百褶迷你裙"
			CALL SET_BOTTOM, "黑色连褲襪"
			CALL SET_SHOES, "高跟鞋"
		ENDIF
	CASE "夏"
		IF CEVENT("乃々：男装")
			CALL SET_SHIRT, "衬衫"
			CALL SET_BOTTOM, "五分褲"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "靴"
			CALL SET_OTHER, "太阳鏡"
			CALL SET_PANTIES, "鬥士胖次"
			CALL SET_BRA, ""
		ELSE
			IF RAND:2
				CALL SET_SHIRT, "无袖女式衬衫"
				CALL SET_BOTTOM, "短褲"
				CALL SET_SHOES, "无后跟鞋"
			ELSE
				CALL SET_SHIRT, "紧身長袍"
				CALL SET_BOTTOM, "热褲"
				CALL SET_SOCKS, "長筒襪"
				CALL SET_SHOES, "无后跟鞋"
				CALL SET_PANTIES, "紐丁字褲"
				CALL SET_BRA, "Micro比基尼胸罩"
			ENDIF
		ENDIF
	CASEELSE
		IF CEVENT("乃々：男装")
			CALL SET_SHIRT, "衬衫"
			CALL SET_BOTTOM, "休闲褲"
			CALL SET_SOCKS, "襪子"
			CALL SET_SHOES, "運動鞋"
			CALL SET_PANTIES, "鬥士胖次"
			CALL SET_BRA, ""
		ELSE
			IF RAND:2
				CALL SET_SHIRT, "宽松女式衬衫"
				CALL SET_SKIRT, "百褶迷你裙"
				CALL SET_BOTTOM, "黑色连褲襪"
				CALL SET_SHOES, "高跟鞋"
			ELSE
				CALL SET_SHIRT, "无袖女式衬衫"
				CALL SET_BOTTOM, "短褲"
				CALL SET_SHOES, "无后跟鞋"
			ENDIF
		ENDIF
	ENDSELECT

ENDSELECT


;-------------------------------------------------
;時間帯や場所に応じた髪型、表情の変化を記述する。設定しなくてもかまいません
;-------------------------------------------------
@MAIDFACE_K25
CALL SETFLAG, "普段の髪型復元", TARGET
IF CEVENT("乃々：男装")
	CSTR:改髪 = 单辫
ELSE
	CSTR:改髪 = 无特殊髪型
ENDIF
