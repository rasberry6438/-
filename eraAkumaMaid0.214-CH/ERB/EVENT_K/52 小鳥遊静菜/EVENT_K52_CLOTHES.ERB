;-------------------------------------------------
;この角色独自の衣装を設定する。制服、体操服、泳装は既存のものから選ぶのが楽です
;-------------------------------------------------
@CLOTHES_K52, ARGS

SELECTCASE ARGS
;角色クター独自の内衣の組み合わせを設定できます。設定必須です。一定の確率で着用します。
;もしも普段は付けない、という事ならCSTR:胖次 = と等号の右側を書き込まない事で出来ます。
CASE "内衣"

	IF CFLAG:エッチな内衣着用 == 1
		IF RAND:5 == 0
			CALL SET_PANTIES, "丁字褲/黒"
		ELSEIF RAND:4 == 0
			CALL SET_PANTIES, "Micro內褲/Ｈ的颜色"
		ELSEIF RAND:3 == 0
			CALL SET_PANTIES, "蕾丝的胖次/Ｈ的颜色"
		ELSEIF RAND:2
			CALL SET_PANTIES, "紐丁字褲/Ｈ的颜色"
		ENDIF
		IF RAND:3 == 0
			CSTR:胸罩 = ３／４杯胸罩/Ｈ的颜色/
		ELSEIF RAND:2 == 0
			CSTR:胸罩 = 半杯胸罩/Ｈ的颜色/
		ELSE
			CSTR:胸罩 = 蕾丝胸罩/Ｈ的颜色/透明/
		ENDIF
	ELSE
		CSTR:胖次 = 內褲/Ｈ的颜色/简约/
		CSTR:胸罩 = 简约胸罩/Ｈ的颜色/
	ENDIF


;衣装に関わらず常に付けている飾品です。設定しなくてもかまいません
CASE "飾品"
	CALL SET_OTHER, "眼鏡"

;学園での便装です。設定必須です。
;水手服, 露脐装超短裙水手服, 西装外衣, 露脐装超短裙西装外衣, 美式校服など
CASE "制服"
	IF RAND:2 == 0
		CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "无袖女式衬衫"
		ELSE
			CALL SET_SHIRT, "宽松女式衬衫"
		ENDIF
		CALL SET_SKIRT, "紧身裙"
		IF COND("秋") || COND("冬")
			CALL SET_BOTTOM, "连褲襪"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "長筒襪"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "网纹長筒襪"
			ELSE
				CALL SET_SOCKS, "吊帯長筒襪"
			ENDIF
		ENDIF
		CALL SET_SHOES, "高跟鞋"
		IF RAND:2 == 0
			CALL SET_OTHER, "蝴蝶結領帯丝巾"
		ELSE
			CALL SET_OTHER, "褶边領帯"
		ENDIF
	ENDIF
;学園の体育の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;体操服布鲁马, 体操服高開衩布鲁马, 体操服五分褲, 体操服紧身短褲, 体操服运动衫など
CASE "体操服"
	IF RAND:2 == 0
		CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "无袖女式衬衫"
		ELSE
			CALL SET_SHIRT, "宽松女式衬衫"
		ENDIF
		CALL SET_SKIRT, "紧身裙"
		IF COND("秋") || COND("冬")
			CALL SET_BOTTOM, "连褲襪"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "長筒襪"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "网纹長筒襪"
			ELSE
				CALL SET_SOCKS, "吊帯長筒襪"
			ENDIF
		ENDIF
		CALL SET_SHOES, "高跟鞋"
		IF RAND:2 == 0
			CALL SET_OTHER, "蝴蝶結領帯丝巾"
		ELSE
			CALL SET_OTHER, "褶边領帯"
		ENDIF
	ENDIF
;学園の水泳の授業で着ます。この格好のまま部室に現れたりもする。設定必須です
;死库水, 競泳泳装, 白比基尼, 黒比基尼など
CASE "泳装"
	IF RAND:2 == 0
		CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "无袖女式衬衫"
		ELSE
			CALL SET_SHIRT, "宽松女式衬衫"
		ENDIF
		CALL SET_SKIRT, "紧身裙"
		IF COND("秋") || COND("冬")
			CALL SET_BOTTOM, "连褲襪"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "長筒襪"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "网纹長筒襪"
			ELSE
				CALL SET_SOCKS, "吊帯長筒襪"
			ENDIF
		ENDIF
		CALL SET_SHOES, "高跟鞋"
		IF RAND:2 == 0
			CALL SET_OTHER, "蝴蝶結領帯丝巾"
		ELSE
			CALL SET_OTHER, "褶边領帯"
		ENDIF
	ENDIF

;自宅など学園外で着ます。設定必須です
CASE "便装"
	IF RAND:2 == 0
		CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "无袖女式衬衫"
		ELSE
			CALL SET_SHIRT, "宽松女式衬衫"
		ENDIF
		CALL SET_SKIRT, "紧身裙"
		IF COND("秋") || COND("冬")
			CALL SET_BOTTOM, "连褲襪"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "長筒襪"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "网纹長筒襪"
			ELSE
				CALL SET_SOCKS, "吊帯長筒襪"
			ENDIF
		ENDIF
		CALL SET_SHOES, "高跟鞋"
		IF RAND:2 == 0
			CALL SET_OTHER, "蝴蝶結領帯丝巾"
		ELSE
			CALL SET_OTHER, "褶边領帯"
		ENDIF
	ENDIF
;自分的房間(not主人公的房間)で着ます
CASE "居家服"
	IF COND("春") || COND("夏") || COND("秋")
		IF RAND:2 == 0
			CALL SET_SHIRT, "后背蝴蝶結切驳服"
		ELSE
			CALL SET_SHIRT, "切驳服"
		ENDIF
	ELSEIF COND("冬")
		IF RAND:2 == 0
			CALL SET_SHIRT, "二ット毛衣"
		ELSE
			CALL SET_SHIRT, "萌袖毛衣"
		ENDIF
	ENDIF
	CALL SET_SKIRT, "迷你裙"
	IF COND("秋") || COND("冬")
		CALL SET_BOTTOM, "连褲襪"
	ELSE
		CALL SET_SOCKS, "長筒襪"
	ENDIF
	IF COND("冬")
		IF RAND:2 == 0
			CALL SET_SHOES, "長靴"
		ELSE
			CALL SET_SHOES, "短筒女靴"
		ENDIF
	ELSE
		IF RAND:4 == 0
			CALL SET_SHOES, "平底鞋"
		ELSEIF RAND:3 == 0
			CALL SET_SHOES, "无后跟鞋"
		ELSEIF RAND:2 == 0
			CALL SET_SHOES, "凉鞋"
		ELSE
			CALL SET_SHOES, "高跟鞋"
		ENDIF
	ENDIF
;约会以外で家から外出際に着ます。情人旅館呼出とかね
CASE "外出装"
	IF COND("夜") || TEXTS("曜日") == "土" || TEXTS("曜日") == "日"
		IF COND("春") || COND("夏") || COND("秋")
			IF COND("夏") && RAND:3 == 0
				CALL SET_SHIRT, "夏日礼服"
			ELSEIF RAND:2 == 0
				CALL SET_SHIRT, "后背蝴蝶結切驳服"
			ELSE
				CALL SET_SHIRT, "切驳服"
			ENDIF
		ELSEIF COND("冬")
			IF RAND:3 == 0
				CALL SET_SHIRT, "蝴蝶結露肩外衣"
			ELSEIF RAND:3 == 0
				CALL SET_SHIRT, "二ットオフショル"
			ENDIF
		ENDIF
		CALL SET_SKIRT, "迷你裙"
		IF COND("秋") || COND("冬")
			CALL SET_BOTTOM, "连褲襪"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "長筒襪"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "及膝襪"
			ELSE
				CALL SET_SOCKS, "高筒襪"
			ENDIF
		ENDIF
		IF COND("冬")
			IF RAND:2 == 0
				CALL SET_SHOES, "長靴"
			ELSE
				CALL SET_SHOES, "短筒女靴"
			ENDIF
		ELSE
			IF RAND:3 == 0
				CALL SET_SHOES, "平底鞋"
			ELSEIF RAND:2 == 0
				CALL SET_SHOES, "无后跟鞋"
			ELSE
				CALL SET_SHOES, "高跟鞋"
			ENDIF
		ENDIF
		IF COND("冬")
			CALL SET_OTHER, "风衣外套"
		ENDIF
	ELSEIF RAND:2 == 0
		CALL SET_COSTUME, "蝴蝶結領帯丝巾女式衬衫"
		IF COND("冬")
			CALL SET_SHOES, "短筒女靴"
		ELSE
			CALL SET_SHOES, "高跟鞋"
		ENDIF
		IF COND("冬")
			CALL SET_OTHER, "风衣外套"
		ENDIF
	ELSE
		IF COND("夏")
			CALL SET_SHIRT, "无袖女式衬衫"
		ELSE
			CALL SET_SHIRT, "宽松女式衬衫"
		ENDIF
		CALL SET_SKIRT, "紧身裙"
		IF COND("秋") || COND("冬")
			CALL SET_BOTTOM, "连褲襪"
		ELSE
			IF RAND:3 == 0
				CALL SET_SOCKS, "長筒襪"
			ELSEIF RAND:2 == 0
				CALL SET_SOCKS, "网纹長筒襪"
			ELSE
				CALL SET_SOCKS, "吊帯長筒襪"
			ENDIF
		ENDIF
		IF COND("冬")
			CALL SET_SHOES, "短筒女靴"
		ELSE
			CALL SET_SHOES, "高跟鞋"
		ENDIF
		IF RAND:2 == 0
			CALL SET_OTHER, "蝴蝶結領帯丝巾"
		ELSE
			CALL SET_OTHER, "褶边領帯"
		ENDIF
		IF COND("冬")
			CALL SET_OTHER, "风衣外套"
		ENDIF
	ENDIF
	IF RAND:2 == 0 && TALENT:淫乱
		IF RAND:2 == 0
			CSTR:胸罩 = １／４杯胸罩/Ｈ的颜色/乳頭露出/乳房露出/
		ELSE
			CSTR:胸罩 = 開放型胸罩/Ｈ的颜色/乳頭露出/
		ENDIF
	ELSE
		IF RAND:3 == 0
			CSTR:胸罩 = ３／４杯胸罩/Ｈ的颜色/
		ELSEIF RAND:2 == 0
			CSTR:胸罩 = 半杯胸罩/Ｈ的颜色/
		ELSE
			CSTR:胸罩 = 蕾丝胸罩/Ｈ的颜色/透明/
		ENDIF
	ENDIF

	IF RAND:5 == 0
		CALL SET_PANTIES, "丁字褲/黒"
	ELSEIF RAND:4 == 0
		CALL SET_PANTIES, "Micro內褲/Ｈ的颜色"
	ELSEIF RAND:3 == 0
		CALL SET_PANTIES, "蕾丝的胖次/Ｈ的颜色"
	ELSEIF RAND:2
		CALL SET_PANTIES, "紐丁字褲/Ｈ的颜色"
	ENDIF

;もちろん约会の際に着ます
CASE "约会衣装"
	IF COND("春") || COND("夏") || COND("秋")
		IF COND("夏") && RAND:3 == 0
				CALL SET_SHIRT, "夏日礼服"
		ELSEIF RAND:2 == 0
			CALL SET_SHIRT, "后背蝴蝶結切驳服"
		ELSE
			CALL SET_SHIRT, "切驳服"
		ENDIF
	ELSEIF COND("冬")
		IF RAND:3 == 0
			CALL SET_SHIRT, "蝴蝶結露肩外衣"
		ELSEIF RAND:3 == 0
			CALL SET_SHIRT, "二ットオフショル"
		ENDIF
	ENDIF
	CALL SET_SKIRT, "迷你裙"
	IF COND("秋") || COND("冬")
		CALL SET_BOTTOM, "连褲襪"
	ELSE
		CALL SET_SOCKS, "長筒襪"
	ENDIF
	IF COND("冬")
		IF RAND:2 == 0
			CALL SET_SHOES, "長靴"
		ELSE
			CALL SET_SHOES, "短筒女靴"
		ENDIF
	ELSE
		IF RAND:3 == 0
			CALL SET_SHOES, "平底鞋"
		ELSEIF RAND:2 == 0
			CALL SET_SHOES, "无后跟鞋"
		ELSE
			CALL SET_SHOES, "高跟鞋"
		ENDIF
	ENDIF
	IF COND("冬")
		CALL SET_OTHER, "风衣外套"
	ENDIF

ENDSELECT


