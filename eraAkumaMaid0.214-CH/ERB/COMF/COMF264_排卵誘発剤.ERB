@COM264
;排卵誘発剤
CALL PRINT_TRAIN_NAME(SELECTCOM)

CALL TRAIN_MESSAGE_B

SIF REFUSE_CHECK()
	RETURN 0

STR:前回指令 = %STR:今回指令%

SIF TFLAG:地の文分岐 == 1
	CALL KOJO_MESSAGE_COM

PREVCOM = SELECTCOM

RETURN 0

@TRAIN_MESSAGE_COM264
VARSET LOCAL
IF COND("排卵誘発剤", TARGET) && COND("排卵誘発剤", PLAYER)
	PRINTFORML 要讓誰使用排卵誘發劑？
	PRINTFORML  [ 0] %CALLNAME:PLAYER%
	PRINTFORML  [ 1] %CALLNAME:TARGET%
	PRINTFORML [100] 返回
	CALL INPUT_SELECT, 2, 100
ELSEIF COND("排卵誘発剤", TARGET)
	RESULT = 1
ELSE
	PRINTFORML 使用排卵誘發劑後懷孕幾率會大幅上漲。確定嗎？
	PRINTFORML  [ 0] 是
	PRINTFORML [100] 返回
	CALL INPUT_SELECT, 1, 100
ENDIF
IF RESULT == 0
	PRINTFORMW %CALLNAME:PLAYER%自己將排卵誘發劑一飲而盡……
	TEQUIP:PLAYER:排卵誘発剤 = 1
	IF COND("発情期", PLAYER)
		BASE:PLAYER:バイオリズム = 3 + 1p11 + 1p12 + 1p13 + 1p20
	ELSE
		BASE:PLAYER:バイオリズム = 3 + 1p11 + 1p12 + 1p13
	ENDIF
ELSEIF RESULT == 1
	PRINTFORMW 在懇求下、%CALLNAME:TARGET%猶豫著喝下了排卵誘發劑……
	TEQUIP:排卵誘発剤 = 1
	IF COND("発情期")
		BASE:バイオリズム = 3 + 1p11 + 1p12 + 1p13 + 1p20
	ELSE
		BASE:バイオリズム = 3 + 1p11 + 1p12 + 1p13
	ENDIF
ELSEIF RESULT == 100
	TFLAG:指令中止 = 1
	RETURN 0
ENDIF

TFLAG:地の文分岐 = RESULT

