@Cmd_Block(BlockNo,BlockChoice)
	#DIM BlockNo
	#DIM BlockChoice
	#DIMS TrueCmdName

	VARSET LOCALS
	SPLIT STR:選択肢, "/", LOCALS
	;緑_などが付いてる場合を想定して、指令本文のみを抽出
	VARSET RESULTS
	SPLIT LOCALS:BlockChoice, "_", RESULTS
	TrueCmdName = %RESULTS:(RESULT-1)%

	SELECTCASE TrueCmdName
		CASE ""

		;これは不要の筈
		CASE "哺乳", "拭汗", "坐在旁邊", "從後面抱住", "撫摸頭髮", "把手放在大腿上"
			DAILY_小項目 = %LOCALS:BlockChoice%
			CALL EVENT_DAILY, 4
		
		CASE @"%DAILYCOMNAME_SELECT(DAILYCOMNAME(1))%";叫醒/打招呼/Talk ※これは不要の筈だけど念の為ね
			DAILY_小項目 = %DAILYCOMNAME(1)%
			CALL EVENT_DAILY, DAILYNUM(DAILYCOMNAME(1) )

		CASE @"%DAILYCOMNAME_SELECT(DAILYCOMNAME(2))%";趁睡袭击/互动
			DAILY_小項目 = %DAILYCOMNAME(2)%
			CALL EVENT_DAILY, DAILYNUM(DAILYCOMNAME(2) )

		CASE @"%DAILYCOMNAME_SELECT(DAILYCOMNAME(3))%";整理睡姿/卖个破绽
			DAILY_小項目 = %DAILYCOMNAME(3)%
			SIF CONFIG("partnerの自動変更") && FIND_COND("現在存在")
				CALL SETFLAG, "対象指定", FIND_COND("現在存在")
			CALL EVENT_DAILY, DAILYNUM(DAILYCOMNAME(3) )

		CASE @"%DAILYCOMNAME_SELECT(DAILYCOMNAME(5))%";脱掉内裤系一式
			DAILY_小項目 = %DAILYCOMNAME(5)%
			CALL EVENT_DAILY, DAILYNUM(DAILYCOMNAME(5) )

		CASE @"%DAILYCOMNAME_SELECT(DAILYCOMNAME(6))%";拜托処理性欲/进行性処理
			DAILY_小項目 = %DAILYCOMNAME(6)%
			CALL EVENT_DAILY, DAILYNUM(DAILYCOMNAME(6) )
			
		CASE @"%DAILYCOMNAME_SELECT(DAILYCOMNAME(7))%";帮忙消除性欲
			DAILY_小項目 = %DAILYCOMNAME(7)%
			CALL EVENT_DAILY, DAILYNUM(DAILYCOMNAME(7) )
		
		;これはFUNCTION_DAILY.ERBにコメントアウトされてたけど置かれてたので念のためね
		;CASE @"%DAILYCOMNAME_SELECT(DAILYCOMNAME(8))%";帮忙消除性欲
		;	STR:選択肢 = 
		;	CALL EVENT_DAILY, DAILYNUM(DAILYCOMNAME(8) ), DAILYCOMNAME(8)

		CASEELSE
			DAILY_小項目 = %LOCALS:BlockChoice%
			CALL EVENT_DAILY, BlockNo
	ENDSELECT