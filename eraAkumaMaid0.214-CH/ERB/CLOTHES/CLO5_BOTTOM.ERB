		RETURNF 0
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "高開衩")
		RETURNF 1
CASE "低腰"
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "低腰", "超低腰")
		RETURNF 1
CASE "闷热的"
