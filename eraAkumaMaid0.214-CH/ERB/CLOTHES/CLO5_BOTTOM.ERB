;-------------------------------------------------
;ARGの下身衣装が条件ARGSを満たすか確認する
;-------------------------------------------------
@CHECK_BOTTOM(ARGS, ARG)
#FUNCTION
SIF ARG == 0 && TARGET
	ARG = TARGET
SIF EQUIP:ARG:下身衣装 == 0
	RETURNF 0

SELECTCASE ARGS
CASE "前開可"
	;既に開かれている
	SIF STRCOUNT(CSTR:ARG:下身衣装, "前開")
		RETURNF 0
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "热褲", "長褲")
		RETURNF 1
CASE "连褲襪"
	;裤襪もOK
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "连褲襪", "裤襪") == 0
		RETURNF 0
	RETURNF 1
;主に埴輪ルックの判定で使う
CASE "丈長休闲褲"
	;休闲褲じゃないとダメ
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "休闲褲", "長褲") == 0
		RETURNF 0
	;丈の短いもの
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "热褲", "短")
		RETURNF 0
	RETURNF 1
CASE "股間の隙間"
	;太ももの付け根までを布地が締め付けている服
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "紧身短褲", "热褲", "短褲")
		RETURNF 1
;主に"阴部のチラ見せ撮影"の判定で使う
CASE "めくり可能"
	;めくれなさそうなもの
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "连褲襪", "不可移開")
		RETURNF 0
	RETURNF 1
;不可移開でなく、ずらしていない
CASE "ずらし可", "可以移開"
	SIF STRCOUNT(CSTR:ARG:下身衣装, "Ｖ露出")
		RETURNF 0
	IF STRCOUNT(CSTR:ARG:下身衣装, "帯拉链的")
		SIF STRCOUNT(CSTR:ARG:下身衣装, "帯拉链的開")
			RETURNF 0
		RETURNF 1
	ENDIF
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "移開的", "不可移開")
		RETURNF 0
	RETURNF 1
;连褲襪で、破いていない
CASE "破ける"
	SIF STRCOUNT(CSTR:ARG:下身衣装, "破開的")
		RETURNF 0
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "连褲襪", "网纹裤襪")
		RETURNF 1
;帯拉链的が有、あけていない
CASE "帯拉链的閉"
	SIF STRCOUNT(CSTR:ARG:下身衣装, "帯拉链的開")
		RETURNF 0
	SIF STRCOUNT(CSTR:ARG:下身衣装, "帯拉链的")
		RETURNF 1
CASE "ＶＡ露出"
	SIF STRCOUNT(CSTR:ARG:下身衣装, "Ｖ露出") && STRCOUNT(CSTR:ARG:下身衣装, "Ａ露出")
		RETURNF 1
	SIF STRCOUNT(CSTR:ARG:下身衣装, "開放型")
		RETURNF 1
CASE "開洞"
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "帯拉链的開", "移開的", "破開的", "Ｖ露出", "開衩", "開放型")
		RETURNF 0
	RETURNF 1
CASE "開洞有连褲襪"
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "帯拉链的開", "移開的", "破開的", "Ｖ露出", "開衩", "開放型")
		RETURNF 0
	SIF STRCOUNT(CSTR:ARG:下身衣装, "连褲襪")
		RETURNF 1
CASE "Ａ開洞"
	SIF STRCOUNTS(CSTR:ARG:下身衣装, "帯拉链的開", "移開的", "破開的", "Ａ露出", "開衩", "開放型")
		RETURNF 0
	RETURNF 1
CASE "勒紧的"
