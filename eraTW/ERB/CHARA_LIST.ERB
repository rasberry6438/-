;汎用・角色列表作成関数
;条件についてはCHECK_CHARA関数を参照
;条件に合致する角色の列表を作成する
@MAKE_CHARA_LIST(LIST_TYPE, L_ID, CHARA_LIST, CHARA_CNT)
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS LIST_TYPE
#DIM C_ID
#DIM REF L_ID       ;列表のクラスID
#DIM REF CHARA_LIST ;角色一覧
#DIM REF CHARA_CNT  ;角色カウンタ
VARSET CHARA_LIST
VARSET CHARA_CNT
L_ID = OBJNAME_TO_ID(0, "GET", "角色列表", LIST_TYPE)
SIF FLAG:並び替え
	CALL CHARASORT_EX
IF L_ID == -1
	FOR LOCAL, 0, EX_CHARANUM
		IF FLAG:並び替え
			C_ID = RESULT:LOCAL
			SIF C_ID < 0
				CONTINUE
		ELSE
			C_ID = LOCAL
			SIF C_ID >= CHARANUM
				BREAK
		ENDIF
		SIF !CHECK_CHARA(C_ID, LIST_TYPE)
			CONTINUE
		CHARA_LIST:CHARA_CNT = C_ID
		CHARA_CNT ++
	NEXT
ELSE
	FOR LOCAL, 0, EX_CHARANUM
		IF FLAG:並び替え
			C_ID = RESULT:LOCAL
			SIF C_ID < 0
				CONTINUE
		ELSE
			C_ID = LOCAL
			SIF C_ID >= CHARANUM
				BREAK
		ENDIF
		SIF !GET_INT(C_ID, "角色列表", L_ID, "判定")
			CONTINUE
		CHARA_LIST:CHARA_CNT = C_ID
		CHARA_CNT ++
	NEXT
ENDIF
