@CHARAMOVE_DATA_18(ARG, ARG:2)
LOCAL = 18
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
		;たまに連動
		IF FLAG:每日变更事件 % 8 == 0
			RESULT:1 = [[莉莉Ｗ]]
			RESULT:2 = [[莉莉Ｂ]]
		ENDIF
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;三妖精宅内に行きやすい
			CASE P27三妖精之家・大廳 TO P34斯塔私室
				RETURN 5
			;私室には入らない
			CASE P704河童の宣傳站, P706厄神的家, P716秋姉妹的家・土間 TO P730仙人的宅邸・庭
				RETURN -100
			CASE P733正邪的隠匿処, P736山姥之家, P737招财猫的家, P740山童の宣傳站, P741美天の棲み処
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
			CASE 霧之湖, 冰造的小雪屋, 廃洋館, 正門
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大樹
				RETURN 1
			CASE 山麓樹海, 玄武之澤, 大蛤蟆之池, 森の深奥
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

