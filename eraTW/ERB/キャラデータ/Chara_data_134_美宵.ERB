	;差し替え画像
	IF FLAG:立絵種類
		;顔絵
	ELSE
		;立ち絵
		SIF !CHECK_NUDE(134) && WORKING(134) && !TCVAR:CHARA:発情 ;working
			RESULTS = _作業
	ENDIF
ELSE
	;通常画像
	IF FLAG:立絵種類
	ELSE
		;立ち絵
	ENDIF
ENDIF

;IMAGE_I134_特殊表情(CHARA)--------------------------------------------------------------------
;キャラクター特有の表情表示条件
;時間停止中でも維持する表情はこちら
;使用時注意点:
;	RESULTS:0に表情を格納
;	RESULTS:1にマウスオーバー時の表情を格納すること
;	"通常","笑顔","怒り","発情","睡眠"は本編で実装済み
;-------------------------------------------------------------------------------------------
@IMAGE_I134_特殊表情(CHARA)
#DIM CHARA
IF CFLAG:CHARA:差し替え適用 == 1
	;差し替え画像
	IF FLAG:立絵種類
		;顔絵
		IF !CHECK_NUDE(CHARA)
					IF !CFLAG:CHARA:ブチギレ
				IF GROUPMATCH(SELECTCOM, 414, 415) && STRFIND(COM_STR, "K134_お星") > -1
					RESULTS:0 = お星
					RESULTS:1 = 笑顔
				ELSEIF TALENT:CHARA:心情 == -1
					RESULTS:0 = 悄々
					RESULTS:1 = 悄々
				ENDIF
			ENDIF
		ENDIF
	ELSE
		;立ち絵
		IF !CHECK_NUDE(CHARA)
			IF GROUPMATCH(SELECTCOM, 414, 415) && STRFIND(COM_STR, "K134_お星") > -1 && WORKING(134)
				RESULTS:0 = お星
				RESULTS:1 = 笑顔
			ENDIF
		ENDIF
	ENDIF
ELSE
	;通常画像
	IF FLAG:立絵種類
		;顔絵
	ELSE
		;立ち絵
	ENDIF
ENDIF
