@CHARAMOVE_DATA_35(ARG, ARG:2)
LOCAL = 35
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;天子の私室にはあまり行かない
			CASE P840天子私室
				RETURN -5
			;他所的家には行かない
			CASE P807椛宅, P808文宅, P809極宅, P851久侘歌の小屋, P852駒草の小屋, P853魅須丸の小屋, P854龍宅, P855虹龍洞, P856百百世の住処
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 広場, 商家町, 呑屋小道, 長屋街
				RETURN 1
			CASE 山麓樹海, 玄武之澤, 大蛤蟆之池
				RETURN 1
			CASE 九天瀑布, 絶景之丘, 山之湖, 守矢神社境内, 天界
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
		;平日は3分の1で頂上まで行く
		IF YOUBI_MATCH(DAY, "月火水木金") && INRANGE(TIME, 600, 960)
			SELECTCASE CFLAG:LOCAL:今日の運勢 % 3
			CASE 1
				TCVAR:LOCAL:引力点 = P805頂上
			CASE 2
				TCVAR:LOCAL:引力点 = 0
			CASEELSE
				TCVAR:LOCAL:引力点 = 0
			ENDSELECT
		ENDIF
ENDSELECT

