@CHARAMOVE_DATA_110(ARG, ARG:2)
LOCAL = 110
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;夢幻館には行かない
			CASE P450玄関 TO P466庭
				RETURN -100
			;他人的家には入らない
			CASE P432影狼的家, P437梅蒂欣的家, P439拉瓦爾的家, P443米斯蒂亜的家, P445妹紅的家
				RETURN -100
			;走廊,居間によく居る
			CASE P409走廊, P416居間
				RETURN 5

			;寧靜海の方へは行かない
			CASE P1016入海口, P1060純狐邸・玄関 TO P1072赫喀提亞私室
				RETURN -100
			;哆来咪宅には行かない
			CASE P1050哆来咪宅・居間 TO P1055哆来咪宅・廁所
				RETURN -100
			;詰め所、食料庫は行かない
			CASE P1023門番詰め所 TO P1025玉兎詰め所, P1028食料庫
				RETURN -100
			;玉兎街方面はあまり行かない
			CASE P1003玉兎街, P1004広場, P1010吃飯処 TO P1013八百屋
				RETURN 5
			;月之都によく居る
			CASE P1002月之都
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 槐安通路, 月之都, 綿月亭, 玉兎之街, 桃林～砂浜
				RETURN 1
			CASE 永遠亭, 永遠亭的内院
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

