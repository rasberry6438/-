@CHARAMOVE_DATA_45(ARG, ARG:2)
LOCAL = 45
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;未設定
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 夢幻遺跡
				RETURN 1
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大樹, 再思之道, 無縁塚
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

@EXIST_キャラデータ45
#LOCALSIZE 1
#LOCALSSIZE 1

@キャラデータ45(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE O_DATA
CASE "稱呼"
	CALLF MAKE_STR(V_NAME, "理香子")
;こっから衣装設定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子）套")

CASE "便装：飾品"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("飾品", "眼鏡"))
CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "蝴蝶結"))
CASE "便装：外搭"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("外搭", "白大褂"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "靴"))
CASE "便装：襪子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("襪子", "襪子"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "長裙"))
CASE "便装：上身衣服１"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服１", "上衣"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))

CASE "固有内衣形容詞"
	CALLF MAKE_STR(V_NAME, "安価で樸素的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "白內褲")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有上半身内衣名"
	CALLF MAKE_STR(V_NAME, "白文胸")
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 勝負内衣判定([[理香子]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(後)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣布料厚度"
	CALLF MAKE_INT(V_NAME, 2)

;料理関連
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "米/乳酪/麺類/简易/垃圾/松脆/化学的/甜/甜/辣/辣/機能的/機能的/機能的/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "野趣/酸/酸/青蛙/青蛙/青蛙/蘑菇/蘑菇/蘑菇/謎料理/謎料理/謎料理/魔力/魔力/魔力/魔力/魔力/")
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "化学的/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "白/技術/秩序/美的/樸素/未来/知的/" + "眼鏡/" * 3 + "量子の/纳米技术の/機械/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "混沌/奇妙/懷舊/不思議/洛麗塔/" + "生体品/护臂/" * 3 + "魔法/" * 10)
ENDSELECT

