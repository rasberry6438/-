@CHARAMOVE_DATA_117(ARG, ARG:2)
LOCAL = 117
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
		;たまに連動
		IF FLAG:每日变更事件 % 10 == 0
			RESULT:1 = [[夢月]]
			RESULT:2 = [[幻月]]
		ENDIF
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;永遠亭の奥には行かない
			CASE P405配药室, P407廊下 TO P430地下室
				RETURN -100
			;他人的家には入らない
			CASE P432影狼的家, P437梅蒂欣的家, P439拉瓦爾的家, P443米斯蒂亜的家, P445妹紅的家
				RETURN -100
			;用餐房間,生活間,自室によく居る
			CASE P453用餐房間, P461生活間, P459幻月私室
				RETURN 5
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 竹林入口, 迷失的小道, 斜角的竹林, 無名之丘, 太陽花田, 夢幻館
				RETURN 1
			CASE 森林的入口, 古木的大樹, 人偶的洋館, 再思之道, 無縁塚
				RETURN 1
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

