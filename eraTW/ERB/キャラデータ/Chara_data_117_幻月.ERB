	CALLF MAKE_STR(V_NAME, "野趣/咸/青蛙/青蛙/青蛙/虫肉/虫肉/虫肉/謎料理/謎料理/謎料理/謎料理/謎料理/")
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "夢幻風/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "白/高級/混沌/可愛的/充滿力量/威厳/壮大/" + "妖術/禁断の/" * 3 + "夢幻の/悪魔の/天使の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "秩序/繊細/" + "安物/神霊/" * 3)
ENDSELECT

