@CHARAMOVE_DATA_33(ARG, ARG:2)
LOCAL = 33
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
		;水曜日は早苗と一緒
		SIF YOUBI_MATCH(DAY, "水")
			RETURN [[早苗]]
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;分社引かれる
			CASE P21守矢神社分社
				RETURN 5
			;主に湖畔、居間、走廊
			CASE P814湖畔, P819居間, P816走廊
				RETURN 5
			;天界には行かない
			CASE P830玄雲海 TO P842比那名居邸庫房
				RETURN -100
			;他所的家には行かない
			CASE P807椛宅, P808文宅, P809極宅, P851久侘歌の小屋, P852駒草の小屋, P853魅須丸の小屋, P854龍宅, P856百百世の住処
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 霧之湖
				RETURN 1
			CASE 山麓樹海, 玄武之澤, 大蛤蟆之池, 間欠泉地下中樞
				RETURN 1
			CASE 九天瀑布, 絶景之丘, 山之湖, 守矢神社境内, 守矢神社本殿, 虹龍洞
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

