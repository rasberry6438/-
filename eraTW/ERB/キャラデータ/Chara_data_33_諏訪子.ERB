	CALLF MAKE_STR(V_NAME, "番茄胖次")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 勝負内衣判定([[諏訪子]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(後)"
	CALLF MAKE_INT(V_NAME, 1)

;料理関連
