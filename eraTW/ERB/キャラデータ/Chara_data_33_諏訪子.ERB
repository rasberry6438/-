	CALLF MAKE_STR(V_NAME, "獣肉/和食/汁物/甜/简易/質素/野趣/家庭的/粘稠/妖力/美味的水/酸/酸/酸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "中華/丰盛/辣/辣/" + "青蛙/" * 10)
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "加護/美味的水/")
