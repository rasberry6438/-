CASE "農民：作物"
	CALLF MAKE_STR(V_NAME, "菱")
CASE "農民：田的种类"
	CALLF MAKE_STR(V_NAME, "蓄水池")
CASE "農民：畑の所在地"
	CALLF MAKE_STR(V_NAME, "妖怪之山・山麓")

CASE "農民：MapID"
	CALLF MAKE_INT(V_NAME, 7)
CASE "農民：場所ID"
	CALLF MAKE_INT(V_NAME, 708)
CASE "農民：報酬"
	CALLF MAKE_INT(V_NAME, 400)
CASE "農民：金利"
	CALLF MAKE_INT(V_NAME, 12)
ENDSELECT

