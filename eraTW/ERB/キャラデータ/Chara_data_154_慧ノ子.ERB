@CHARAMOVE_DATA_154(ARG, ARG:2)
LOCAL = 154
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;魔理沙の家の寝室と風呂には入らない
			CASE P512魔理沙宅・寝室, P514魔理沙宅・風呂
				RETURN -100
			;アリス家,エレン家,妖怪の棲み処
			CASE P521人偶洋館・愛麗絲的房間 TO P531人偶洋館・空的部屋
				RETURN -100
			CASE P535艾倫宅・寝室 TO P537艾倫宅・風呂, P541朱鷺子的棲息処, P542莉格露的棲息処, P543露米亜的棲息処, P544成美の小屋
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 中有之道, 三途之川, 彼岸, 地獄, 畜生界
				RETURN 1
			CASE 森林的入口, 香霖堂, 古木的大樹, 霧雨魔法店, 再思之道, 無縁塚
				RETURN 1
			CASE 山麓樹海, 玄武之澤, 大蛤蟆之池, 森の深奥
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

