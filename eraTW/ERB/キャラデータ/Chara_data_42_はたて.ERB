;	RETURNで追加するエフェクト数を返却すること
;-------------------------------------------------------------------------------------------
@IMAGE_I42_特殊エフェクト(CHARA)
#DIM CHARA
#DIM DYNAMIC エフェクト数 = 0
VARSET RESULTS

IF CFLAG:CHARA:差し替え適用
	;替换用画像
	IF FLAG:立絵種類
		;顔絵
	ELSE
		;立絵
	ENDIF
ELSE
	;通常画像
	IF FLAG:立絵種類
		;顔絵
			IF CFLAG:CHARA:脸上精液
				;胸ぶっかけ
				RESULTS:エフェクト数 = ぶっかけ
				エフェクト数 += 1
			ENDIF
			IF CFLAG:CHARA:口内精液
				;口交
				RESULTS:エフェクト数 = お口
				エフェクト数 += 1
			ENDIF
	ELSE
		;立絵
	ENDIF
ENDIF

RETURN エフェクト数
