@CHARAMOVE_DATA_42(ARG, ARG:2)
LOCAL = 42
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;天界には行かない
			CASE P830玄雲海 TO P842比那名居邸庫房
				RETURN -100
			;私室やお風呂は入らない
			CASE P817神奈子私室, P818諏訪子私室, P820早苗私室
				RETURN -100
			CASE P851久侘歌の小屋, P852駒草の小屋, P853魅須丸の小屋, P824廁所, P825風呂
				RETURN -100
			;自宅に引きこもりがち
			CASE P809極宅
				RETURN 5
			;虹龍洞は無理
			CASE P855虹龍洞, P856百百世の住処
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 広場, 商家町, 呑屋小道
				RETURN 1
			CASE 正門, 大廳 , 食堂, 大図書館
				RETURN 1
			CASE 山麓樹海, 玄武之澤, 大蛤蟆之池
				RETURN 1
			CASE 九天瀑布, 絶景之丘, 山之湖, 守矢神社境内
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

