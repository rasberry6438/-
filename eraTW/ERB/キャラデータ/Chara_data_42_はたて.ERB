	SIF STRFIND(エフェクト, "ぶっかけ") != -1
		RETURN 1
	SIF STRFIND(エフェクト, "お口") != -1
		RETURN 1
ENDIF

RETURN 0

;IMAGE_I42_特殊エフェクト(CHARA)--------------------------------------------------------------------
;角色特有のエフェクト表示条件
