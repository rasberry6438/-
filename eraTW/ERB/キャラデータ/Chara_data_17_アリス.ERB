	CALLF MAKE_STR(V_NAME, "肉料理/和食/丰盛/辣/辣/" + "青蛙/虫肉/濃厚/" * 3 + "謎料理/" * 5)
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "彩り/魔界風/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "虹/繊細/秩序/可愛的/時尚/洋風/別緻/知的/" + "魔法/装飾/蓬莱の/魔界の/鏡之国の/" * 3 + "七色の/魔女の/魔彩光の/魔法書/人形/布娃娃/" * 5)
