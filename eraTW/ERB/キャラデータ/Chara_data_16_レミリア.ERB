@CHARAMOVE_DATA_16(ARG, ARG:2)
LOCAL = 16
SELECTCASE ARG
	;連動設定（RETURN=依存する角色, RESULT:1～3=対等に連動する角色）
	CASE 1
	;特殊生活時間設定（CFLAG:LOCAL:生活時間補正を設定する）
	CASE 3
		;最近のお嬢様はサマータイム制などと申して起床・就寝時間をずらしております。
		IF DAY:2 == 2
			CFLAG:LOCAL:生活時間補正 = 60
		ELSEIF DAY:2 == 4
			CFLAG:LOCAL:生活時間補正 = -60
		ELSE
			CFLAG:LOCAL:生活時間補正 = 0
		ENDIF
	;移動傾向（±～10=行きやすい/行きにくい, -100=行かない）
	CASE 4
		SELECTCASE ARG:2
			;仓库には入らない、屋敷外には出ない
			CASE P305仓库, P334廃洋館・入口 TO P348霧之湖・湖底
				RETURN -100
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 桜花道的鳥居, 神社境内, 神社走廊
				RETURN 1
			CASE 正門, 大廳, 食堂, 大図書館, 地下室
				RETURN 1
		ENDSELECT
	;引力設定（CFLAG:LOCAL:引力点を設定する）
	CASE 8
ENDSELECT

