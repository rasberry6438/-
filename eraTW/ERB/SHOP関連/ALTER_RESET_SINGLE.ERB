@ALTER_RESET_CHARA_MAIN()
#DIM CHARA
PRINTFORML 選擇想要重置的角色
CALL SHOW_CHARA_LIST("現有的角色列表")
CHARA = RESULT
IF CHARA != 999

	PRINTFORML 確定要重製%NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%?
	CALL ASK_YN("Y","N")
	IF RESULT == 0
		
		CFLAG:CHARA:口上実装状況 = 0
		CALL KOJO_MULTIPLE(CHARA)
	
		CALL RESET_KOJO_CHARA_PORTION(CHARA)
		PRINTFORML 重置經驗EXP?
		CALL ASK_YN("Y","N")
		IF RESULT == 0
			FOR LOCAL,0,100
				EXP:CHARA:LOCAL = CSVEXP(CHARA,LOCAL)
			NEXT
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%的經驗重置了。
		ENDIF

		PRINTFORML 重置能力ABL?
		CALL ASK_YN("Y","N")
		IF RESULT == 0
			FOR LOCAL,0,100
				ABL:CHARA:LOCAL = CSVABL(CHARA,LOCAL)
			NEXT
			PRINTFORMW %NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA)%的經驗重置了。
		ENDIF
		
	ENDIF
	
ENDIF

