@K23_EVAL(躲避时间, ARG)
;@变量 躲避时间:基础的躲避时间 ARG:时停可用?
#DIM 躲避时间
#DIM 正解
#DIM 已时停
#DIM FEINT
正解 = RAND:4
;四向
LOCALS:0 = 上
LOCALS:1 = 右
LOCALS:2 = 左
LOCALS:3 = 下
CALL FISHER_YATES_SHAFFLE(4)
PRINTFORMW 回避突然的攻击！
PRINTFORM 攻击从
SETCOLOR C_YELLOW
PRINTFORM %LOCALS:(3 - 正解)%
RESETCOLOR
PRINTFORML 方袭来！
WHILE 1
	FOR LOCAL:10,0,4
		LOCAL = SHAFFLE_ARRAY:(LOCAL:10)
		PRINTFORML [{LOCAL}] - 向%LOCALS:LOCAL%躲避
	NEXT
	SIF !已时停 && ARG && BASE:MASTER:TSP > 50
		PRINTFORML [{4}] - 时间停止
	TINPUT 躲避时间, -1, 1
	IF RESULT == 正解
		PRINTFORML %CALLNAME:MASTER%躲开了攻击！
		RETURN 已时停 ? 2 # 1
	ELSEIF RESULT == 4 && !已时停 && ARG && BASE:MASTER:TSP > 50 
		已时停 = 1
		PRINTFORMW %CALLNAME:MASTER%用时间停止能力看穿了攻击！
		BASE:MASTER:TSP -= 50
	ELSE
		PRINTFORML 没能躲开！
		RETURN 0
	ENDIF
WEND


