;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K83_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;角色の能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;酔ってる
		IF M_KOJO_K83_YOIDORE([[琪斯美]])
			CALL M_KOJO_K83_TALKSET("酔酒")
		;心情不快
		ELSEIF M_KOJO_K83_FUKIGEN([[琪斯美]])
			PRINTFORMW 「诶……好、好吧……」
		;通常
		ELSE
			IF TALENT:[[琪斯美]]:恋人
				PRINTFORMW 「我不、不会输哦……！」
			ELSEIF TALENT:[[琪斯美]]:恋慕
				PRINTFORMW 「我、我会加油的……！」
			ELSEIF TALENT:[[琪斯美]]:思慕
				PRINTFORMW 「请、请多指教……」
			ELSE
				PRINTFORMW 「我、我很弱的……」
			ENDIF
		ENDIF
		RETURN 0
	ENDIF
;	;-------------------------------------------------
;	;ハンデ
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "ハンデ"
;		;ハンデつけなかったら表示されないので無記入でよい
;		PRINTFORML 
;		RETURN 0
;	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾"
		;最後
		IF 相手残機 == 0
			;酔ってる
			IF M_KOJO_K83_YOIDORE([[琪斯美]])
				PRINTFORML 「嗯ー…？？」
			;心情不快
			ELSEIF M_KOJO_K83_FUKIGEN([[琪斯美]])
				PRINTFORML 「…………」
			;通常
			ELSE
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「被、被打中了……」
				CASE 2
					PRINTFORML 「好、好强……」
				CASEELSE
					PRINTFORML 「要、要不行了……」
				ENDSELECT
			ENDIF
		ELSE
			;酔ってる
			IF M_KOJO_K83_YOIDORE([[琪斯美]])
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「呼诶！？」
				CASE 2
					PRINTFORML 「嗯嗯！？」
				CASEELSE
					PRINTFORML 「……！？」
				ENDSELECT
			;心情不快
			ELSEIF M_KOJO_K83_FUKIGEN([[琪斯美]])
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「不行了啦……」
				CASE 2
					PRINTFORML 「好痛……」
				CASEELSE
					PRINTFORML 「呜……」
				ENDSELECT
			;通常
			ELSE
				PRINTFORML 「%M_KOJO_K83_AUTO("被弾")%」
			ENDIF
		ENDIF
	ENDIF
;	;-------------------------------------------------
;	;戦闘中
;	;TARGETの【残忍酷薄】発動時
;	;ARGはTARGETの残機
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "残忍酷薄"
;		
;	ENDIF
;	;-------------------------------------------------
;	;戦闘中
;	;TARGETの【乾坤一擲】発動時
;	;ARGはTARGETの残機
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "乾坤一擲"
;		
;	ENDIF
;	;-------------------------------------------------
;	;戦闘中
;	;TARGETの【怪力乱神】発動時
;	;ARGはTARGETの残機
;	;記入チェック（=0, 非表示、1, 表示）
;	LOCAL:1 = 0
;	;-------------------------------------------------
;	IF LOCAL:1 && ARGS == "怪力乱神"
;		
;	ENDIF
;	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		;你勝利
		IF 相手残機 == 0
			;酔ってる
			IF M_KOJO_K83_YOIDORE([[琪斯美]])
				PRINTFORMW 「啊咧……？」
			;心情不快
			ELSEIF M_KOJO_K83_FUKIGEN([[琪斯美]])
				PRINTFORMW 「好过分…………」
			;通常
			ELSE
				IF TALENT:[[琪斯美]]:恋人
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%～、稍微让让我嘛……」
					CASE 2
						PRINTFORMW 「玩得很開心呢…♪」
					CASEELSE
						PRINTFORMW 「下次再一起玩吧…♪」
					ENDSELECT
				ELSEIF TALENT:[[琪斯美]]:恋慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「强大真好啊……」
					CASE 2
						PRINTFORMW 「完全不是对手……」
					CASEELSE
						PRINTFORMW 「虽然输了，但还是很開心……」
					ENDSELECT
				ELSEIF TALENT:[[琪斯美]]:思慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%很强呢……」
					CASE 2
						PRINTFORMW 「不、不甘心……」
					CASEELSE
						PRINTFORMW 「输掉了呀……」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「输、输掉了……」
					CASE 2
						PRINTFORMW 「没、没辙……」
					CASEELSE
						PRINTFORMW 「%CALLNAME:MASTER%、好强……」
					ENDSELECT
				ENDIF
			ENDIF
		;琪斯美勝利
		ELSE
			;酔ってる
			IF M_KOJO_K83_YOIDORE([[琪斯美]])
				PRINTFORMW 「啊哈哈！ 甚是有趣呀ー！」
			;心情不快
			ELSEIF M_KOJO_K83_FUKIGEN([[琪斯美]])
				PRINTFORMW 「…………笨蛋」
			;通常
			ELSE
				IF TALENT:[[琪斯美]]:恋人
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%、居然比我还弱……」
					CASE 2
						PRINTFORMW 「打、打疼了吗…？ 对不起……」
					CASEELSE
						PRINTFORMW 「要继续特训呢…♪」
					ENDSELECT
				ELSEIF TALENT:[[琪斯美]]:恋慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「运、运气真好…！」
					CASE 2
						PRINTFORMW 「%CALLNAME:MASTER%也很厉害……」
					CASEELSE
						PRINTFORMW 「呼呼、真開心……」
					ENDSELECT
				ELSEIF TALENT:[[琪斯美]]:思慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「啊咧……好像赢了……」
					CASE 2
						PRINTFORMW 「不、不错的比试……」
					CASEELSE
						PRINTFORMW 「抱、抱歉……」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「好菜……」
					CASE 2
						PRINTFORMW 「欸……结束了…？」
					CASEELSE
						PRINTFORMW 「还是乖乖待着比较好……」
					ENDSELECT
				ENDIF
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

