;收藏枚数確認
;引数	ARG:0		対象
;引数	ARG:1		表示対象	0=收藏	,1=手持
;戻り値	RESULT:0	総数
;		RESULT:1	種類数
;		RESULT:2	着用可能数
;====================================
;查询有没有私藏魔理沙内裤
;====================================
@CHECK_COLLECTION_MARISA(ARG:1=0)
#DIM 種類
;#DIM 多余
;#DIM 种类数
;#DIM 总共
#DIM 所持数

VARSET RESULT

FOR 種類,0,MAXPANTS
	IF ARG:1 == 0
		所持数 = CFLAG:11:(種類 + 胖次管理)
	ELSE
		所持数 = PANTS_TEMP:11:種類
	ENDIF
	IF 所持数
		RESULT:0 += 所持数
		RESULT:1 ++
		RESULT:2 ++
	ELSEIF GET_INT(11, "下半身内衣_ずらし可能", 種類, "收藏表示可能")
		RESULT:2 ++
	ENDIF
NEXT

;总共 = RESULT:0
;种类数 = RESULT:1
;多余 = 总共 - 種類数

RETURN RESULT:0,RESULT:1,RESULT:2

;====================================
;消除内裤
