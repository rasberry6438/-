;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K133_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「你的……罪孽深重！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「我背负着死亡，而你背负着生命，现在就在这里回答，哪个才是正确的！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「来吧！展示你的力量给这匹漆黑的天马看看吧！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「要活下去就必须变得强大，但到底要多强才够呢？就试试看吧！！！」
		ELSE
			PRINTFORMW 「比吉弔更难缠吧？怎么样！」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「……真是让人生气！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「做得相当不错！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「看起来情况不太妙啊……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「不像吉弔那样讨厌的家伙，而是好战的，感觉真不错！」
				ELSE
					PRINTFORMW 「呼呼呼呼！果然很棘手啊！」
				ENDIF
			CASE 1
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……这家伙！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「居然做到这个地步！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「开始感到有趣了！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「还远远不够！我要继续享受！」
				ELSE
					PRINTFORMW 「啊哈哈哈！只能笑了！！！」
				ENDIF
			CASE 0
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……杀……！！！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「风险和负面是引爆剂！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「说逼急了的老鼠会咬猫……但我可是有腿的！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「远远不够！这一刻！属于我们的！」
				ELSE
					PRINTFORMW 「被逼到绝境？不，怎么可能！！！」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「我可不是会输给你这样的人」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「你还没有全力以赴吧！是吧！！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「看清楚我的肌肉！这样就能躲过！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「锻炼还远远不够！从做100个仰卧起坐开始吧！」
				ELSE
					PRINTFORMW 「嗯嗯……那我就来锻炼你吧！虽然有点斯巴达！」
				ENDIF
			CASE 2
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「哼，讨厌！别伤害我！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「虽然只是擦伤，但让我受伤了！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「比吉弔还弱啊！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「还太弱了！继续锻炼吧！」
				ELSE
					PRINTFORMW 「最重要的是你的速度不够！」
				ENDIF
			CASE 1
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……真是蠢货啊」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「呵呵呵呵呵！相当有趣啊！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「据说在被追得走投无路时才能看出本性，我觉得很有趣！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「如果你只能做到这点，似乎可以一直奔跑到底！」
				ELSE
					PRINTFORMW 「哎哟哟哟……这是怎样的力量！我好像要迷上你了！」
				ENDIF
			CASE 0
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「咕……杀了我……」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「似乎追不上你的背影……」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……人类居然有这样的力量……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「即使在畜生界也不常见的力量！我迷上了！」
				ELSE
					PRINTFORMW 「这样的话似乎能战胜任何敌人！」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

