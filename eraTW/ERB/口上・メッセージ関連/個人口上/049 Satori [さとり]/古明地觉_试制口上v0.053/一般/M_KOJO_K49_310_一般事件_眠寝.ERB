;==================================================
;朝起きたとき（おはよう口上）
;==================================================
@M_KOJO_NK_EVENT_K49_2(ARG,ARG:1)
;口上主はTARGET
;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------

IF LOCAL
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;非同棲かつ相手が先に起きてる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 1
		;-------------------------------------------------
		;TARGET私室にMASTERが入っている（恋慕時添い寝中就寝時のみ？
		;記入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && !ARG:1
			PRINTFORMW 「还打算再睡会吗？」
			RETURN 1
		ENDIF
		;-------------------------------------------------
		;MASTER私室にTARGETが入ってきてる(恋慕無しでも入ってくる可能性有り
		;記入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && ARG:1 == 1
			PRINTFORMW 「真是悠哉呢」
			RETURN 1
		ENDIF
		PRINTFORML 
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;同棲かつ相手が起きている
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 2
		PRINTFORMW 「该起来扫地啦」
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;同棲かつ相手が寝ている
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 3
		PRINTFORMW 「唔…我的话，睡到什么时候都可以……」
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;MASTERが起きていて、相手が起きてきた
	;添い寝時TARGET起床はこちら（TARGET衰弱or添い寝中TARGET睡魔負け後そのままMASTERが起き続けた上で相手が起床した場合限定
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 4
		;-------------------------------------------------
		;非同棲
		;記入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && !ARG:1
			PRINTFORMW 「还要占用我的床到什么时候呢」
			RETURN 1
		ENDIF
		;-------------------------------------------------
		;同棲中
		;記入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && ARG:1 == 1
			PRINTFORMW 「哦呀，终于打算起了吗」
			RETURN 1
		ENDIF
		;PRINTFORML 
		RETURN 1
	ENDIF
	;その他
	;PRINTFORML  
ENDIF
RETURN 1

;==================================================
;夜寝るとき（おやすみ口上）
;==================================================
@M_KOJO_NK_EVENT_K49_3(ARG,ARG:1)
;口上主はTARGET
;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------

IF LOCAL
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;自室に帰って寝る（～は【現在地】から【キャラの自室】に戻りました）
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 1
		IF ARG:1
			;约会中に眠くて帰って寝る（拠点キャラのみ）
			PRINTFORML 「虽然很扫兴，但已经这个时间了」
			PRINTFORMW 「想要多些相处的话，选好时间吧」
		ELSEIF CFLAG:诶嘿嘿
			;诶嘿嘿中に眠くて自室に帰って寝る（拠点キャラのみ）
			PRINTFORML 「困到受不了了呢」
			PRINTFORMW 「要是敢过来眠姦的话…」
		ELSE
			PRINTFORMW 「哈啊——就算是妖怪也是要休息的……」
		ENDIF
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;眠そうにしている（～は眠そうにしている）
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 2
		PRINTFORMW 「已经累了呢，就请放过我吧」
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;睡眠中（～は眠っている）
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 3
		PRINTFORML 「唔……」
		PRINTFORMDW   觉翻了翻身子，睡得不踏实的样子。
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;イタズラ中
	;記入チェック（=0, 非表示、1, 表示）
	;LOCAL:1 = 1
	;-------------------------------------------------
	;IF LOCAL:1 && ARG == 4
		;PRINTFORML 
		;RETURN 1
	;ENDIF
	;-------------------------------------------------
	;衰弱して寝る（体力500以下,诶嘿嘿時は诶嘿嘿強制終了）
	;（キャラの自室以外：～を【現在地】から【キャラの自室】に運びました）
	;（キャラの自室　　：～は疲れたと言って、横になりました）
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 5
		IF CFLAG:诶嘿嘿
			;诶嘿嘿中にダウン
			PRINTFORML 「再做下去会坏掉的」
			PRINTFORMW 「稍微让我去修复一下吧」
		ELSE
			PRINTFORMW 「透支可是会垮下来的」
		ENDIF
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;MASTERがダウン（恋慕のみ,そのまま一日が終了）
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 6
		;お酒でダウン
		IF BASE:MASTER:酒気 >= MAXBASE:MASTER:酒気
			IF ARG:1
				;自室でダウン,（～が【MASTER】をベッド（布団）へと運んでくれた…）
				PRINTFORMW 「烂醉如泥，说的就是这样吧」
			ELSE
				;部屋まで運ばれる,（～が【MASTER】を私室へと運んでくれた…）
				PRINTFORMW 「还是送去那自己窝里好些」
			ENDIF
		;体力切れでダウン
		ELSE
			IF ARG:1
				;自室でダウン,（～が【MASTER】をベッド（布団）へと運んでくれた…）
				PRINTFORMW 「啊啊，就容许你借用一下这里吧」
			ELSE
				;部屋まで運ばれる,（～が【MASTER】を私室へと運んでくれた…）
				PRINTFORMW 「自己的床才会舒服些吧」
			ENDIF
		ENDIF
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;TARGETが寝るために自室まで戻ってきた
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 7
		;-------------------------------------------------
		;そのまま着替えて寝た（【TARGET】が部屋に戻ってきた→寝間着へと着替え、寝床に潜った）
		;記入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && ARG:1 == 0
			PRINTFORMW 「该睡了呢」
			RETURN 1
		ENDIF
		;-------------------------------------------------
		;部屋から追い出して寝た（眠そうな【TARGET】に追い出された…）
		;記入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && ARG:1 == 1
			IF CFLAG:前一次的位置 == CFLAG:現在位置
				;前のターンまで一緒に部屋にいた
				PRINTFORML 「啊啊，差不多也该睡了」
				PRINTFORMW 「所以…请你自己出去吧」
			ELSE
				;寝るために部屋に帰ってきたところ
				PRINTFORMW 「嗯？还赖在这不走吗」
			ENDIF
			RETURN 1
		ENDIF
		;-------------------------------------------------
		;他キャラとのＨを止めさせて寝た（【TARGET】が部屋に戻ってきた→唇をとがらせる【TARGET】に、【MASTER】は渋々【Ｈの相手】から離れた）
		;記入チェック（=0, 非表示、1, 表示）
		LOCAL:1 = 1
		;-------------------------------------------------
		IF LOCAL:1 && ARG:1 == 2
			PRINTFORMW 「过分啊，要做就到自己床上做」
			RETURN 1
		ENDIF
	ENDIF
	;-------------------------------------------------
	;来訪キャラが拠点で休憩（～は疲れ切っている→ちょっと休んでいきなよ）
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 8
		PRINTFORMW 「有些疲倦了呢」
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;寝室に居る状態でその場で寝る（～は眠気に負け、眠りについた…）
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 9
		IF CFLAG:诶嘿嘿
			;诶嘿嘿中に寝る
			PRINTFORMW 「哈啊…困了呢……」
		ELSE
			PRINTFORMW 「呜——要睡了」
		ENDIF
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;拠点外で自宅前に居るキャラが自室に帰って寝る（眠くなった～は自室に帰って行きました）
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 10
		PRINTFORMW 「哈啊啊——你也早点回去睡吧」
		RETURN 1
	ENDIF
ENDIF
RETURN 1

