;口上専用フラグはご自由に
;Xにはキャラ番号を入れてください
[SKIPSTART]
IF TARGET==49
	SELECTCASE 关系_310()
		CASE 0
			TFLAG:好感度管理-=5
			TFLAG:信賴度管理-=3
			TFLAG:好感度BONUS-=40			
		CASE IS >=105
			IF 关系_310()>110&&!CFLAG:TARGET:膣内射精&&CFLAG:TARGET:积攒度<500
				CFLAG:TARGET:积攒度+=500
			ENDIF
			TFLAG:好感度管理+=5
			TFLAG:信賴度管理+=3
			TFLAG:好感度BONUS+=25
		CASE 102 TO 104
			TFLAG:好感度管理+=3
			TFLAG:信賴度管理+=2
			TFLAG:好感度BONUS+=15
		CASE 101
			TFLAG:好感度管理+=2
			TFLAG:信賴度管理++
			TFLAG:好感度BONUS+=5
		CASE 4 TO 16
			IF 关系_310()>10&&!CFLAG:TARGET:膣内射精&&CFLAG:TARGET:积攒度<500
				CFLAG:TARGET:积攒度+=500
			ENDIF
			TFLAG:好感度管理+=3
			TFLAG:信賴度管理+=2
			TFLAG:好感度BONUS+=15
		CASE 2 TO 3
			TFLAG:好感度管理++
			TFLAG:好感度BONUS+=5
		CASE 1
			TFLAG:好感度管理-=2
			TFLAG:信賴度管理--
			TFLAG:好感度BONUS-=10		
	ENDSELECT	
ENDIF
[SKIPEND]
