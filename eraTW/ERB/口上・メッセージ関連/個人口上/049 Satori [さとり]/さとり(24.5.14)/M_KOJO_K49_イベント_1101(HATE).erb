@HATE_49()
#FUNCTION
IF 陥落状態() == 2;先决条件
	CFLAG:49:1102 += 1;计数默认加值
	SIF TALENT:心情 == 1 && RAND:2 == 0
		CFLAG:49:1102 -=1
	SIF TALENT:心情 == -1 && RAND:2 == 0
		CFLAG:49:1102 +=1;心情的加值影响
	IF CFLAG:49:1102 >= CFLAG:49:1101;突破了上限的情况
		RETURNF 0
	ELSE
		RETURNF 1
	ENDIF
ELSE
	RETURNF 1
ENDIF

