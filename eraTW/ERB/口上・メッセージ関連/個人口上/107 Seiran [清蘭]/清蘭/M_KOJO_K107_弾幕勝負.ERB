;==================================================
;弹幕胜负 
;==================================================
;ブチギレ口上はナイトメアダイアリー风
@M_KOJO_MESSAGE_COM_K107_DANMAKU(ARGS, 对方残机)
#DIM 对方残机
;全体の流れ
;①【战斗前】→②ダイスロールとプレイヤー选择肢、ハンデをつけた场合は【ハンデ口上】→③对应スキルが发动した场合【スキル口上】→④被弹判定、キャラが被弹したなら【被弹口上】→
;どちらかの残机が0になっていなければ②に戻る→⑤【战斗后口上】

;--------------------------------------------------
;记入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;战斗前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数值が大きいほどあなたが不利になる　数值が负ならあなたが有利に
	;キャラの能力に关わらずクッソ强くしたり弱くしたりできる
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗前"
		IF ALCOHOL_FACE(107) == "醉酒" || ALCOHOL_FACE(107) == "不省人事"
			PRINTFORMW 「啊～嗯？要和老娘来一发吗～？没问题哦！！」
		ELSEIF TALENT:107:心情 == -1 || CFLAG:107:ブチギレ || MARK:107:反発刻印 >= 3
			PRINTFORML 「弹符『Eagle Shooting』」
			SETCOLOR 0xC07070
			PRINTFORMW 清兰突然袭击过来了！！
		;あなた戦闘能力1以下
		ELSEIF ABL:MASTER:戦闘能力 < 1
			SELECTCASE RAND:3
				CASE 0
					PRINTFORMW 「%CALLNAME:MASTER%！你能躲过这个吗！」
				CASE 1
					PRINTFORMW 「%CALLNAME:MASTER%…别小看我是个底层人员！」
				CASE 2
					PRINTFORMW 「我是地上人…就算是%CALLNAME:MASTER%也不应该输给我！」
			ENDSELECT
		ELSE
			SELECTCASE RAND:3
				CASE 0
					;あなた戦闘能力4以上
					IF ABL:MASTER:戦闘能力 >= 4
						PRINTFORMW 「我会让你看看%CALLNAME:MASTER%！作为月球调查队的我所拥有的实力！」
					ELSE
						PRINTFORMW 「好了！比赛开始吧%CALLNAME:MASTER%！」
					ENDIF
				CASE 1
					;清兰戦闘能力3以上
					IF ABL:戦闘能力 >= 3
						PRINTFORMW 「就算是我……也变得比以前更强了！」
					ELSE
						PRINTFORMW 「%CALLNAME:MASTER%！我告诉你，我不会手下留情的！」
					ENDIF
				CASE 2
					PRINTFORMW 『这里是清兰。从现在开始进行%CALLNAME:MASTER%的净化活动』
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので无记入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;战斗中TARGET被弹时口上
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弹"
		IF 对方残机 == 2
			IF ALCOHOL_FACE(107) == "醉酒" || ALCOHOL_FACE(107) == "不省人事"
				PRINTFORMW 「巴卡玛卡～～！！」
				PRINTFORML 弹符『○△□×◎※』～～～！」
				PRINTFORMDW 因为无法听清咒卡的名称，%CALLNAME:MASTER%无法预测接下来的弹幕
			ELSEIF TALENT:107:心情 == -1 || CFLAG:107:ブチギレ || MARK:107:反発刻印 >= 3
				PRINTFORMW 「弹幕『Rabbit Falconer』」
				PRINTFORMDL %CALLNAME:MASTER%不知何时，发现自己手中握着一个小摄像机。
				PRINTFORMDW %CALLNAME:MASTER%全神贯注，按下快门迎向迫近的弹幕！
			ELSEIF ABL:MASTER:戦闘能力 >= 4
				;你的戦闘能力达到4以上时增加符卡
				SELECTCASE RAND:3
					CASE 0
						PRINTFORML 「咕…！别小看月之兔！」
						PRINTFORMW 「凶弹『Speed Strike』！！」
					CASE 1
						PRINTFORML 「疼痛…不疼！比赛还远远没有结束！」
						PRINTFORMW 「弹符『Eagle Shooting』！！」
					CASE 2
						;内4人是绀珠传的可玩角色
						PRINTFORML 「呜呜…！你做得好%CALLNAME:MASTER%…！从这里开始我也认真起来了！」
						PRINTFORMW 「让我使用这个是你……唉，呼…第五个人！」
						PRINTFORMW 「弹符『鹰已击中』！！」
				ENDSELECT
			ELSE
				PRINTFORML 「疼痛…不疼！比赛还远远没有结束！」
				PRINTFORMW 「弹符『Eagle Shooting』！！」
			ENDIF
		ENDIF
	ENDIF
	IF LOCAL:1 && ARGS == "被弹"
		IF 对方残机 == 1
			IF ALCOHOL_FACE(107) == "醉酒" || ALCOHOL_FACE(107) == "不省人事"
				PRINTFORMW 「啊哈哈哈啊～～♪ 好开心～～～☆」
				PRINTFORML 「□×○『▼×●◎★※☆』～～～！」
				PRINTFORMDW 清兰烂醉如泥，行動无法预测！%CALLNAME:MASTER%差点就被击中了！
			ELSEIF TALENT:107:心情 == -1 || CFLAG:107:ブチギレ || MARK:107:反発刻印 >= 3
				PRINTFORMW 「梦弹『Lunatic Dream Shoot』」
				PRINTFORMDL  用这台相机拍摄弹幕，照片上显示的部分似乎会被切掉一样消失。
				PRINTFORMDW  理解了相机能力的%CALLNAME:MASTER%，为了应对清兰持续不断的猛攻，再次举起了相机！
			ELSE
				SELECTCASE RAND:2
					CASE 0
						PRINTFORML 「不要啊！已经没有退路了！」
						PRINTFORMW 「事到如今…只能用我的绝招了！」
						PRINTFORMW 「枪符『Lunatic Gun』！！」
					CASE 1
						PRINTFORML 「唔…不妙，这样下去会输的！」
						PRINTFORMW 「事到如今…就让我用杀手锏吧！」
						PRINTFORML 「Mayday Mayday！紧急情况发生！请求支援！重复！请求支援…」
					SETCOLOR 0xC07070
						PRINTFORMW  清兰打算呼叫伙伴！在援军到来之前解决战斗！
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
	IF LOCAL:1 && ARGS == "被弹"
		IF 对方残机 == 0
			IF ALCOHOL_FACE(107) == "醉酒" || ALCOHOL_FACE(107) == "不省人事"
				PRINTFORMW 「啾～…」
			ELSEIF TALENT:107:心情 == -1 || CFLAG:107:ブチギレ || MARK:107:反発刻印 >= 3
				PRINTFORML  「………………。」
				PRINTFORMDW 清兰的攻击停止的同时，%CALLNAME:MASTER%失去了意识……
			ELSE
				SELECTCASE RAND:2
					CASE 0
						PRINTFORMW 「%CALLNAME:MASTER%好厉害啊。不行啊」
					CASE 1
						PRINTFORMW 「诶？为什么是我被打倒了？」
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【残忍酷薄】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【乾坤一掷】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一掷"
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【怪力乱神】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;战斗后
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗后" 
		PRINTFORML 
		;残り残机4が表示されうるのは【洽览深识】持ちのみ
		;残机が1以上ならあなたの负け、0の场合はあなたの胜利
		;あなた胜利
		IF 对方残机 == 0
			IF ALCOHOL_FACE(107) == "醉いどれ" || ALCOHOL_FACE(107) == "微醺"
				PRINTFORMDL 战斗结束后，清兰一动不动地倒在地面上。
				PRINTFORMDW %CALLNAME:MASTER%慌忙跑过去，清兰突然坐了起来。
				PRINTFORML  「………………。」
				PRINTFORML  「…………。」
				PRINTFORMW  「……。」
				SETCOLOR 0xC07070
				PRINTFORMW 「咕噜」
				PRINTFORML 
				PRINTFORMW 
				PRINTFORMDW 之后发生的事情不想回忆起……
				PRINTFORML
				SETCOLOR 0xFFE9A9
				PRINTFORML      STAGE CLEAR
				PRINTFORMDL      Clear Bonus
				PRINTFORMDL       5,000,000
				PRINTFORMDW 
			ELSEIF TALENT:107:心情 == -1 || CFLAG:107:ブチギレ || MARK:107:反発刻印 >= 3
				PRINTFORMDL 醒来时，%CALLNAME:MASTER%发现自己回到了原来的地方。手中的相机不知何时已经消失了。
				PRINTFORMDW 可能是因为和清兰吵架，才做了那样的噩梦。之后应该好好道歉才对……
			ELSE
				PRINTFORML 
				SELECTCASE RAND:2
					CASE 0
						PRINTFORML 『喂！！为什么没有人来支援我啊！就因为这样才会被说成"现在的兔子不遵守命令"！』
						PRINTFORML 『…啊！？ "你弱是你自己的错" 是吗！？』
						PRINTFORMDW 清兰一边朝虚空大喊大叫，一边在原地踱步……
						PRINTFORML
						SETCOLOR 0xFFE9A9
						PRINTFORML      STAGE CLEAR
						PRINTFORMDL      Clear Bonus
						PRINTFORMDL       5,000,000
						PRINTFORMDW 
					CASE 1
						PRINTFORMDW 当%CALLNAME:MASTER%慌忙跑向倒地不动的清兰时，清兰优哉游哉地站了起来。
						PRINTFORML 「……第二回合了%CALLNAME:MASTER%」
						PRINTFORML 「如果弹幕赢不了，那就用肉搏来决胜负吧ーー！！」
						PRINTFORMDW 在清兰挥舞着棍棒追赶过来的时候，%CALLNAME:MASTER%一边逃跑一边躲避着……
						PRINTFORML
						SETCOLOR 0xFFE9A9
						PRINTFORML      STAGE CLEAR
						PRINTFORMDL      Clear Bonus
						PRINTFORMDL       5,000,000
						PRINTFORMDW 
				ENDSELECT
			ENDIF
		;清兰胜利
		ELSE
			IF ALCOHOL_FACE(107) == "醉酒" || ALCOHOL_FACE(107) == "不省人事"
				PRINTFORMW 「WINNER～～～！清兰～～～！！」
			ELSEIF TALENT:107:心情 == -1 || CFLAG:107:ブチギレ || MARK:107:反発刻印 >= 3
				PRINTFORMW 「………………。」
				PRINTFORMDL 清兰头也不回地离开了%CALLNAME:MASTER%。
				PRINTFORMDL 那真的是清兰吗？这难道不是自己正在做的噩梦吗？
				PRINTFORMDW 在脑海中浮现出这些想法的时候，%CALLNAME:MASTER%眼前一片漆黑……
			ELSE
				IF ABL:MASTER:戦闘能力 < 1
					SELECTCASE RAND:2
						CASE 0
							PRINTFORMW 「看吧。果然是我的胜利~♪」
						CASE 1
							PRINTFORMW 「%CALLNAME:MASTER%好弱啊~。…你能站起来吗？」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
						CASE 0
							;你的戦闘能力大于等于4
							IF ABL:MASTER:戦闘能力 >= 4
								PRINTFORMW 「……%CALLNAME:MASTER%，你是认真的吗？」
							ELSE
								PRINTFORMW 「哎呀哎呀，废物~♪」
							ENDIF
						CASE 1
							;清兰的戦闘能力大于等于3
							IF ABL:戦闘能力 >= 3
								PRINTFORMW 「耶…耶耶！我赢了%CALLNAME:MASTER%～～！」
							ELSE
								PRINTFORML 「要是连我都赢不了，还能赢谁啊？」
								PRINTFORMW 「…啊，总觉得我自己说着说着都觉得悲伤了…」
							ENDIF
						CASE 2
							PRINTFORMW 『这里是清兰。%CALLNAME:MASTER%的净化已完成』
					ENDSELECT
				ENDIF
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
RETURN 1

