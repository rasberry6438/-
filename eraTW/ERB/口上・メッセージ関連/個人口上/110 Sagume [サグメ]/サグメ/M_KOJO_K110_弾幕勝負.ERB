;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K110_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;角色の能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;憤怒
		IF CFLAG:318 == 1
			PRINTFORMW 「玉符『堕天使的排律』」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「……」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「……试试看吧，用你的力量」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「……我不会输给污秽的地上人」
		ELSE
			PRINTFORMW 「……玉符『乌合双重咒』」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……止步于此，『口舌之祸的咒印』」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……被看透了……！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……只是这种程度！」
				ELSE
					PRINTFORMW 「……只是运气罢了」
				ENDIF
			CASE 1
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……混蛋啊……」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……不是偶然？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……意外的很强呢」
				ELSE
					PRINTFORMW 「『这样下去你会赢的！』」
				ENDIF
			CASE 0
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……怎么……！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……输了……」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……好像很有实力呢……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……是说话太多了吗……」
				ELSE
					PRINTFORMW 「……！！！」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……你该死掉了」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……没什么大不了的」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……毕竟是地上人」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……我还活着」
				ELSE
					PRINTFORMW 「……」
				ENDIF
			CASE 2
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「好麻烦啊，这么顽强的」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……不太强」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……还不错啊」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……」
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW 探女兴致勃勃地看着这边。
				ENDIF
			CASE 1
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……真是头疼」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……真是很强呢」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……我竟然被逼得走投无路……获胜是偶然的吗」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……就差一点点」
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW 探女兴致勃勃地看着这边。
				ENDIF
			CASE 0
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……下三滥」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……很强啊、%CALLNAME:MASTER%」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……输了吗……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……地上人的力量也不可轻视啊」
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW 探女兴致勃勃地看着你这边。
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

