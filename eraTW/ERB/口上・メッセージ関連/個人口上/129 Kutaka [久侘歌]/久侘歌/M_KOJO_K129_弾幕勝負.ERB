;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K129_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;角色の能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;憤怒
		IF CFLAG:318 == 1
			PRINTFORMW 「让你见识一下地狱吧！！！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「想接受我的考验吗？可以哟！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「在下地狱前见识一下什么是地狱吧！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「撒！请享受地狱吧！」
		ELSE
			PRINTFORMW 「%CALLNAME:MASTER%先生！决一胜负！」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「姆咕咕……干得不错！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「好痛！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……干得好！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「真不愧！」
				ELSE
					PRINTFORMW 「实力已经足够了……」
				ENDIF
			CASE 1
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……糟糕！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「果然很强呢」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「才刚刚開始呢！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「虽然已经被逼得走投无路、但还没有输！」
				ELSE
					PRINTFORMW 「稍微手下留情也……」
				ENDIF
			CASE 0
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……笨蛋！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「明明我是神啊……」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「做、做得好……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「呜、太过分了……」
				ELSE
					PRINTFORMW 「被打败了—！」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……真是愚蠢啊」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「是身体不舒服吗？」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「请不要太乱来哦？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「身体还好吗？」
				ELSE
					PRINTFORMW 「有没有受伤？」
				ENDIF
			CASE 2
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「没什么大不了的」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「如果是你的话、即便真去了地狱也不会被秒杀吧」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「相当不错了呢」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「做到了呢！%CALLNAME:MASTER%先生！」
				ELSE
					PRINTFORMW 「锻炼得不够哟～」
				ENDIF
			CASE 1
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……费了我许多功夫呢！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「真是的、你真的是人类吗？」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「果然很强……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「%CALLNAME:MASTER%先生即使下了地狱也还可以一战呢」
				ELSE
					PRINTFORMW 「接受不了我的考验可不行哦？」
				ENDIF
			CASE 0
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……不甘心」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「认、认输……」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「如果有这样的手段的话、说不定能和地狱中的鬼打交道呢」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「疼疼疼……真的好强啊……」
				ELSE
					PRINTFORMW 「……输了呢」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

