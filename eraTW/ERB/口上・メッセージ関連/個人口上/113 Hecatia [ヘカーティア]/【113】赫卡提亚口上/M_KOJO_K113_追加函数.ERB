;@HEARTCB_K113(ARG:1, ARG, ARGS)
;ARG:1は表示するハートマークの色、ARGは表示する数、ARGSはフォント
;触手宮のぱにめーしょんから一部お借りしました
;なんでわざわざ関数作ったの？→単語登録してあったから
;例：
;    PRINTFORM 「……嗯、嗯！？　咕、嗯……唔哈
;	 CALL HEARTCB_K113(0xD02830)
;	 PRINTFORML 」
;-------------------------------------------------
;
@HEARTCB_K113(ARG:1 = 0xC07070, ARG = 1, ARGS = "Verdana")
#LOCALSIZE 2
#LOCALSSIZE 1
	LOCAL = GETCOLOR()
	LOCALS = %GETFONT()%
	
	SETCOLOR ARG:1
	SETFONT CHKFONT(ARGS) ? ARGS # LOCALS

	IF GETFONT() == "Symbol"
		FOR LOCAL:1, 0, ARG
			PRINTS UNICODE(0xA9)
		NEXT
	ELSE
		FOR LOCAL:1, 0, ARG
			PRINTS UNICODE(0x2665)
		NEXT
	ENDIF
	
	SETFONT LOCALS
	SETCOLOR LOCAL
RETURN 1

;-------------------------------------------------
;@FORM_K113()
;赫卡提亚形态（0异界、1地球、2月球）から随机に選ぶ関数
;且可以在每个大地图中保留形态（双方案、可自选）
;-------------------------------------------------
;
@FORM_K113()
#FUNCTION

;每到另一个大地图尝试变换一次形态（默认方案）
IF GET_MAPID(CFLAG:113:現在位置) == CFLAG:113:1010
;只要不回冥界或月面，就不更换形态（降低变化频次、可替代方案）
;IF INRANGE(CFLAG:113:1010, 0, 9) && INRANGE(GET_MAPID(CFLAG:113:現在位置), 0, 9) && GET_MAPID(CFLAG:113:現在位置) != 6

    RETURNF CFLAG:113:1009
ELSE
    CFLAG:113:1010 = GET_MAPID(CFLAG:113:現在位置)
    SELECTCASE CFLAG:113:1010
        CASE 0 TO 9
		    CFLAG:113:1009 = RAND:2             
	    CASE 10
		    SELECTCASE RAND:2
			    CASE 0
			        CFLAG:113:1009 = 0
			    CASE 1
			        CFLAG:113:1009 = 2
					TALENT:113:12 = 1
					TALENT:113:23 = 1
					TALENT:113:10 = 1
					TALENT:113:小悪魔 = 1
					TALENT:113:傲嬌 = 1
					TALENT:113:羞恥心 = 0
					TALENT:113:服従 = 0
		    ENDSELECT
	ENDSELECT
	IF CFLAG:113:1009 == 1
	    TALENT:113:12 = -1
		TALENT:113:23 = -1
		TALENT:113:10 = -1
		TALENT:113:小悪魔 = 0
		TALENT:113:傲嬌 = 0
		TALENT:113:羞恥心 = 1
		TALENT:113:服従 = 1
	ELSEIF CFLAG:113:1009 == 0
	    TALENT:113:12 = 1
		TALENT:113:23 = 1
		TALENT:113:10 = 1
		TALENT:113:小悪魔 = 0
		TALENT:113:傲嬌 = 0
		TALENT:113:羞恥心 = 0
		TALENT:113:服従 = 0
	ENDIF
    RETURNF CFLAG:113:1009	
ENDIF

