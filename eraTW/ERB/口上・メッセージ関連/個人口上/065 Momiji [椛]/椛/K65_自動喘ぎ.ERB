;汎用喘ぎ声関数
;@KX_AEGI(ARGS,ARG)
;
;○式中関数として呼べる喘ぎ声
;○CALL HPH_PRINT,@"「%KX_AEGI()%」" 
;　とか
;　CALL PRINT_STR,@"「%KX_AEGI()%」"
;　とかいう形式で呼び出しすれば、ハートマークにも対応可。
;
;・第一引数は喘ぎ時のシチュエーション
;	ARGS == "控えめ"みたいに喘ぎ時のシチュエーションを指定。
;	
;	
;・第二引数は最大喘ぎ回数の制限
;	特に指定しないなら、PALAM:欲情に応じて変化
;	「%KX_AEGI("んほお")%おまんこズボズボされてこわれちゃうのぉっ！！！」
;	のように記述した時に
;	「あ～～～～～っ！！んおおおお～～～～～っ！！しゅごひっ！！しゅごひのぉっ！！！！おま
;	んこズボズボされてこわれちゃうのぉっ！！！」
;	みたいに変なタイミングで改行が挟まらないように制御したい
;※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※※
;----------------------------------------------------------------------------------------
;
;----------------------------------------------------------------------------------------

@K65_AEGI(ARGS,ARG)
#FUNCTIONS
#DIMS AEGI					; 喘ぎ声本体
#DIM RAND_MAX				; 喘ぎ回数の指定
#DIMS AEGI_TYPE,10			; 喘ぎ声タイプの指定
#DIMS IKITSUGI_TYPE,10		; 息継ぎタイプの指定
#DIMS MATSUBI_TYPE,10		; 末尾タイプの指定
#DIM NUM_TYPEA				; 喘ぎ声タイプの要素数
#DIM NUM_TYPEI				; 息継ぎタイプの要素数
#DIM NUM_TYPEM				; 末尾タイプの要素数

;初期化
VARSET AEGI
VARSET LOCAL
VARSET AEGI_TYPE
VARSET IKITSUGI_TYPE
VARSET MATSUBI_TYPE

;喘ぎ回数の指定
IF ARG == 0
	RAND_MAX = 2 + RAND:3 + (PALAM:欲情 >= 500) + (PALAM:欲情 >= 3000) + (PALAM:欲情 >= 30000)
ELSE
	RAND_MAX = ARG
ENDIF

;----------------------------------------------------------------------------------------
;喘ぎ声タイプの指定
;第一引数で指定したシチュごとに喘ぎ声/息継ぎ/末尾タイプを定義する。
;----------------------------------------------------------------------------------------

SELECTCASE ARGS
	CASE "控えめ"
		IF CUP:TARGET:快Ｍ > 0
			AEGI_TYPE:0 '= "吐息", "接吻軽め", "接吻軽め", "接吻軽め"
		ELSE
			AEGI_TYPE:0 '= "吐息", "控えめ", "控えめ"
		ENDIF
		IKITSUGI_TYPE:0 '= "、", "、",  "嗯、",  "唔…",  "…",  "…"
		MATSUBI_TYPE:0 '= "",  "",  "唔…",  "…", "…",  "呜…"
	CASE "口交音"
		AEGI_TYPE:0 '= "吐息",  "接吻",  "ディープ接吻", "ディープ接吻"
		IKITSUGI_TYPE:0 '= "、",  "嗯、",  "…",  "唔…",  "呜、"
		MATSUBI_TYPE:0 '= "",  "…"
		;技巧が高い場合、じゅぼ音も加える。
		IF ABL:TARGET:技巧 > 4
			AEGI_TYPE:4 '= "ディープ口交","ディープ口交"
			IKITSUGI_TYPE:5 '= "唔…！","…唔！"
			MATSUBI_TYPE:3 '= "唔…！","…唔！"
			;精液中毒高い場合、ハートマーク付与
			IF ABL:TARGET:精液中毒 > 4
				IKITSUGI_TYPE:7 '= "HPH", "唔HPH"
				MATSUBI_TYPE:5 '= "HPH", "唔HPH"
			ENDIF
		ENDIF
	;追加用
	;CASE ""
	;	AEGI_TYPE:0 '=
	;	IKITSUGI_TYPE:0 '=
	;	MATSUBI_TYPE:0 '=
	
	CASEELSE
		IF CUP:TARGET:快Ｍ > 0
			AEGI_TYPE:0 '= "吐息", "接吻", "接吻","接吻軽め"
			IKITSUGI_TYPE:0 '= "、", "…","嗯、","呜、"
			MATSUBI_TYPE:0 '= "", "…唔", "…"
			
			SIF ABL:TARGET:技巧 > 4
				AEGI_TYPE:4 '= "吐息", "ディープ接吻", "ディープ接吻"
		ELSE
			AEGI_TYPE:0 '= "吐息", "控えめ"
			IKITSUGI_TYPE:0 '= "、" ,"…", "嗯、","呜、"
			MATSUBI_TYPE:0 '= "", "唔…", "…"
		ENDIF
ENDSELECT

NUM_TYPEA = 10 - MATCH(AEGI_TYPE,"")
NUM_TYPEI = 10 - MATCH(IKITSUGI_TYPE,"")
NUM_TYPEM = 10 - MATCH(MATSUBI_TYPE,"")

;恋慕時は心形の抽選率UP
IF TALENT:恋慕 && NUM_TYPEI <=9
	IKITSUGI_TYPE:NUM_TYPEI '= "HPH"
	NUM_TYPEI += 1
ENDIF
IF TALENT:恋慕 && NUM_TYPEM <=8
	MATSUBI_TYPE:NUM_TYPEM '= "HPH", "唔HPH"
	NUM_TYPEM += 1
ENDIF

;発情時は心形の抽選率UP
IF TCVAR:発情 && NUM_TYPEI <=8
	IKITSUGI_TYPE:NUM_TYPEI '= "HPH", "唔HPH"
	NUM_TYPEI += 2
ENDIF
IF TCVAR:発情 && NUM_TYPEM <=8
	MATSUBI_TYPE:NUM_TYPEM '= "HPH", "唔HPH"
	NUM_TYPEM += 2
ENDIF

WHILE (RAND_MAX - LOCAL) > 0

;----------------------------------------------------------------------------------------
;喘ぎ声本体部
;

SELECTCASE AEGI_TYPE:(RAND:NUM_TYPEA)
	CASE "吐息"
		SELECTCASE RAND:8
			CASE 0
				AEGI += "哈"
			CASE 1
				AEGI += "哈啊"
			CASE 2
				AEGI += "哈呜"
			CASE 3
				AEGI += "呼"
			CASE 4
				AEGI += "呼呜"
			CASE 5
				AEGI += "嗯"
			CASE 6
				AEGI += "嗯嗯"
			CASE 7
				AEGI += "咕"
		ENDSELECT
	CASE "控えめ"
		SELECTCASE RAND:11
			CASE 0
				AEGI += "啊"
			CASE 1
				AEGI += "呼"
			CASE 2
				AEGI += "呀"
			CASE 3
				AEGI += "啊唔"
			CASE 4
				AEGI += "哈啊"
			CASE 5
				AEGI += "呜嗯"
			CASE 6
				AEGI += "啊啊"
			CASE 7
				AEGI += "啊呜"
			CASE 8
				AEGI += "咿呜"
			CASE 9
				AEGI += "呜"
			CASE 10
				AEGI += "啊"
			CASE 11
				AEGI += "唔呜"
		ENDSELECT
	CASE "喘ぎ"
		SELECTCASE RAND:11
			CASE 0
				AEGI += "啊嗯"
			CASE 1
				AEGI += "呀呜"
			CASE 2
				AEGI += "哈唔"
			CASE 3
				AEGI += "呼啊啊"
			CASE 4
				AEGI += "呀啊"
			CASE 5
				AEGI += "啊呜呜"
			CASE 6
				AEGI += "咿啊"
			CASE 7
				AEGI += "啊啊"
			CASE 8
				AEGI += "咕呜"
			CASE 9
				AEGI += "啊啊"
			CASE 10
				AEGI += "哈啊啊"
		ENDSELECT
	CASE "接吻"
		SELECTCASE RAND:8
			CASE 0
				AEGI += "啾"
			CASE 1
				AEGI += "啾呜"
			CASE 2
				AEGI += "啾呜"
			CASE 3
				AEGI += "啾噜"
			CASE 4
				AEGI += "啾呣"
			CASE 5
				AEGI += "啾咕"
			CASE 6
				AEGI += "妞啾"
			CASE 7
				AEGI += "唔啾"
			CASE 8
				AEGI += "唔呣"
		ENDSELECT
	CASE "接吻軽め"
		SELECTCASE RAND:3
			CASE 0
				AEGI += "啾"
			CASE 1
				AEGI += "啾"
			CASE 2
				AEGI += "啾呜"
		ENDSELECT
	CASE "ディープ接吻"
		SELECTCASE RAND:14
			CASE 0
				AEGI += "啾溜"
			CASE 1
				AEGI += "叻溜"
			CASE 2
				AEGI += "溜啾"
			CASE 3
				AEGI += "啾噜噜唔"
			CASE 4
				AEGI += "啾呜～"
			CASE 5
				AEGI += "啾噜"
			CASE 6
				AEGI += "叻噜叻噜"
			CASE 7
				AEGI += "叻噜溜"
			CASE 8
				AEGI += "妞溜"
			CASE 9
				AEGI += "溜噗"
			CASE 10
				AEGI += "啾咕"
			CASE 11
				AEGI += "妞啾"
			CASE 12
				AEGI += "叻噜"
			CASE 13
				AEGI += "呣啾"
			CASE 14
				AEGI += "叻噜叻噜"
		ENDSELECT
	CASE "ディープ口交"
		SELECTCASE RAND:11
			CASE 0
				AEGI += "啾卟"
			CASE 1
				AEGI += "啾卟"
			CASE 2
				AEGI += "咕噗"
			CASE 3
				AEGI += "咕啵"
			CASE 4
				AEGI += "啾噜啾"
			CASE 5
				AEGI += "啾卟卟"
			CASE 6
				AEGI += "啾溜～～"
			CASE 7
				AEGI += "咕啵"
			CASE 8
				AEGI += "呣咕"
			CASE 9
				AEGI += "嗞溜呜呜"
			CASE 10
				AEGI += "啾啵"
		ENDSELECT
	CASEELSE
		AEGI += "ほげ"
ENDSELECT

;RAND_MAX回喘ぎ声代入後、末尾へ
SIF RAND_MAX - LOCAL <= 1
	BREAK

;息継ぎの挿入
AEGI += IKITSUGI_TYPE:(RAND:NUM_TYPEI)

LOCAL++
WEND

;末尾部の挿入
AEGI += MATSUBI_TYPE:(RAND:NUM_TYPEM)

RETURNF AEGI
