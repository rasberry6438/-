;-------------------------------------------
;刻印取得
;-------------------------------------------
@M_KOJO_MESSAGE_MARKCNG_K17
;このままだと地の文が表示されません
;地の文を表示したい方は、下記のコメントアウトを削除して下さい
IF !FLAG:時間停止

	;苦痛刻印
	IF TFLAG:苦痛刻印取得 == 1
		PRINTFORMW 「什么……唔……快停下来！我可不是%K17_CNAME()%的人偶哟！」
	ELSEIF TFLAG:苦痛刻印取得 == 2
		PRINTFORMW 「呀啊啊啊！住手！我……可不是人偶……」
	ELSEIF TFLAG:苦痛刻印取得 == 3
		PRINTFORMW 「……mo……快停下来……要变成……%K17_CNAME()%的人偶了……」
		;素質も変えちゃう
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_自尊心,-2)
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_態度,2)
	ENDIF
	
	;時姦刻印
	IF TFLAG:時姦刻印取得 == 1
		PRINTFORMW 
	ELSEIF TFLAG:時姦刻印取得 == 2
		PRINTFORMW 
	ELSEIF TFLAG:時姦刻印取得 == 3
		PRINTFORMW 
	ENDIF
	
	;快楽刻印
	IF TFLAG:快楽刻印取得 == 1
		PRINTL
		PRINTFORML 「哈哈……这样的……唔……好丢脸」
		PRINTW
	ELSEIF TFLAG:快楽刻印取得 == 2
		PRINTL
		PRINTFORML 「……哈……那个……再……再来一次吧？」
		PRINTFORML 「来吧？ 呐？ 可以吧？」
		PRINTW
	ELSEIF TFLAG:快楽刻印取得 == 3
		PRINTL
		PRINTFORML 「哈哈……已经、没有%K17_CNAME()%的话……就不行了」
		PRINTFORML 「把我变成这个样子了……真是的,mo！我是不会放过你的ぁ%K17_HEART()%」
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_自尊心,-2)
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_態度,-2)
		CALL K17_RELATION_EV(K17C_RTF_恋人)
		SIF !RESULT
			PRINTW
	ENDIF
	
	;不埒刻印
	;快楽による刻印
	;LV1
	IF TFLAG:屈服刻印取得 == 11
		PRINTL
		PRINTFORML 「呜呀！」
		PRINTFORML 「啊……！%K17_BLUSH()%」
		PRINTFORMDL %CALLNAME:TARGET%被自己发出的声音吓得捂住了嘴
		PRINTW
	;LV2
	ELSEIF TFLAG:屈服刻印取得 == 12
		PRINTL
		PRINTFORML 「嗯……呜……呐、那……那个……」
		PRINTFORML 「没、没什么……」
		PRINTFORML 「可！？可爱什么的？mo,不要再说啦」
		PRINTW
	;LV3
	ELSEIF TFLAG:屈服刻印取得 == 13
		PRINTL
		PRINTFORML 「哈啊哈啊……呐、呐？」
		PRINTFORML 「把我的身体变成这个样子、你应该会负起责任的吧？」
		;素質も変えちゃう
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_自尊心,-1)
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_態度,-1)
		PRINTW
	;屈服、恭順による刻印
	;LV1
	ELSEIF TFLAG:屈服刻印取得 == 31
		PRINTL
		PRINTFORML 「%K17_CNAME()%……呵呵」
		PRINTFORML 「那个……欸……唔嗯……没什么啦」
		PRINTFORMDL %CALLNAME:TARGET%歪着小脑袋沉默了一会儿、露出了可爱的笑容
		PRINTW
	;LV2
	ELSEIF TFLAG:屈服刻印取得 == 32
		PRINTL
		PRINTFORML 「%K17_CNAME()%、没事吧？累了吗？要给你揉揉肩膀么？」
		PRINTFORMDL 突然怎么了？
		PRINTW
	;LV3
	ELSEIF TFLAG:屈服刻印取得 == 33
		PRINTL
		PRINTFORML 「%K17_CNAME()%、没事吧？累了吗？要揉揉欧派吗？」
		PRINTFORMDL 又突然怎么了？
		PRINTW
		PRINTFORMDL 啊咧、刚才在最后有说什么奇怪的话吗？
		;素質も変えちゃう
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_自尊心,-1)
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_態度,-1)
		PRINTW
	ENDIF
	
	;反発刻印
	IF TFLAG:反発刻印取得 == 1
		PRINTL
		PRINTFORML 「%K17_CNAME()%做的事、保守点说相当差劲」
		PRINTFORML 「你是想做别人讨厌的事、然后引起别人的注意么？」
		PRINTFORML 「是这种算盘的话、%K17_CNAME()%做的就大错特错了。」
		PRINTFORML 「听到了么？好好反省一下」
		PRINTFORML 「以此为契机好好改变一下态度呐」
		;素質も変えちゃう
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_自尊心,1)
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_態度,1)
		PRINTW
	ELSEIF TFLAG:反発刻印取得 == 2
		PRINTL
		PRINTFORML 「……莫非、我被当成和那边的小姑娘一样而被轻视了？」
		PRINTFORML 「像我这样的人偶使、仅靠握力就可以把头盖骨捏碎哟。」
		PRINTFORMDL 一边说着、一边捏紧拳头用冷淡的目光看着%CALLNAME:MASTER%
		PRINTFORML 「在这之后好好改变一下态度吧。」
		PRINTFORML 「这是最后的通牒哦」
		PRINTW
		;素質も変えちゃう
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_自尊心,2)
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_態度,2)
		
	ELSEIF TFLAG:反発刻印取得 == 3
		PRINTL
		PRINTFORML 「…………」
		PRINTFORMDL %CALLNAME:TARGET%的眼里空无一物
		PRINTFORMDL %CALLNAME:MASTER%的身影在%CALLNAME:TARGET%的眼中完全没有映现出来
		PRINTFORMDL 已经冷淡到连看都不想看一眼了
		PRINTW
		;素質も変えちゃう
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_自尊心,2)
		CALL K17_TALENT_UPDOWN(TARGET,K17C_TALENT_態度,2)
		
	ENDIF
	
ENDIF

