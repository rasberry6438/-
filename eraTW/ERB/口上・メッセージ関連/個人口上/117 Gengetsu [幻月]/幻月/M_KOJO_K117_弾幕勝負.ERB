;==================================================
;弾幕勝負
;==================================================
;
;幻月の特性
;	豪放磊落、残忍酷薄、狷介孤高
;
@M_KOJO_MESSAGE_COM_K117_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;角色の能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;憤怒
		IF CFLAG:318
			PRINTFORMW 「就让你回想起来、我可是恶魔的这件事呢」
		ELSE
			PRINTFORML 「恶魔之力、好好的看着吧」
			PRINTFORMW %CALLNAME:MASTER%感觉到从幻月的身体里溢出了无法估量的力量。
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;恋慕、愛欲でこんな奴呼ばわりはさすがにひどいかなーと
				IF CFLAG:318
					IF TALENT:恋慕 || TALENT:思慕
						PRINTFORML 「嘶、被这种家伙给……」
					ELSE
						PRINTFORML 「っつ、こんな奴に……」
					ENDIF
				ELSE
					PRINTFORML 「明明只是个人类却能让人战欲振奋啊」
				ENDIF
			CASE 1
				IF CFLAG:318
					PRINTFORML 「库、这样下去的话……」
				ELSE
					PRINTFORML 「已经没有后路了……！」
				ENDIF
			CASE 0
				IF CFLAG:318
					PRINTFORML 「怎么这样……我……被这种家伙――――」
				ELSE
					PRINTFORML 「唉、骗人的吧？！」
					PRINTFORML 在空中飞翔的幻月的身体%CALLNAME:MASTER%的弹幕捕捉到了――――
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		SELECTCASE 相手残機
			CASE 3
				PRINTFORML 「啊啦、就这种程度吗？」
			CASE 2
				PRINTFORML 「这种程度还差得远啊！」
			CASE 1
				PRINTFORML 「还没有结束啊！」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		IF CFLAG:318
			SELECTCASE 相手残機
				CASE 4
					PRINTFORML 
				CASE 1,2,3
					PRINTFORMW 「我的力量、亲身体会到了吗？」
				CASE 0
					PRINTFORML 「怎么这样……我被……」
					PRINTFORMW 幻月难以置信地坐在了地上。
			ENDSELECT
		ELSE
			SELECTCASE 相手残機
				CASE 4
					PRINTFORML 
				CASE 3
					PRINTFORML 「这种程度连对手都算不上啊」
					PRINTFORML 「再去多锻炼下吧」
				CASE 2
					PRINTFORML 「还差得远呢、但是攻势还不错呢」
				CASE 1
					PRINTFORML 「呼呜、总算是想办法赢了啊」
					PRINTFORML 「还挺能干的啊、%CALLNAME:MASTER%」
				CASE 0
					PRINTFORML 「没想到我竟然会输什么的……」
					PRINTFORML 「%CALLNAME:MASTER%、你真的是人类？」
			ENDSELECT
			IF 相手残機 > 0
				PRINTFORMW 幻月这么说着将手递给了倒下的%CALLNAME:MASTER%。
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

