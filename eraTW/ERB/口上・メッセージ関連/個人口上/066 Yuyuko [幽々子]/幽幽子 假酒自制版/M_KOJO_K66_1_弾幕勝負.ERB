;==================================================どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】
;弾幕勝負
;==================================================
;
@M_KOJO_假酒自制_MESSAGE_COM_K66_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_假酒自制_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		PRINTFORML 「闲着也是闲着～」
		IF TALENT:恋人 || TALENT:恋慕
			IF ABL:MASTER:戦闘能力 > 4
				PRINTFORML 「%CALLNAME:MASTER%这么厉害可要手下留情哦～」
			ELSEIF ABL:MASTER:戦闘能力 > 2
				PRINTFORML 「那么就好好地和你练一练吧～」
			ELSE
				PRINTFORML 「但这种技术也只能好好地准备受伤了呢～」
			ENDIF
		ELSEIF TALENT:思慕
			PRINTFORML 「弹幕可不会长眼睛哟～」
		ELSE
			PRINTFORML 「那么就多多指教了～」
		ENDIF
		PRINTFORMW  周围慢慢积攒起了弹幕的气息
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORMW 测试1
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				IF ABL:MASTER:戦闘能力 > 4
					PRINTFORML 「唔～看来完全没有放水呢～」
					PRINTFORMW 「不认真点的话也不行了～」
				ELSEIF ABL:MASTER:戦闘能力 > 2
					PRINTFORML 「就这种程度还是差了一点～」
					PRINTFORMW 「下一招就要来了哦～」
				ELSE
					PRINTFORML 「唉？刚刚是开小差了哦～」
					PRINTFORMW 「想击败我可没那么容易呢～」
				ENDIF
			CASE 1
				IF ABL:MASTER:戦闘能力 > 4
					PRINTFORML 「再这样打下去就完全没有胜算了～」
					PRINTFORMW 「那么准备接好下一招吧～」
				ELSEIF ABL:MASTER:戦闘能力 > 2
					PRINTFORML 「哎呀～接下来是"那一招"哦～」
					PRINTFORMW 「请做好准备～」
				ELSE
					PRINTFORML 「今天怎么……」
					PRINTFORMW 「看来一点大意都不能有啊～」
				ENDIF
			CASE 0
				IF ABL:MASTER:戦闘能力 > 4
					PRINTFORML 「%CALLNAME:MASTER%一点机会都不给啊～」
					PRINTFORMW 「投降啦投降啦～」
				ELSEIF ABL:MASTER:戦闘能力 > 2
					PRINTFORML 「啊啦～看来%CALLNAME:MASTER%还是有点实力了～」
					PRINTFORMW 「很期待下一次的对决哦～」
				ELSE
					PRINTFORML 「怎么看都是我在放水吧～」
					PRINTFORMW 「呼呼～下次可不会让着你的～」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"

	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【言笑自若】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "言笑自若"
		PRINTFORML 「打完之后吃什么比较好呢～」
		PRINTFORMW 「快点结束战斗吧～」
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【温柔敦厚】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "温柔敦厚"
		PRINTFORML 「啊啦～受的伤等会儿帮你包扎一下吧～」
		PRINTFORMW 「我包扎后回复的更快呢～」
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【豪放磊落】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "豪放磊落"
		PRINTFORML 「该来点真东西了～」
		PRINTFORMW 「樱花绽放吧～」
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		PRINTFORML 「这种攻击我还是应付的过来的～」
		PRINTFORMW 「很期待%CALLNAME:MASTER%下一次的攻击哦～」
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				IF ABL:MASTER:戦闘能力 > 4
					PRINTFORML 「就这样输了是不是太随意了点？」
					PRINTFORMW 「真的不是放水嘛～」
				ELSE
					PRINTFORML 「哦呀～没有受到一点伤害～」
					PRINTFORMW 「下次向着打伤我努力吧～」
				ENDIF
			CASE 2
				PRINTFORML 「能让我受伤的也没有几个呢～」
				PRINTFORMW 「继续努力吧～」
			CASE 1
				PRINTFORML 「差一点就输在你手上了～」
				PRINTFORMW 「肚子好饿呢～」
			CASE 0
				IF TALENT:恋人 || TALENT:恋慕
					PRINTFORMW 「那么等会儿请做饭吧～」
				ELSE
					PRINTFORMW 「下次就请和妖梦练练吧～」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

