;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K99_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		SELECTCASE RAND:3
			CASE 0
				PRINTFORMW 「偶尔也要运动一下」
			CASE 1
				PRINTFORMW 「做完这个就一起去吃点心吧？」
			CASE 2
				PRINTFORMW 「肤浅的行为、愿意与我真正一战吗？」
		ENDSELECT
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		;豊姫の残機で分岐
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 「哇啊！？」
				PRINTFORMDW 中弹的%CALLNAME:TARGET%衣服出现了少许破口
			CASE 2
				PRINTFORML 「怎么回事……」
				PRINTFORMDW 中弹的%CALLNAME:TARGET%衣服更破了
			CASE 1
				PRINTFORML 「怎么可能……」
				PRINTFORMDW %CALLNAME:TARGET%的话越来越少、衣服也越来越破
			CASE 0
				PRINTFORML 「呀可恶！」
				PRINTFORMDW %CALLNAME:TARGET%的衣服被击中的弹幕盛大地撕裂了
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;あなたが被弾から復帰時にボムをマイナスする効果
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		;豊姫の残機で分岐
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 「凡居于地上之人」
				PRINTFORMW 「无论生死、皆为罪过」
			CASE 3
				PRINTFORML 「对自傲者、挫其气焰」
				PRINTFORMW 「太过自满的话、可是会出丑的」
			CASE 2
				PRINTFORMW 「这种时候、八意大人会当机立断吧……」
			CASE 1
				PRINTFORMW 「………」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;豊姫が一定確率でボムを使った時の効果
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		;豊姫の残機で分岐
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 「我也模仿一下地上人……」
				PRINTFORMDW %CALLNAME:TARGET%从怀中取出符卡、丢向了%CALLNAME:MASTER%
			CASE 3
				PRINTFORML 「弹幕游戏好開心啊！」
				PRINTFORMDW %CALLNAME:TARGET%发动了符卡、爆发出大量的弹幕……
			CASE 2
				PRINTFORML 「那么、会怎么样呢……」
				PRINTFORMDW %CALLNAME:MASTER%的弹幕和%CALLNAME:TARGET%的弹幕碰撞在一起！……
			CASE 1
				PRINTFORML 「………呜」
				PRINTFORMDW 被逼到走投无路的%CALLNAME:TARGET%毫不犹豫地发动了符卡
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ダイス差が一定以下の時に被弾を防ぐ効果
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		;豊姫の残機で分岐
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 「这把扇子、可以瞬间将弹幕化为基本粒子」
				PRINTFORMW 「面对这样的月都最新武器、你又能做什么？」
			CASE 3
				PRINTFORML 「咿哈！」
				PRINTFORMDW %CALLNAME:TARGET%一扇扇子、%CALLNAME:MASTER%的弹幕消失得无影无踪
			CASE 2
				PRINTFORMW 「啧……净化这样的弹幕还真是不太容易」
			CASE 1
				PRINTFORMW 「……呼、重新再来吧」
		ENDSELECT
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		;豊姫の残機で分岐
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 「哎呀、已经结束了吗？」
				PRINTFORMDW 胜负瞬间就分出了。竟然有这么大的差距……
			CASE 3
				PRINTFORML 「没事吧？有没有受伤？」
				PRINTFORMDL 看着%CALLNAME:MASTER%逞强的样子、%CALLNAME:TARGET%的表情缓和了不少
				PRINTFORMW 「……呵呵、真要强啊……」
			CASE 2
				PRINTFORML 「啊……做了这么多运动……好久没有这样过了……」
				PRINTFORMW 「呃、再来一次？喔…下次再说吧」
			CASE 1
				PRINTFORML 「……还是不太成熟哦、继续努力吧」
				PRINTFORMDW 被%CALLNAME:TARGET%击败了、必须变得更强才行……
			CASE 0
				PRINTFORML 「这样的样子、不能让依姬看到啊……」
				PRINTFORMDW %CALLNAME:TARGET%用手掩住暴露出的乳房
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

