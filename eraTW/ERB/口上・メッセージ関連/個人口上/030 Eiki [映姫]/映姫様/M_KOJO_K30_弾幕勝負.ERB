;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K30_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
#DIMS TXT
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	IF K30_CHECK_HEN_T()
		HANDICAP_FIXED = 2500
	ELSEIF TCVAR:30:364
		HANDICAP_FIXED = -99999
	ENDIF
	HANDICAP_RAND = 0
	
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;角色の能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF K30_CHECK_HEN_T()
			PRINTFORML 「......今天的我有很多想法」
			PRINTFORML 「稍微认真对待一下吧」
			PRINTFORMDW 现在的映姬似乎不打算就这样『玩过家家』了...
		ELSEIF TCVAR:30:364
			CALL HPH_PRINT, @"「哈呜...HPHHPH」", "L"
			CALL HPH_PRINT, @"「仅仅飞翔而已...就耗尽全部...力气了...HPH」", "L"
			PRINTFORMDW 现在的映姬连琪露诺都不如！
		ELSE
			SELECTCASE RAND:3
				CASE 0
					PRINTFORMW 「就让我来计算一下你罪责的分量」
				CASE 1
					PRINTFORMW 「你有好好遵循我的教诲吗？」
				CASE 2
					PRINTFORMW 「我对弹幕的『对战』也是很有自信的」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		IF K30_CHECK_HEN_T()
			PRINTDATADL
				DATAFORM 映姬一言不发，全神贯注地展开弹幕...
				DATAFORM 映姬背后旋转的气息可见一斑...
				DATAFORM 映姬毫无表情地展开弹幕...
			ENDDATA
		ELSEIF TCVAR:30:364
			LOCALS = 哈呜/啊哈/咿———/啊/啊呼/嗯嗯/唔唔HPH 不行呀
			TXT '= TEXTR(LOCALS)
			CALL HPH_PRINT, @"「%TXT%HPHHPH」", "L"
			PRINTDATADL
				DATAFORM 映姬试图展开弹幕，但却发出了十分丢人的娇声...
				DATAFORM 映姬伴随着无力的声音放出了弹幕！\n......朝着%CALLNAME:MASTER%飞来了一枚弹幕
				DATAFORM 映姬一边发出声音一边用手按住屁股僵硬在原地...
			ENDDATA
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		IF TCVAR:30:364
			LOCALS = 哎呀.../呜呜/啊唔/咔嚓/啊/不行.../等一下...
			TXT '= TEXTR(LOCALS)
			TXT '= \@ !相手残機 ? 啊呜呜HPH　太难了啦... # %TXT% \@
			CALL HPH_PRINT, @"「%TXT%HPHHPH」", "W"
		ELSE
			SELECTCASE 相手残機
				;残り残機3が表示されるのは【洽覧深識】持ちのみ
				CASE 3
					PRINTFORML 
				CASE 2
					IF K30_CHECK_HEN_T()
						PRINTFORMW 「…接下来」
					ELSE
						PRINTFORML 「有好好遵循我的教诲的话,这种程度也是理所应当的」
						PRINTFORMW 「接下来就让我再试试」
					ENDIF
					PRINTFORMW 「審判『十王审判』！」
				CASE 1
					IF K30_CHECK_HEN_T()
						PRINTFORMW 「…这样就结束了」
					ELSE
						PRINTFORML 「很有两下子呢」
						PRINTFORMW 「那么,就如此分明黑白吧」
					ENDIF
					PRINTFORMW 「審判『最终审判』！！」
				CASE 0
					IF K30_CHECK_HEN_T()
						PRINTFORMW 「…咕」
					ELSE
						PRINTFORMW 「真漂亮！」
					ENDIF
			ENDSELECT
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		IF K30_CHECK_HEN_T()
			PRINTFORMW 「......全力以赴」
		ELSEIF TCVAR:30:364
			PRINTFORMW 「这里是...决胜之地...」
			CALL HPH_PRINT, @"「啊嘿HPHHPH」", "L"
			CALL HPH_PRINT, @"「肚子...没力气...HPH」", "W"
		ELSE
			PRINTFORMW 「这里就是胜负的关键」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		IF 相手残機 && TCVAR:30:364
			PRINTFORML 「你想做些什么呢...？」
			CALL HPH_PRINT, @"「呼啊...HPH 累了...」", "W"
		ELSE
			SELECTCASE 相手残機
				CASE 4
					PRINTFORML 
				CASE 3
					IF K30_CHECK_HEN_T()
						PRINTFORML 「...这样下去你会下地狱的」
						PRINTFORMW 「悔悟吧，只能不断积德行善」
					ELSE
						PRINTFORMW 「你在干什么？好好振作点！」
					ENDIF
				CASE 2
					IF K30_CHECK_HEN_T()
						PRINTFORML 「...这样下去你会下畜生界的」
						PRINTFORMW 「如果不想受苦，深刻反省并不断行善吧」
					ELSE
						PRINTFORMW 「唔嗯ー首先你还记得我的教诲吗？」
					ENDIF
				CASE 1
					IF K30_CHECK_HEN_T()
						PRINTFORML 「...这样下去你会下饿鬼道的」
						PRINTFORMW 「反省被欲望蒙蔽的日子，认真积累善行吧」
					ELSE
						PRINTFORMW 「虽然可惜，也可以说是日常积累不够」
					ENDIF
				CASE 0
					;日記フラグ＠映姫様が負けた
					IF DIARY:30:4 == 0 && !TCVAR:30:364
						CALL K30_WRITE_DIARY(4)
						;過去に映姫様が勝利してたら分岐
						SIF STRCOUNT(CSTR:30:0, "勝利")
							SETBIT CFLAG:1910, 1
					ENDIF
					IF K30_CHECK_HEN_T()
						PRINTFORMW 「……大概算是合格了吧」
					ELSEIF TCVAR:30:364
						CALL HPH_PRINT, @"「哈啊… HPH 哈啊… HPH 哈啊… HPH」", "L"
						PRINTFORML 「确实，这是你的…胜利，但是…」
						PRINTFORMW 「这样的胜利，根本就是…犯规啊……」
					ELSE
						PRINTFORML 「做得很好。但这可并不是终点」
						PRINTFORMW 「善行和修炼都要积累起来。今后也请继续精进」
					ENDIF
			ENDSELECT
		ENDIF
		;日記フラグ＠你が負けた
		IF 相手残機 > 0
			CALLF FIRSTTIME("勝利")
			IF DIARY:30:3 == 0 && !CFLAG:30:弾幕勝負勝利
				CALL K30_WRITE_DIARY(3)
				SIF 相手残機 == 1
					SETBIT CFLAG:1910, 0
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

