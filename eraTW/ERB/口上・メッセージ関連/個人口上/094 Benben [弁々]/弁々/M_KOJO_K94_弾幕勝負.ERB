;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K94_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;角色の能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;憤怒
		IF CFLAG:318 == 1
			PRINTFORMW 「击溃你…！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「就让你见识见识我的实力吧！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「能当我的对手吗？」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「你的对手是我哟！」
		ELSE
			PRINTFORMW 「能跟的上人家音乐的旋律吗♪」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「可恶…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「还没有结束哇！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「不过是擦伤哟！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「小伤而已！」
				ELSE
					PRINTFORMW 「哼、还没完呢！」
				ENDIF
			CASE 1
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「尽耍小聪明！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「能把我逼到这个地步吗！？」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「意外的很能打呢」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「后手已经…」
				ELSE
					PRINTFORMW 「差不多也该结束了吧！」
				ENDIF
			CASE 0
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「…蠢材…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…被打败了的说」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「输给你了呢…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「竟然…」
				ELSE
					PRINTFORMW 「…好強呀」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
	
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「向人发起挑战却这么弱么」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「这样就能离我的理想…我们的世界更进一步了吗？」
				ELSEIF RAND:3 == 0
					PRINTFORM 「你呀、真的很弱呢、
					CALL MASTER_CALLNAME_K94
					PRINTFORMW …」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「哼ー嗯？意外的也没什么了不起的嘛」
				ELSE
					PRINTFORMW 「这样就结束了？错过节奏了呢」
				ENDIF
			CASE 2
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「尽给人添麻烦…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…不能说是完胜呢…」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「唔ー嗯、有值得反省的地方呢」
				ELSEIF RAND:2 == 0
					PRINTFORM 「和
					CALL MASTER_CALLNAME_K94
					PRINTFORMW 、真的认真战斗了吗？」
				ELSE
					PRINTFORMW 「以为能打的更開心点的呢」
				ENDIF
			CASE 1
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「难缠的家伙…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「差一点就输了的说…」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K94
					PRINTFORMW …意外的还挺强的呢…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…好疼…」
				ELSE
					PRINTFORMW 「离我们的理想乡还远的很、吗…」
				ENDIF
			CASE 0
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORM 「真是惹人厌呢、
					CALL MASTER_CALLNAME_K94
					PRINTFORMW 、…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「唔ー嗯、打不过呀…投降哟ー」
				ELSEIF RAND:3 == 0
					PRINTFORM 「不愧是
					CALL MASTER_CALLNAME_K94
					PRINTFORMW 、非同一般呢…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「单凭我是敌不过的吗…」
				ELSE
					PRINTFORMW 「下次把八桥也带上再战一次如何呢？」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

