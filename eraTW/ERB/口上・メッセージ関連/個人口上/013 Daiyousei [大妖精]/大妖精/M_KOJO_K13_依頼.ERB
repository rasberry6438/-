@M_KOJO_IRAI_K13(ROLE, SCENE, IRAI_ID)
#DIMS ROLE     ;角色の立場、依頼者かそうでないか
#DIMS SCENE    ;セリフの表示されるタイミング
#DIM  IRAI_ID  ;依頼自体のID
#DIM  CLIENT_ID;依頼者IDだけ抜き出したもの
#DIM  CHK_ID   ;依頼IDだけ抜き出したもの
CHK_ID    = IRAI_ID % 1000
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE ROLE
CASE "CLIENT"
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
		CASE "一般依頼名"
			SELECTCASE SCENE
			CASE "依頼提示時"
			PRINTFORMW 「那个…我有个请求」
			;依頼を持ち礦物碎片れる時
			CASE "依頼非受託時"
			PRINTFORMW 「百忙之中跟你搭话，对不起…」
			;内容だけ見て受託しなかった時
			CASE "依頼受託時"
			PRINTFORMW 「哟，请多关照」
			;依頼を受託した時
			CASE "依頼確認時"
			PRINTFORMW 「我再说明一下」
			;[366]で依頼内容を依頼人に確認した時
			CASE "依頼破棄時"
			PRINTFORMW 「百忙之中跟你搭话，对不起…」
			;受託した依頼を破棄する時
			CASE "依頼実行直前"
			;[367]で依頼を実行する時、実行処理の前に呼び出される
			CASE "依頼実行直後"
			;[367]で依頼を実行する時、実行処理の後に呼び出される
			CASE "成功報告時"
			PRINTFORMW 「非常感谢。不愧是%CALLNAME:MASTER%」
			;報告時（成功）
			CASE "失敗報告時"
			;報告時（失敗）
			;この他、報告忘れや期限切れで失敗扱いになり後日依頼人に遭遇した際にも表示
			PRINTFORMW 大妖精用不安的表情望着这边。
			ENDSELECT
		ENDSELECT
		RETURN
	ENDIF
	
	;固有依頼
	SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
	;個々の依頼名で分岐
	;SCENEのWAITに関する仕様
	;WAIT無しでよい　　　　："依頼提示時", "依頼非受託時", "依頼確認時", "依頼破棄時", "成功報告時", "失敗報告時"
	;
	;以下の2つは実際にはCARRYOUTでの地の文処理との比較検討が必要
	;WAITを入れたほうが適切："依頼実行直前", "依頼実行直後"
	CASE "固有依頼名"
	SELECTCASE SCENE
			CASE "依頼提示時"
			;依頼を持ち礦物碎片れる時
			PRINTFORMW 「那个…我有个请求」
			CASE "依頼非受託時"
			;内容だけ見て受託しなかった時
			PRINTFORMW 「对，对不起…」
			CASE "依頼受託時"
			;依頼を受託した時
			PRINTFORMW 「请多关照」
			CASE "依頼確認時"
			;[366]で依頼内容を依頼人に確認した時
			;PRINTFORMW 「最近琪露诺，很努力地在卖冰淇淋」
			;PRINTFORMW 「她一个人没问题！虽然这么说但是很担心…」
			;PRINTFORMW 「如果可以的话可以帮我看看情况吗？」
			;PRINTFORMW 「如果琪露诺卖冰淇淋的话，我希望你买回来」
			;PRINTFORMW 「我想至少能有一点点的销售额就好了…」
			CASE "依頼破棄時"
			;受託した依頼を破棄する時
			CASE "依頼実行直前"
			;[367]で依頼を実行する時、実行処理の前に呼び出される
			CASE "依頼実行直後"
			;[367]で依頼を実行する時、実行処理の後に呼び出される
			CASE "成功報告時"
			;PRINTFORMW 「…是吗？琪露诺没事吧」
			;PRINTFORMW 「太好了…在我面前总是一副满不在乎的样子，所以我很担心…」
			;PRINTFORMW 「谢谢您特意前来告诉我。这是冰淇淋的费用」
			;報告時（成功）
			CASE "失敗報告時"
			;報告時（失敗）
			;この他、報告忘れや期限切れで失敗扱いになり後日依頼人に遭遇した際にも表示
			PRINTFORMW  「…你现在好像很忙啊。对不起我任性地说了」
			ENDSELECT
	ENDSELECT
CASE "TARGET"
	;ここで表示されるSCENEは"依頼実行直前", "依頼実行直後"だけです
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
		;個々の依頼名で分岐してください
		CASE "一般依頼名"
		;人物が鍵になっていた・もしくは場所にたまたま居合わせた
			SELECTCASE SCENE
			;TARGETが呼ばれるのはこのタイミングだけ
			CASE "依頼実行直前"
			CASE "依頼実行直後"
			ENDSELECT
		ENDSELECT
		RETURN
	ENDIF
	SELECTCASE CSVCALLNAME(CLIENT_ID)
	;依頼者のCALLNAMEによる分岐（CSV準拠）
	CASE "依頼者"
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
		CASE "固有依頼名"
			SELECTCASE SCENE
			CASE "依頼実行直前"
			CASE "依頼実行直後"
			ENDSELECT
		ENDSELECT
	ENDSELECT
CASE "NO_REPORT"
	;日数経過時、報告不要依頼を達成していた場合に呼ばれる口上
	;ここで表示されるSCENEは"依頼報告不要"だけです
	;SCENEが一つしか無いので分岐は不要
	;また、必ず依頼主の口上が呼ばれます
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
		;個々の依頼名で分岐してください
		CASE "一般依頼名"
		CASE "給花澆水"
		CASE "誰的遺失物"
		ENDSELECT
		RETURN
	ENDIF
	SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
	CASE "固有依頼名"
	ENDSELECT
ENDSELECT
