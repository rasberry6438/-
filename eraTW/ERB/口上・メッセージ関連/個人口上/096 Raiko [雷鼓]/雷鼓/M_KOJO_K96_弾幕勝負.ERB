;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K96_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;角色の能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;憤怒
		IF CFLAG:318 == 1
			PRINTFORMW 「让姐姐生气了，我会让你后悔的。%UNICODE(0x2665) *1%」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「来吧！现在正是刻画战斗节奏的时候！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「来吧!让幻想乡响起原初的节拍吧!」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「来吧!奏响空前绝后的节拍!」
		ELSE
			PRINTFORMW 「来吧！用灵魂的节奏唤醒最始原的感情！」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「哼，就这？就这种程度？」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「纯粹地用弹幕力量来压制你！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「没有那种程度是不会兴奋的！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「让我更加兴奋吧!」
				ELSE
					PRINTFORMW 「太浅了!」
				ENDIF
			CASE 1
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「发出让神经焦躁的声音!」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「哎呀？好激烈啊，喜欢啊，就是这样！」
				ELSEIF RAND:3 == 0
					PRINTFORM 「干吧！
					CALL MASTER_CALLNAME_K96
					PRINTFORMW ！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「还差得远呢！真正的胜利从现在開始！」
				ELSE
					PRINTFORM 「更多」
					CALL MASTER_CALLNAME_K96
					PRINTFORMW 「把声音刻在我身上吧！」
				ENDIF
			CASE 0
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「我……输了吗？」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「太——棒——了！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「疼疼疼…」
				ELSEIF RAND:2 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K96
					PRINTFORMW 你的声音好厉害啊♪」
				ELSE
					PRINTFORMW 「我的声音输了…！」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
	
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		IF RAND:4 == 0
			PRINTFORMW 「这就是所谓的乾坤一击!」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「听听我的声音！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「太——棒了！」
		ELSE
			PRINTFORMW 「还不能大意啊！」
		ENDIF
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「吃了这个苦头后就别再惹她了」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「哎呀？今天身体状况不好吗？」
				ELSEIF RAND:3 == 0
					PRINTFORM 「意外
					CALL MASTER_CALLNAME_K96
					PRINTFORMW 真弱啊」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「压倒性的胜利，我的声音怎么样？」
				ELSE
					PRINTFORMW 「我的声音怎么样?」
				ENDIF
			CASE 2
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「真是的！如果惹人生气的话就变成这样了！」
				ELSEIF RAND:4 == 0
					PRINTFORM 「还差得远呢。
					CALL MASTER_CALLNAME_K96
					PRINTFORMW %UNICODE(0x2665) *1%」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「希望能更加激烈♪」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「心情不是很好呢……」
				ELSE
					PRINTFORMW 「还有余力吗?我是那种感觉。」
				ENDIF
			CASE 1
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「不能把自己置身于愤怒之中」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「真危险啊…但是非常開心♪」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K96
					PRINTFORMW 你的声音…好激烈啊…♪」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「差一点就输了。」
				ELSE
					PRINTFORMW 「下次也邀请大家吧？」
				ENDIF
			CASE 0
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……不好意思，我不能接受」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「哎呀呀，投降吧」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K96
					PRINTFORMW 被刻上了……你的声音%UNICODE(0x2665) *1%」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「非常開心♪再战斗吧！」
				ELSE
					PRINTFORMW 「魔力的调整是个问题呢…」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

