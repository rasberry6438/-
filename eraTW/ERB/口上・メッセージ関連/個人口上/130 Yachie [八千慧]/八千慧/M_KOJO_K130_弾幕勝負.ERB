;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K130_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;憤怒
		IF CFLAG:318 == 1
			PRINTFORMW 「真有胆啊，居然向我发起挑战」
			PRINTFORMW 「先说好我现在心请很不好，所以...」
			PRINTFORMW 八千慧露出阴冷的笑容
			PRINTFORMW 「要是不小心杀了你请见谅」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「地狱可是绝望般的大啊，让我稍微带你去哪逛逛吧」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「愚蠢……你以为自己能拿我怎么样吗？」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「行啊，我接受了」
		ELSE
			PRINTFORMW 「看来你也不像黑驹那般笨，可以啊」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……真敢做啊」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……那只是偶然罢了」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「只是一点刮伤罢了」
				ELSE
					PRINTFORMW 「这种程度还改变不了风向呢」
				ENDIF
			CASE 1
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……给我差不多一点！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「意外的还蛮强啊」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「要是像这么下去的话就要输了呢……」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「人类之中也意外的有着有骨气的人呐」
				ELSE
					PRINTFORMW 「就不能稍微放点水吗？……開个玩笑」
				ENDIF
			CASE 0
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……去死……」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「这可糟糕了……」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「这下可不能让部下们看到了」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「居然有着此等力量……」
				ELSE
					PRINTFORMW 「看来风向已经偏离我了啊」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……真愚蠢呢」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「想打败我还早了点呢」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「看来很有锻炼的价值啊」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「我这可是一点伤都没有啊？放了水吗？」
				ELSE
					PRINTFORMW 「真是个无聊的战斗啊」
				ENDIF
			CASE 2
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「我还没什么大不了的呢」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「如果是你的话就算下了地狱也不会被秒杀了吧」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「有着相当的实力啊」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「真能做啊！%CALLNAME:MASTER%桑！」
				ELSE
					PRINTFORMW 「锻炼还不够啊～」
				ENDIF
			CASE 1
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……真是让我花了不少时间呢」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「实力很不错啊」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「嘛，比黑驹还要弱呢」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「那种程度的话在畜生界行不通哦」
				ELSE
					PRINTFORMW 「……要去找别的人类吗」
				ENDIF
			CASE 0
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……笨蛋」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「投降投降……我输了」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「……的确是很强啊」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「这样的话，说不定能够拿下整个畜生界也说不定……不，我什么也没说」
				ELSE
					PRINTFORMW 「居然让我输掉了，确实很厉害啊」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

