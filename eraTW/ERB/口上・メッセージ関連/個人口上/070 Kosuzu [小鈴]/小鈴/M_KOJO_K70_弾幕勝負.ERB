;戦闘能力を上げれば戦えるはず！
;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K70_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
	SIF FLAG:口上色
		TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;角色の能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF ALCOHOL_FACE(70) == "酔酒" || ALCOHOL_FACE(70) == "不省人事"
			PRINTFORMW 「哈诶～？？ 弹幕在这里吗～？」
		ELSEIF TALENT:70:心情 == -1 || CFLAG:70:ブチギレ || MARK:70:反発刻印 >= 3
			PRINTFORMW 「唔唔……不是那么个情緒吗……」
		ELSE
			SELECTCASE RAND:3
			CASE 1
				PRINTFORMW 「看看特训的成果吧！」
			CASE 2
				PRINTFORMW 「我也能战斗！」
			CASEELSE
				PRINTFORMW 「请手下留情！」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;最後
		IF 相手残機 == 0
			IF ALCOHOL_FACE(70) == "酔酒" || ALCOHOL_FACE(70) == "不省人事"
				PRINTFORML 「好痛～……」
			ELSEIF TALENT:70:心情 == -1 || CFLAG:70:ブチギレ || MARK:70:反発刻印 >= 3
				PRINTFORML 「啊ー啊……」
			ELSE
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「呀啊啊～…」
				CASE 2
					PRINTFORML 「不行了～…」
				CASEELSE
					PRINTFORML 「被摆一道～…」
				ENDSELECT
			ENDIF
		ELSE
			IF ALCOHOL_FACE(70) == "酔酒" || ALCOHOL_FACE(70) == "不省人事"
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「哈诶～！？」
				CASE 2
					PRINTFORML 「吼嘿～！？」
				CASEELSE
					PRINTFORML 「唔唔～嗯……」
				ENDSELECT
			ELSEIF TALENT:70:心情 == -1 || CFLAG:70:ブチギレ || MARK:70:反発刻印 >= 3
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「好痛……」
				CASE 2
					PRINTFORML 「唔唔……」
				CASEELSE
					PRINTFORML 「唔ー嗯……」
				ENDSELECT
			ELSE
				SELECTCASE RAND:9
				CASE 1
					PRINTFORML 「呀啊！」
				CASE 2
					PRINTFORML 「好痛！」
				CASE 3
					PRINTFORML 「好痛！」
				CASE 4
					PRINTFORML 「呜哇！」
				CASE 5
					PRINTFORML 「啊嗯！」
				CASE 6
					PRINTFORML 「呀啊！」
				CASE 7
					PRINTFORML 「呀啊！」
				CASE 8
					PRINTFORML 「嘿诶ー！」
				CASEELSE
					PRINTFORML 「诶诶！」
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		;你勝利
		IF 相手残機 == 0
			IF ALCOHOL_FACE(70) == "酔酒" || ALCOHOL_FACE(70) == "不省人事"
				PRINTFORMW 「诶～？ 发生了什么～？」
			ELSEIF TALENT:70:心情 == -1 || CFLAG:70:ブチギレ || MARK:70:反発刻印 >= 3
				PRINTFORMW 「啊……好无聊！」
			ELSE
				IF TALENT:70:恋慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%先生果然好强啊～！」
					CASE 2
						PRINTFORMW 「弹幕游戏很有意思♪」
					CASEELSE
						PRINTFORMW 「请、请锻炼我！！」
					ENDSELECT
				ELSEIF TALENT:70:思慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「真强啊……」
					CASE 2
						PRINTFORMW 「对我来说或许为时过早……」
					CASEELSE
						PRINTFORMW 「唔ー！ 好不甘心…！」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「不、不愧是你……」
					CASE 2
						PRINTFORMW 「输了……」
					CASEELSE
						PRINTFORMW 「还差得远吗……」
					ENDSELECT
				ENDIF
			ENDIF
		;小鈴勝利,普通にやっててありえるのか？？
		ELSE
			IF ALCOHOL_FACE(70) == "酔酒" || ALCOHOL_FACE(70) == "不省人事"
				PRINTFORML 「诶～？ 和%CALLNAME:MASTER%先生过招吗～？」
			ELSEIF TALENT:70:心情 == -1 || CFLAG:70:ブチギレ || MARK:70:反発刻印 >= 3
				PRINTFORML 「真棒！ 真痛快！！」
			ELSE
				IF TALENT:70:恋慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%先生、还不行哦～♪」
					CASE 2
						PRINTFORMW 「真棒！ 赢了%CALLNAME:MASTER%先生了～！」
					CASEELSE
						PRINTFORMW 「没准我很有天分呢～♪」
					ENDSELECT
				ELSEIF TALENT:70:思慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「诶！？ 难道我赢了！？」
					CASE 2
						PRINTFORMW 「难、难道我赢了…！」
					CASEELSE
						PRINTFORMW 「手、手下留情了吧…！」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「真棒！ 赢了！」
					CASE 2
						PRINTFORMW 「%CALLNAME:MASTER%先生、意外的弱…？」
					CASEELSE
						PRINTFORMW 「精彩的比赛♪」
					ENDSELECT
				ENDIF
				TALENT:70:心情 = 1
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

