;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K27_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 「我会拿出全力的！」
			CASE 2
				PRINTFORML 「做得相当不错！」
			CASE 1
				PRINTFORML 「ひぇぇ」
			CASE 0
				PRINTFORML 「うわぁぁぁん」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
				CFLAG:K27C_弾幕敗北回数 += 1
			CASE 3
				PRINTFORML 「我们赢了！」
				CFLAG:K27C_弾幕敗北回数 += 1
			CASE 2
				PRINTFORML 「让你见识一下！五分の魂」
				CFLAG:K27C_弾幕敗北回数 += 1
			CASE 1
				PRINTFORML 「太好了、我们赢了！」
				CFLAG:K27C_弾幕敗北回数 += 1
			CASE 0
				PRINTFORML 「うわぁぁぁん」
				CFLAG:K27C_弾幕勝利回数 += 1
				
				IF (CFLAG:K27C_弾幕勝利回数 >= 30 || CFLAG:142:弾幕勝負勝利 == 1) && CFLAG:1008 == 0
					PRINTFORML 「%CALLNAME:MASTER%你真的相当强呢…」
					SIF CFLAG:142:弾幕勝負勝利 == 1
                    PRINTFORML 「说起来，%CALLNAME:MASTER%比大蜈蚣还强大呢…没办法赢啊」
                    PRINTFORML 「我，喜欢像%CALLNAME:MASTER%这样强大的\@(TALENT:MASTER:性別 == 2 || TALENT:MASTER:性別 == 3) ? 雄性 # 人 \@喔…❤）
                    IF TALENT:MASTER:性別 == 2 || TALENT:MASTER:性別 == 3
                        PRINTFORML 「如果和%TEXTR(@"%CALLNAME:MASTER%/你")%在一起，或许能留下强大的后代呢…❤」
                        PRINTW 
                        PRINTFORML 莉格露似乎被%CALLNAME:MASTER%，在\@CFLAG:142:弾幕勝負勝利 == 1 ? 甚至能战胜大蜈蚣 # 将自己打得一败涂地 \@的魅力所吸引
                        PRINTFORML 莉格露渴望以%CALLNAME:MASTER%的精子怀孕
                        PRINTW 
                        CFLAG:允许无套 = 2
                    ELSE
                        PRINTFORML 「啊啊～，如果%CALLNAME:MASTER%是雄性就好了呢…」
                        PRINTW 
                        PRINTFORML 莉格露似乎在想，如果%CALLNAME:MASTER%有生殖器会更好
                    ENDIF
                    CFLAG:1008 = 1
                ELSEIF CFLAG:K27C_弾幕勝利回数 == 15
                    PRINTFORML 「唔，%CALLNAME:MASTER%真是强大啊」
                    PRINTFORML （虽然被打得很惨…但如果要有伴侣，%CALLNAME:MASTER%这样强大的人应该不错）
                    PRINTL 
                    PRINTFORML 莉格露似乎对强者%CALLNAME:MASTER%抱有好感
                    PRINTFORML （是要继续打败莉格露，还是打败强大的虫妖怪呢…？）
                    PRINTW 
                ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

