;酔っぱらい度を数字で返す式中関数
;=0 素面 =1 ほろ酔い =2 酔いどれ 3=ぐでぐで
@K27_DRUNK()
#FUNCTION
SIF BASE:27:酒気 <= 2
	RETURNF 0
SELECTCASE BASE:27:酒気
	;ぐでぐで
	CASE IS > (MAXBASE:27:酒気 / 10) * 8
		RETURNF 3
	;酔いどれ
	CASE IS > (MAXBASE:27:酒気 / 10) * 5
		RETURNF 2
	;ほろ酔い
	CASE IS <= (MAXBASE:27:酒気 / 10) * 5
		RETURNF 1
ENDSELECT
