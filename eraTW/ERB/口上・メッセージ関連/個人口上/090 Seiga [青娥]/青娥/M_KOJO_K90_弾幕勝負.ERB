;==================================================
;弹幕胜负
;==================================================
;
@M_KOJO_MESSAGE_COM_K90_DANMAKU(ARGS, 对方残机)
#DIM 对方残机
;全体の流れ
;①【战斗前】→②骰子ロールとプレイヤー选择肢、ハンデをつけた场合は【ハンデ口上】→③对应スキルが发动した场合【スキル口上】→④被弹判定、角色が被弹したなら【被弹口上】→
;どちらかの残机が0になっていなければ②に返回→⑤【战斗后口上】

;--------------------------------------------------
;记入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;战斗前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数值が大きいほど你が不利になる　数值が负なら你が有利に
	;角色の能力に关わらずクッソ强くしたり弱くしたりできる
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗前"
		;愤怒
		IF CFLAG:318 == 1
			PRINTFORMW 「我会温柔地干掉你的…%UNICODE(0x2665) *1%」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「那么请手下留情%UNICODE(0x2665) *1%」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「芳香酱！该上场了ー！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「啊啦啊啦、就让我见见%CALLNAME:MASTER%的实力吧…%UNICODE(0x2665) *1%」
		ELSE
			PRINTFORMW 「我忠诚的下仆哟、将阻挡我道路的东西全部根除吧！」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので无记入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;战斗中TARGET被弹时口上
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弹" 
		;别に一律で「やられたー」だけでもいいよ
		SELECTCASE 对方残机
			;残り残机3が表示されるのは【洽览深识】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「啊ー唔%UNICODE(0x2665) *1%好激烈啊%UNICODE(0x2665) *1%」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「中招了%UNICODE(0x2665) *1%」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…还不够、只有这种程度么？」
				ELSE
					PRINTFORMW 「意外的很强呢」
				ENDIF
			CASE 1
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「…这就是力量、但我真的很讨厌」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「竟然能把我逼到这种地步…我开始兴奋了……%UNICODE(0x2665) *1%」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「被你这么激烈地的逼迫着、我可不好办呐%UNICODE(0x2665) *1%」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「芳香酱！快做点什么ー！」
				ELSE
					PRINTFORMW 「噫啊ー%UNICODE(0x2665) *1%要输掉了%UNICODE(0x2665) *1%」
				ENDIF
			CASE 0
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「…真麻烦啊…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「真！%UNICODE(0x2665) *1%」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「输了呢」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「啊啦？啊辣啦啦啦？」
				ELSE
					PRINTFORMW 「呼呼真有趣呢%UNICODE(0x2665) *1%」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【残忍酷薄】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		IF RAND:4 == 0
			PRINTFORMW 「可不能掉以轻心哦%UNICODE(0x2665) *1%」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「啊啦啊啦、你以为我会让你逃走么？」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「你要是起不来了的话、我也会很困扰的%UNICODE(0x2665) *1%」
		ELSE
			PRINTFORMW 「这才是真正的进攻%UNICODE(0x2665) *1%去吧%UNICODE(0x2665) *1%」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【乾坤一掷】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一掷"
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【怪力乱神】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		IF RAND:4 == 0
			PRINTFORMW 「这就是仙人天生的力量%UNICODE(0x2665) *1%」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「这种程度就像打倒我么？」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「用炼丹锻炼出来的这幅身体才不会只有那种程度」
		ELSE
			PRINTFORMW 「呼呼、不疼不痒呢%UNICODE(0x2665) *1%」
		ENDIF
		
	ENDIF
	
	;-------------------------------------------------
	;战斗后
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "战斗后" 
		PRINTFORML 
		;残り残机4が表示されうるのは【洽览深识】持ちのみ
		;残机が1以上なら你の负け、0の场合は你の胜利
		SELECTCASE 对方残机
			CASE 4
				PRINTFORML 
			CASE 3
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「期待落空了呢、不知深浅的笨蛋桑」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「啊啦啊啦、期待落空了呢」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「压倒性的胜利呢%UNICODE(0x2665) *1%」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「仅凭肉身跟我作战还差的远呢」
				ELSE
					PRINTFORMW 「意外地很弱呢」
				ENDIF
			CASE 2
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「我就承认你稍微有点实力吧」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…稍微有点棘手呢」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「还没有拿出全部的实力吗？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「如果你能再认真一点的话、我会更兴奋的…」
				ELSE
					PRINTFORMW 「也没什么大不了的本事呢」
				ENDIF
			CASE 1
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「真是的…竟然能把我逼到这种地步…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「差一点点呢%UNICODE(0x2665) *1%」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「还挺厉害的嘛、%CALLNAME:MASTER%、我可能会喜欢上你哦%UNICODE(0x2665) *1%」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…竟然能做到这种地步……还真是意外的收获啊%UNICODE(0x2665) *1%」
				ELSE
					PRINTFORMW 「…差点这边就被干掉了…」
				ENDIF
			CASE 0
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「…随你的便吧」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「啊啦啦、真漂亮、不愧是在幻想乡的人、真有本事啊ー」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「真精彩啊、你、不是个初学者吧」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「啊啊%UNICODE(0x2665) *1%对你越来越感兴趣了%UNICODE(0x2665) *1%」
				ELSE
					PRINTFORMW 「呀啊%UNICODE(0x2665) *1%我输了%UNICODE(0x2665) *1%」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

