;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K97_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;角色の能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;憤怒
		IF CFLAG:318 == 1
			PRINTFORMW 「跟你讨回一点惹我我生气的代价吧！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「来吧！亲爱的、我可不会手下留情！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「在由逆境组成的世界里迷失于死亡之地吧！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「让你看看弱者的意志！」
		ELSE
			PRINTFORMW 「很遗憾、你就要在这里结束了！」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「别得意忘形了！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「喂、继续来啊」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「啊？这子弹是没吃饭吗？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「混蛋、别嚣张了！」
				ELSE
					PRINTFORMW 「有什么了不起的！」
				ENDIF
			CASE 1
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「可恶！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「啊！这就是逆境吗！实在是太棒了！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「感受属于被逼到绝境的天邪鬼的凶暴吧！我可是已经对逆境习以为常了！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「真不巧、我本来就没打过有利的战斗、这种程度根本无所谓！」
				ELSE
					PRINTFORMW 「残機1、情况实在是太好了、開始反逆吧！」
				ENDIF
			CASE 0
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「别開玩笑了…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…怎么可能…！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「…我不会放弃的」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「……」
				ELSE
					PRINTFORMW 「什么啊、总是这样…」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		IF RAND:4 == 0
			PRINTFORMW 「卑怯上等非理非道ってねぇ！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「大意了吧、再见了“强者大人”！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「你还是确认一下有没有掉什么东西比较好吧？」
		ELSE
			PRINTFORMW 「试试看就此结束吧？」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「混蛋、你要是吃了这个苦头就别惹我生气了」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「哈哈哈、可不能输给我啊」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「什么啊、没想到你还挺了不起的」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「真是出乎我的意料」
				ELSE
					PRINTFORMW 「什么啊、你也是这边的吗」
				ENDIF
			CASE 2
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「切…真是麻烦…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…真是难以评论的强大啊」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「意外的很弱啊」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「你也是弱者这一边的吗？」
				ELSE
					PRINTFORMW 「很有趣哦、亲爱的」
				ENDIF
			CASE 1
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「啊啊…你这家伙不是比我还不行吗…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…麻烦你了、必须这样！」（原文：てこずらせやがって、こうでなきゃな！）
				ELSEIF RAND:3 == 0
					PRINTFORMW 「一直是…好无聊啊！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「最没意思了！」
				ELSE
					PRINTFORMW 「…还是再努力一下吧」
				ENDIF
			CASE 0
				;憤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「可恶！给我记住！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…混蛋、只要活着、无论多少次我都要做到」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「哎呀、亲爱的真能干啊！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「啊、怎么了、原来还为时尚早吗」
				ELSE
					PRINTFORMW 「…总有一天我一定会赢的、给我记住！」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

