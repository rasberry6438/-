ELSEIF RELATION:R >= 100 && RELATION:R < 170
	允许值 += 6
ELSEIF RELATION:R >= 100 && RELATION:R >= 170
	允许值 += 10
ENDIF
;ABL:欲望
IF ABL:欲望
	允许值 += ABL:欲望 * 3
ENDIF
;ABL:Ｖ感覚
IF ABL:Ｖ感覚
	允许值 += ABL:Ｖ感覚 * 2
ENDIF
;快楽刻印
IF MARK:快楽刻印
	允许值 += MARK:快楽刻印 * 3
ENDIF
;PALAM:潤滑（の不足）
IF PALAM:9 < PALAMLV:3
	允许值 -= 5
ENDIF
;PALAM:欲情
IF GETPALAMLV(PALAM:11,5)
	允许值 += GETPALAMLV(PALAM:11,5) * 3
ENDIF
;害羞
IF TALENT:羞恥心 > 0
	允许值 -= 2
ENDIF
;否定快感
IF TALENT:快感応答 < 0 && !TALENT:3
	允许值 -= 5
ENDIF
;討厭男人（恋慕、親愛で無効）
IF OTOKOGIRAI(TARGET)
	允许值 -= 12
ENDIF
;恋慕
IF TALENT:3 && ASSIPLAY == 0
	允许值 += 15
ENDIF
;親愛
IF TALENT:3 > 1 && ASSIPLAY == 0
	允许值 += 5
ENDIF
;処女
LOCAL = MAX(10,40 - EXP:Ｖ経験)
IF TALENT:0
	允许值 -= LOCAL
;V経験
ELSEIF EXP:Ｖ経験 < EXPLV:2
	允许值 -= 15
ENDIF

;調教者が扶她
IF (TALENT:PLAYER:2 & 3) == 3
	允许值 += 4
ENDIF

;媚薬
IF TCVAR:媚薬
	允许值 += 6
ENDIF

污垢值 = 0
;愛液的污垢
SIF STAIN:PLAYER:2 & 1
	污垢值 += 1
;精液的污垢
SIF STAIN:PLAYER:2 & 4
	污垢值 += 3
;肛門的污垢
SIF STAIN:PLAYER:2 & 8
	污垢值 += 7
SIF STAIN:PLAYER:2 & 16
	污垢值 += 15
污垢值 = 污垢值 * (2 - TALENT:汚臭耐性) / 2

;有污垢
SIF 污垢值
	允许值 -= 污垢值

;合計を表示(20以上で実行)
;以最高的背面座位为准
IF 允许值 < 42
	RETURNF 0
ELSE 
	RETURNF 1 
ENDIF 

