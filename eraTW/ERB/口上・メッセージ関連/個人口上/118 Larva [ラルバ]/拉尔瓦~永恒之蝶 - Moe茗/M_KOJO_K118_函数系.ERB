		CONTINUE 
	SIF MAX_EX == 0 	;有绝顶数值时将当前角色设为最大
		MAX_EX = CHARA_ID
	SIF TOTAL_EX:CHARA_ID > TOTAL_EX:MAX_EX		;最大EX判别
		MAX_EX = CHARA_ID
NEXT
IF !ARG
	RETURNF MAX_EX 
ELSE 
	RETURNF TOTAL_EX:MAX_EX 
ENDIF 

