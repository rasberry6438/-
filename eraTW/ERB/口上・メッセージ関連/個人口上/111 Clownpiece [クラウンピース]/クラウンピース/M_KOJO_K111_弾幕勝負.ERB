@M_KOJO_MESSAGE_COM_K111_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;角色の能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF ALCOHOL_FACE(111) == "酔酒" || ALCOHOL_FACE(111) == "不省人事"
			PRINTFORMW 「唔～？ 弹幕游戏～？」
		ELSEIF TALENT:111:心情 == -1 || CFLAG:111:ブチギレ || MARK:111:反発刻印 >= 3
			PRINTFORMW 「姆姆姆……看我不打的你满地找牙～っ！！」
		ELSE
			SELECTCASE RAND:3
			CASE 1
				PRINTFORMW 「イッツ★露娜ティックタ～イム！」
			CASE 2
				PRINTFORMW 「我将全力应战ー！」
			CASEELSE
				PRINTFORMW 「坠入地狱吧！」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾"
		;最後
		IF 相手残機 == 0
			IF ALCOHOL_FACE(111) == "酔酒" || ALCOHOL_FACE(111) == "不省人事"
				PRINTFORML 「啊、咦……？」
			ELSEIF TALENT:111:心情 == -1 || CFLAG:111:ブチギレ || MARK:111:反発刻印 >= 3
				PRINTFORML 「什、什么…怎么会…」
			ELSE
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「什、什么…怎么会…」
				CASE 2
					PRINTFORML 「什、什么…怎么会…」
				CASEELSE
					PRINTFORML 「又……又输掉了……」
				ENDSELECT
			ENDIF
		ELSE
			IF ALCOHOL_FACE(111) == "酔酒" || ALCOHOL_FACE(111) == "不省人事"
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「hi呀～！」
				CASE 2
					PRINTFORML 「呜哇～！」
				CASEELSE
					PRINTFORML 「好……痛～！」
				ENDSELECT
			ELSEIF TALENT:111:心情 == -1 || CFLAG:111:ブチギレ || MARK:111:反発刻印 >= 3
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「唔っ……！」
				CASE 2
					PRINTFORML 「这次不算！」
				CASEELSE
					PRINTFORML 「啊っ！ 才没被打中ー！」
				ENDSELECT
			ELSE
				SELECTCASE RAND:11
				CASE 1
					PRINTFORML 「好……痛～！」
				CASE 2
					PRINTFORML 「好……痛～！」
				CASE 3
					PRINTFORML 「好……痛～！
				CASE 4
					PRINTFORML 「好……痛～！」
				CASE 5
					PRINTFORML 「咿呀！」
				CASE 6
					PRINTFORML 「hi呀っ！」
				CASE 7
					PRINTFORML 「呜哇っ！」
				CASE 8
					PRINTFORML 「等…！」
				CASE 9
					PRINTFORML 「咿呀ー！」
				CASE 10
					PRINTFORML 「等下啊！」
				CASEELSE
					PRINTFORML 「呜呜ぇーっ！」
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		SELECTCASE RAND:3
		CASE 1
			PRINTFORML 「看招！ 獄符『フラッシュアンドストライプ』！！」
		CASE 2
			PRINTFORML 「就这样坠落吧！ 地獄『ストライプドアビス』！！」
		CASEELSE
			PRINTFORML 「看我的！ 獄符『ヘルエクリプス』！！」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		;你勝利
		IF 相手残機 == 0
			IF ALCOHOL_FACE(111) == "酔酒" || ALCOHOL_FACE(111) == "不省人事"
				PRINTFORMW 「唔嗯、到底……我是怎么了……？」
			ELSEIF TALENT:111:心情 == -1 || CFLAG:111:ブチギレ || MARK:111:反発刻印 >= 3
				PRINTFORMW 「耍赖ー！ %CALLNAME:MASTER%耍赖ー！！ 呸呸呸ー！」
			ELSE
				PRINTFORML 「哈啊哈哈……」
				SELECTCASE RAND:5
				CASE 1
					PRINTFORMW 「唔、已经不行了～！ %CALLNAME:MASTER%好厉害！」
				CASE 2
					PRINTFORMW 「呜呜呜、输掉了……好ー不ー甘ー心ー！」
				CASE 3
					PRINTFORMW 「%CALLNAME:MASTER%！ 作弊了吧！ 哼ー！」
				CASE 4
					PRINTFORMW 「%CALLNAME:MASTER%、干的不错嘛…！ つ、下次一定……不会输的……」
				CASEELSE
					PRINTFORMW 「只是稍微让让你不要太得意了！」
				ENDSELECT
			ENDIF
		;克勞恩皮絲勝利
		ELSE
			IF ALCOHOL_FACE(111) == "酔酒" || ALCOHOL_FACE(111) == "不省人事"
				PRINTFORMW 「hi hi hi！ 好有趣！」
			ELSEIF TALENT:111:心情 == -1 || CFLAG:111:ブチギレ || MARK:111:反発刻印 >= 3
				PRINTFORMW 「嘿嘿！ 舒爽了！ 在地狱里慢慢忏悔吧！」
			ELSE
				SELECTCASE RAND:5
				CASE 1
					PRINTFORMW 「哈哈哈！ 怎样！ 我可是地狱妖精克劳恩皮斯大人啊！」
				CASE 2
					PRINTFORMW 「啊，痛快了！ %CALLNAME:MASTER%没想到也挺难缠的嘛！」
				CASE 3
					PRINTFORMW 「哈哈，玩了个爽呢！ %CALLNAME:MASTER%、躲避弹幕的样子是真的相当笨拙！」
				CASE 4
					PRINTFORMW 「太好了！ 咦？ 闻到了疯狂的味道？」
				CASEELSE
					PRINTFORMW 「呀哈ー！ %CALLNAME:MASTER%、还差得远呢～」
				ENDSELECT
				TALENT:111:心情 = 1
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

