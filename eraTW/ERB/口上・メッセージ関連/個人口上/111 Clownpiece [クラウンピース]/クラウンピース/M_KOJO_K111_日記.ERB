	CALL M_KOJO_DIARYSETTING_K111(20)
;21:＠漢堡
IF GET_GIFTDATA(TCVAR:[[克勞恩皮絲]]:今天的礼物, "本体") == 154 && GET_GIFTDATA(TCVAR:[[克勞恩皮絲]]:今天的礼物, "得点") > 400
