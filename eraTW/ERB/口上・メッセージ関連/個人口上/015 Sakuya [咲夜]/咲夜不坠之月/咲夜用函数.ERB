@K15_COHABIT_STATE()
#FUNCTION
    ;同居中
    IF CFLAG:MASTER:初期位置 == CFLAG:15:初期位置 && CFLAG:MASTER:現在位置 == CFLAG:15:初期位置
        RETURNF 1
