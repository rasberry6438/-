;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K38_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;角色の能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF ALCOHOL_FACE(38) == "酔酒" || ALCOHOL_FACE(38) == "不省人事"
			PRINTFORMW 「弹幕游戏～？ 可以呀～……来吧」
		ELSEIF TALENT:38:心情 == -1 || CFLAG:38:ブチギレ || MARK:38:反発刻印 >= 3
			PRINTFORMW 「你好，我现在，要毫不留情地杀了你♪」
		ELSE
			SELECTCASE RAND:3
			CASE 1
				PRINTFORMW 「你好，我现在，在你的身后♪」
			CASE 2
				PRINTFORMW 「好啊，那我就做你的对手吧♪」
			CASEELSE
				PRINTFORMW 「你能捕捉到我的行迹吗～♪」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾"
		;最後
		IF 相手残機 == 0
			IF ALCOHOL_FACE(38) == "酔酒" || ALCOHOL_FACE(38) == "不省人事"
				PRINTFORML 「……呀唉？」
			ELSEIF TALENT:38:心情 == -1 || CFLAG:38:ブチギレ || MARK:38:反発刻印 >= 3
				PRINTFORML 「啊……」
			ELSE
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「……呀啊！？」
				CASE 2
					PRINTFORML 「……啊咧咧？」
				CASEELSE
					PRINTFORML 「……啊啦啦？」
				ENDSELECT
			ENDIF
		ELSE
			IF ALCOHOL_FACE(38) == "酔酒" || ALCOHOL_FACE(38) == "不省人事"
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「不可能～！」
				CASE 2
					PRINTFORML 「哈啊啊～！」
				CASEELSE
					PRINTFORML 「好痛——啊～～！」
				ENDSELECT
			ELSEIF TALENT:38:心情 == -1 || CFLAG:38:ブチギレ || MARK:38:反発刻印 >= 3
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「呜……！」
				CASE 2
					PRINTFORML 「啊哇哇！！ 好痛的说！！」
				CASEELSE
					PRINTFORML 「啊哇哇！ 等下我就要火力全開的把你大卸八块了哦？」
				ENDSELECT
			ELSE
				SELECTCASE RAND:10
				CASE 1
					PRINTFORML 「好——痛！」
				CASE 2
					PRINTFORML 「呜哇！」
				CASE 3
					PRINTFORML 「被跟上了吗！？」
				CASE 4
					PRINTFORML 「呜呜！（抹眼泪）」
				CASE 5
					PRINTFORML 「呀啊！」
				CASE 6
					PRINTFORML 「难道说、我被看到了吗！？」
				CASE 7
					PRINTFORML 「～～～～呜！」
				CASE 8
					PRINTFORML 「等下…doctor stop～！」
				CASE 9
					PRINTFORML 「还、还真行啊！」
				CASEELSE
					PRINTFORML 「疼疼疼！？」
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		SELECTCASE RAND:3
		CASE 1
			PRINTFORML 「看招！ 無意識『弹幕的墨迹测验』！！」
		CASE 2
			PRINTFORML 「那么这个能躲開吗～？ 反応『妖怪测谎仪』！！」
		CASEELSE
			PRINTFORML 「要来了哦！ 『地底蔷薇』！！」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		;你勝利
		IF 相手残機 == 0
			IF ALCOHOL_FACE(38) == "酔酒" || ALCOHOL_FACE(38) == "不省人事"
				PRINTFORMW 「呜诶诶、在喝醉的时候转来转去，感觉好晕啊～……」
			ELSEIF TALENT:38:心情 == -1 || CFLAG:38:ブチギレ || MARK:38:反発刻印 >= 3
				PRINTFORMW 「怎么这样。怎么就输给了%CALLNAME:MASTER%呢ー」
			ELSE
				PRINTFORML 「哈啊哈啊……っ」
				SELECTCASE RAND:5
				CASE 1
					PRINTFORMW 「我不行啦～！ 一根指头都动不了啦～…」
				CASE 2
					PRINTFORMW 「啊啊、输了呢…」
				CASE 3
					PRINTFORMW 「我的踪迹，被完美的捕捉到了呢―」
				CASE 4
					PRINTFORMW 「%CALLNAME:MASTER%，比我想象中的要强呢…」
				CASEELSE
					PRINTFORMW 「你好，我现在，被你打倒了……倒地」
				ENDSELECT
			ENDIF
		;恋勝利
		ELSE
			IF ALCOHOL_FACE(38) == "酔酒" || ALCOHOL_FACE(38) == "不省人事"
				PRINTFORMW 「啊哈哈！ 这表情好奇怪～♪」
			ELSEIF TALENT:38:心情 == -1 || CFLAG:38:ブチギレ || MARK:38:反発刻印 >= 3
				PRINTFORMW 「想试下，就这样让你死上一次呢♪」
			ELSE
				SELECTCASE RAND:5
				CASE 1
					PRINTFORMW 「哇、好高兴！ 胜利的感觉，有点令人上瘾呢」
				CASE 2
					PRINTFORMW 「更加顺应着本能去战斗的话，或许会更好呢」
				CASE 3
					PRINTFORMW 「啊嘞ー？ 就这么简单地被打倒了啊」
				CASE 4
					PRINTFORMW 「你好，我现在，在你的背后哦」
				CASEELSE
					PRINTFORMW 「成功啦！ 我胜利了呢！！ %CALLNAME:MASTER%，修炼还不足哦♪」
				ENDSELECT
				TALENT:38:心情 = 1
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

