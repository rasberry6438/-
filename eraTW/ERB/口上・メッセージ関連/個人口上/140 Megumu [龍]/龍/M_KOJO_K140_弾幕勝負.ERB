;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_POWERED_BY_DARKMAN_MESSAGE_COM_K140_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_POWERED_BY_DARKMAN_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	CALL M_KOJO_POWERED_BY_DARKMAN_COLOR_K140
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「敢于违抗我，真是个愚蠢的家伙！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「那就接受我的考验吧！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「好机会啊，让我展示一下实力！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「那就来一场切磋吧！」
		ELSE
			PRINTFORMW 「来吧！是时候庆祝了！」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	CALL M_KOJO_POWERED_BY_DARKMAN_COLOR_K140
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「无礼之徒！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「这种程度还不算认真吧？」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「真是的弄脏了我的衣服」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「竟然能打到我，不错的实力啊」
				ELSE
					PRINTFORMW 「嗯，你放松了警惕吗？」
				ENDIF
			CASE 1
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「......疼痛啊」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「真是棘手啊，你！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「看来你还是有一定实力的」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「还有很长的路要走！」
				ELSE
					PRINTFORMW 「或许能赢过典呢」
				ENDIF
			CASE 0
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「......！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「能逼迫大天狗到如此地步，你真厉害！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「祭典才刚刚开始！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「果然不错！真是个有趣的人类！」
				ELSE
					PRINTFORMW 「呵呵，或许我会被打败呢」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	CALL M_KOJO_POWERED_BY_DARKMAN_COLOR_K140
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「如果你从这里吸取教训的话，应该会反省的」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「还需要更多的锻炼啊」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「终究只是人类而已」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「哦？状态不太好吗？」
				ELSE
					PRINTFORMW 「嗯，正好是热身的好机会」
				ENDIF
			CASE 2
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「别惹恼人家啊」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「嘛，也就这样了」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「稍微有点好玩吗？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「去找白狼天狗训练一下吧，记住我的话」
				ELSE
					PRINTFORMW 「多加训练吧，这样你会变得更强」
				ENDIF
			CASE 1
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「如果你不是变态的话......」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「痛痛痛......果然厉害啊」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「真想让典也学学你的实力」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「以你的水平，应该能在山上生存下去吧！」
				ELSE
					PRINTFORMW 「如果有这样的实力，要不要试试当乌天狗？」
				ENDIF
			CASE 0
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「......」
					PRINTFORMW 龙带着一副咬碎苦虫的表情。
				ELSEIF RAND:4 == 0
					PRINTFORMW 「呵呵呵，真是出色！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「哨戒天狗啊，要不要试试当个新闻记者？你什么都行」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「痛痛痛......好好玩啊！」
				ELSE
					PRINTFORMW 「真是......挺认真的嘛？」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

