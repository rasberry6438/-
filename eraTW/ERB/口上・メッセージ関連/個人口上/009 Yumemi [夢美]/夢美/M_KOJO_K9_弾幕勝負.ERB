;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K9_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		PRINTFORML 「嗯？想和我用弹幕一决胜负？」
		PRINTFORML 「嗯……好啊。啊、先告诉你、我不会手下留情的唷」
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 「还差得远呢」
			CASE 2
				PRINTFORML 「唔？！、被击中了？但是还没结束！」
			CASE 1
				SELECTCASE RAND:4
					CASE 0
						PRINTFORML 「不行！！要被干掉了！？」
					CASE 1
						PRINTFORML 「啊、已经不行了！！……也许\/\/\/」
					CASE 2
						PRINTFORML 「还没有、还没有结束%CALLNAME:MASTER%！！」
					CASEELSE
						PRINTFORML 「骗人！？难道？！难不成我被压制了吗？！」
				ENDSELECT
			CASE 0
				PRINTFORML 「骗人的吧？！讨厌啊、我被打败了！？」
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		PRINTFORML 「比给千百合还要狠的一拳……！」
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		PRINTFORML 「这一击解决你！」
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		PRINTFORML 「草莓・危机力量、变……身ーー！」
		PRINTFORMDW 喂、别闹了、笨蛋、这样变身很快就结束了
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				PRINTFORML 「你的修行还不够啊……下次再来吧」
			CASE 2
				PRINTFORML 「说要给我一击、%CALLNAME:MASTER%还真的做到了、下次再打吧」
			CASE 1
				PRINTFORML 「呼ー……好危险啊、差一点就被打败了」
				PRINTFORML 「说不定下次就能赢呢？」
			CASE 0
				PRINTFORML 「难道我输了……我倒是挺有自信的說……」
				PRINTFORML 「真是不错的对战呢、下次再打吧」
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

