;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K34_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K34
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF CFLAG:318 == 1
			PRINTFORMW 「想要挑战我吗？很有胆色啊！」
		ELSE
			SELECTCASE RAND:3
				CASE 0
					PRINTFORMW 「尝尝我的绯想剑吧！」
				CASE 1
					PRINTFORMW 「我可不知道什么是手下留情，做好被痛打一顿的准备吧！」
				CASE 2
					PRINTFORMW 「每一个挑战我的人，都被我打的落花流水！啊？你说自机？她们不算啦！」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORMW 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORMW 
			CASE 2
				IF CFLAG:318 == 1
					PRINTFORMW 「…还没完呢……」
				ELSE
					PRINTFORMW 「呼呼……这种程度的话，连让我疼痛都做不到！」
					PRINTFORMW 「试试这一招吧！————天符『天道是非之剑』！」
				ENDIF
				PRINTFORMW 「还有这一招！————要石『天空之灵石』！」
			CASE 1
				IF CFLAG:318 == 1
					PRINTFORMW 「…有让我重视一下的资格呢」
				ELSE
					PRINTFORMW 「哎呀，真是久违的敌手啊」
					PRINTFORMW 「但是，接下来你是无论如何都抵挡不住的」
				ENDIF
				PRINTFORMW 「接下这一击————『全人类的绯想天』！！」
			CASE 0
				IF CFLAG:318 == 1
					PRINTFORMW 「…唔咕！…怎么会…」
				ELSE
					PRINTFORMW 「……干的漂亮，下次我会用上全力的……」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【勇气凛然】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "勇气凛然"
		IF CFLAG:318 == 1
			PRINTFORMW 「……感受这木大的力量吧！」
		ELSE
			PRINTFORMW 「这种时候什么都不要想！莽就对了！」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【狷介孤高】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "狷介孤高"
		IF CFLAG:318 == 1
			PRINTFORMW 「……我的力量可不止这一点」
		ELSE
			PRINTFORMW 「想不到吧！尚且还有余力！」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORMW 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORMW 
			CASE 3
				IF CFLAG:318 == 1
					PRINTFORMW 「…唔呃…只差一点就…」
				ELSE
					PRINTFORMW 「这次只是一时大意才让你赢的，我看你也快油尽灯枯了吧！」
				ENDIF
			CASE 2
				IF CFLAG:318 == 1
					PRINTFORMW 「……哼，打得不错」
				ELSE
					PRINTFORMW 「…稍微有点实力啊，是个潜力股呢」
				ENDIF
			CASE 1
				IF CFLAG:318 == 1
					PRINTFORMW 「……真是惨痛的教训啊」
				ELSE
					PRINTFORMW 「……你让我想起了那个红白呢」
				ENDIF
			CASE 0
				IF CFLAG:318 == 1
					PRINTFORMW 「……等等，你的实力有点不对劲吧！」
				ELSE
					PRINTFORMW 「你这家伙，这么游刃有余，是不是在耍我啊！」
					PRINTFORMW 「有这种实力的话，就去打那个顶着三个球的家伙啊！」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

