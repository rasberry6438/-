					CALL PAY_MONEY_YEN(3000, 2)
					PRINTFORML 本月繼續訂閱。
				CASE 2
					CALL PAY_MONEY_CM(10, 2)
					PRINTFORML 本月繼續訂閱。
			ENDSELECT
		ENDIF
	ENDIF
	IF FLAG:神簽契約
		神簽代 = 50
		SIF !MAIN_MAP
			神簽代 = 30
		IF MONEY:2 < 神簽代
			PRINTFORML 因為籌碼不足、所以神签契約被中止了
			FLAG:神簽契約 = 0
