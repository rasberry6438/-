;地点の属性設定
;場所_ワンルーム   家主が不在のとき鍵がかかる,被窝・屋内・厨房・勉強・休憩・飲食・プライベートが自動で付与
;場所_被窝         休憩が自動で付与
;場所_洋室         屋内だけど靴を履いたまま,屋内が自動で付与
;場所_屋内         
;場所_屋根         屋外だけど屋根がある場所,屋内でも屋根でも無い場合は野外判定（旧露天）
;場所_广阔         
;場所_赏月         屋内や屋根があっても月が見える場所
;場所_休憩         
;場所_風呂         
;場所_廁所       
;場所_厨房         つまみ食いが自動で付与
;場所_訓練         
;場所_学习         
;場所_天之声       
;場所_菜園         
;場所_打水       
;場所_身体測定     
;場所_物干し       風景描写用
;場所_飲食         自由行動用
;場所_つまみ食い   自由行動用
;場所_留まらない   あまり角色が留まらない（移動しやすい）
;場所_過疎         あまり角色が立ち入らない（移動されにくい）
;場所_プライベート 節度のある角色は入ってこない,主に私室と風呂・廁所
;場所_炬燵         自由行動用
;場所_公共の場     推倒てこない
;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
@ROOMSETTING_10
#DIM ROOM
VARSET ROOMDATA
MAXROOM = 1073
ENTRANCE = P1001槐安通路
避難处 = P1055哆来咪宅・廁所

SIF GET_MAPID(拠点_酒虫) != MAIN_MAP
	拠点_酒虫 = P1023門番詰め所

MAP_PAGES = 4
MAPNAME:1 = 月の世界
MAPNAME:2 = 綿月亭
MAPNAME:3 = 哆来咪宅
MAPNAME:4 = 純狐邸

CFLAG:[[橙]]:(450 + MAIN_MAP) = P1016入海口
CFLAG:[[藍]]:(450 + MAIN_MAP) = P1016入海口
CFLAG:[[紫]]:(450 + MAIN_MAP) = P1016入海口
CFLAG:[[映姫]]:(450 + MAIN_MAP) = P1016入海口
CFLAG:[[輝夜]]:(450 + MAIN_MAP) = P1016入海口

FOR LOCAL, MINROOM(), MAXROOM
	ROOM = LOCAL % 100
	SELECTCASE LOCAL
	;被窝・屋内・厨房・勉強・休憩・飲食・プライベートが自動で付与
	CASE P1008鈴瑚宅, P1009清蘭宅
		ROOMDATA:ROOM |= 場所_ワンルーム
	;自室になると被窝,勉強,プライベートが付与
	CASE P1007闲置的房子
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食
	CASE P1001槐安通路
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P1002月之都, P1003玉兎街, P1004広場
		ROOMDATA:ROOM |= 場所_广阔
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P1005探女宅・居間
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
		ROOMDATA:ROOM |= 場所_学习
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_プライベート
		ROOMDATA:ROOM |= 場所_炬燵
	CASE P1006探女宅・寝室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_被窝
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P1010吃飯処, P1011甘味処
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_公共の場
		ROOMDATA:ROOM |= 場所_飲食
	CASE P1012酒屋, P1013八百屋
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P1014桃林
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_つまみ食い
	CASE P1015砂浜
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_广阔
		ROOMDATA:ROOM |= 場所_過疎
	CASE P1016入海口
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_广阔

	CASE P1020綿月亭・門
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P1021綿月亭・玄関, P1022一階回廊, P1040二階回廊
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P1023門番詰め所
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_過疎
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P1024玉兎食堂
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P1025玉兎詰め所
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_過疎
		ROOMDATA:ROOM |= 場所_学习
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P1026食堂
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_飲食
	CASE P1027厨房
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
	CASE P1028食料庫
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_つまみ食い
		ROOMDATA:ROOM |= 場所_過疎
	CASE P1029綿月亭・脱衣所
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_留まらない
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P1030綿月亭・風呂
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P1031宝物庫
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_過疎
		ROOMDATA:ROOM |= 場所_プライベート
	;綿月亭の空的部屋は最初から整ってる
	CASE P1032鈴仙二號私室, P1033綿月亭・空的部屋, P1041豊姫私室, P1042依姫私室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_被窝
		ROOMDATA:ROOM |= 場所_学习
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P1035中庭
		ROOMDATA:ROOM |= 場所_广阔
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_菜園
		ROOMDATA:ROOM |= 場所_打水
	CASE P1036四阿
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_天之声
	CASE P1043書斎
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_学习
	CASE P1044會客廳
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_休憩

	CASE P1050哆来咪宅・居間
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_学习
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_炬燵
	CASE P1051哆来咪宅・寝室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_被窝
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_プライベート
	;自室になると被窝,勉強,プライベートが付与
	CASE P1052哆来咪宅・倉庫
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_過疎
	CASE P1053哆来咪宅・洗面所
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P1054哆来咪宅・風呂
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P1055哆来咪宅・廁所
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_廁所
		ROOMDATA:ROOM |= 場所_プライベート

	CASE P1060純狐邸・玄関
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P1061居間
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_炬燵
	CASE P1062廚房
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
	;自室になると勉強,プライベートが付与
	CASE P1063純狐邸・空的部屋, 
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_被窝
	CASE P1064克勞恩皮絲私室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_被窝
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P1065庫房
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_過疎
	CASE P1066純狐邸・脱衣所
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P1067純狐邸・風呂
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P1068純狐邸・中庭
		ROOMDATA:ROOM |= 場所_打水
	CASE P1070屋上
		ROOMDATA:ROOM |= 場所_广阔
		ROOMDATA:ROOM |= 場所_訓練
	CASE P1071純狐私室, P1072赫喀提亞私室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_被窝
		ROOMDATA:ROOM |= 場所_学习
		ROOMDATA:ROOM |= 場所_プライベート
	ENDSELECT
NEXT

