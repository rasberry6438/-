;-----------------------------------------------------------
;遠距離移動の設定
;ARG     目的地
;ARG:1   現在地
;RETURN  次の目的地
;-----------------------------------------------------------
@SKIP_MOVE_0(ARG, ARG:1)
#DIM 現在的位置
;現在位置取得
IF ARG:1
	現在的位置 = ARG:1
ELSE
	現在的位置 = CFLAG:MASTER:現在位置
ENDIF

;目的地に直接移動できる場合そこに移動
SIF CAN_MOVE(現在的位置, ARG) & 1
	RETURN ARG

;袋小路から行ける場所は固定なので、そこを目指す
SELECTCASE 現在的位置
	CASE P4本堂
		RETURN P3賽銭箱
	CASE P5手水舎, P21守矢神社分社, P56阿吽の棲家
		RETURN P2境内
	CASE P13風呂
		RETURN P12脱衣所
	CASE P14廁所, P19大的倉庫
		RETURN P10走廊
	CASE P17小的倉庫, P53倉庫, P55和室
		RETURN P9居間
	CASE P18壁櫥間
		RETURN P15霊夢私室
	CASE P24温泉
		RETURN P23温泉・脱衣所
	CASE P29三妖精之家・廚房, P30三妖精之家・風呂, P35三妖精之家・地下室
		RETURN P27三妖精之家・大廳
	CASE P32桑尼私室, P33露娜私室, P34斯塔私室
		RETURN P31三妖精之家・二階廊下
	CASE P39夢幻遺跡・浴室, P40夢幻遺跡・廁所
		RETURN P38夢幻遺跡・洗面所
	CASE P42夢幻遺跡・調理室
		RETURN P41夢幻遺跡・食堂兼談話室
	CASE P43夢美私室, P44千百合私室
		RETURN P37夢幻遺跡・一階通路
	CASE P47夢幻遺跡・艦橋, P48夢幻遺跡・第一資料室, P49夢幻遺跡・研究室, P50夢幻遺跡・第二資料室, P51夢幻遺跡・倉庫
		RETURN P46夢幻遺跡・二階通路
	CASE P52別屋, P69先代巫女的小屋
		RETURN P11庭
;大别墅
	CASE P57大温泉,P60大客厅,P67宴会厅
		RETURN P68大广场
	CASE P58大主卧,P59大厨房
		RETURN P60大客厅
	CASE P61地の間,P62水の間,P63火の間,P64风の間,P65光の間,P66暗の間
		RETURN P60大客厅
ENDSELECT

;直接移動できない場合、1つ近い位置を暫定目的地に設定し直してループ
;基本的に最短で行けるコースを設定する
;現在地によってコースが変わることも考慮して対応する
SELECTCASE ARG
	CASE P1鳥居
		SELECTCASE 現在的位置
		CASE P23温泉・脱衣所 TO P51夢幻遺跡・倉庫
			RETURN P22参道

		CASE P57大温泉 TO P68大广场
			RETURN P22参道

		CASEELSE
			RETURN P2境内
		ENDSELECT
	CASE P2境内
		SELECTCASE 現在的位置
		CASE P22参道 TO P51夢幻遺跡・倉庫
			RETURN P1鳥居

		CASE P57大温泉 TO P68大广场
			RETURN P1鳥居

		CASEELSE
			RETURN P20本殿内部
		ENDSELECT
	CASE P3賽銭箱, P5手水舎, P21守矢神社分社, P56阿吽の棲家
		RETURN P2境内
	CASE P4本堂
		RETURN P3賽銭箱
	CASE P6庫房, P16破舊小屋
		SELECTCASE 現在的位置
		CASE P7土間 TO P19大的倉庫, P54小人的虫籠
			RETURN P20本殿内部
		CASEELSE
			RETURN P2境内
		ENDSELECT
	CASE P7土間
		SELECTCASE 現在的位置
		CASE P10走廊, P12脱衣所 TO P15霊夢私室, P17小的倉庫 TO P19大的倉庫, P54小人的虫籠
			RETURN P9居間
		CASEELSE
			RETURN P20本殿内部
		ENDSELECT
	CASE P8廚房
		SELECTCASE 現在的位置
		CASE P15霊夢私室, P54小人的虫籠
			RETURN P9居間
		CASE P11庭, P12脱衣所
			RETURN P10走廊
		CASEELSE
			RETURN P7土間
		ENDSELECT
	CASE P9居間
		SELECTCASE 現在的位置
		CASE P11庭, P12脱衣所
			RETURN P10走廊
		CASEELSE
			RETURN P7土間
		ENDSELECT
	CASE P10走廊
		SELECTCASE 現在的位置
		CASE P7土間, P15霊夢私室
			RETURN P9居間
		CASEELSE
			RETURN P11庭
		ENDSELECT
	CASE P11庭
		SELECTCASE 現在的位置
		CASE P8廚房, P9居間, P12脱衣所, P15霊夢私室, P54小人的虫籠
			RETURN P10走廊
		CASEELSE
			RETURN P9居間
		ENDSELECT
	CASE P12脱衣所, P14廁所, P19大的倉庫
		RETURN P10走廊
	CASE P13風呂
		RETURN P12脱衣所
	CASE P15霊夢私室, P17小的倉庫, P53倉庫, P55和室
		RETURN P9居間
	CASE P18壁櫥間
		RETURN P15霊夢私室
	CASE P20本殿内部
		SELECTCASE 現在的位置
		CASE P10走廊, P12脱衣所
			RETURN P11庭
		CASE P7土間 TO P19大的倉庫, P54小人的虫籠
			RETURN P7土間
		CASEELSE
			RETURN P2境内
		ENDSELECT
	CASE P22参道
		SELECTCASE 現在的位置
		CASE P27三妖精之家・大廳 TO P35三妖精之家・地下室
			RETURN P25鎮守之森
		CASE P37夢幻遺跡・一階通路 TO P51夢幻遺跡・倉庫
			RETURN P36夢幻遺跡前
		CASEELSE
			RETURN P1鳥居
		ENDSELECT
	CASE P23温泉・脱衣所
		SELECTCASE 現在的位置
		CASE P27三妖精之家・大廳 TO P35三妖精之家・地下室
			RETURN P25鎮守之森

		CASE P57大温泉 TO P68大广场
			RETURN P68大广场

		CASEELSE
			RETURN P22参道
		ENDSELECT
	CASE P24温泉
		RETURN P23温泉・脱衣所
	CASE P25鎮守之森
		SELECTCASE 現在的位置
		CASE P29三妖精之家・廚房 TO P35三妖精之家・地下室
			RETURN P27三妖精之家・大廳
		CASEELSE
			RETURN P22参道
		ENDSELECT

	CASE P27三妖精之家・大廳
		RETURN P25鎮守之森
	CASE P29三妖精之家・廚房, P30三妖精之家・風呂, P31三妖精之家・二階廊下, P35三妖精之家・地下室
		RETURN P27三妖精之家・大廳
	CASE P32桑尼私室, P33露娜私室, P34斯塔私室
		RETURN P31三妖精之家・二階廊下

	CASE P36夢幻遺跡前
		SELECTCASE 現在的位置
		CASE P38夢幻遺跡・洗面所 TO P51夢幻遺跡・倉庫
			RETURN P37夢幻遺跡・一階通路
		CASEELSE
			RETURN P22参道
		ENDSELECT
	CASE P37夢幻遺跡・一階通路
		RETURN P36夢幻遺跡前
	CASE P38夢幻遺跡・洗面所, P41夢幻遺跡・食堂兼談話室, P43夢美私室, P44千百合私室, P46夢幻遺跡・二階通路
		RETURN P37夢幻遺跡・一階通路
	CASE P39夢幻遺跡・浴室, P40夢幻遺跡・廁所
		RETURN P38夢幻遺跡・洗面所
	CASE P42夢幻遺跡・調理室
		RETURN P41夢幻遺跡・食堂兼談話室
	CASE P47夢幻遺跡・艦橋, P48夢幻遺跡・第一資料室, P49夢幻遺跡・研究室, P50夢幻遺跡・第二資料室, P51夢幻遺跡・倉庫
		RETURN P46夢幻遺跡・二階通路

	CASE P52別屋
		RETURN P11庭
	CASE P54小人的虫籠
		SELECTCASE 現在的位置
		CASE P11庭, P12脱衣所
			RETURN P10走廊
		CASEELSE
			RETURN P9居間
		ENDSELECT
;大别墅
	CASE P68大广场
		SELECTCASE 現在的位置
		CASE P58大主卧,P59大厨房
			RETURN P60大客厅
		CASE P61地の間,P62水の間,P63火の間,P64风の間,P65光の間,P66暗の間
			RETURN P60大客厅
		CASEELSE
			RETURN P22参道
		ENDSELECT
	CASE P57大温泉
		RETURN P68大广场
	CASE P58大主卧,P59大厨房
		RETURN P60大客厅
	CASE P60大客厅
		RETURN P68大广场
	CASE P61地の間,P62水の間,P63火の間,P64风の間,P65光の間,P66暗の間
		RETURN P60大客厅
	CASE P67宴会厅
		RETURN P68大广场
;先代
	CASE P69先代巫女的小屋
		RETURN P11庭

ENDSELECT
