;-----------------------------------------------------------
;遠距離移動の設定
;ARG     目的地
;ARG:1   現在地
;RETURN  次の目的地
;-----------------------------------------------------------
@SKIP_MOVE_3(ARG, ARG:1)
#DIM 現在的位置
;現在位置取得
IF ARG:1
	現在的位置 = ARG:1
ELSE
	現在的位置 = CFLAG:MASTER:現在位置
ENDIF

;目的地に直接移動できる場合そこに移動
SIF CAN_MOVE(現在的位置, ARG) & 1
	RETURN ARG

;袋小路から行ける場所は固定なので、そこを目指す
SELECTCASE 現在的位置
CASE P305仓库
	RETURN P306後院
CASE P311帕秋莉私室, P312小悪魔私室
	RETURN P310図書館
CASE P316一層廁所
	RETURN P309大廳
CASE P320咲夜私室, P321空的部屋, P322二層廁所, P323妖精女僕的值班室, P324大露台
	RETURN P319二階廊下
CASE P327小露台
	RETURN P326蕾米莉亜私室
CASE P329倉庫, P330使用人部屋, P331地下室
	RETURN P328地下走廊
CASE P333大浴場
	RETURN P332脱衣所
CASE P337廃洋館・廚房, P338廃洋館・風呂
	RETURN P335廃洋館・大廳
CASE P340露娜薩私室, P341梅露蘭私室, P342莉莉喀私室
	RETURN P339廃洋館・二階廊下
CASE P344蕾蒂的冰屋, P345琪露諾的冰屋, P346大妖精の棲家
	RETURN P343湖畔
CASE P348霧之湖・湖底
	RETURN P347霧之湖
ENDSELECT

;直接移動できない場合、1つ近い位置を暫定目的地に設定し直してループ
;基本的に最短で行けるコースを設定する
;現在地によってコースが変わることも考慮して対応する
SELECTCASE ARG
	CASE P301正門
		SELECTCASE 現在的位置
		CASE P305仓库 TO P333大浴場
			RETURN P302庭
		CASEELSE
			RETURN P343湖畔
		ENDSELECT
	CASE P302庭
		SELECTCASE 現在的位置
		CASE P310図書館, P311帕秋莉私室, P312小悪魔私室
			RETURN P307東陽台
		CASE P315會客廳
			RETURN P308西陽台
		CASE P305仓库
			RETURN P306後院
		CASE P313厨房 TO P333大浴場
			RETURN P309大廳
		CASEELSE
			RETURN P301正門
		ENDSELECT
	CASE P303守衛小屋, P304空的小屋
		SELECTCASE 現在的位置
		CASE P305仓库 TO P333大浴場
			RETURN P302庭
		CASEELSE
			RETURN P301正門
		ENDSELECT
	CASE P305仓库
		RETURN P306後院
	CASE P306後院
		SELECTCASE 現在的位置
		CASE P314食堂
			RETURN P313厨房
		CASEELSE
			RETURN P302庭
		ENDSELECT
	CASE P307東陽台
		SELECTCASE 現在的位置
		CASE P308西陽台, P315會客廳
			RETURN P302庭
		CASE P309大廳 TO P333大浴場
			RETURN P310図書館
		CASEELSE
			RETURN P302庭
		ENDSELECT
	CASE P308西陽台
		SELECTCASE 現在的位置
		CASE P307東陽台, P310図書館 TO P312小悪魔私室
			RETURN P302庭
		CASE P309大廳 TO P333大浴場
			RETURN P315會客廳
		CASEELSE
			RETURN P302庭
		ENDSELECT
	CASE P309大廳
		SELECTCASE 現在的位置
		CASE P307東陽台, P310図書館 TO P312小悪魔私室
			RETURN P310図書館
		CASE P308西陽台
			RETURN P315會客廳
		CASE P313厨房
			RETURN P314食堂
		CASE P329倉庫 TO P333大浴場
			RETURN P328地下走廊
		CASE P320咲夜私室 TO P327小露台
			RETURN P319二階廊下
		CASEELSE
			RETURN P302庭
		ENDSELECT
	CASE P310図書館
		RETURN P309大廳
	CASE P311帕秋莉私室, P312小悪魔私室
		RETURN P310図書館
	CASE P313厨房
		SELECTCASE 現在的位置
		CASE P309大廳 TO P333大浴場
			RETURN P314食堂
		CASEELSE
			RETURN P306後院
		ENDSELECT
	CASE P314食堂
		SELECTCASE 現在的位置
		CASE P305仓库, P306後院
			RETURN P306後院
		CASEELSE
			RETURN P309大廳
		ENDSELECT
	CASE P315會客廳
		RETURN P309大廳
	CASE P316一層廁所
		RETURN P309大廳
	CASE P319二階廊下
		RETURN P309大廳
	CASE P320咲夜私室 TO P326蕾米莉亜私室
		RETURN P319二階廊下
	CASE P327小露台
		RETURN P326蕾米莉亜私室
	CASE P328地下走廊
		RETURN P309大廳
	CASE P329倉庫 TO P332脱衣所
		RETURN P328地下走廊
	CASE P333大浴場
		RETURN P332脱衣所

	CASE P334廃洋館・入口
		SELECTCASE 現在的位置
		CASE P337廃洋館・廚房 TO P342莉莉喀私室
			RETURN P335廃洋館・大廳
		CASEELSE
			RETURN P343湖畔
		ENDSELECT
	CASE P335廃洋館・大廳
		RETURN P334廃洋館・入口
	CASE P337廃洋館・廚房 TO P339廃洋館・二階廊下
		RETURN P335廃洋館・大廳
	CASE P340露娜薩私室 TO P342莉莉喀私室
		RETURN P339廃洋館・二階廊下

	CASE P343湖畔
		SELECTCASE 現在的位置
		CASE P301正門 TO P333大浴場
			RETURN P301正門
		CASE P334廃洋館・入口 TO P342莉莉喀私室
			RETURN P334廃洋館・入口
		CASEELSE
			RETURN P347霧之湖
		ENDSELECT
	CASE P344蕾蒂的冰屋, P345琪露諾的冰屋, P346大妖精の棲家
		RETURN P343湖畔
	CASE P347霧之湖
		RETURN P343湖畔
	CASE P348霧之湖・湖底
		RETURN P347霧之湖
ENDSELECT
