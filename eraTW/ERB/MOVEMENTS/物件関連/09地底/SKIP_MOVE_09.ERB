;-----------------------------------------------------------
;遠距離移動の設定
;ARG     目的地
;ARG:1   現在地
;RETURN  次の目的地
;-----------------------------------------------------------
@SKIP_MOVE_9(ARG, ARG:1)
#DIM 現在的位置
;現在位置取得
IF ARG:1
	現在的位置 = ARG:1
ELSE
	現在的位置 = CFLAG:MASTER:現在位置
ENDIF

;目的地に直接移動できる場合そこに移動
SIF CAN_MOVE(現在的位置, ARG) & 1
	RETURN ARG
;袋小路から行ける場所は固定なので、そこを目指す
SELECTCASE 現在的位置
	CASE P904大會堂, P906一層廁所, P911阿空私室, P912阿燐私室
		RETURN P905一階廊下
	CASE P910食料庫
		RETURN P909厨房
	CASE P915露台, P916庫房, P917二層廁所, P918恋私室
		RETURN P914二階廊下
	CASE P921風呂
		RETURN P922脱衣所
	CASE P947ちやりの棲み処
		RETURN P930旧血の池地獄
	CASE P934温泉, P935情人旅館, P936勇儀的家, P938鬼的聚集場所, P939小胡同
		RETURN P932後街
	CASE P937空屋
		RETURN P931大街
	CASE P940帕露西的家, P941山女的家, P942琪斯美的家
		RETURN P945川岸
	CASE P943茅屋
		RETURN P944街道
	CASE P948縦穴底部
		RETURN P946橋
	CASE P949托卡马克装置核心
		RETURN P929地獄的人工太陽
ENDSELECT

;直接移動できない場合、1つ近い位置を暫定目的地に設定し直してループ
;基本的に最短で行けるコースを設定する
;現在地によってコースが変わることも考慮して対応する
SELECTCASE ARG
	CASE P901地霊殿前
		SELECTCASE 現在的位置
		CASE P906一層廁所 TO P930旧血の池地獄, P947ちやりの棲み処
			RETURN P905一階廊下
		CASEELSE
			RETURN P931大街
		ENDSELECT
	CASE P904大會堂, P906一層廁所, P911阿空私室, P912阿燐私室
		RETURN P905一階廊下
	CASE P905一階廊下
		SELECTCASE 現在的位置
		CASE P915露台 TO P922脱衣所
			RETURN P914二階廊下
		CASE P925薔薇園
			RETURN P923後院
		CASE P928灼熱地獄跡 TO P930旧血の池地獄, P947ちやりの棲み処
			RETURN P926中庭
		CASEELSE
			RETURN P901地霊殿前
		ENDSELECT
	CASE P909厨房
		SELECTCASE 現在的位置
		CASE P923後院
			RETURN P925薔薇園
		CASEELSE
			RETURN P905一階廊下
		ENDSELECT
	CASE P910食料庫
		RETURN P909厨房
	CASE P913食堂
		SELECTCASE 現在的位置
		CASE P925薔薇園
			RETURN P923後院
		CASEELSE
			RETURN P905一階廊下
		ENDSELECT
	CASE P914二階廊下
		RETURN P905一階廊下
	CASE P915露台, P916庫房, P917二層廁所, P918恋私室, P919覚私室, P920書斎, P922脱衣所
		RETURN P914二階廊下
	CASE P921風呂
		RETURN P922脱衣所
	CASE P923後院
		SELECTCASE 現在的位置
		CASE P909厨房
			RETURN P925薔薇園
		CASEELSE
			RETURN P905一階廊下
		ENDSELECT
	CASE P925薔薇園
		RETURN P923後院
	CASE P926中庭
		SELECTCASE 現在的位置
		CASE P929地獄的人工太陽, P930旧血の池地獄, P947ちやりの棲み処
			RETURN P928灼熱地獄跡
		CASEELSE
			RETURN P905一階廊下
		ENDSELECT
	CASE P928灼熱地獄跡
		SELECTCASE 現在的位置
		CASE P930旧血の池地獄, P947ちやりの棲み処
			RETURN P929地獄的人工太陽
		CASEELSE
		RETURN P926中庭
		ENDSELECT
	CASE P929地獄的人工太陽
		SELECTCASE 現在的位置
		CASE  P947ちやりの棲み処
			RETURN P930旧血の池地獄
		CASEELSE
		RETURN P928灼熱地獄跡
		ENDSELECT
	CASE P930旧血の池地獄
		RETURN P929地獄的人工太陽
	CASE P947ちやりの棲み処
		RETURN P930旧血の池地獄
	CASE P931大街
		SELECTCASE 現在的位置
		CASE P904大會堂 TO P930旧血の池地獄, P947ちやりの棲み処
			RETURN P901地霊殿前
		CASE P940帕露西的家 TO P948縦穴底部
			RETURN P944街道
		CASEELSE
			RETURN P932後街
		ENDSELECT
	CASE P932後街, P933酒場, P937空屋
		RETURN P931大街
	CASE P934温泉, P935情人旅館, P936勇儀的家, P938鬼的聚集場所, P939小胡同
		RETURN P932後街
	CASE P940帕露西的家, P941山女的家, P942琪斯美的家
		RETURN P945川岸
	CASE P943茅屋, P945川岸, P946橋
		RETURN P944街道
	CASE P944街道
		RETURN P931大街
	CASE P948縦穴底部
		RETURN P946橋
	CASE P949托卡马克装置核心
		RETURN P929地獄的人工太陽
ENDSELECT
