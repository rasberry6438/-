;-----------------------------------------------------------
;遠距離移動の設定
;ARG     目的地
;ARG:1   現在地
;RETURN  次の目的地
;-----------------------------------------------------------
@SKIP_MOVE_1(ARG, ARG:1)
#DIM 現在的位置
;現在位置取得
IF ARG:1
	現在的位置 = ARG:1
ELSE
	現在的位置 = CFLAG:MASTER:現在位置
ENDIF

;目的地に直接移動できる場合そこに移動
SIF CAN_MOVE(現在的位置, ARG) & 1
	RETURN ARG

;袋小路から行ける場所は固定なので、そこを目指す
SELECTCASE 現在的位置
	CASE P103本堂
		RETURN P104講堂
	CASE P105経蔵, P119別屋, P122梵鐘楼, P137猯藏の棲家
		RETURN P102境内
	CASE P111廚房
		RETURN P108居間
	CASE P112風呂
		RETURN P107土間
	CASE P120庫房
		RETURN P106後院
	CASE P125屠自古私室, P127布都私室, P128神子私室, P132調薬室
		RETURN P130廊下
	CASE P133湯殿, P134蔵, P138鐘楼, P139邪仙楼
		RETURN P124霊廟広場
ENDSELECT

;直接移動できない場合、1つ近い位置を暫定目的地に設定し直してループ
;基本的に最短で行けるコースを設定する
;現在地によってコースが変わることも考慮して対応する
SELECTCASE ARG
	CASE P101山門
		SELECTCASE 現在的位置
		CASE P123霊廟大門 TO P134蔵, P138鐘楼, P139邪仙楼
			RETURN P140地蔵小路
		CASEELSE
			RETURN P102境内
		ENDSELECT
	CASE P102境内
		SELECTCASE 現在的位置
		CASE P123霊廟大門 TO P134蔵, P138鐘楼, P139邪仙楼, P140地蔵小路
			RETURN P101山門
		CASE P106後院, P110走廊, P120庫房
			RETURN P121墓地
		CASEELSE
			RETURN P107土間
		ENDSELECT
	CASE P103本堂
		RETURN P104講堂
	CASE P104講堂, P105経蔵, P119別屋, P122梵鐘楼, P137猯藏の棲家
		RETURN P102境内
	CASE P106後院
		SELECTCASE 現在的位置
		CASE P108居間 TO P111廚房, P113納茲琳私室 TO P118白蓮私室, P135廊下, P136響子私室
			RETURN P110走廊
		CASEELSE
			RETURN P121墓地
		ENDSELECT
	CASE P107土間
		SELECTCASE 現在的位置
		CASE P106後院, P109女苑私室 TO P118白蓮私室, P120庫房, P135廊下, P136響子私室
			RETURN P108居間
		CASEELSE
			RETURN P102境内
		ENDSELECT
	CASE P108居間
		SELECTCASE 現在的位置
		CASE P106後院, P110走廊, P113納茲琳私室 TO P118白蓮私室, P120庫房, P136響子私室
			RETURN P135廊下
		CASEELSE
			RETURN P107土間
		ENDSELECT
	CASE P109女苑私室
		SELECTCASE 現在的位置
		CASE P106後院, P110走廊, P113納茲琳私室 TO P118白蓮私室, P120庫房, P136響子私室
			RETURN P135廊下
		CASEELSE
			RETURN P108居間
		ENDSELECT
	CASE P110走廊
		SELECTCASE 現在的位置
		CASE P107土間 TO P118白蓮私室, P136響子私室
			RETURN P135廊下
		CASEELSE
			RETURN P106後院
		ENDSELECT
	CASE P111廚房
		RETURN P108居間
	CASE P112風呂
		RETURN P107土間
	CASE P113納茲琳私室, P115星私室
		SELECTCASE 現在的位置
		CASE P109女苑私室 TO P118白蓮私室, P136響子私室
			RETURN P135廊下
		CASEELSE
			RETURN P110走廊
		ENDSELECT
	CASE P114村紗私室, P116一輪私室, P117鵺私室, P118白蓮私室, P136響子私室
		RETURN P135廊下
	CASE P120庫房
		RETURN P106後院
	CASE P121墓地
		SELECTCASE 現在的位置
		CASE P109女苑私室, P110走廊, P113納茲琳私室 TO P118白蓮私室, P120庫房, P135廊下, P136響子私室
			RETURN P106後院
		CASEELSE
			RETURN P102境内
		ENDSELECT

	CASE P123霊廟大門
		SELECTCASE 現在的位置
		CASE P125屠自古私室 TO P132調薬室
			RETURN P124霊廟広場
		CASEELSE
			RETURN P140地蔵小路
		ENDSELECT
	CASE P124霊廟広場
		SELECTCASE 現在的位置
		CASE P125屠自古私室 TO P132調薬室
			RETURN P126道場
		CASEELSE
			RETURN P123霊廟大門
		ENDSELECT
	CASE P125屠自古私室, P127布都私室, P128神子私室, P132調薬室, P129客間, P131枯山水
		RETURN P130廊下
	CASE P126道場
		SELECTCASE 現在的位置
		CASE P125屠自古私室 TO P132調薬室
			RETURN P130廊下
		CASEELSE
			RETURN P124霊廟広場
		ENDSELECT
	CASE P130廊下
		RETURN P126道場
	CASE P133湯殿, P134蔵, P138鐘楼, P139邪仙楼
		RETURN P124霊廟広場

	CASE P135廊下
		SELECTCASE 現在的位置
		CASE P106後院, P110走廊, P120庫房, P121墓地
			RETURN P110走廊
		CASEELSE
			RETURN P108居間
		ENDSELECT
	CASE P140地蔵小路
		SELECTCASE 現在的位置
		CASE P123霊廟大門 TO P134蔵, P138鐘楼, P139邪仙楼
			RETURN P123霊廟大門
		CASEELSE
			RETURN P101山門
		ENDSELECT
ENDSELECT
