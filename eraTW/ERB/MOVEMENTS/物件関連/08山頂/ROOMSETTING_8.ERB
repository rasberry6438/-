;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
;地点の属性設定
;場所_ワンルーム   家主が不在のとき鍵がかかる,被窝・屋内・厨房・勉強・休憩・飲食・プライベートが自動で付与
;場所_被窝         休憩が自動で付与
;場所_洋室         屋内だけど靴を履いたまま,屋内が自動で付与
;場所_屋内         
;場所_屋根         屋外だけど屋根がある場所,屋内でも屋根でも無い場合は野外判定（旧露天）
;場所_广阔         
;場所_赏月         屋内や屋根があっても月が見える場所
;場所_休憩         
;場所_風呂         
;場所_廁所       
;場所_厨房         つまみ食いが自動で付与
;場所_訓練         
;場所_学习         
;場所_天之声       
;場所_菜園         
;場所_打水       
;場所_身体測定     
;場所_物干し       風景描写用
;場所_飲食         自由行動用
;場所_つまみ食い   自由行動用
;場所_留まらない   あまり角色が留まらない（移動しやすい）
;場所_過疎         あまり角色が立ち入らない（移動されにくい）
;場所_プライベート 節度のある角色は入ってこない,主に私室と風呂・廁所
;場所_炬燵         自由行動用
;場所_公共の場     推倒てこない
;＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝＝
@ROOMSETTING_8
#DIM ROOM
VARSET ROOMDATA
MAXROOM = 857
ENTRANCE = P801山頂入口
避難处 = P824廁所

SIF GET_MAPID(拠点_酒虫) != MAIN_MAP
	拠点_酒虫 = P822廚房
MAP_PAGES = 4
MAPNAME:1 = 妖怪之山・山頂
MAPNAME:2 = 守矢神社
MAPNAME:3 = 天界
MAPNAME:4 = 比那名居邸

;月の住民は湖畔から来る
FOR LOCAL, 1, CHARANUM
	SIF GROUPMATCH(GET_MAPID(CFLAG:LOCAL:自宅位置), 10)
		CFLAG:LOCAL:(450 + MAIN_MAP) = P814湖畔
NEXT

FOR LOCAL, MINROOM(), MAXROOM
	ROOM = LOCAL % 100
	SELECTCASE LOCAL
	;被窝・屋内・厨房・勉強・休憩・飲食・プライベートが自動で付与
	CASE P807椛宅, P808文宅, P809極宅, P851久侘歌の小屋, P852駒草の小屋, P853魅須丸の小屋
		ROOMDATA:ROOM |= 場所_ワンルーム
	;龍宅は赏月できる
	CASE P854龍宅
		ROOMDATA:ROOM |= 場所_ワンルーム
		ROOMDATA:ROOM |= 場所_赏月
	CASE P856百百世の住処
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_被窝
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_プライベート
	;自室になると被窝,勉強,プライベートが付与
	CASE P810山小屋
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食

	CASE P801山頂入口
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P802橋
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P803索道站
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P805頂上
		ROOMDATA:ROOM |= 場所_广阔
		ROOMDATA:ROOM |= 場所_訓練
	CASE P806瀑布背面
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_赏月
		ROOMDATA:ROOM |= 場所_打水
		ROOMDATA:ROOM |= 場所_過疎
	CASE P855虹龍洞
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_過疎

	CASE P804守矢神社鳥居
	CASE P811境内
		ROOMDATA:ROOM |= 場所_广阔
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P812本殿
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_公共の場
		ROOMDATA:ROOM |= 場所_天之声
	CASE P813社務所
		ROOMDATA:ROOM |= 場所_屋根
		ROOMDATA:ROOM |= 場所_赏月
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P814湖畔
		ROOMDATA:ROOM |= 場所_广阔
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_打水
	CASE P815庭
		ROOMDATA:ROOM |= 場所_广阔
		ROOMDATA:ROOM |= 場所_訓練
		ROOMDATA:ROOM |= 場所_菜園
	CASE P816走廊
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_赏月
		ROOMDATA:ROOM |= 場所_物干し
	CASE P826廊下
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P819居間
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_学习
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_炬燵
	CASE P817神奈子私室, P818諏訪子私室, P820早苗私室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_被窝
		ROOMDATA:ROOM |= 場所_学习
		ROOMDATA:ROOM |= 場所_プライベート
		
	;自室になると勉強,プライベートが付与
	CASE P823空室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_被窝
	CASE P821土間
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P822廚房
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
	CASE P824廁所
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_廁所
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P825風呂
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_プライベート

	CASE P830玄雲海
		ROOMDATA:ROOM |= 場所_广阔
		ROOMDATA:ROOM |= 場所_留まらない
		ROOMDATA:ROOM |= 場所_訓練
	CASE P831比那名居邸前
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P832有頂天街
		ROOMDATA:ROOM |= 場所_公共の場
	CASE P833桃園
		ROOMDATA:ROOM |= 場所_つまみ食い
	CASE P834比那名居邸土間
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_留まらない
	CASE P835比那名居邸會客廳
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_飲食
	CASE P836比那名居邸厨房
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_厨房
	CASE P837比那名居邸風呂
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_風呂
		ROOMDATA:ROOM |= 場所_身体測定
		ROOMDATA:ROOM |= 場所_プライベート
	CASE P838比那名居邸居間
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_休憩
		ROOMDATA:ROOM |= 場所_学习
		ROOMDATA:ROOM |= 場所_飲食
		ROOMDATA:ROOM |= 場所_炬燵
	CASE P839比那名居邸和室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_被窝
		ROOMDATA:ROOM |= 場所_学习
	CASE P840天子私室, P841衣玖私室
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_被窝
		ROOMDATA:ROOM |= 場所_学习
		ROOMDATA:ROOM |= 場所_プライベート
	;自室になると被窝,勉強,プライベートが付与
	CASE P842比那名居邸庫房
		ROOMDATA:ROOM |= 場所_屋内
		ROOMDATA:ROOM |= 場所_過疎
	ENDSELECT
NEXT

