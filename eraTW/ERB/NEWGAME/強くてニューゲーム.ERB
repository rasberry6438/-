;-----------------------------------------------------------
;同角色口上複数存在判定
;ARG=角色ナンバー
;現在同角色口上は最大で四つまで想定
;-----------------------------------------------------------
@KOJO_MULTIPLE(C_ID, SELECT_SWITCH)
#DIM C_ID
#DIM DYNAMIC 口上カウント
#DIM DYNAMIC 口上数
#DIM DYNAMIC 口上実装数
#DIMS DYNAMIC kojoNamesList, 10
#DIM DYNAMIC kojoIdList, 10
#DIM DYNAMIC vernier
#DIM DYNAMIC SUM_FOR_DEBUG
#DIMS DYNAMIC SELECT_SWITCH
#DIMS DYNAMIC kojoIdtitle, 10
#DIM DYNAMIC kojoIdcheck

;同角色口上複数確認 and record the name of kojo
kojoIdcheck = 0
FOR 口上カウント,0,10
	VARSET RESULT
	VARSET RESULTS
	vernier = 口上カウント
	IF 口上カウント
		TRYCALLFORM M_KOJO_K{C_ID}_{口上カウント}
	ELSE
		TRYCALLFORM M_KOJO_K{C_ID}
	ENDIF
	IF RESULT
		SIF RESULTS:1 == "" && kojoIdcheck == 0
			RESULTS:1 = 初期
		SIF RESULTS:2 == ""
			RESULTS:2 = 无简介
		IF RESULTS:1 != ""
			kojoNamesList:vernier = %NAME_OUTPUT_TRANSLATION("CALLNAME", C_ID)%%RESULTS:1%口上
			kojoIdcheck ++
		ENDIF
		kojoIdtitle:vernier = %RESULTS:2%
		kojoIdList:vernier = 口上カウント
		; vernier ++
		IF !GETBIT(CFLAG:C_ID:口上実装状況,口上カウント)
			口上数 += 1
			口上実装数 += 1
			SETBIT CFLAG:C_ID:口上実装状況,口上カウント
		ELSEIF GETBIT(CFLAG:C_ID:口上実装状況,口上カウント)
			口上実装数 += 1
		ENDIF
	ENDIF
	;检测口上存在情况是否冲突
	IF GETBIT(CFLAG:C_ID:口上実装状況,口上カウント)
		IF 口上カウント
			TRYCALLFORM M_KOJO_K{C_ID}_{口上カウント}
		ELSE
			TRYCALLFORM M_KOJO_K{C_ID}
		ENDIF
		SIF RESULT
			SUM_FOR_DEBUG ++
	ENDIF
	SIF 口上カウント == 4 && !SUM_FOR_DEBUG
		CFLAG:C_ID:口上実装状況 = 0
NEXT
;口上存在判定
IF !口上数
	SIF 口上実装数
		RETURN 1
	RETURN 0
ENDIF
IF 口上実装数 == 1
	;只存在一个口上时，寻找口上编号
		FOR 口上カウント,0,5
			SIF	GETBIT(CFLAG:C_ID:口上実装状況,口上カウント)
				CFLAG:C_ID:口上セレクタ = 口上カウント
		NEXT
ENDIF
	;新規別人口上追加
IF !STRLENS(SELECT_SWITCH)
	IF 口上実装数 > 1
		PRINTFORML %NAME_OUTPUT_TRANSLATION("CALLNAME", C_ID)%存在複数个口上
		PRINTFORML 要変更吗
		CALL ASK_YN
		;口上選択
		IF !RESULT
			LOCALS:0 = 要使用哪个口上呢
			PRINTSL	LOCALS:0
			FOR LOCAL, 0, 10
				SIF !STRLENS(kojoNamesList:LOCAL)
					CONTINUE
				CALL kojoIdtitle_CHOICE(LOCAL, kojoNamesList:LOCAL,kojoIdtitle:LOCAL)
			NEXT
			$INPUT_LOOP
			INPUT
			; IF !INRANGE(RESULT, 0, kojoIdcheck - 1)
			; 	;这种想看特殊剧情的人当然得给点特殊剧情照顾下
			; 	CALL SIMATTYAUOJISAN()
			; 	CLEARLINE 1
			; 	GOTO INPUT_LOOP
			; ENDIF
			CFLAG:C_ID:口上セレクタ = kojoIdList:RESULT
			RETURN 2
		ELSE
			PRINTFORML 未进行変更
			RETURN 1
		ENDIF
	ELSE
		RETURN 2
	ENDIF
ENDIF
; SIF 口上実装数
; 	RETURN 1
RETURN 0


