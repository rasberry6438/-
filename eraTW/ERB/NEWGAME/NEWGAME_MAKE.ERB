SELECTCASE RESULT
	CASE 100
		RETURN 0
	CASE 0 TO 99
		CALL MASTER_CLOTHES_SET(RESULT)
		SIF RESULT
			RETURN 1
	CASE 99
		CALL MASTER_CLOTHES_SET(99)
			RETURN 1
ENDSELECT
RESTART

@MASTER_CLOTHES_SET(ARG)
SELECTCASE ARG
	CASE 0
		PRINTFORMW 太过于暴露啦！
		RETURN 0
	CASE 1 TO 6
		CFLAG:MASTER:基本服装セット = RESULT
	CASE 7 TO 9
		CFLAG:MASTER:基本服装セット = RESULT + 1
	CASE 99
		CALL MASTER_CLOTHES_INIT
	CASEELSE
		THROW 指定了無効的番号。
ENDSELECT
