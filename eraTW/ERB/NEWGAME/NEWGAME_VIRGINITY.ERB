;-----------------------------------------------------------
;個別設定
;-----------------------------------------------------------
@SET_VIRGINITY
#DIM CHARA_ID
FOR CHARA_ID, 0, CHARANUM
	SIF !IS_NAMED(CHARA_ID)
		CONTINUE
	SIF TALENT:CHARA_ID:処女
		SETCOLOR C_PINK
	SIF TALENT:CHARA_ID:風騷
		SETCOLOR C_P_BLUE
	LOCALS '= @"[{CHARA_ID, 3}] %SET_VIRGINITY_KEY(初期貞操:CHARA_ID:0)%%NAME_OUTPUT_TRANSLATION("CALLNAME", CHARA_ID)%"
	PRINTFORMLC %LOCALS%
	RESETCOLOR
NEXT
PRINTL
DRAWLINE
PRINTL [999] 設定終了
DO
	INPUT
	CHARA_ID = RESULT
	SELECTCASE CHARA_ID
		CASE 999
			PRINTW 個別設定完畢。
			RETURN
		CASEELSE
			IF !IS_NAMED(CHARA_ID)
				CLEARLINE 1
				CONTINUE
			ENDIF
			BREAK
	ENDSELECT
LOOP 1

初期貞操:CHARA_ID:0 ++
IF 初期貞操:CHARA_ID:0 >= 8 && 初期貞操:CHARA_ID:0 < 10
	初期貞操:CHARA_ID:0 = 9
