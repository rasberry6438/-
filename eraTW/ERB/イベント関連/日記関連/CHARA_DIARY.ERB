@WRITE_MASTER_DIARY_FILE
DRAWLINE
FOR LOCAL,0,20
	LOADTEXT (1700+LOCAL)
	
	IF RESULTS != ""
		PRINTBUTTON @"日記本[{LOCAL}]", LOCAL
		PRINTFORML 
	ELSE
		PRINTBUTTON "[無]", LOCAL
		PRINTFORML 
	ENDIF
	RESETCOLOR
NEXT
