$INPUT_LOOP_DIARY_FILE
INPUT
LOCAL = RESULT

SIF LOCAL == 99
	RETURN -1
IF !INRANGE(LOCAL, 0, 20-1)
	CLEARLINE 1
	GOTO INPUT_LOOP_DIARY_FILE
ENDIF

RESULT = LOCAL

SAVETEXT SAVESTR:1, (1700+RESULT)
SIF !RESULT
	CALL COLORMESSAGE("保存失败",C_YELLOW,2,1)


@READ_MASTER_DIARY_FILE
