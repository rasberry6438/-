	RETURN
IF SELF_PREGNANCY && GROUPMATCH(SELECTCOM, 64, 130, 131, 132, 133)
	PRINTFORML 因为不想给育児中的%NAME_OUTPUT_TRANSLATION("CALLNAME", MASTER)%增加負担所以还是避妊吧
	CALL ASK_M(@"给%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%戴避孕套",ITEM:避孕套,"喝口服避孕薬",ITEM:口服避孕薬,"放弃",1)
	SELECTCASE RESULT
		CASE 0
			ITEM:避孕套 --
			TEQUIP:TARGET:避孕套 = 1
			PRINTFORML 给%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%戴上了避孕套
			RETURN 1
		CASE 1
			ITEM:口服避孕薬 --
			TCVAR:PLAYER:口服避孕薬 = 1
			PRINTFORML 喝了避孕药 
			RETURN 1
		CASE 2
			PRINTFORML 虽然很遗憾但是还是放弃了
			RETURN -1
	ENDSELECT
ELSE
	PRINTFORML 因为不想给育児中的%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%增加負担所以还是避妊吧
	CALL ASK_M("戴避孕套",ITEM:避孕套,@"给%NAME_OUTPUT_TRANSLATION("CALLNAME", TARGET)%喝口服避孕薬",ITEM:口服避孕薬,"放弃",1)
	SELECTCASE RESULT
		CASE 0
			ITEM:避孕套 --
			TEQUIP:PLAYER:避孕套 = 1
			PRINTL 戴上了避孕套
			RETURN 1
		CASE 1
			ITEM:口服避孕薬 --
			TCVAR:ARG:口服避孕薬 = 1
			PRINTFORML 给%NAME_OUTPUT_TRANSLATION("CALLNAME", ARG)%喝了避孕药 
			RETURN 1
		CASE 2
			PRINTFORML 虽然很遗憾但是还是放弃了
			RETURN -1
	ENDSELECT
ENDIF

