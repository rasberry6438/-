@CHECK_ALTER_IMAGE(STR_IMAGE)
#DIMS STR_IMAGE
#DIM GID
#DIM CONST GID_BIAS = 16380000
#DIM GID_SHIFT = 0

IF SPRITECREATED(STR_IMAGE)
	RETURN 1
ENDIF

; NOT EXIST -> PREPARED
CALL PREPARED_ALTER_IMAGE_SINGLE(STR_IMAGE, GID_BIAS)
RETURN 1

@PREPARED_ALTER_IMAGE_SINGLE(STR_IMAGE, GID)
#DIMS STR_IMAGE
#DIM GID
#DIM NUM_STRING

; FIND EMPTY GID
CALL FIND_EMPTY_GID_WITH_BIAS(GID)
GID = RESULT

; CREATE SPACE
GCREATE GID, 100, 100
GDRAWSPRITE GID, STR_IMAGE
CALL リソース登録(STR_IMAGE, GID)

;SPLIT STR_IMAGE
SPLIT STR_IMAGE, "/", LOCALS
NUM_STRING = RESULT

FOR LOCAL, 0, NUM_STRING
    GDRAWSPRITE GID, LOCALS:LOCAL
NEXT

RETURN



@FIND_EMPTY_GID_WITH_BIAS(GID)
#DIM GID
WHILE GCREATED(GID)
    ; IF GID IS EXIST THEN CONTINUE
    GID ++
WEND
RETURN GID