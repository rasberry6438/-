;COMABLE一括管理
@GLOBAL_COMABLE(ARG)
#FUNCTION
;指令过滤器
LOCALS = /{ARG}/
IF STRCOUNT(SAVESTR:0,LOCALS)
	RESULT = 0
	RETURNF 1
ENDIF
;一括管理
SELECTCASE ARG
	;魔改内容，口上自定义命令，不用此处进行一括执行管理
	;CASE 270 TO 299
	;	RETURNF 0
	;ウフフ
	CASE IS < 270
		IF TFLAG:102 != 2 || !TARGET
			RESULT = 0
			RETURNF 1
		ENDIF
	;依頼実行と和孩子互动はTARGET無で実行できるように例外扱い
	CASE 367, 337
		IF GROUPMATCH(TFLAG:102, 2, 3)
			RESULT = 0
			RETURNF 1
		ENDIF
	;日常指令
	CASE 300 TO 303, 305, 331 TO 336, 351 , 352 , 363 TO 399
		IF TFLAG:102 != 1 || !TARGET
			RESULT = 0
			RETURNF 1
		ENDIF
	;抱住模式
	CASE 306 TO 309
		IF !TFLAG:抱住模式 && (TFLAG:102 > 1 || !TARGET)
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE 310, 311
		IF TARGET == 0
			RESULT = 0
			RETURNF 1
		ENDIF
	;ソフトなウフフ
	CASE 312 TO 330, 350, 360, 361
		IF TARGET == 0
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TFLAG:102 != 1 && FLAG:70 == 1 && CFLAG:TARGET:344 == 0
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TFLAG:102 == 2
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TFLAG:抱住模式 && ARG != 350 && ARG != 360 && ARG != 361
			RESULT = 0
			RETURNF 1
		ENDIF
		;お風呂場ではガチエロになるので
		IF BATHCHECK(CFLAG:MASTER:現在位置) && CFLAG:诶嘿嘿 != 2
			IF ARG != 350 && ARG != 351
				RESULT = 0
				RETURNF 1
			ENDIF
		ENDIF
	CASE 355
		IF FLAG:70 && CFLAG:TARGET:344 == 0 || CFLAG:MASTER:恶作剧 || CFLAG:诶嘿嘿 == 2
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE 400 TO 499
	;単体実行可能指令
		IF TFLAG:102 == 2 && ARG != 410 && ARG != 490
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE 501 TO 559
	;ウフフ派生
		IF TFLAG:102 != 2
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE 560 TO 579
	;日常派生
		IF TFLAG:102 == 2
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE 580 TO 699
	;约会
		IF !TFLAG:100
			RESULT = 0
			RETURNF 1
		ENDIF
		IF TFLAG:102 == 2
			RESULT = 0
			RETURNF 1
		ENDIF
	CASE 700 TO 799
	;自慰専用指令
	;	IF TFLAG:102 != 2
	;		RESULT = 0
	;		RETURNF 1
	;	ENDIF
	;	IF ARG == 751 && (!CFLAG:PLAYER:现在忙得抽不出手)
	;		RESULT = 0
	;		RETURNF 1
	;	ELSEIF ARG != 751 && ((CFLAG:现在忙得抽不出手 != 1) || (TARGET > 0 && CFLAG:现在忙得抽不出手 != 1 && !FLAG:時間停止))
	IF !CFLAG:PLAYER:现在忙得抽不出手
			RESULT = 0
			RETURNF 1
		ENDIF
ENDSELECT

;ビデオ処理（固定照相机ならば制限無）
;撮影者が調教中、ビデオ片手で是ろいろ制限される
IF (TFLAG:105 == 1 && !ASSIPLAY) || (TFLAG:105 == 2 && ASSIPLAY)
	IF ARG == 0 || ARG == 3 || ARG == 5 || ARG == 6 || ARG == 7 || ARG == 8 || ARG == 9 || ARG == 21 || (ARG >= 40 && ARG <= 48) || ARG == 65 || ARG == 66 || (ARG >= 80 && ARG <= 87) || (ARG >= 100 && ARG <= 105) || (ARG >= 122 && ARG <= 125) || (ARG >= 140 && ARG <= 148 && ARG != 143) || (ARG >= 180 && ARG <= 189) || ARG == 503 || ARG == 504 || ARG == 510 || ARG == 511
		RETURNF 0
	ELSE
		RESULT = 0
		RETURNF 1
	ENDIF
;MASTERが撮影中、助手が調教中
ELSEIF TFLAG:105 == 1 && ASSIPLAY
	IF ARG == 71 || ARG == 124 || ARG == 125 || ARG == 185
		RESULT = 0
		RETURNF 1
	ENDIF
;助手が撮影中、MASTERが調教中
ELSEIF TFLAG:105 == 2 && !ASSIPLAY
	IF ARG == 71 || ARG == 124 || ARG == 125 || ARG == 185 || ARG == 510 || ARG == 511
		RESULT = 0
		RETURNF 1
	ENDIF
ENDIF


