;-------------------------------------------------
;満腹度上昇
;-------------------------------------------------
@満腹度上昇(ARG, ARGS, ARG:1 = 0)
#DIM 満腹度
IF ARG:1 == 0
	SELECTCASE ARGS
		CASE "軽食"
			満腹度 = 180
		CASE "主食"
			満腹度 = 360
		CASE "甜点"
			満腹度 = 180
	ENDSELECT
ELSE
	満腹度 = ARG:1
ENDIF

SIF TALENT:ARG:大胃王
	TIMES 満腹度, 0.7
IF ARGS == "甜点"
	TCVAR:ARG:甜点空腹時刻 = 1440 * DAY + TIME + 満腹度
ELSE
	TCVAR:ARG:空腹時刻 = 1440 * DAY + TIME + 満腹度
ENDIF
