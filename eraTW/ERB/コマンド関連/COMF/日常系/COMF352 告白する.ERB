						TFLAG:193 = 0
						CFLAG:2 += 30
						BASE:TARGET:情緒 += 300
					ELSE
						GOTO INPUT_LOOP2
					ENDIF
				ENDIF
			ELSE
				TFLAG:193 = 0
				CFLAG:2 += 30
				BASE:TARGET:情緒 += 300
			ENDIF
			RESETCOLOR
		ENDIF
	;強制成功or大成功
	CASE 1
		TFLAG:193 = 1
	;強制失敗
	CASE -1
		TFLAG:193 = 0
	;指令終了
	CASE -2
		TFLAG:193 = 0
		RETURN 0
