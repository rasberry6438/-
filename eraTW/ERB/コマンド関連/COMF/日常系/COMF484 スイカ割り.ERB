	IF OUTROOF(CFLAG:MASTER:現在位置)
		PRINTFORMW 天気太差了、还是算了吧…
		RETURN -1
	ENDIF
;料理がある
ELSEIF DISH_NAME != ""
	PRINTFORMW 先想办法处理掉手上的料理吧…
	RETURN -1
ENDIF

;参加可能人数チェック
参加可能人数 = 0
同室人数 = GET_TARGETNUM()
FOR LOCAL, 1, 同室人数 + 1
	CHARA = TARGET:LOCAL
	SIF !SHIRAHU(CHARA)
		CONTINUE
	SIF CFLAG:CHARA:行動 == 5
		CONTINUE
	SIF BASE:CHARA:気力 < 500 || BASE:CHARA:体力 < 500
		CONTINUE
	参加可能人数 ++
NEXT
;TARGETは実行判定で可能なはずなのでエラーチェック
SIF 参加可能人数 == 0
	THROW
SUIKA_PLAYERNUM = 0
CALL SUIKA_CHARASELECT(同室人数, 参加可能人数)
;中止
SIF RESULT == -1
	RETURN -1

;武器選択
CALL SUIKA_WEAPONSELECT

;開幕地の文
