	BONUS点 += 2
SIF STRCOUNT(DISH_TASTE, "縁起物/")
	BONUS点 += 2
SIF STRCOUNT(DISH_TASTE, "台風炸丸子/")
	BONUS点 += 2
SIF STRCOUNT(DISH_TASTE, "玉兎流/") && STRCOUNT(DISH_TASTE, "胡蘿卜/")
	BONUS点 += 2
SIF STRCOUNT(DISH_TASTE, "プロの味/")
	BONUS点 += 2
SIF STRCOUNT(DISH_TASTE, "得意料理")
	BONUS点 += 2
