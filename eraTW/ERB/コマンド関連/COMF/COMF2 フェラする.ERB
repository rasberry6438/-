;-------------------------------------------------
;给对方口交
;愛撫系指令、レベル1
;-------------------------------------------------
@COM2
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;奉仕快楽
TCVAR:PLAYER:108 = 1

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精部位フラグ（-1=避孕套 1=膣内 2=肛門 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:TARGET:2 = 4
;強度
TCVAR:TARGET:4 = 1000

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 50
	SOURCE:PLAYER:快Ｍ += 50
	SOURCE:快Ｃ = 110
	;性技補正
	SOURCE:快Ｃ += MIN(ABL:PLAYER:舌 * 25,100)

	;調教者のTALENT:舌頭靈活をみる
	SIF TALENT:PLAYER:舌頭靈活
		TIMES SOURCE:快Ｃ , 1.50

	;調教者のTALENT:猫舌をみる
	SIF TALENT:PLAYER:猫舌
		TIMES SOURCE:快Ｃ , 0.75
	;奴隷のＰ⇔調教者の口的污垢が移動
	STAIN:2 |= STAIN:PLAYER:0
	STAIN:PLAYER:0 |= STAIN:2
	;同性愛　レズなら戻り値1ゲイなら戻り値2
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	ENDIF
	;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
	SIF TALENT:PLAYER:猫舌
		EXP:PLAYER:嗜虐快楽経験 += 1
	EXP:PLAYER:口淫経験 ++
ELSE

	DOWNBASE:体力 += 5
	DOWNBASE:気力 += 50
	SOURCE:PLAYER:快Ｍ += 50

	SOURCE:快Ｃ = 110
	SOURCE:露出 = 20
	SOURCE:逸脱 = 20
	SOURCE:反感 = 20

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 20

	;性技補正
	IF ABL:PLAYER:舌 >= 4
		SOURCE:快Ｃ += 100
	ELSE
		SOURCE:快Ｃ += ABL:PLAYER:舌 * 25
	ENDIF

	;調教者のTALENT:舌頭靈活をみる
	SIF TALENT:PLAYER:舌頭靈活
		TIMES SOURCE:快Ｃ , 1.50

	;調教者のTALENT:猫舌をみる
	SIF TALENT:PLAYER:猫舌
		TIMES SOURCE:快Ｃ , 0.75
	;-------------------------------------------------
	;汚れの処理
	;-------------------------------------------------
	;奴隷のＰ⇔調教者の口的污垢が移動
	STAIN:2 |= STAIN:PLAYER:0
	STAIN:PLAYER:0 |= STAIN:2

	;-------------------------------------------------
	;経験の処理
	;-------------------------------------------------
	;同性愛　レズなら戻り値1ゲイなら戻り値2
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 3
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	ENDIF
	;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
	SIF TALENT:PLAYER:猫舌
		EXP:PLAYER:嗜虐快楽経験 += 1
	EXP:PLAYER:口淫経験 ++
ENDIF
RETURN 1

