@SHOW_JUEL

@SHOW_ABLUP_SELECT
#DIM 上げるABL
#DIM 角色
#DIM 能力値不足
#DIM 経験不足

FOR 角色,0,CHARANUM
	FOR LOCAL:11,0,30
		SELECTCASE LOCAL:11
			;多くの要素が必要な能力から上げてゆく
			;自慰中毒
			CASE 0
				上げるABL= 30
			;膣射中毒
			CASE 1
				上げるABL= 34
			;肛射中毒
			CASE 2
				上げるABL= 35
			;精液中毒
			CASE 3
				上げるABL= 31
			;百合中毒
			CASE 4
				上げるABL= 32
			;断袖中毒
			CASE 5
				上げるABL= 33
			;奉仕精神
			CASE 6
				上げるABL= 13
			;百合属性
			CASE 7
				上げるABL= 17
			;断袖属性
			CASE 8
				上げるABL= 18
			;受虐属性
			CASE 9
				上げるABL= 15
			;施虐属性
			CASE 10
				上げるABL= 16
			;露出癖
			CASE 11
				上げるABL= 14
			;親密
			CASE 12
				上げるABL= 9
			;従順
			CASE 13
				上げるABL= 10
			;欲望
			CASE 14
				上げるABL= 11
			;技巧
			CASE 15
				上げるABL= 12
			;Ｃ感覚
			CASE 16
				上げるABL= 0
			;Ｖ感覚
			CASE 17
				上げるABL= 1
			;Ａ感覚
			CASE 18
				上げるABL= 2
			;Ｂ感覚
			CASE 19
				上げるABL= 3
			;Ｍ感覚
			CASE 20
				上げるABL= 4
			CASEELSE
				CONTINUE
		ENDSELECT
		FOR LOCAL,0,4
			$AGAIN
			能力値不足 = 0
			経験不足 = 0
			SIF JUEL_DEMAND(上げるABL,LOCAL,0,角色) == -2
				BREAK
			SIF JUEL_DEMAND(上げるABL,LOCAL,0,角色) < 0
				CONTINUE
			;必要な宝珠を尋找
			FOR LOCAL:1,0,100
				IF JUEL_DEMAND(上げるABL,LOCAL,LOCAL:1,角色) > 0
					IF JUEL:(角色):(LOCAL:1) < JUEL_DEMAND(上げるABL,LOCAL,LOCAL:1,角色)
						能力値不足 ++
						BREAK
					ENDIF
				ENDIF
			NEXT
			SIF 能力値不足
				CONTINUE
			;必要な経験を尋找
			FOR LOCAL:1,0,100
				IF EXP_DEMAND(上げるABL,LOCAL,LOCAL:1,角色) > 0
					IF  EXP:(角色):(LOCAL:1) < EXP_DEMAND(上げるABL,LOCAL,LOCAL:1,角色)
						経験不足 ++
						BREAK
					ENDIF
				ENDIF
			NEXT
			SIF 経験不足
				CONTINUE
			FOR LOCAL:1,0,40
				JUEL:(角色):(LOCAL:1) -= JUEL_DEMAND(上げるABL,LOCAL,LOCAL:1,角色)
			NEXT
			IF !LOCAL:5
				PRINTFORM %NAME_OUTPUT_TRANSLATION("CALLNAME", (角色)),14,RIGHT% … 
				LOCAL:5 ++
			ELSE
				;18文字空白を挿入
				PRINTFORM                   
			ENDIF
			PRINTFORM %ABLNAME:(上げるABL),8,RIGHT%LVUP
			PRINTFORM  (
			;成長前
			CALL PRINT_RANK(ABL:角色:上げるABL, "MAX_99")
			PRINTFORM {ABL:(角色):(上げるABL),2,RIGHT} → 
			;成長はここで
			ABL:(角色):(上げるABL) += 1
			;成長後
			CALL PRINT_RANK(ABL:角色:上げるABL, "MAX_99")
			PRINTFORMW {ABL:(角色):(上げるABL),2,RIGHT}) 
			;BREAK
			GOTO AGAIN
		NEXT
	NEXT
	;値の初期化
	LOCAL:5 = 0
NEXT
PRINT [100] - 確認

@USERABLUP
IF RESULT == 100
	CALL JUJUN_UP_CHECK
	CALL YOKUBO_UP_CHECK
	BEGIN TURNEND
	RETURN 1
ENDIF
RETURN 0

