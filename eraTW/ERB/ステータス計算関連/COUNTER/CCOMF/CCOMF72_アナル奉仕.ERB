;*********************************************************************************************
;Counter指令：肛門奉仕
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF72(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_A,4,ARG)
	TFLAG:MASTERの口使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	IF BEDROOM(CFLAG:MASTER:現在位置)
		SIF TEQUIP:ARG:0
			CALL DATUI_BOTTOM_T(ARG,RAND:2)
	ELSE
		SIF TEQUIP:ARG:0 & 14
			CALL DATUI_BOTTOM_T(ARG,1)
	ENDIF
	SOURCE:ARG:快Ａ = 100
	SOURCE:ARG:性行動 += 300
	SOURCE:ARG:征服 += 600
	SOURCE:ARG:侮辱 += 300
	SOURCE:ARG:挑発 += 100
	SOURCE:ARG:強要 += 400
	SOURCE:ARG:加虐 += 50
	SOURCE:PLAYER:快Ｍ += 100
	LOCALS = {ARG}/
	CSTR:ARG:10 += LOCALS
	TCVAR:ARG:2 = 9
	;強度
	TCVAR:ARG:4 += 200
	STAIN:ARG:4 |= STAIN:PLAYER:0
	STAIN:PLAYER:0 |= STAIN:ARG:4
	EXP:PLAYER:口淫経験 ++
	TCVAR:ARG:嗜虐フラグ = 1
	CALL EVENT_COUNTER_POSE_69(ARG,2)

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	;CALL Counter挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE72(ARG)

	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:ARG:50 >= 0 || TEQUIP:ARG:51 >= 0
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER72(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 脱衣強要

	;実行判定値算出式
	;=============================
	LOCAL = (基本値 + ABL:ARG:Ａ感覚) * (EXP:ARG:Ａ絶頂経験 >= 10)

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
