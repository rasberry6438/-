;*********************************************************************************************
;Counter指令：从后面将胸もみもみ
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF36(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_YUBI,5,ARG)
	TFLAG:MASTERのＢ使用中 ++

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:誘惑 += 200
	SOURCE:ARG:挑発 += 200
	SOURCE:ARG:征服 += 200
	SOURCE:ARG:加虐 += 50
	SOURCE:PLAYER:快Ｂ += 200

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	SIF GROUPMATCH(TEQUIP:MASTER:体位, 2, 5)
		CALL Counter挿入され継続中処理(ARG)

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE36(ARG)

	;男だとダメ
	SIF !(TALENT:MASTER:2 & 1)
		RETURN 0
	SIF TEQUIP:PLAYER:1 < 1
		RETURN 0
	SIF TFLAG:65
		RETURN 0
	SIF TEQUIP:MASTER:体位 == 1
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER36(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 着衣

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + CFLAG:ARG:積極性 + CFLAG:ARG:攻

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
