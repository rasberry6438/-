;*********************************************************************************************
;Counter指令：後背位Ａ挿入される
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF90(ARG)

	;体勢の変更
	;=============================
	SIF MASTER_POSE(0,SET_P) == ARG
		CALL TOUCH_RESET_T(ARG)
	CALL TOUCH_SET(SET_FROM_P,7,ARG)
	TFLAG:MASTERのＡ使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	CALL DATUI_FOR_INSERT(ARG)
	TCVAR:ARG:童貞喪失 = 1
	TCVAR:PLAYER:Ａ喪失発生 = 1
	SOURCE:ARG:快Ｃ += 100
	SOURCE:ARG:性行動 += 300
	SOURCE:ARG:征服 += 1000
	SOURCE:PLAYER:液体 += 100
	SOURCE:ARG:加虐 += 800
	SOURCE:ARG:強要 += 800
	SOURCE:PLAYER:快Ａ += 800
	CALL PAIN_CHECK_A_MASTER(ARG)
	;射精部位（1=膣内 2=肛門 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
	CALL 射精対象登録(ARG, PLAYER, 12)
	TCVAR:PLAYER:4 += 250
	LOCALS = {PLAYER}/
	CSTR:ARG:10 += LOCALS
	TCVAR:ARG:2 = 2
	TCVAR:ARG:4 += 1000
	TEQUIP:MASTER:体位 = 2
	CALL STAIN_肛門Ｐ挿入
	EXP:PLAYER:Ａ性交経験 ++
	EXP:ARG:挿入経験 ++
	TEQUIP:PLAYER:51 = ARG
	;奉仕FLAG
	TCVAR:ARG:108 = 1
	TCVAR:ARG:嗜虐フラグ = 1

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	;CALL Counter挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,0
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,3
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE90(ARG)

	SIF FLAG:アナル開発無効
		RETURN 0
	SIF 挿入不可(MASTER) >= 2
		RETURN 0
	SIF !(TALENT:ARG:2 & 2)
		RETURN 0
	SIF BASE:ARG:勃起 < 1000
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0
	SIF TFLAG:64
		RETURN 0
	SIF ABL:MASTER:2 < 2
		RETURN 0
	SIF !TALENT:ARG:施虐狂 && PALAM:MASTER:潤滑 < PALAMLV:3
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER90(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 責め

	;実行判定値算出式
	;=============================
	LOCAL = (基本値*5/10) + ABL:ARG:Ｃ感覚 + MAX(EXP:ARG:射精経験 / 15, 15) + ABL:ARG:施虐属性 / 2 - (TALENT:MASTER:2 & 1) * 4 + ABL:MASTER:肛門 * 2 - ABL:MASTER:膣
	
	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
