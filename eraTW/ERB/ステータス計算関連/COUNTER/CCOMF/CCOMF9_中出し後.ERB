;*********************************************************************************************
;Counter指令：中出し後
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF9(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:欲情 += 充填率(ARG,4) * 2
	SOURCE:ARG:屈従 += 充填率(ARG,4) * 2

	;マ斯塔Counter制御
	;=============================
	;無

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE9(ARG)

	SIF 充填率(ARG,4) < 15
			RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER9(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = コミュ

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + CFLAG:ARG:誘惑 + CFLAG:ARG:積極性

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
