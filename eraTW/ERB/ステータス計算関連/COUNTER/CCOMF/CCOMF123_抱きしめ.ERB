;*********************************************************************************************
;Counter指令：抱きしめ
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF123(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)
	
	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:情愛 += 80
	SOURCE:ARG:征服 += 20
	SOURCE:ARG:誘惑 += 50
	SOURCE:ARG:挑発 += 30

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,6
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE123(ARG)

	RETURN TALENT:ARG:体型 >= TALENT:MASTER:体型

RETURN 0

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER123(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 抱きつき

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + CFLAG:ARG:害羞
	
	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
