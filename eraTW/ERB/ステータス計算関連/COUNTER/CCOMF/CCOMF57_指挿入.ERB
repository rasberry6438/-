@CCOM_ABLE57(ARG)

	SIF TFLAG:63
		RETURN 0
	SIF !TALENT:ARG:施虐狂 && TALENT:PLAYER:処女 && TALENT:PLAYER:処女 != -1
		RETURN 0
	SIF !(TALENT:PLAYER:2 & 1)
		RETURN 0
