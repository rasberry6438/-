;*********************************************************************************************
;Counter指令：摸屁股
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF25(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:誘惑 += 100
	SOURCE:ARG:挑発 += 300
	SOURCE:ARG:侮辱 += 200

	;マ斯塔Counter制御
	;=============================
	;無

RETURN 1

