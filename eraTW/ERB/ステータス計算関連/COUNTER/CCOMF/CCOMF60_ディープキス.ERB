;*********************************************************************************************
;Counter指令：ディープ接吻
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF60(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_M,4,ARG)
	TFLAG:MASTERの口使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:性行動 += 100
	SOURCE:ARG:誘惑 += 150
	SOURCE:ARG:奉仕 += 150
	SOURCE:ARG:征服 += 200
	SOURCE:ARG:快Ｍ += 300
	SOURCE:PLAYER:快Ｍ += 300
	EXP:ARG:接吻経験 ++
	EXP:ARG:口淫経験 ++
	EXP:PLAYER:接吻経験 ++
	EXP:ARG:口淫経験 ++

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	CALL Counter挿入され継続中処理(ARG)

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE60(ARG)

	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER60(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 脱衣愛撫

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + (2 * TALENT:ARG:舌頭靈活 + ABL:ARG:舌) * !TALENT:ARG:無接吻経験

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
