;*********************************************************************************************
;Counter指令：从后面将抱きつく
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF31(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)
	TCVAR:ARG:位置関係 = 2

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:誘惑 += 300
	SOURCE:ARG:征服 += 150

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	SIF GROUPMATCH(TEQUIP:MASTER:体位, 2, 5)
		CALL Counter挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,0
	SETBIT TCVAR:ARG:26 ,1
	SETBIT TCVAR:ARG:26 ,3
	SETBIT TCVAR:ARG:26 ,4
	SETBIT TCVAR:ARG:26 ,5
	SETBIT TCVAR:ARG:26 ,6

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE31(ARG)

	SIF FIND_SELECTCCOM(31)
		RETURN 0
	SIF TEQUIP:ARG:体位
		RETURN 0
	SIF GROUPMATCH(TEQUIP:MASTER:体位, 2, 5)
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER31(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 着衣

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + CFLAG:ARG:害羞 - CFLAG:ARG:積極性

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
