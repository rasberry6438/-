;*********************************************************************************************
;Counter指令：耳元に息を吹きかける
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF24(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:誘惑 += 50
	SOURCE:ARG:挑発 += 100

	;マ斯塔Counter制御
	;=============================
	;無

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE24(ARG)

	;会話中はダメ
	SIF SELECTCOM == 300
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER24(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = ソフト

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + CFLAG:ARG:誘惑 + CFLAG:ARG:積極性

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
