;*********************************************************************************************
;Counter指令：乳を吸わせる
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF77(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_B,4,ARG)
	TFLAG:MASTERの口使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	SIF TEQUIP:ARG:1 > 1
		CALL DATUI_TOP_T(ARG,0)
	SOURCE:ARG:誘惑 += 500
	SOURCE:ARG:奉仕 += 200
	SOURCE:ARG:強要 += 100
	SOURCE:ARG:快Ｂ += 200
	SOURCE:ARG:情愛 += 100
	SIF TALENT:ARG:母乳体質
		EXP:ARG:噴乳経験 ++
	TEQUIP:ARG:吸乳头 = 1

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	SIF GROUPMATCH(TEQUIP:MASTER:体位, 1, 3, 4)
		CALL Counter挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,2
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE77(ARG)

	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:MASTER:50 == ARG || TEQUIP:MASTER:51 == ARG
		RETURN 0
	SIF GROUPMATCH(TEQUIP:ARG:体位,2,5)
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER77(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 脱衣強要

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + ABL:ARG:Ｂ感覚

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
