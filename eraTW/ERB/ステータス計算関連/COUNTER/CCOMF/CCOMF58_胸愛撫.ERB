;*********************************************************************************************
;Counter指令：胸愛撫
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF58(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_YUBI,5,ARG)
	TFLAG:MASTERのＢ使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	IF TEQUIP:PLAYER:1 & 2
		SIF RAND:2
			CALL DATUI_TOP(ARG,0)
	ENDIF
	SIF !(TALENT:PLAYER:2 & 1)
		SOURCE:ARG:加虐 += 100
	SOURCE:ARG:性行動 += 200
	SOURCE:ARG:侮辱 += 300
	SOURCE:ARG:誘惑 += 200
	SOURCE:ARG:挑発 += 100
	SOURCE:ARG:征服 += 300
	SOURCE:PLAYER:快Ｂ += 300
	EXP:ARG:手淫経験 ++

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	CALL Counter挿入され継続中処理(ARG)
	SETBIT TCVAR:ARG:26 ,7

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE58(ARG)

	SIF TFLAG:65
		RETURN 0
	SIF ABL:ARG:指 < 1
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER58(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 脱衣愛撫

	;実行判定値算出式
	;=============================
	LOCAL = 基本値 + 2 * TALENT:ARG:靈活手指 + ABL:ARG:指

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
