;*********************************************************************************************
;Counter指令：接吻
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF30(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_M,4,ARG)
	TFLAG:MASTERの口使用中 ++
	
	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:誘惑 += 250
	SOURCE:ARG:征服 += 100
	SOURCE:ARG:快Ｍ += 100
	SOURCE:PLAYER:快Ｍ += 100
	SOURCE:ARG:奉仕 += 50
	EXP:ARG:接吻経験 ++
	EXP:MASTER:接吻経験 ++

	;マ斯塔Counter制御
	;=============================
	CALL Counter挿入され継続中処理(ARG)

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE30(ARG)

	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:MASTER:体位 == 2
		RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER30(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 着衣

	;実行判定値算出式
	;=============================
	LOCAL = (基本値 + CFLAG:ARG:積極性) * !TALENT:ARG:無接吻経験

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
