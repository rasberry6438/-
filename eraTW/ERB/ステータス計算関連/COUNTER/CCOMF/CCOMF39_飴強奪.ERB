;*********************************************************************************************
;Counter指令：糖強奪
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF39(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_M,4,ARG)

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:性行動 += 100
	SOURCE:ARG:誘惑 += 150
	SOURCE:ARG:強要 += 150
	SOURCE:ARG:征服 += 200
	SOURCE:PLAYER:快Ｍ += 150
	EXP:ARG:接吻経験 ++
	EXP:ARG:口淫経験 ++
	EXP:MASTER:接吻経験 ++
	EXP:MASTER:口淫経験 ++
	TCVAR:MASTER:糖 = 0
	DOWNBASE:気力 -= 50

	;マ斯塔Counter制御
	;(ビット立ちで不可 0=摸屁股 1=擁抱 2=接吻 3=胸愛撫 4=肛門愛撫 5=陰蒂愛撫 6=指挿入れ 7=掀裙子)
	;=============================
	CALL Counter挿入され継続中処理(ARG)

RETURN 1

;*********************************************************************************************
;Counter実行可否出力関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ABLE39(ARG)

	;どういうことなのかわからないので除外しておく
	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:MASTER:体位 == 2
		RETURN 0
	RETURN 0

RETURN 1

;*********************************************************************************************
;Counter実行判定値算出関数
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOM_ORDER39(指令番号, ARG, 基本値)
#DIM 指令番号
#DIM 基本値
#DIMS Counterタイプ

	;Counterタイプ設定
	;=============================
	Counterタイプ = 着衣

	;実行判定値算出式
	;=============================
	LOCAL = (基本値 + CFLAG:ARG:積極性 + CFLAG:ARG:攻) * !TALENT:ARG:無接吻経験

	;Counterタイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:指令番号, 1)
	LOCAL *= COUNTER_TYPE(Counterタイプ, ARG)

RETURN LOCAL
