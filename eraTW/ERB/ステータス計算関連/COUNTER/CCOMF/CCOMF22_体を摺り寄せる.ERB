;*********************************************************************************************
;Counter指令：体を摺り寄せる
;ARG = 対象の角色番号
;*********************************************************************************************
@CCOMF22(ARG)

	;体勢の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:誘惑 += 100
	SOURCE:ARG:奉仕 += 80

	;マ斯塔Counter制御
	;=============================
	;無

RETURN 1

