IF CSTR:CHARA:汎用エフェクト != ""
	;PRINTFORML エフェクト「汎用エフェクト_%CSTR:CHARA:汎用エフェクト%」を確認
	IF SPRITECREATED(@"汎用エフェクト_%CSTR:CHARA:汎用エフェクト%")
